<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Đặt sân Cầu lông</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Toastr for notifications -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-trophy"></i> Badminton Booking
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Facility" asp-action="Index">
                                <i class="bi bi-building"></i> Cơ sở sân
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Booking" asp-action="Search">
                                <i class="bi bi-calendar-check"></i> Đặt sân
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-shop"></i> Sản phẩm
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3 container" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3 container" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-trophy"></i> Badminton Booking</h5>
                    <p class="text-muted">Hệ thống đặt sân cầu lông trực tuyến hàng đầu Việt Nam</p>
                    <div class="social-links">
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-decoration-none me-3"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h6>Liên kết</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="About" class="text-decoration-none">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-decoration-none">Liên hệ</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ" class="text-decoration-none">Câu hỏi thường gặp</a></li>
                        <li><a asp-controller="Home" asp-action="Terms" class="text-decoration-none">Điều khoản</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Chính sách</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Liên hệ</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-telephone"></i> Hotline: 1900xxxx</li>
                        <li><i class="bi bi-envelope"></i> support@badminton.com</li>
                        <li><i class="bi bi-clock"></i> 8:00 - 22:00 (Tất cả các ngày)</li>
                    </ul>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <small>&copy; 2025 - Badminton Booking System. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Configure Toastr
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>