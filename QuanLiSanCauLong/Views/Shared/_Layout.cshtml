<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Badminton Booking System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        :root {
            --primary-purple: #6c33f2;
            --primary-green: #10b981;
            --dark-green: #064e3b;
            --nav-font-size: 0.875rem;
        }

        body {
            font-family: 'Lexend', sans-serif;
            background-color: #fcfdfd;
        }

        /* Navbar */
        .navbar {
            background: rgba(255, 255, 255, 0.98) !important;
            backdrop-filter: blur(8px);
            border-bottom: 1px solid #f1f5f9;
            padding: 0.5rem 0 !important;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.2rem !important;
            letter-spacing: -0.5px;
            background: linear-gradient(135deg, var(--primary-purple), var(--primary-green));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .nav-link {
            font-weight: 500;
            font-size: var(--nav-font-size);
            color: #4b5563 !important;
            padding: 0.5rem 0.7rem !important;
            transition: all 0.2s ease;
            white-space: nowrap;
            position: relative;
        }

            .nav-link:hover {
                color: var(--primary-purple) !important;
            }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 2px;
                background: linear-gradient(90deg, var(--primary-purple), var(--primary-green));
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 80%;
            }

        /* Dropdown */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-radius: 12px;
            font-size: var(--nav-font-size);
            padding: 0.5rem;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            padding: 0.7rem 1.2rem;
            color: #4b5563;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .dropdown-item:hover {
                background: linear-gradient(135deg, #f3f0ff, #f0fdf4);
                color: var(--primary-purple);
                transform: translateX(5px);
            }

            .dropdown-item i {
                width: 20px;
                margin-right: 8px;
            }

        .dropdown-divider {
            margin: 0.5rem 0;
            opacity: 0.1;
        }

        /* Admin Button */
        .btn-admin {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            border: none;
            color: white;
            font-size: 0.85rem;
            padding: 0.5rem 1.2rem;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(251, 191, 36, 0.3);
            transition: all 0.3s;
        }

            .btn-admin:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(251, 191, 36, 0.4);
            }

        /* Footer */
        .footer-main {
            background: linear-gradient(135deg, #1a1d29 0%, #2d3142 100%);
            color: rgba(255,255,255,0.8);
            padding: 4rem 0 2rem;
            margin-top: 5rem;
        }

            .footer-main h5 {
                color: white;
                font-weight: 700;
                margin-bottom: 1.5rem;
                font-size: 1.1rem;
            }

        .footer-link {
            display: block;
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            margin-bottom: 0.8rem;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

            .footer-link:hover {
                color: var(--primary-purple);
                transform: translateX(5px);
            }

        .footer-main .input-group {
            border-radius: 50px;
            overflow: hidden;
        }

            .footer-main .input-group .form-control {
                border: none;
                padding: 0.8rem 1.5rem;
            }

            .footer-main .input-group .btn {
                border-radius: 0 50px 50px 0;
                padding: 0.8rem 1.5rem;
                background: var(--primary-purple);
                border: none;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shuttlecock-fill"></i> BADMINTONPRO
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Trang chủ
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-grid-3x3 me-1"></i>Sân Cầu Lông
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Facility" asp-action="Index"><i class="bi bi-building"></i>Tất cả cơ sở</a></li>
                                <li><a class="dropdown-item" asp-controller="Booking" asp-action="Search"><i class="bi bi-search"></i>Tìm sân trống</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-star"></i>Sân VIP</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-shop me-1"></i>Cửa hàng
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-stars me-1"></i>Dịch vụ
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Service" asp-action="Training"><i class="bi bi-mortarboard"></i>Khóa học cầu lông</a></li>
                                <li><a class="dropdown-item" asp-controller="Service" asp-action="Stringing"><i class="bi bi-tools"></i>Dịch vụ căng vợt</a></li>
                                <li><a class="dropdown-item" asp-controller="Service" asp-action="Tournament"><i class="bi bi-trophy"></i>Giải đấu nội bộ</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blog" asp-action="Index">
                                <i class="bi bi-newspaper me-1"></i>Tin tức
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-info-circle me-1"></i>Về chúng tôi
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="About"><i class="bi bi-building"></i>Giới thiệu</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Contact"><i class="bi bi-headset"></i>Liên hệ hỗ trợ</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Recruitment"><i class="bi bi-briefcase"></i>Tuyển dụng</a></li>
                            </ul>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-lg-2">
                                <a class="btn btn-admin" asp-controller="AdminDashboard" asp-action="Index">
                                    <i class="bi bi-shield-fill-check me-1"></i> Admin Panel
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null)
        {
            <script>
                document.addEventListener("DOMContentLoaded", function() {
                    @if (TempData["SuccessMessage"] != null)
                    {
                            <text>toastr.success('@TempData["SuccessMessage"]');</text>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                            <text>toastr.error('@TempData["ErrorMessage"]');</text>
                    }
                });
            </script>
        }

        @RenderBody()
    </main>

    <footer class="footer-main">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5><i class="bi bi-shuttlecock"></i> BADMINTON PRO</h5>
                    <p class="small">Hệ thống quản lý và đặt sân cầu lông hiện đại nhất. Chúng tôi cung cấp trải nghiệm thể thao chuyên nghiệp cho mọi lứa tuổi.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <h5>Dịch Vụ</h5>
                    <a class="footer-link" asp-controller="Service" asp-action="Training">Khóa học</a>
                    <a class="footer-link" asp-controller="Service" asp-action="Stringing">Căng vợt</a>
                    <a class="footer-link" asp-controller="Service" asp-action="Tournament">Giải đấu</a>
                    <a class="footer-link" asp-controller="Product" asp-action="Index">Cửa hàng</a>
                </div>
                <div class="col-6 col-lg-2">
                    <h5>Hỗ trợ</h5>
                    <a class="footer-link" asp-controller="Blog" asp-action="Index">Tin tức</a>
                    <a class="footer-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                    <a class="footer-link" asp-controller="Home" asp-action="Recruitment">Tuyển dụng</a>
                    <a class="footer-link" asp-controller="Home" asp-action="Privacy">Bảo mật</a>
                </div>
                <div class="col-lg-4">
                    <h5>Đăng ký nhận tin</h5>
                    <p class="small">Nhận thông báo về khuyến mãi và giải đấu sớm nhất.</p>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Email của bạn">
                        <button class="btn btn-success">Gửi</button>
                    </div>
                    <div class="mt-3">
                        <p class="mb-1 small"><i class="bi bi-telephone text-success me-2"></i> Hotline: 1900 8888</p>
                        <p class="small"><i class="bi bi-envelope text-success me-2"></i> support@badmintonpro.vn</p>
                    </div>
                </div>
            </div>
            <hr class="my-5 border-secondary opacity-25">
            <div class="text-center small">
                <p>&copy; 2026 - Badminton Pro System. Developed for a Better Sports Community.</p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        toastr.options = { "closeButton": true, "progressBar": true, "positionClass": "toast-top-right", "timeOut": "3000" };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
