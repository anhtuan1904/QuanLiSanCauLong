<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Badminton Pro</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,600;0,700;1,600&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        :root {
            --deep: #1a1209;
            --deep2: #231a0e;
            --deep3: #2e2110;
            --gold: #d4a017;
            --gold2: #f5c842;
            --gold3: rgba(212,160,23,.12);
            --cream: #fdf8f0;
            --warm: #f5ede0;
            --border: rgba(212,160,23,.18);
            --muted: rgba(255,255,255,.38);
            --text: rgba(255,255,255,.82);
            --rust: #c94b2a;
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--warm);
            color: #2a1f10;
            margin: 0;
        }

        /* ── NAV ─────────────────────────────────────── */
        .main-nav {
            position: sticky;
            top: 0;
            z-index: 900;
            background: var(--deep);
            border-bottom: 2px solid var(--border);
            padding: 0;
        }

            .main-nav::after {
                content: '';
                display: block;
                height: 3px;
                background: linear-gradient(90deg, var(--gold) 0%, var(--gold2) 50%, transparent 100%);
            }

        .nav-inner {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            height: 64px;
            gap: 0;
        }

        /* Brand */
        .nav-brand {
            display: flex;
            align-items: center;
            gap: .75rem;
            text-decoration: none;
            margin-right: 2.5rem;
            flex-shrink: 0;
        }

        .nav-brand-icon {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            color: var(--deep);
        }

        .nav-brand-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.1rem;
            font-weight: 700;
            color: #fff;
            line-height: 1.1;
        }

        .nav-brand-sub {
            font-size: .58rem;
            letter-spacing: .18em;
            text-transform: uppercase;
            color: var(--muted);
        }

        /* Links */
        .nav-links {
            display: flex;
            align-items: center;
            gap: .1rem;
            flex: 1;
        }

        .nav-link-item {
            position: relative;
            padding: 0 1rem;
            height: 64px;
            display: flex;
            align-items: center;
            color: var(--text) !important;
            text-decoration: none;
            font-size: .84rem;
            font-weight: 500;
            letter-spacing: .02em;
            white-space: nowrap;
            transition: color .2s;
        }

            .nav-link-item:hover,
            .nav-link-item.active {
                color: var(--gold2) !important;
            }

            .nav-link-item::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 0;
                height: 2px;
                background: linear-gradient(90deg, var(--gold), var(--gold2));
                transition: width .3s;
            }

            .nav-link-item:hover::after,
            .nav-link-item.active::after {
                width: 80%;
            }

        /* Dropdown */
        .nav-dropdown {
            position: relative;
        }

        .nav-dropdown-toggle {
            cursor: pointer;
            user-select: none;
        }

        .nav-dropdown-menu {
            position: absolute;
            top: calc(100% + 8px);
            left: 0;
            min-width: 220px;
            background: var(--deep2);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: .5rem;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-8px);
            transition: all .25s;
            z-index: 999;
            box-shadow: 0 16px 40px rgba(0,0,0,.4);
        }

        .nav-dropdown:hover .nav-dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .nav-dd-item {
            display: flex;
            align-items: center;
            gap: .75rem;
            padding: .65rem 1rem;
            color: var(--text);
            text-decoration: none;
            font-size: .84rem;
            border-radius: 5px;
            transition: all .2s;
        }

            .nav-dd-item:hover {
                background: var(--gold3);
                color: var(--gold2);
            }

            .nav-dd-item i {
                width: 16px;
                color: var(--gold);
                opacity: .7;
                font-size: .85rem;
            }

        .nav-dd-divider {
            height: 1px;
            background: var(--border);
            margin: .4rem 0;
        }

        /* Right actions */
        .nav-actions {
            display: flex;
            align-items: center;
            gap: .75rem;
            margin-left: auto;
        }

        .nav-icon-btn {
            width: 36px;
            height: 36px;
            border-radius: 7px;
            background: rgba(255,255,255,.06);
            border: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text);
            text-decoration: none;
            font-size: .95rem;
            transition: all .2s;
        }

            .nav-icon-btn:hover {
                background: var(--gold3);
                border-color: var(--gold);
                color: var(--gold2);
            }

        .btn-admin-nav {
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            color: var(--deep) !important;
            font-family: 'Outfit', sans-serif;
            font-size: .75rem;
            font-weight: 700;
            letter-spacing: .06em;
            text-transform: uppercase;
            padding: .45rem 1.1rem;
            border-radius: 5px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: .4rem;
            transition: all .2s;
        }

            .btn-admin-nav:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 14px rgba(212,160,23,.4);
                color: var(--deep) !important;
            }

        /* ── AUTH BUTTONS ────────────────────────────── */
        .nav-auth {
            display: flex;
            align-items: center;
            gap: .5rem;
        }

        /* Nút Đăng nhập — viền vàng, text vàng */
        .btn-login {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: .42rem 1.1rem;
            border-radius: 6px;
            border: 1.5px solid var(--gold);
            background: transparent;
            color: var(--gold2) !important;
            font-family: 'Outfit', sans-serif;
            font-size: .8rem;
            font-weight: 600;
            letter-spacing: .03em;
            text-decoration: none;
            white-space: nowrap;
            transition: all .2s;
        }

            .btn-login:hover {
                background: var(--gold3);
                border-color: var(--gold2);
                color: #fff !important;
                transform: translateY(-1px);
            }

        /* Nút Đăng ký — nền vàng đặc, text đen */
        .btn-register {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: .42rem 1.1rem;
            border-radius: 6px;
            border: 1.5px solid transparent;
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            color: var(--deep) !important;
            font-family: 'Outfit', sans-serif;
            font-size: .8rem;
            font-weight: 700;
            letter-spacing: .03em;
            text-decoration: none;
            white-space: nowrap;
            transition: all .2s;
        }

            .btn-register:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 14px rgba(212,160,23,.45);
                color: var(--deep) !important;
                filter: brightness(1.08);
            }

        /* User chip khi đã đăng nhập */
        .nav-user-chip {
            display: flex;
            align-items: center;
            gap: .55rem;
            background: rgba(255,255,255,.07);
            border: 1px solid var(--border);
            padding: .35rem .85rem .35rem .4rem;
            border-radius: 100px;
            text-decoration: none;
            transition: all .2s;
            position: relative;
        }

            .nav-user-chip:hover {
                background: var(--gold3);
                border-color: var(--gold);
            }

        .nav-user-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--deep);
            font-weight: 800;
            font-size: .72rem;
            font-family: 'Playfair Display', serif;
            flex-shrink: 0;
        }

        .nav-user-name {
            font-size: .8rem;
            font-weight: 600;
            color: rgba(255,255,255,.88);
            white-space: nowrap;
        }

        /* Dropdown user menu */
        .nav-user-chip .nav-dropdown-menu {
            right: 0;
            left: auto;
            min-width: 180px;
        }

        .nav-user-chip:hover .nav-dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        /* Mobile toggle */
        .nav-hamburger {
            display: none;
            background: none;
            border: 1px solid var(--border);
            border-radius: 6px;
            width: 36px;
            height: 36px;
            align-items: center;
            justify-content: center;
            color: var(--gold);
            cursor: pointer;
            font-size: 1.1rem;
            margin-left: .5rem;
        }

        /* Mobile drawer */
        .mobile-drawer {
            display: none;
            flex-direction: column;
            background: var(--deep2);
            border-top: 1px solid var(--border);
            padding: 1rem;
            gap: .25rem;
        }

            .mobile-drawer.open {
                display: flex;
            }

        .mob-link {
            display: flex;
            align-items: center;
            gap: .6rem;
            padding: .7rem 1rem;
            color: var(--text);
            text-decoration: none;
            font-size: .88rem;
            border-radius: 6px;
            transition: all .2s;
        }

            .mob-link:hover {
                background: var(--gold3);
                color: var(--gold2);
            }

            .mob-link i {
                color: var(--gold);
                opacity: .8;
                width: 16px;
            }

        .mob-section {
            font-size: .62rem;
            letter-spacing: .18em;
            text-transform: uppercase;
            color: var(--muted);
            padding: .8rem 1rem .3rem;
            font-weight: 700;
        }

        .mob-auth-row {
            display: flex;
            gap: .5rem;
            padding: .75rem 1rem .5rem;
        }

            .mob-auth-row .btn-login,
            .mob-auth-row .btn-register {
                flex: 1;
                justify-content: center;
            }

        /* ── FOOTER ─────────────────────────────────── */
        .site-footer {
            background: var(--deep);
            color: var(--text);
            margin-top: 6rem;
            border-top: 2px solid var(--border);
            position: relative;
            overflow: hidden;
        }

            .site-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg, var(--gold) 0%, var(--gold2) 50%, transparent 100%);
            }

        .footer-body {
            max-width: 1400px;
            margin: 0 auto;
            padding: 4rem 2rem 2.5rem;
            display: grid;
            grid-template-columns: 1.4fr 1fr 1fr 1.4fr;
            gap: 3rem;
        }

        .footer-brand-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.4rem;
            font-weight: 700;
            color: #fff;
            display: flex;
            align-items: center;
            gap: .6rem;
            margin-bottom: 1rem;
        }

            .footer-brand-name i {
                color: var(--gold);
            }

        .footer-desc {
            font-size: .84rem;
            line-height: 1.8;
            color: var(--muted);
            margin-bottom: 1.5rem;
        }

        .footer-socials {
            display: flex;
            gap: .75rem;
        }

        .footer-social-btn {
            width: 36px;
            height: 36px;
            border-radius: 6px;
            background: rgba(255,255,255,.06);
            border: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text);
            text-decoration: none;
            font-size: .9rem;
            transition: all .2s;
        }

            .footer-social-btn:hover {
                background: var(--gold3);
                border-color: var(--gold);
                color: var(--gold2);
            }

        .footer-col-title {
            font-family: 'Playfair Display', serif;
            font-size: 1rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 1.2rem;
            font-style: italic;
        }

        .footer-link {
            display: flex;
            align-items: center;
            gap: .5rem;
            color: var(--muted);
            text-decoration: none;
            font-size: .83rem;
            padding: .3rem 0;
            transition: all .2s;
            border-left: 2px solid transparent;
            padding-left: .5rem;
        }

            .footer-link:hover {
                color: var(--gold2);
                border-left-color: var(--gold);
                padding-left: .85rem;
            }

        .footer-newsletter-wrap {
            display: flex;
            overflow: hidden;
            border: 1px solid var(--border);
            border-radius: 6px;
            margin-bottom: 1.5rem;
        }

        .footer-newsletter-input {
            flex: 1;
            background: rgba(255,255,255,.06);
            border: none;
            padding: .75rem 1rem;
            color: #fff;
            font-family: 'Outfit', sans-serif;
            font-size: .84rem;
            outline: none;
        }

            .footer-newsletter-input::placeholder {
                color: var(--muted);
            }

        .footer-newsletter-btn {
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            border: none;
            color: var(--deep);
            font-weight: 700;
            font-size: .78rem;
            padding: .75rem 1.1rem;
            cursor: pointer;
            transition: all .2s;
        }

            .footer-newsletter-btn:hover {
                filter: brightness(1.1);
            }

        .footer-contact-item {
            display: flex;
            align-items: center;
            gap: .6rem;
            color: var(--muted);
            font-size: .83rem;
            padding: .3rem 0;
        }

            .footer-contact-item i {
                color: var(--gold);
            }

        .footer-bottom {
            border-top: 1px solid var(--border);
            max-width: 1400px;
            margin: 0 auto;
            padding: 1.5rem 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
        }

        .footer-bottom-copy {
            font-size: .78rem;
            color: var(--muted);
        }

        .footer-bottom-links {
            display: flex;
            gap: 1.5rem;
        }

            .footer-bottom-links a {
                font-size: .78rem;
                color: var(--muted);
                text-decoration: none;
                transition: color .2s;
            }

                .footer-bottom-links a:hover {
                    color: var(--gold2);
                }

        /* ── RESPONSIVE ─────────────────────────────── */
        @@media (max-width: 1024px) {
            .footer-body {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 900px) {
            .nav-links {
                display: none;
            }

            .nav-hamburger {
                display: flex;
            }

            .nav-auth {
                display: none;
            }
        }

        @@media (max-width: 600px) {
            .footer-body {
                grid-template-columns: 1fr;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
</head>
<body>

    <header>
        <!-- DESKTOP NAV -->
        <nav class="main-nav">
            <div class="nav-inner">
                <a asp-controller="Home" asp-action="Index" class="nav-brand">
                    <div class="nav-brand-icon"><i class="bi bi-trophy-fill"></i></div>
                    <div>
                        <div class="nav-brand-name">Badminton Pro</div>
                        <div class="nav-brand-sub">Sports Center</div>
                    </div>
                </a>

                <div class="nav-links">
                    <a asp-controller="Home" asp-action="Index" class="nav-link-item">
                        <i class="bi bi-house-door me-1"></i>Trang chủ
                    </a>

                    <div class="nav-dropdown">
                        <span class="nav-link-item nav-dropdown-toggle">
                            <i class="bi bi-grid-3x3 me-1"></i>Sân cầu lông <i class="bi bi-chevron-down ms-1" style="font-size:.65rem"></i>
                        </span>
                        <div class="nav-dropdown-menu">
                            <a class="nav-dd-item" asp-controller="Facility" asp-action="Index"><i class="bi bi-building"></i>Tất cả cơ sở</a>
                            <a class="nav-dd-item" asp-controller="Booking" asp-action="Search"><i class="bi bi-search"></i>Tìm sân trống</a>
                            <div class="nav-dd-divider"></div>
                            <a class="nav-dd-item" href="#"><i class="bi bi-star"></i>Sân VIP</a>
                        </div>
                    </div>

                    <a asp-controller="Product" asp-action="Index" class="nav-link-item">
                        <i class="bi bi-shop me-1"></i>Cửa hàng
                    </a>

                    <div class="nav-dropdown">
                        <span class="nav-link-item nav-dropdown-toggle">
                            <i class="bi bi-stars me-1"></i>Dịch vụ <i class="bi bi-chevron-down ms-1" style="font-size:.65rem"></i>
                        </span>
                        <div class="nav-dropdown-menu">
                            <a class="nav-dd-item" asp-controller="Service" asp-action="Training"><i class="bi bi-mortarboard"></i>Khóa học cầu lông</a>
                            <a class="nav-dd-item" asp-controller="Service" asp-action="Stringing"><i class="bi bi-tools"></i>Dịch vụ căng vợt</a>
                            <a class="nav-dd-item" asp-controller="Service" asp-action="Tournament"><i class="bi bi-trophy"></i>Giải đấu nội bộ</a>
                        </div>
                    </div>

                    <a asp-controller="Blog" asp-action="Index" class="nav-link-item">
                        <i class="bi bi-newspaper me-1"></i>Tin tức
                    </a>

                    <div class="nav-dropdown">
                        <span class="nav-link-item nav-dropdown-toggle">
                            <i class="bi bi-info-circle me-1"></i>Về chúng tôi <i class="bi bi-chevron-down ms-1" style="font-size:.65rem"></i>
                        </span>
                        <div class="nav-dropdown-menu">
                            <a class="nav-dd-item" asp-controller="Home" asp-action="About"><i class="bi bi-building"></i>Giới thiệu</a>
                            <a class="nav-dd-item" asp-controller="Home" asp-action="Contact"><i class="bi bi-headset"></i>Liên hệ hỗ trợ</a>
                            <a class="nav-dd-item" asp-controller="Home" asp-action="Recruitment"><i class="bi bi-briefcase"></i>Tuyển dụng</a>
                        </div>
                    </div>
                </div>

                <div class="nav-actions">
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-admin-nav">
                            <i class="bi bi-shield-fill-check"></i> Admin
                        </a>
                    }

                    <a asp-controller="Booking" asp-action="Search" class="nav-icon-btn" title="Giỏ hàng">
                        <i class="bi bi-bag"></i>
                    </a>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Đã đăng nhập: hiện chip tên + dropdown -->
                        <div class="nav-user-chip nav-dropdown">
                            <div class="nav-user-avatar">@User.Identity.Name?.Substring(0, 1).ToUpper()</div>
                            <span class="nav-user-name">@User.Identity.Name</span>
                            <i class="bi bi-chevron-down ms-1" style="font-size:.6rem;color:var(--muted)"></i>
                            <div class="nav-dropdown-menu">
                                <a class="nav-dd-item" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person"></i>Tài khoản
                                </a>
                                <a class="nav-dd-item" asp-controller="Booking" asp-action="MyBookings">
                                    <i class="bi bi-calendar-check"></i>Đặt sân của tôi
                                </a>
                                <div class="nav-dd-divider"></div>
                                <a class="nav-dd-item" asp-controller="Account" asp-action="Logout"
                                   style="color:#ff6b6b !important;">
                                    <i class="bi bi-box-arrow-right" style="color:#ff6b6b;opacity:1"></i>Đăng xuất
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Chưa đăng nhập: 2 nút tách biệt -->
                        <div class="nav-auth">
                            <a asp-controller="Account" asp-action="Login" class="btn-login">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn-register">
                                <i class="bi bi-person-plus"></i> Đăng ký
                            </a>
                        </div>
                    }

                    <button class="nav-hamburger" id="mobileToggle" aria-label="Menu">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>

            <!-- MOBILE DRAWER -->
            <div class="mobile-drawer" id="mobileDrawer">
                <a class="mob-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i>Trang chủ</a>
                <span class="mob-section">Sân cầu lông</span>
                <a class="mob-link" asp-controller="Facility" asp-action="Index"><i class="bi bi-building"></i>Tất cả cơ sở</a>
                <a class="mob-link" asp-controller="Booking" asp-action="Search"><i class="bi bi-search"></i>Tìm sân trống</a>
                <a class="mob-link" asp-controller="Product" asp-action="Index"><i class="bi bi-shop"></i>Cửa hàng</a>
                <span class="mob-section">Dịch vụ</span>
                <a class="mob-link" asp-controller="Service" asp-action="Training"><i class="bi bi-mortarboard"></i>Khóa học</a>
                <a class="mob-link" asp-controller="Service" asp-action="Stringing"><i class="bi bi-tools"></i>Căng vợt</a>
                <a class="mob-link" asp-controller="Service" asp-action="Tournament"><i class="bi bi-trophy"></i>Giải đấu</a>
