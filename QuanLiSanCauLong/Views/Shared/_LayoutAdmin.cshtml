<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <script src="~/lib/tinymce/tinymce.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        :root {
            --sidebar-bg: #ffffff;
            --primary-purple: #6c33f2;
            --primary-green: #10b981;
            --sidebar-hover: #f8fafc;
            --sidebar-active: #f0ebff;
        }

        body {
            background: #f8f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Sidebar */
        #sidebar {
            min-width: 270px;
            max-width: 270px;
            background: var(--sidebar-bg);
            color: #2d3748;
            transition: all 0.3s;
            box-shadow: 2px 0 15px rgba(0,0,0,0.05);
            overflow-y: auto;
            position: fixed;
            height: 100vh;
            z-index: 999;
            border-right: 1px solid #e2e8f0;
        }

            #sidebar.active {
                margin-left: -270px;
            }

        .sidebar-header {
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-purple) 0%, #8b5cf6 100%);
            text-align: center;
            border-bottom: 3px solid rgba(255,255,255,0.1);
        }

            .sidebar-header h3 {
                font-size: 1.4rem;
                margin: 0;
                font-weight: 800;
                color: #fff;
                letter-spacing: 1px;
            }

            .sidebar-header .subtitle {
                font-size: 0.75rem;
                color: rgba(255,255,255,0.9);
                margin-top: 5px;
                font-weight: 600;
            }

        /* Navigation */
        .components {
            padding: 1rem 0;
        }

        .nav-section {
            padding: 1rem 1.5rem 0.5rem;
            font-size: 0.7rem;
            text-transform: uppercase;
            color: #a0aec0;
            font-weight: 700;
            letter-spacing: 1.5px;
            margin-top: 0.5rem;
        }

        #sidebar ul li {
            position: relative;
        }

            #sidebar ul li a {
                padding: 0.85rem 1.5rem;
                display: flex;
                align-items: center;
                color: #4a5568;
                text-decoration: none;
                font-size: 0.9rem;
                font-weight: 500;
                transition: all 0.2s;
                border-left: 3px solid transparent;
            }

                #sidebar ul li a i {
                    width: 25px;
                    margin-right: 12px;
                    font-size: 1.15rem;
                    background: linear-gradient(135deg, var(--primary-purple), var(--primary-green));
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
                }

                #sidebar ul li a:hover {
                    color: var(--primary-purple);
                    background: var(--sidebar-hover);
                    border-left-color: var(--primary-purple);
                }

            #sidebar ul li.active > a {
                color: var(--primary-purple);
                background: var(--sidebar-active);
                border-left-color: var(--primary-purple);
                font-weight: 600;
            }

        /* Content */
        #content {
            width: 100%;
            margin-left: 270px;
            transition: all 0.3s;
        }

        #sidebar.active ~ #content {
            margin-left: 0;
        }

        /* Top Navbar */
        .top-navbar {
            padding: 1rem 2rem;
            background: #fff;
            border-bottom: 1px solid #e3e6f0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
            position: sticky;
            top: 0;
            z-index: 998;
        }

        #sidebarCollapse {
            background: linear-gradient(135deg, var(--primary-purple), #8b5cf6);
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            transition: all 0.2s;
            color: white;
            font-weight: 600;
        }

            #sidebarCollapse:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 51, 242, 0.3);
            }

        /* User Section */
        .user-section {
            margin-top: auto;
            padding: 1.5rem;
            border-top: 1px solid #e2e8f0;
            background: #f8fafc;
        }

        .user-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-purple), var(--primary-green));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1rem;
        }

        /* Main Content */
        main {
            padding: 2rem;
            min-height: calc(100vh - 80px);
        }

        /* Scrollbar */
        #sidebar::-webkit-scrollbar {
            width: 6px;
        }

        #sidebar::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        #sidebar::-webkit-scrollbar-thumb {
            background: #cbd5e0;
            border-radius: 3px;
        }

            #sidebar::-webkit-scrollbar-thumb:hover {
                background: #a0aec0;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar {
                margin-left: -270px;
            }

                #sidebar.active {
                    margin-left: 0;
                }

            #content {
                margin-left: 0;
            }
        }

        /* Badge */
        .badge-new {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
            padding: 0.2rem 0.5rem;
            border-radius: 10px;
            font-size: 0.65rem;
            margin-left: auto;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-shuttlecock-fill"></i> BADMINTON</h3>
                <div class="subtitle">Admin Dashboard</div>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminDashboard" ? "active" : "")">
                    <a asp-controller="AdminDashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-section">⚙️ QUẢN LÝ CƠ SỞ</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminFacility" ? "active" : "")">
                    <a asp-controller="AdminFacility" asp-action="Index">
                        <i class="bi bi-building"></i>
                        <span>Cơ sở sân</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCourt" ? "active" : "")">
                    <a asp-controller="AdminCourt" asp-action="Index">
                        <i class="bi bi-grid-3x3"></i>
                        <span>Sân cầu lông</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPriceSlot" ? "active" : "")">
                    <a asp-controller="AdminPriceSlot" asp-action="Index">
                        <i class="bi bi-cash-stack"></i>
                        <span>Khung giờ & Giá</span>
                    </a>
                </li>

                <li class="nav-section">📅 ĐẶT SÂN & ĐƠN HÀNG</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminBooking" ? "active" : "")">
                    <a asp-controller="AdminBooking" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Đặt sân</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminOrder" ? "active" : "")">
                    <a asp-controller="AdminOrder" asp-action="Index">
                        <i class="bi bi-receipt"></i>
                        <span>Đơn hàng</span>
                    </a>
                </li>

                <li class="nav-section">🛍️ SẢN PHẨM</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategory" ? "active" : "")">
                    <a asp-controller="AdminCategory" asp-action="Index">
                        <i class="bi bi-tags"></i>
                        <span>Danh mục</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProduct" ? "active" : "")">
                    <a asp-controller="AdminProduct" asp-action="Index">
                        <i class="bi bi-box-seam"></i>
                        <span>Sản phẩm</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminInventory" ? "active" : "")">
                    <a asp-controller="AdminInventory" asp-action="Index">
                        <i class="bi bi-boxes"></i>
                        <span>Kho hàng</span>
                    </a>
                </li>

                <li class="nav-section">📝 NỘI DUNG</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminBlog" ? "active" : "")">
                    <a asp-controller="AdminBlog" asp-action="Index">
                        <i class="bi bi-newspaper"></i>
                        <span>Bài viết</span>
                        <span class="badge-new">NEW</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminService" ? "active" : "")">
                    <a asp-controller="AdminService" asp-action="Index">
                        <i class="bi bi-stars"></i>
                        <span>Dịch vụ</span>
                        <span class="badge-new">NEW</span>
                    </a>
                </li>

                <li class="nav-section">💼 TUYỂN DỤNG & LIÊN HỆ</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminJob" ? "active" : "")">
                    <a asp-controller="AdminJob" asp-action="Index">
                        <i class="bi bi-briefcase"></i>
                        <span>Tuyển dụng</span>
                        <span class="badge-new">NEW</span>
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminContact" ? "active" : "")">
                    <a asp-controller="AdminContact" asp-action="Index">
                        <i class="bi bi-chat-dots"></i>
                        <span>Liên hệ</span>
                        <span class="badge-new">NEW</span>
                    </a>
                </li>

                <li class="nav-section">🎁 MARKETING</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminVoucher" ? "active" : "")">
                    <a asp-controller="AdminVoucher" asp-action="Index">
                        <i class="bi bi-ticket-perforated"></i>
                        <span>Voucher</span>
                    </a>
                </li>

                <li class="nav-section">📊 BÁO CÁO</li>

                <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Revenue" ? "active" : "")">
                    <a asp-controller="AdminReport" asp-action="Revenue">
                        <i class="bi bi-graph-up"></i>
                        <span>Doanh thu</span>
                    </a>
                </li>

                <li class="nav-section">🔧 HỆ THỐNG</li>

                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUser" ? "active" : "")">
                    <a asp-controller="AdminUser" asp-action="Index">
                        <i class="bi bi-person-badge"></i>
                        <span>Người dùng</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i>
                        <span>Về trang chủ</span>
                    </a>
                </li>
            </ul>

            <div class="user-section">
                <div class="d-flex align-items-center">
                    <div class="user-avatar me-3">
                        @User.Identity.Name?.Substring(0, 1).ToUpper()
                    </div>
                    <div style="line-height: 1.3;">
                        <div class="fw-bold text-dark" style="font-size: 0.9rem;">@User.Identity.Name</div>
                        <small class="text-muted" style="font-size: 0.75rem;">Administrator</small>
                    </div>
                </div>
            </div>
        </nav>

        <div id="content">
            <nav class="top-navbar">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <button type="button" id="sidebarCollapse" class="btn">
                            <i class="bi bi-list fs-5"></i>
                        </button>
                        <h5 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h5>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="d-none d-md-flex align-items-center gap-2">
                                <div class="user-avatar" style="width: 38px; height: 38px; font-size: 0.9rem;">
                                    @User.Identity.Name?.Substring(0, 1).ToUpper()
                                </div>
                                <div class="text-end">
                                    <div class="fw-semibold text-dark" style="font-size: 0.85rem;">@User.Identity.Name</div>
                                    <small class="text-muted" style="font-size: 0.7rem;">Admin</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Xử lý đóng mở sidebar
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            $(document).on('click', function(e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('#sidebar, #sidebarCollapse').length) {
                        $('#sidebar').addClass('active');
                    }
                }
            });

            // FIX: Cho phép focus vào TinyMCE trong Bootstrap Modal
            // Cách này hoạt động ngay cả khi Modal được nạp sau bằng Ajax
            $(document).on('focusin', function(e) {
                if (e.target.closest(".tox-tinymce-aux, .moxman-window, .tam-assetmanager-root") !== null) {
                    e.stopImmediatePropagation();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
