@model IEnumerable<QuanLiSanCauLong.ViewModels.ServiceViewModel>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Giải Đấu Nội Bộ</h2>
        <p class="text-muted">Sân chơi giao lưu, kết nối cộng đồng lông thủ</p>
    </div>

    <div class="row g-4">
        @foreach (var item in Model.Where(x => x.Type == "Tournament"))
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden service-card">
                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 180px; object-fit: cover; filter: brightness(0.8);">
                        <div class="position-absolute top-50 start-50 translate-middle text-white text-center w-100">
                            <i class="bi bi-trophy-fill display-5 shadow-sm"></i>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-1">@item.ServiceName</h5>
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <i class="bi bi-calendar-event text-primary"></i>
                            <span class="small text-muted">Thời gian: @item.Duration</span>
                        </div>

                        <p class="text-secondary small mb-4">@item.Description</p>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <div>
                                <small class="text-muted d-block">Lệ phí từ:</small>
                                <span class="text-primary fw-bold fs-5">@item.Price.ToString("N0") VNĐ</span>
                            </div>
                            <a href="#" class="btn btn-primary rounded-pill px-4 fw-bold">Tham gia</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .service-card {
        transition: all 0.3s ease;
        border: 1px solid #f1f5f9 !important;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(108, 51, 242, 0.1) !important;
            border-color: #6c33f2 !important;
        }

    .btn-primary {
        background-color: #6c33f2;
        border-color: #6c33f2;
    }

        .btn-primary:hover {
            background-color: #5621d6;
            border-color: #5621d6;
        }

    .text-primary {
        color: #6c33f2 !important;
    }

    .bg-primary-subtle {
        background-color: #f0ebff !important;
    }
</style>