@model IEnumerable<QuanLiSanCauLong.ViewModels.ServiceViewModel>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Dịch Vụ Căng Vợt</h2>
        <p class="text-muted">Máy căng điện tử hiện đại, độ chính xác tuyệt đối</p>
    </div>

    <div class="row justify-content-center g-4">
        @foreach (var item in Model.Where(x => x.Type == "Restring"))
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 service-card">
                    <div class="card-body p-4 text-center">
                        <div class="icon-box bg-primary-subtle text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 70px; height: 70px;">
                            <i class="bi bi-tools fs-2"></i>
                        </div>
                        <h5 class="fw-bold">@item.ServiceName</h5>
                        <p class="text-muted small">@item.Description</p>

                        <div class="bg-light rounded-3 py-2 mb-4">
                            <span class="text-secondary small"><i class="bi bi-stopwatch me-1"></i> Thời gian: </span>
                            <span class="fw-bold">@item.Duration</span>
                        </div>

                        <h3 class="text-primary fw-bold mb-4">@item.Price.ToString("N0") VNĐ</h3>

                        <div class="text-start mb-4">
                            @foreach (var feature in item.Features)
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-dot text-primary fs-4"></i>
                                    <span class="small text-secondary">@feature</span>
                                </div>
                            }
                        </div>

                        <button class="btn btn-primary w-100 rounded-pill fw-bold">Đăng ký ngay</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>