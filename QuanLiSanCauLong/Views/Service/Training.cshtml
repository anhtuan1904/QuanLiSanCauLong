@model IEnumerable<QuanLiSanCauLong.ViewModels.ServiceViewModel>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Khóa Học Cầu Lông</h2>
        <p class="text-muted">Nâng tầm kỹ năng cùng huấn luyện viên chuyên nghiệp</p>
    </div>

    <div class="d-flex justify-content-center gap-2 mb-5">
        <button class="btn btn-primary rounded-pill px-4">Tất cả khóa học</button>
        <button class="btn btn-outline-secondary rounded-pill px-4">Cơ bản</button>
        <button class="btn btn-outline-secondary rounded-pill px-4">Nâng cao</button>
    </div>

    <div class="row g-4">
        @foreach (var item in Model.Where(x => x.Type == "Course"))
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden service-card">
                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <span class="position-absolute top-0 start-0 m-3 badge bg-primary rounded-pill">
                            <i class="bi bi-mortarboard-fill me-1"></i> Khóa học
                        </span>
                    </div>
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-2">@item.ServiceName</h5>
                        <p class="text-muted small mb-3">@item.Description</p>

                        <div class="d-flex align-items-center text-primary mb-3">
                            <i class="bi bi-clock-history me-2"></i>
                            <span class="fw-bold">@item.Duration</span>
                        </div>

                        <h4 class="text-primary fw-bold mb-3">@item.Price.ToString("N0") VNĐ<small class="text-muted fs-6">/tháng</small></h4>

                        <ul class="list-unstyled mb-4">
                            @foreach (var feature in item.Features)
                            {
                                <li class="small mb-2 text-secondary"><i class="bi bi-check2-circle text-success me-2"></i>@feature</li>
                            }
                        </ul>

                        <a href="#" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>