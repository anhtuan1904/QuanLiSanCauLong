@model QuanLiSanCauLong.ViewModels.ProductCardViewModel

<div class="col-6 col-md-4 col-lg-3">
    <div class="card h-100 shadow-sm product-card position-relative">
        @if (!Model.IsAvailable)
        {
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center rounded"
                 style="background: rgba(255,255,255,0.7); z-index: 2;">
                <span class="badge bg-danger fs-6">Hết hàng</span>
            </div>
        }

        <a asp-action="Details" asp-route-id="@Model.ProductId" class="text-decoration-none text-dark">
            <img src="@Model.ImageUrl" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@Model.ProductName">
            <div class="card-body p-3 text-center">
                <small class="text-muted">@Model.CategoryName</small>
                <h6 class="card-title fw-bold mb-2 text-truncate">@Model.ProductName</h6>
                <div class="text-primary fw-bold fs-5">@Model.Price.ToString("N0")đ <small class="text-muted fw-light">/@Model.Unit</small></div>
            </div>
        </a>
        <div class="p-2 pt-0">
            <button class="btn btn-outline-primary w-100 rounded-pill btn-sm mb-2 @(Model.IsAvailable ? "" : "disabled")">
                <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
            </button>
        </div>
    </div>
</div>