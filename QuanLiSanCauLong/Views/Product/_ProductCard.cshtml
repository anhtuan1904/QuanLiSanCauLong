@model QuanLiSanCauLong.ViewModels.ProductCardViewModel
<div class="col-md-6 col-lg-3 mb-4">
    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden product-card-hover">
        <div class="position-relative">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-product.jpg" : Model.ImageUrl)"
                 class="card-img-top" style="height: 220px; object-fit: cover;" alt="@Model.ProductName">

            @if (!Model.IsAvailable)
            {
                <span class="position-absolute top-0 end-0 m-3 badge bg-danger rounded-pill">Hết hàng</span>
            }
            else
            {
                <span class="position-absolute top-0 end-0 m-3 badge bg-success rounded-pill">Còn hàng</span>
            }
        </div>
        <div class="card-body p-3 d-flex flex-column">
            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">@Model.CategoryName</small>
            <h6 class="card-title fw-bold mb-2 text-truncate">@Model.ProductName</h6>

            <div class="mt-auto">
                <div class="d-flex align-items-center mb-3">
                    <span class="text-primary fw-bold fs-5">@Model.Price.ToString("N0") VNĐ</span>
                </div>
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-primary btn-sm rounded-pill">Chi tiết</a>
                    <button class="btn btn-primary btn-sm rounded-pill @(Model.IsAvailable ? "" : "disabled")">
                        <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-card-hover {
        transition: all 0.3s ease;
    }

        .product-card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(108, 51, 242, 0.15) !important;
        }
</style>