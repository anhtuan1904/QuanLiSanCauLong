@model QuanLiSanCauLong.ViewModels.ProductCardViewModel

<style>
    .pc-wrap {
        display: contents;
    }

    .pc-card {
        background: var(--deep2, #231a0e);
        text-decoration: none;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border: 1.5px solid rgba(212,160,23,.15);
        border-radius: 6px;
        transition: all .25s;
    }

        .pc-card:hover {
            border-color: rgba(212,160,23,.4);
            transform: translateY(-4px);
            box-shadow: 0 16px 40px rgba(26,18,9,.3);
        }

    .pc-thumb {
        height: 200px;
        overflow: hidden;
        position: relative;
        background: #2e2110;
    }

        .pc-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform .5s;
        }

    .pc-card:hover .pc-thumb img {
        transform: scale(1.06);
    }

    .pc-no-img {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        color: rgba(212,160,23,.15);
    }

    .pc-badge {
        position: absolute;
        top: 0;
        right: 0;
        font-size: .62rem;
        font-weight: 800;
        letter-spacing: .1em;
        text-transform: uppercase;
        padding: .28rem .7rem;
    }

    .pc-badge-in {
        background: rgba(32,201,151,.18);
        color: #20c997;
        border-bottom-left-radius: 4px;
    }

    .pc-badge-out {
        background: rgba(239,68,68,.18);
        color: #ef4444;
        border-bottom-left-radius: 4px;
    }

    .pc-body {
        padding: 1rem 1.1rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .pc-cat {
        font-size: .62rem;
        font-weight: 700;
        letter-spacing: .13em;
        text-transform: uppercase;
        color: rgba(255,255,255,.28);
        margin-bottom: .3rem;
    }

    .pc-name {
        font-family: 'Playfair Display', serif;
        font-size: .95rem;
        font-weight: 700;
        color: rgba(255,255,255,.82);
        line-height: 1.3;
        margin-bottom: .8rem;
        flex: 1;
    }

    .pc-price {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: #f5c842;
        line-height: 1;
        margin-bottom: .85rem;
    }

    .pc-btns {
        display: flex;
        gap: .5rem;
    }

    .pc-btn-detail {
        flex: 1;
        background: transparent;
        border: 1.5px solid rgba(212,160,23,.3);
        border-radius: 4px;
        padding: .55rem .75rem;
        color: rgba(212,160,23,.8);
        font-family: 'Outfit', sans-serif;
        font-size: .75rem;
        font-weight: 700;
        letter-spacing: .07em;
        text-transform: uppercase;
        text-align: center;
        text-decoration: none;
        transition: all .2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .35rem;
    }

        .pc-btn-detail:hover {
            background: rgba(212,160,23,.1);
            border-color: #d4a017;
            color: #f5c842;
        }

    .pc-btn-add {
        flex: 1;
        background: linear-gradient(135deg, #d4a017, #f5c842);
        border: none;
        border-radius: 4px;
        padding: .55rem .75rem;
        color: #1a1209;
        font-family: 'Outfit', sans-serif;
        font-size: .75rem;
        font-weight: 800;
        letter-spacing: .07em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .35rem;
    }

        .pc-btn-add:hover {
            filter: brightness(1.08);
            transform: translateY(-1px);
        }

        .pc-btn-add.disabled {
            opacity: .4;
            cursor: not-allowed;
        }

            .pc-btn-add.disabled:hover {
                filter: none;
                transform: none;
            }
</style>

<div class="col-md-6 col-lg-3 mb-4">
    <a class="pc-card h-100" asp-action="Details" asp-route-id="@Model.ProductId">
        <div class="pc-thumb">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-product.jpg" : Model.ImageUrl)"
                 alt="@Model.ProductName" />
            @if (!Model.IsAvailable)
            {
                <span class="pc-badge pc-badge-out">Hết hàng</span>
            }
            else
            {
                <span class="pc-badge pc-badge-in">Còn hàng</span>
            }
        </div>
        <div class="pc-body">
            <div class="pc-cat">@Model.CategoryName</div>
            <div class="pc-name">@Model.ProductName</div>
            <div class="pc-price">@Model.Price.ToString("N0") VNĐ</div>
            <div class="pc-btns" onclick="event.preventDefault()">
                <span class="pc-btn-detail"><i class="bi bi-eye"></i> Chi tiết</span>
                <button class="pc-btn-add @(Model.IsAvailable ? "" : "disabled")" @(Model.IsAvailable ? "" : "disabled")>
                    <i class="bi bi-cart-plus"></i> Giỏ hàng
                </button>
            </div>
        </div>
    </a>
</div>
