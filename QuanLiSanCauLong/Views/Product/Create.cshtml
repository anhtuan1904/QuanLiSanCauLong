@model QuanLiSanCauLong.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3><i class="bi bi-box-seam"></i> Thêm sản phẩm mới</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Products">Sản phẩm</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin sản phẩm</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProduct" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProductCode" class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                                <input asp-for="ProductCode" class="form-control" placeholder="VD: VỢT001" />
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label">Danh mục <span class="text-danger">*</span></label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var category in ViewBag.Categories as IEnumerable<QuanLiSanCauLong.Models.ProductCategory>)
                                    {
                                        <option value="@category.CategoryId">
                                            @category.CategoryName (@category.CategoryType)
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="ProductName" class="form-control" placeholder="VD: Vợt cầu lông Yonex" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Mô tả chi tiết về sản phẩm..."></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label">Giá (VNĐ) <span class="text-danger">*</span></label>
                                <input asp-for="Price" class="form-control" type="number" step="1000" placeholder="50000" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Unit" class="form-label">Đơn vị <span class="text-danger">*</span></label>
                                <input asp-for="Unit" class="form-control" placeholder="VD: Cái, Chai, Giờ" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
@*                             <div class="col-md-4">
                                <label asp-for="Tax" class="form-label">Thuế (%)</label>
                                <input asp-for="Tax" class="form-control" type="number" step="0.01" value="0" />
                            </div> *@
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Hình ảnh URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Hoạt động
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a asp-action="Products" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Hướng dẫn</h5>
                </div>
                <div class="card-body">
                    <h6>Loại sản phẩm:</h6>
                    <ul class="small">
                        <li><strong>Food:</strong> Đồ ăn/uống (nước, snack...)</li>
                        <li><strong>Equipment:</strong> Dụng cụ (vợt, cầu...)</li>
                        <li><strong>Service:</strong> Dịch vụ (thuê vợt, HLV...)</li>
                    </ul>
                    <hr />
                    <h6>Lưu ý:</h6>
                    <ul class="small">
                        <li>Mã sản phẩm phải duy nhất</li>
                        <li>Giá nhập không có VAT</li>
                        <li>Sau khi tạo, cần thêm vào kho</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}