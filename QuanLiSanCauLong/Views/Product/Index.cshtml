@model QuanLiSanCauLong.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Menu Dịch Vụ";
}

<div class="container py-5">
    <div class="row mb-5 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold text-uppercase border-start border-4 border-primary ps-3">Thực đơn & Dịch vụ</h2>
            <p class="text-muted">Cung cấp năng lượng và dụng cụ tốt nhất cho trận đấu của bạn</p>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="input-group shadow-sm">
                <input type="text" name="search" class="form-control border-0" placeholder="Tìm kiếm món ăn, dụng cụ..." value="@Model.SearchKeyword">
                <button class="btn btn-primary px-4" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </div>

    <ul class="nav nav-pills justify-content-center mb-5 gap-2" id="productMenuTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active rounded-pill px-4" data-bs-toggle="pill" data-bs-target="#all-products">Tất cả</button>
        </li>
        @foreach (var cat in Model.Categories)
        {
            <li class="nav-item">
                <button class="nav-link rounded-pill px-4" data-bs-toggle="pill" data-bs-target="#cat-@cat.CategoryId">
                    @cat.CategoryName
                </button>
            </li>
        }
    </ul>

    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="all-products">
            @foreach (var catGroup in Model.Categories)
            {
                <h4 class="mb-4 mt-5 fw-bold"><i class="bi bi-tag-fill text-primary me-2"></i>@catGroup.CategoryName</h4>
                <div class="row g-4">
                    @foreach (var product in catGroup.Products)
                    {
                        @await Html.PartialAsync("_ProductCard", product)
                    }
                </div>
            }
        </div>

        @foreach (var catGroup in Model.Categories)
        {
            <div class="tab-pane fade" id="cat-@catGroup.CategoryId">
                <div class="row g-4 mt-2">
                    @foreach (var product in catGroup.Products)
                    {
                        @await Html.PartialAsync("_ProductCard", product)
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .nav-pills .nav-link {
        color: #666;
        background: #f8f9fa;
        border: 1px solid #eee;
    }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

    .product-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

    .btn-add-cart {
        border-radius: 0 0 15px 15px;
    }
</style>