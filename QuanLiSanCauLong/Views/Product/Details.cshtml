@model QuanLiSanCauLong.ViewModels.ProductDetailsViewModel
@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-5">
        <ol class="breadcrumb bg-white p-3 rounded-4 shadow-sm">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Cửa hàng</a></li>
            <li class="breadcrumb-item active">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-5 overflow-hidden p-2 bg-white">
                <img src="@Model.ImageUrls.FirstOrDefault()" id="mainImage" class="img-fluid rounded-5" alt="@Model.ProductName">
            </div>
        </div>

        <div class="col-md-6">
            <div class="ps-md-4">
                <span class="badge bg-primary-subtle text-primary mb-3 px-3 py-2 rounded-pill">@Model.CategoryName</span>
                <h1 class="display-6 fw-bold mb-3">@Model.ProductName</h1>

                <div class="d-flex align-items-baseline gap-2 mb-4">
                    <h2 class="text-primary fw-extrabold mb-0">@Model.Price.ToString("N0") VNĐ</h2>
                    <span class="text-muted">/ @Model.Unit</span>
                </div>

                <div class="bg-light p-4 rounded-4 mb-4">
                    <h6 class="fw-bold mb-2">Thông tin sản phẩm</h6>
                    <p class="text-secondary mb-0" style="line-height: 1.8;">@Model.Description</p>
                </div>

                <div class="row mb-4 g-3">
                    <div class="col-6">
                        <div class="border rounded-4 p-3 text-center h-100">
                            <small class="text-muted d-block mb-1">Trạng thái</small>
                            <span class="fw-bold @(Model.IsAvailable ? "text-success" : "text-danger")">
                                <i class="bi bi-check-circle-fill me-1"></i> @(Model.IsAvailable ? "Còn hàng" : "Hết hàng")
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded-4 p-3 text-center h-100">
                            <small class="text-muted d-block mb-1">Mã sản phẩm</small>
                            <span class="fw-bold text-dark">#@Model.ProductCode</span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3 mt-5">
                    <button class="btn btn-primary btn-lg flex-grow-1 rounded-pill py-3 shadow-lg @(Model.IsAvailable ? "" : "disabled")">
                        <i class="bi bi-bag-plus-fill me-2"></i> Thêm vào giỏ hàng
                    </button>
                    <button class="btn btn-outline-secondary btn-lg rounded-circle" style="width: 60px;">
                        <i class="bi bi-heart"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
    {
        <div class="mt-5 pt-5">
            <div class="d-flex align-items-center mb-4">
                <h3 class="fw-bold mb-0 me-3">Sản phẩm liên quan</h3>
                <div class="flex-grow-1 border-bottom"></div>
            </div>
            <div class="row g-4">
                @foreach (var related in Model.RelatedProducts)
                {
                    @await Html.PartialAsync("_ProductCard", related)
                }
            </div>
        </div>
    }
</div>