@model QuanLiSanCauLong.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-patch-question text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 fw-bold">Quên mật khẩu?</h2>
                        <p class="text-muted">Nhập email để khôi phục quyền truy cập</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email đã đăng ký
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg"
                                   placeholder="example@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-send"></i> Gửi yêu cầu khôi phục
                            </button>
                            <a asp-action="Login" class="btn btn-link text-decoration-none text-muted">
                                <i class="bi bi-arrow-left"></i> Quay lại Đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <small>
                    <i class="bi bi-info-circle"></i>
                    Hệ thống sẽ gửi một mã xác nhận hoặc liên kết đến email của bạn.
                    Vui lòng kiểm tra cả hòm thư rác (Spam).
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}