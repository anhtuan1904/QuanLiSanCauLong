@model QuanLiSanCauLong.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.13);
        --warm: #f5ede0;
        --border: rgba(212,160,23,.22);
        --muted: rgba(255,255,255,.38);
        --text: rgba(255,255,255,.85);
        --err: #ff6b6b;
    }

    .auth-page {
        min-height: 100vh;
        background: var(--deep);
        display: flex;
        align-items: stretch;
        position: relative;
        overflow: hidden;
    }

        .auth-page::before {
            content: '';
            position: fixed;
            inset: 0;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
            pointer-events: none;
            z-index: 0;
        }

    .auth-left {
        flex: 0 0 48%;
        background: var(--deep2);
        border-right: 3px solid var(--border);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 3.5rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .auth-deco-letter {
        position: absolute;
        bottom: -2rem;
        left: -1rem;
        font-family: 'Playfair Display',serif;
        font-size: 22rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
        user-select: none;
    }

    .auth-brand {
        display: flex;
        align-items: center;
        gap: .85rem;
        text-decoration: none;
    }

    .auth-brand-icon {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--deep);
        flex-shrink: 0;
        box-shadow: 0 4px 14px rgba(212,160,23,.3);
    }

    .auth-brand-text strong {
        display: block;
        font-family: 'Playfair Display',serif;
        font-size: 1.15rem;
        font-weight: 700;
        color: #fff;
    }

    .auth-brand-text span {
        font-size: .65rem;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .auth-headline {
        position: relative;
        z-index: 1;
    }

    .auth-headline-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .auth-headline-eyebrow::before {
            content: '';
            display: block;
            width: 28px;
            height: 2px;
            background: var(--gold);
        }

    .auth-headline h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.2rem,3.5vw,3.2rem);
        font-weight: 700;
        color: #fff;
        line-height: 1.1;
        margin: 0 0 1.2rem;
    }

        .auth-headline h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .auth-headline p {
        font-size: .9rem;
        color: var(--muted);
        line-height: 1.75;
        max-width: 340px;
        margin: 0;
    }

    .auth-info-box {
        background: rgba(255,255,255,.04);
        border: 1.5px solid var(--border);
        border-radius: 10px;
        padding: 1.1rem 1.25rem;
        position: relative;
        z-index: 1;
    }

    .auth-info-box-title {
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .6rem;
    }

    .auth-info-step {
        display: flex;
        align-items: flex-start;
        gap: .65rem;
        margin-bottom: .5rem;
        font-size: .8rem;
        color: var(--muted);
    }

        .auth-info-step:last-child {
            margin-bottom: 0;
        }

        .auth-info-step i {
            color: var(--gold);
            margin-top: .1rem;
            flex-shrink: 0;
        }

    .auth-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2.5rem;
        position: relative;
        z-index: 1;
    }

    .auth-form-box {
        width: 100%;
        max-width: 380px;
    }
    /* Icon circle */
    .auth-icon-circle {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        background: var(--gold3);
        border: 2px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: var(--gold2);
        margin: 0 auto 1.5rem;
    }

    .auth-form-title {
        font-family: 'Playfair Display',serif;
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .35rem;
        text-align: center;
    }

    .auth-form-sub {
        font-size: .85rem;
        color: var(--muted);
        margin-bottom: 2.2rem;
        text-align: center;
    }

    .af-group {
        margin-bottom: 1.25rem;
    }

    .af-label {
        display: block;
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .45rem;
    }

    .af-input-wrap {
        position: relative;
    }

        .af-input-wrap i.af-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gold);
            opacity: .5;
            font-size: .9rem;
            pointer-events: none;
        }

    .af-input {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .8rem 1rem .8rem 2.6rem;
        color: #fff;
        font-family: 'Outfit',sans-serif;
        font-size: .9rem;
        outline: none;
        transition: all .2s;
    }

        .af-input::placeholder {
            color: rgba(255,255,255,.2);
        }

        .af-input:focus {
            border-color: var(--gold);
            background: rgba(212,160,23,.07);
            box-shadow: 0 0 0 4px rgba(212,160,23,.1);
        }

    .af-error {
        font-size: .75rem;
        color: var(--err);
        margin-top: .35rem;
    }

    .af-btn-primary {
        width: 100%;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 8px;
        padding: .9rem 1.5rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .06em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        margin-top: 1.25rem;
    }

        .af-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212,160,23,.4);
        }

    .af-note {
        background: rgba(59,130,246,.08);
        border: 1px solid rgba(59,130,246,.2);
        border-radius: 8px;
        padding: .85rem 1rem;
        margin-top: 1.25rem;
        font-size: .78rem;
        color: rgba(147,197,253,.85);
        display: flex;
        align-items: flex-start;
        gap: .6rem;
    }

        .af-note i {
            flex-shrink: 0;
            margin-top: .1rem;
        }

    .af-back-link {
        text-align: center;
        margin-top: 1.5rem;
    }

        .af-back-link a {
            font-size: .8rem;
            color: var(--muted);
            text-decoration: none;
            transition: color .2s;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
        }

            .af-back-link a:hover {
                color: var(--gold2);
            }

    .af-validation-summary {
        background: rgba(255,107,107,.1);
        border: 1px solid rgba(255,107,107,.3);
        border-radius: 8px;
        padding: .75rem 1rem;
        margin-bottom: 1.25rem;
        font-size: .8rem;
        color: var(--err);
    }
    @@media(max - width:860px) {
        .auth-left {
            display: none;
        }

        .auth-page {
            background: var(--deep2);
        }

        .auth-right {
            padding: 2rem 1.25rem;
        }
    }
</style>

<div class="auth-page">
    <div class="auth-left">
        <div class="auth-deco-letter">Q</div>
        <a asp-controller="Home" asp-action="Index" class="auth-brand">
            <div class="auth-brand-icon"><i class="bi bi-trophy-fill"></i></div>
            <div class="auth-brand-text">
                <strong>Badminton Pro</strong>
                <span>Sports Center</span>
            </div>
        </a>
        <div class="auth-headline">
            <div class="auth-headline-eyebrow">Khôi phục tài khoản</div>
            <h1>Không sao,<br><em>ta sửa được.</em></h1>
            <p>Chỉ cần email đã đăng ký, chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu ngay lập tức.</p>
        </div>
        <div class="auth-info-box">
            <div class="auth-info-box-title">Quy trình khôi phục</div>
            <div class="auth-info-step"><i class="bi bi-1-circle-fill"></i>Nhập email đã đăng ký tài khoản</div>
            <div class="auth-info-step"><i class="bi bi-2-circle-fill"></i>Kiểm tra hộp thư (kể cả Spam)</div>
            <div class="auth-info-step"><i class="bi bi-3-circle-fill"></i>Nhấn link và tạo mật khẩu mới</div>
        </div>
    </div>

    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-icon-circle"><i class="bi bi-shield-lock"></i></div>
            <div class="auth-form-title">Quên mật khẩu?</div>
            <p class="auth-form-sub">Nhập email để nhận liên kết khôi phục</p>

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="af-validation-summary"></div>

                <div class="af-group">
                    <label asp-for="Email" class="af-label">Email đã đăng ký</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-envelope af-icon"></i>
                        <input asp-for="Email" class="af-input" placeholder="example@email.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="af-error"></span>
                </div>

                <button type="submit" class="af-btn-primary">
                    <i class="bi bi-send-fill"></i> Gửi yêu cầu khôi phục
                </button>

                <div class="af-note">
                    <i class="bi bi-info-circle-fill"></i>
                    Liên kết có hiệu lực trong 30 phút. Vui lòng kiểm tra cả hòm thư Spam.
                </div>

                <div class="af-back-link">
                    <a asp-action="Login"><i class="bi bi-arrow-left"></i> Quay lại đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
