@model QuanLiSanCauLong.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    :root {
        --c-purple: #6c33f2;
        --c-orange: #ff7a50;
        --c-blue: #3a86ff;
        --c-teal: #20c997;
        --c-pink: #ff4d6d;
        --c-yellow: #ffc400;
        --bg-gray: #e2e8f0;
        --primary-green: #00a662;
    }

    .main-forgot-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        padding: 20px;
    }

    .forgot-wrapper {
        display: flex;
        width: 1000px; /* Độ rộng đồng nhất với Đăng ký/Đổi mật khẩu */
        height: 600px; /* Thấp hơn một chút vì form rất ngắn */
        background: white;
        border-radius: 40px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* --- BÊN TRÁI: NHÂN VẬT (60%) --- */
    .character-side {
        flex: 0 0 60%;
        background-color: var(--bg-gray);
        position: relative;
        overflow: hidden;
    }

    /* --- BÊN PHẢI: FORM (40%) --- */
    .form-side {
        flex: 0 0 40%;
        background: white;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* NHÂN VẬT (Giữ nguyên style liếc mắt) */
    .character {
        position: absolute;
        bottom: -10px;
        transition: all 0.3s ease;
    }

    .bg-1 {
        width: 45%;
        height: 80%;
        background: var(--c-purple);
        border-radius: 80px;
        left: -10%;
        z-index: 1;
    }

    .bg-2 {
        width: 50%;
        height: 60%;
        background: var(--c-pink);
        border-radius: 200px 200px 0 0;
        left: 15%;
        z-index: 5;
    }

    .bg-3 {
        width: 40%;
        height: 70%;
        background: var(--c-blue);
        border-radius: 100px;
        left: 55%;
        z-index: 2;
    }

    .fg-1 {
        width: 15%;
        height: 20%;
        background: var(--c-yellow);
        border-radius: 20px;
        left: 45%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    .eyes {
        display: flex;
        justify-content: center;
        gap: 15%;
        position: absolute;
        width: 100%;
        top: 20%;
    }

    .eye {
        background: white;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        width: 30px;
        height: 30px;
    }

    .pupil {
        width: 45%;
        height: 45%;
        background: black;
        border-radius: 50%;
        position: absolute;
        left: 27.5%;
        top: 27.5%;
    }

    /* FORM UI */
    .form-label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #334155;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #f1f5f9;
        border: 2px solid transparent;
        padding: 12px 15px;
        border-radius: 12px;
        height: 50px;
    }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: none;
            background: white;
        }

    .btn-send {
        background: var(--primary-green);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        width: 100%;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn-send:hover {
            background: #008e54;
            transform: translateY(-2px);
        }

    .info-box {
        background-color: #f0f9ff;
        border-radius: 12px;
        padding: 12px;
        margin-top: 20px;
        border-left: 4px solid var(--c-blue);
        font-size: 0.8rem;
        color: #0369a1;
    }
</style>

<div class="main-forgot-container">
    <div class="forgot-wrapper">
        <div class="character-side">
            <div class="character bg-1"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-2"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-3"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character fg-1"><div class="eyes" style="top:25%"><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div></div></div>
        </div>

        <div class="form-side">
            <div class="text-center mb-4">
                <i class="bi bi-shield-lock text-success" style="font-size: 3rem;"></i>
                <h3 class="fw-bold mt-2 mb-1">Quên mật khẩu?</h3>
                <p class="text-muted small">Đừng lo, hãy nhập email của bạn để khôi phục</p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="d-flex flex-column gap-3">
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email đã đăng ký</label>
                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn-send">
                    <i class="bi bi-send-fill me-2"></i>Gửi yêu cầu
                </button>

                <div class="info-box">
                    <i class="bi bi-info-circle-fill me-1"></i>
                    Hệ thống sẽ gửi liên kết khôi phục vào Email. Vui lòng kiểm tra cả hòm thư Spam.
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-muted text-decoration-none small fw-bold">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại Đăng nhập
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Liếc mắt theo chuột
            $(document).on('mousemove', function(e) {
                $('.pupil').each(function() {
                    const rect = $(this).parent()[0].getBoundingClientRect();
                    const x = rect.left + rect.width / 2;
                    const y = rect.top + rect.height / 2;
                    const angle = Math.atan2(e.clientY - y, e.clientX - x);
                    $(this).css('transform', `translate(${Math.cos(angle)*7}px, ${Math.sin(angle)*7}px)`);
                });
            });
        });
    </script>
}