@model QuanLiSanCauLong.Models.User

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container my-4">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h5 class="mb-0">@Model.FullName</h5>
                    <p class="text-muted small mb-3">@Model.Email</p>
                    <span class="badge bg-success">@Model.Role</span>
                </div>
            </div>

            <div class="list-group shadow-sm">
                <a href="#profile" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person"></i> Thông tin cá nhân
                </a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                    <i class="bi bi-key"></i> Đổi mật khẩu
                </a>
                <a asp-controller="Booking" asp-action="MyBookings" class="list-group-item list-group-item-action">
                    <i class="bi bi-calendar-event"></i> Lịch đặt sân
                </a>
                <a asp-action="Logout" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                </a>
            </div>
        </div>

        <!-- Profile Form -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="UserId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">
                                    Họ và tên <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control" readonly />
                                <small class="text-muted">Email không thể thay đổi</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    Số điện thoại
                                </label>
                                <input asp-for="Phone" class="form-control phone-input"
                                       placeholder="0912345678" maxlength="10" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vai trò</label>
                                <input type="text" class="form-control" value="@Model.Role" readonly />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày tạo tài khoản</label>
                                <input type="text" class="form-control"
                                       value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <div>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Đang hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Bị khóa
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Cập nhật thông tin
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- User Statistics -->
            @if (Model.Role == "Customer")
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-graph-up"></i> Thống kê</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="stat-box p-3 border rounded">
                                    <i class="bi bi-calendar-check text-success fs-2"></i>
                                    <h4 class="mt-2 mb-0">@ViewBag.TotalBookings</h4>
                                    <small class="text-muted">Tổng đơn đặt</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="stat-box p-3 border rounded">
                                    <i class="bi bi-check-circle text-info fs-2"></i>
                                    <h4 class="mt-2 mb-0">@ViewBag.CompletedBookings</h4>
                                    <small class="text-muted">Đã hoàn thành</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="stat-box p-3 border rounded">
                                    <i class="bi bi-currency-dollar text-warning fs-2"></i>
                                    <h4 class="mt-2 mb-0">@ViewBag.TotalSpent</h4>
                                    <small class="text-muted">Tổng chi tiêu</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Phone number formatting
            $('.phone-input').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 10) {
                    value = value.substring(0, 10);
                }
                $(this).val(value);
            });

            // Smooth scroll to active section
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 100
                    }, 500);
                }
            });
        });
    </script>
}