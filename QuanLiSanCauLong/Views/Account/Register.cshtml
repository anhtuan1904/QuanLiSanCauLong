@model QuanLiSanCauLong.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    :root {
        --c-purple: #6c33f2;
        --c-orange: #ff7a50;
        --c-blue: #3a86ff;
        --c-teal: #20c997;
        --c-pink: #ff4d6d;
        --c-yellow: #ffc400;
        --bg-gray: #e2e8f0;
        --primary-green: #00a662;
    }

    .main-reg-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        padding: 20px;
    }

    .reg-wrapper {
        display: flex;
        width: 1000px; /* Thu nhỏ chiều rộng tổng thể từ 1200px xuống 1000px */
        height: 720px; /* Chiều cao vừa đủ để chứa các field và nút Google */
        background: white;
        border-radius: 40px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* --- BÊN TRÁI: NHÂN VẬT (60%) --- */
    .character-side {
        flex: 0 0 60%;
        background-color: var(--bg-gray);
        position: relative;
        overflow: hidden;
    }

    /* --- BÊN PHẢI: FORM (40%) --- */
    .form-side {
        flex: 0 0 40%;
        background: white;
        padding: 30px 40px; /* Giảm padding để form gọn hơn */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* NHÂN VẬT */
    .character {
        position: absolute;
        bottom: -10px;
        transition: all 0.3s ease;
    }

    .bg-1 {
        width: 45%;
        height: 85%;
        background: var(--c-purple);
        border-radius: 80px;
        left: -10%;
        z-index: 1;
    }

    .bg-2 {
        width: 50%;
        height: 50%;
        background: var(--c-orange);
        border-radius: 200px 200px 0 0;
        left: 15%;
        z-index: 5;
    }

    .bg-3 {
        width: 35%;
        height: 70%;
        background: var(--c-blue);
        border-radius: 100px;
        left: 55%;
        z-index: 2;
    }

    .bg-4 {
        width: 30%;
        height: 45%;
        background: var(--c-teal);
        border-radius: 80px;
        left: 80%;
        z-index: 4;
    }

    .fg-1 {
        width: 18%;
        height: 22%;
        background: var(--c-yellow);
        border-radius: 25px;
        left: 40%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    .eyes {
        display: flex;
        justify-content: center;
        gap: 15%;
        position: absolute;
        width: 100%;
        top: 20%;
    }

    .eye {
        background: white;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        width: 30px;
        height: 30px;
    }

    .pupil {
        width: 45%;
        height: 45%;
        background: black;
        border-radius: 50%;
        position: absolute;
        left: 27.5%;
        top: 27.5%;
    }

    /* FORM UI TINH GỌN */
    .form-label {
        font-size: 0.8rem;
        font-weight: 700;
        color: #334155;
        margin-bottom: 2px;
    }

    .form-control {
        background-color: #f1f5f9;
        border: 2px solid transparent;
        padding: 8px 12px;
        border-radius: 10px;
        height: 42px;
        font-size: 0.9rem;
    }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: none;
            background: white;
        }

    .input-group-custom {
        position: relative;
    }

    .input-icon-end {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #94a3b8;
    }

    .btn-reg {
        background: var(--primary-green);
        color: white;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-weight: 700;
        width: 100%;
        transition: 0.3s;
        margin-top: 5px;
    }

        .btn-reg:hover {
            background: #008e54;
            transform: translateY(-2px);
        }

    /* Nút Google */
    .btn-google {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: white;
        border: 1px solid #e2e8f0;
        padding: 10px;
        border-radius: 10px;
        text-decoration: none;
        color: #334155;
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 10px;
        transition: 0.2s;
    }

        .btn-google:hover {
            background: #f8fafc;
            border-color: #cbd5e0;
        }

    .divider {
        text-align: center;
        margin: 15px 0;
        color: #94a3b8;
        position: relative;
        font-size: 0.8rem;
    }

        .divider::before, .divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #e2e8f0;
        }

        .divider::before {
            left: 0;
        }

        .divider::after {
            right: 0;
        }

    .shame .eye {
        height: 4px !important;
        background: black;
        border-radius: 0;
        margin-top: 12px;
    }
</style>

<div class="main-reg-container">
    <div class="reg-wrapper">
        <div class="character-side">
            <div class="character bg-1"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-2"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-3"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-4"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character fg-1"><div class="eyes" style="top:25%"><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div></div></div>
        </div>

        <div class="form-side">
            <h3 class="fw-bold mb-1">Đăng ký</h3>
            <p class="text-muted small mb-3">Tạo tài khoản mới nhanh chóng</p>

            <form asp-action="Register" method="post" id="registerForm" class="d-flex flex-column gap-2">
                <div class="form-group">
                    <label asp-for="FullName" class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <div class="input-group-custom">
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="••••••••" />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#passwordInput"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-group-custom">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPasswordInput" placeholder="••••••••" />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#confirmPasswordInput"></i>
                    </div>
                </div>

                <button type="submit" class="btn-reg">Đăng ký ngay</button>

                <div class="divider">Hoặc</div>

                <a href="#" class="btn-google">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" width="18">
                    Đăng ký với Google
                </a>

                <p class="text-center mt-3 mb-0" style="font-size: 0.85rem;">
                    Đã có tài khoản? <a asp-action="Login" class="text-success fw-bold text-decoration-none">Đăng nhập</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $(document).on('mousemove', function(e) {
                $('.pupil').each(function() {
                    const rect = $(this).parent()[0].getBoundingClientRect();
                    const x = rect.left + rect.width / 2;
                    const y = rect.top + rect.height / 2;
                    const angle = Math.atan2(e.clientY - y, e.clientX - x);
                    $(this).css('transform', `translate(${Math.cos(angle)*7}px, ${Math.sin(angle)*7}px)`);
                });
            });

            $('.toggle-pass').click(function() {
                const target = $($(this).data('target'));
                const type = target.attr('type') === 'password' ? 'text' : 'password';
                target.attr('type', type);
                $(this).toggleClass('bi-eye-slash bi-eye');
            });

            $('input[type="password"]').on('focus', function() {
                if($(this).attr('type') === 'password') $('.character').addClass('shame');
            }).on('blur', function() {
                $('.character').removeClass('shame');
            });
        });
    </script>
}