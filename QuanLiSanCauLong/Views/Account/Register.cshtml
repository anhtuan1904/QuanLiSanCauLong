@model QuanLiSanCauLong.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.13);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --border: rgba(212,160,23,.22);
        --muted: rgba(255,255,255,.38);
        --text: rgba(255,255,255,.85);
        --err: #ff6b6b;
    }

    .auth-page {
        min-height: 100vh;
        background: var(--deep);
        display: flex;
        align-items: stretch;
        position: relative;
        overflow: hidden;
    }

        .auth-page::before {
            content: '';
            position: fixed;
            inset: 0;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
            pointer-events: none;
            z-index: 0;
        }

    .auth-left {
        flex: 0 0 48%;
        background: var(--deep2);
        border-right: 3px solid var(--border);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 3.5rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .auth-deco-letter {
        position: absolute;
        bottom: -2rem;
        left: -1rem;
        font-family: 'Playfair Display',serif;
        font-size: 22rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
        user-select: none;
    }

    .auth-brand {
        display: flex;
        align-items: center;
        gap: .85rem;
        text-decoration: none;
    }

    .auth-brand-icon {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--deep);
        flex-shrink: 0;
        box-shadow: 0 4px 14px rgba(212,160,23,.3);
    }

    .auth-brand-text strong {
        display: block;
        font-family: 'Playfair Display',serif;
        font-size: 1.15rem;
        font-weight: 700;
        color: #fff;
    }

    .auth-brand-text span {
        font-size: .65rem;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .auth-headline {
        position: relative;
        z-index: 1;
    }

    .auth-headline-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .auth-headline-eyebrow::before {
            content: '';
            display: block;
            width: 28px;
            height: 2px;
            background: var(--gold);
        }

    .auth-headline h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.2rem,3.5vw,3.2rem);
        font-weight: 700;
        color: #fff;
        line-height: 1.1;
        margin: 0 0 1.2rem;
    }

        .auth-headline h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .auth-headline p {
        font-size: .9rem;
        color: var(--muted);
        line-height: 1.75;
        max-width: 340px;
        margin: 0;
    }

    .auth-steps {
        display: flex;
        flex-direction: column;
        gap: .75rem;
        position: relative;
        z-index: 1;
    }

    .auth-step {
        display: flex;
        align-items: center;
        gap: .9rem;
    }

    .auth-step-num {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: var(--gold3);
        border: 1.5px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: .7rem;
        font-weight: 800;
        color: var(--gold);
        flex-shrink: 0;
    }

    .auth-step-text {
        font-size: .82rem;
        color: var(--muted);
    }

    .auth-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.5rem 2rem;
        position: relative;
        z-index: 1;
        overflow-y: auto;
    }

    .auth-form-box {
        width: 100%;
        max-width: 420px;
    }

    .auth-form-title {
        font-family: 'Playfair Display',serif;
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .35rem;
    }

    .auth-form-sub {
        font-size: .85rem;
        color: var(--muted);
        margin-bottom: 2rem;
    }

    .af-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .af-group {
        margin-bottom: 1.1rem;
    }

    .af-label {
        display: block;
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .45rem;
    }

    .af-input-wrap {
        position: relative;
    }

        .af-input-wrap i.af-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gold);
            opacity: .5;
            font-size: .9rem;
            pointer-events: none;
        }

    .af-input {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .75rem 1rem .75rem 2.5rem;
        color: #fff;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        outline: none;
        transition: all .2s;
    }

        .af-input::placeholder {
            color: rgba(255,255,255,.2);
        }

        .af-input:focus {
            border-color: var(--gold);
            background: rgba(212,160,23,.07);
            box-shadow: 0 0 0 4px rgba(212,160,23,.1);
        }

        .af-input.has-toggle {
            padding-right: 3rem;
        }

    .af-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255,255,255,.3);
        cursor: pointer;
        font-size: .95rem;
        padding: 0;
        transition: color .2s;
    }

        .af-toggle:hover {
            color: var(--gold2);
        }

    .af-error {
        font-size: .73rem;
        color: var(--err);
        margin-top: .3rem;
    }

    .af-btn-primary {
        width: 100%;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 8px;
        padding: .9rem 1.5rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .06em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        margin-top: 1.25rem;
    }

        .af-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212,160,23,.4);
        }

    .af-divider {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 1.25rem 0;
    }

        .af-divider::before, .af-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--border);
        }

        .af-divider span {
            font-size: .7rem;
            color: var(--muted);
            letter-spacing: .08em;
        }

    .af-btn-google {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .7rem 1rem;
        color: var(--text);
        font-family: 'Outfit',sans-serif;
        font-size: .83rem;
        font-weight: 600;
        cursor: pointer;
        transition: all .2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .65rem;
        text-decoration: none;
    }

        .af-btn-google:hover {
            border-color: rgba(255,255,255,.2);
            background: rgba(255,255,255,.08);
            color: #fff;
        }

    .af-footer-link {
        text-align: center;
        margin-top: 1.5rem;
        font-size: .82rem;
        color: var(--muted);
    }

        .af-footer-link a {
            color: var(--gold2);
            font-weight: 700;
            text-decoration: none;
        }

            .af-footer-link a:hover {
                opacity: .8;
            }

    .af-validation-summary {
        background: rgba(255,107,107,.1);
        border: 1px solid rgba(255,107,107,.3);
        border-radius: 8px;
        padding: .75rem 1rem;
        margin-bottom: 1.25rem;
        font-size: .8rem;
        color: var(--err);
    }
    @@media(max - width:860px) {
        .auth-left {
            display: none;
        }

        .auth-page {
            background: var(--deep2);
        }

        .auth-right {
            padding: 2rem 1.25rem;
        }

        .af-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="auth-page">
    <div class="auth-left">
        <div class="auth-deco-letter">R</div>
        <a asp-controller="Home" asp-action="Index" class="auth-brand">
            <div class="auth-brand-icon"><i class="bi bi-trophy-fill"></i></div>
            <div class="auth-brand-text">
                <strong>Badminton Pro</strong>
                <span>Sports Center</span>
            </div>
        </a>
        <div class="auth-headline">
            <div class="auth-headline-eyebrow">Tạo tài khoản</div>
            <h1>Gia nhập<br><em>cộng đồng.</em></h1>
            <p>Tạo tài khoản miễn phí và bắt đầu trải nghiệm đặt sân chuyên nghiệp, ưu đãi và giải đấu độc quyền.</p>
        </div>
        <div class="auth-steps">
            <div class="auth-step">
                <div class="auth-step-num">1</div>
                <div class="auth-step-text">Điền thông tin cơ bản của bạn</div>
            </div>
            <div class="auth-step">
                <div class="auth-step-num">2</div>
                <div class="auth-step-text">Xác nhận qua email</div>
            </div>
            <div class="auth-step">
                <div class="auth-step-num">3</div>
                <div class="auth-step-text">Đặt sân & tận hưởng ngay!</div>
            </div>
        </div>
    </div>

    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-form-title">Đăng ký</div>
            <p class="auth-form-sub">Tạo tài khoản mới nhanh chóng</p>

            <form asp-action="Register" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="af-validation-summary"></div>

                <div class="af-group">
                    <label asp-for="FullName" class="af-label">Họ và tên</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-person af-icon"></i>
                        <input asp-for="FullName" class="af-input" placeholder="Nguyễn Văn A" />
                    </div>
                    <span asp-validation-for="FullName" class="af-error"></span>
                </div>

                <div class="af-group">
                    <label asp-for="Email" class="af-label">Email</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-envelope af-icon"></i>
                        <input asp-for="Email" class="af-input" placeholder="example@email.com" />
                    </div>
                    <span asp-validation-for="Email" class="af-error"></span>
                </div>

                <div class="af-row">
                    <div class="af-group">
                        <label asp-for="Password" class="af-label">Mật khẩu</label>
                        <div class="af-input-wrap">
                            <i class="bi bi-lock af-icon"></i>
                            <input asp-for="Password" type="password" class="af-input has-toggle" id="passwordInput" placeholder="••••••••" />
                            <button type="button" class="af-toggle toggle-pass" data-target="#passwordInput"><i class="bi bi-eye-slash"></i></button>
                        </div>
                        <span asp-validation-for="Password" class="af-error"></span>
                    </div>
                    <div class="af-group">
                        <label asp-for="ConfirmPassword" class="af-label">Xác nhận</label>
                        <div class="af-input-wrap">
                            <i class="bi bi-lock-fill af-icon"></i>
                            <input asp-for="ConfirmPassword" type="password" class="af-input has-toggle" id="confirmPasswordInput" placeholder="••••••••" />
                            <button type="button" class="af-toggle toggle-pass" data-target="#confirmPasswordInput"><i class="bi bi-eye-slash"></i></button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="af-error"></span>
                    </div>
                </div>

                <button type="submit" class="af-btn-primary">
                    <i class="bi bi-person-plus-fill"></i> Tạo tài khoản
                </button>

                <div class="af-divider"><span>Hoặc</span></div>

                <a href="#" class="af-btn-google">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" width="18" alt="G">
                    Đăng ký với Google
                </a>

                <p class="af-footer-link">
                    Đã có tài khoản? <a asp-action="Login">Đăng nhập</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.toggle-pass').forEach(btn => {
            btn.addEventListener('click', () => {
                const target = document.querySelector(btn.dataset.target);
                const isPass = target.type === 'password';
                target.type = isPass ? 'text' : 'password';
                btn.querySelector('i').className = isPass ? 'bi bi-eye' : 'bi bi-eye-slash';
            });
        });
    </script>
}
