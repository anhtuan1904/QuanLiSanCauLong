@model QuanLiSanCauLong.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    :root {
        --c-purple: #6c33f2;
        --c-orange: #ff7a50;
        --c-blue: #3a86ff;
        --c-teal: #20c997;
        --c-pink: #ff4d6d;
        --c-yellow: #ffc400;
        --bg-gray: #e2e8f0;
        --primary-green: #00a662;
    }

    .main-reset-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        padding: 20px;
    }

    .reset-wrapper {
        display: flex;
        width: 1000px;
        height: 600px;
        background: white;
        border-radius: 40px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* --- BÊN TRÁI: NHÂN VẬT (60%) --- */
    .character-side {
        flex: 0 0 60%;
        background-color: var(--bg-gray);
        position: relative;
        overflow: hidden;
    }

    /* --- BÊN PHẢI: FORM (40%) --- */
    .form-side {
        flex: 0 0 40%;
        background: white;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* NHÂN VẬT */
    .character {
        position: absolute;
        bottom: -10px;
        transition: all 0.3s ease;
    }

    .bg-1 {
        width: 45%;
        height: 85%;
        background: var(--c-purple);
        border-radius: 80px;
        left: -10%;
        z-index: 1;
    }

    .bg-2 {
        width: 45%;
        height: 50%;
        background: var(--c-orange);
        border-radius: 200px 200px 0 0;
        left: 20%;
        z-index: 5;
    }

    .bg-3 {
        width: 40%;
        height: 75%;
        background: var(--c-teal);
        border-radius: 100px;
        left: 55%;
        z-index: 2;
    }

    .fg-1 {
        width: 15%;
        height: 20%;
        background: var(--c-pink);
        border-radius: 20px;
        left: 42%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    .eyes {
        display: flex;
        justify-content: center;
        gap: 15%;
        position: absolute;
        width: 100%;
        top: 20%;
    }

    .eye {
        background: white;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        width: 30px;
        height: 30px;
    }

    .pupil {
        width: 45%;
        height: 45%;
        background: black;
        border-radius: 50%;
        position: absolute;
        left: 27.5%;
        top: 27.5%;
    }

    /* FORM UI */
    .form-label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #334155;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #f1f5f9;
        border: 2px solid transparent;
        padding: 10px 15px;
        border-radius: 12px;
        height: 45px;
    }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: none;
            background: white;
        }

    .input-group-custom {
        position: relative;
    }

    .input-icon-end {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #94a3b8;
        z-index: 10;
    }

    .btn-reset {
        background: var(--primary-green);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        width: 100%;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn-reset:hover {
            background: #008e54;
            transform: translateY(-2px);
        }

    .shame .eye {
        height: 4px !important;
        background: black;
        border-radius: 0;
        margin-top: 15px;
    }
</style>

<div class="main-reset-container">
    <div class="reset-wrapper">
        <div class="character-side">
            <div class="character bg-1"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-2"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-3"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character fg-1"><div class="eyes" style="top:25%"><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div><div class="eye" style="width:12px;height:12px"><div class="pupil"></div></div></div></div>
        </div>

        <div class="form-side">
            <h3 class="fw-bold mb-1">Mật khẩu mới</h3>
            <p class="text-muted small mb-4">Thiết lập lại mật khẩu an toàn cho tài khoản của bạn</p>

            <form asp-action="ResetPassword" method="post" class="d-flex flex-column gap-3">
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                <div class="form-group">
                    <label class="form-label">Mật khẩu mới</label>
                    <div class="input-group-custom">
                        <input asp-for="Password" type="password" class="form-control" id="passInput" placeholder="••••••••" />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#passInput"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Xác nhận lại</label>
                    <div class="input-group-custom">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassInput" placeholder="••••••••" />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#confirmPassInput"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn-reset">Xác nhận thay đổi</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Liếc mắt
            $(document).on('mousemove', function(e) {
                $('.pupil').each(function() {
                    const rect = $(this).parent()[0].getBoundingClientRect();
                    const x = rect.left + rect.width / 2;
                    const y = rect.top + rect.height / 2;
                    const angle = Math.atan2(e.clientY - y, e.clientX - x);
                    $(this).css('transform', `translate(${Math.cos(angle)*7}px, ${Math.sin(angle)*7}px)`);
                });
            });

            // Ẩn/Hiện pass
            $('.toggle-pass').click(function() {
                const target = $($(this).data('target'));
                const type = target.attr('type') === 'password' ? 'text' : 'password';
                target.attr('type', type);
                $(this).toggleClass('bi-eye-slash bi-eye');
            });

            // Nhắm mắt khi nhập pass
            $('input[type="password"]').on('focus', function() {
                if($(this).attr('type') === 'password') $('.character').addClass('shame');
            }).on('blur', function() {
                $('.character').removeClass('shame');
            });
        });
    </script>
}