@model QuanLiSanCauLong.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.13);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --border: rgba(212,160,23,.22);
        --muted: rgba(255,255,255,.38);
        --text: rgba(255,255,255,.85);
        --rust: #c94b2a;
        --err: #ff6b6b;
    }

    /* ── PAGE ── */
    .auth-page {
        min-height: 100vh;
        background: var(--deep);
        display: flex;
        align-items: stretch;
        position: relative;
        overflow: hidden;
    }

        /* Noise overlay */
        .auth-page::before {
            content: '';
            position: fixed;
            inset: 0;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
            pointer-events: none;
            z-index: 0;
        }

    /* ── LEFT PANEL ── */
    .auth-left {
        flex: 0 0 52%;
        background: var(--deep2);
        border-right: 3px solid var(--border);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 3.5rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        /* Gold accent bar top */
        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--gold), var(--gold2), transparent);
        }

    /* Big decorative letter */
    .auth-deco-letter {
        position: absolute;
        bottom: -2rem;
        left: -1rem;
        font-family: 'Playfair Display', serif;
        font-size: 22rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
        user-select: none;
    }

    .auth-brand {
        display: flex;
        align-items: center;
        gap: .85rem;
        text-decoration: none;
    }

    .auth-brand-icon {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg, var(--gold), var(--gold2));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--deep);
        flex-shrink: 0;
        box-shadow: 0 4px 14px rgba(212,160,23,.3);
    }

    .auth-brand-text strong {
        display: block;
        font-family: 'Playfair Display', serif;
        font-size: 1.15rem;
        font-weight: 700;
        color: #fff;
    }

    .auth-brand-text span {
        font-size: .65rem;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .auth-headline {
        position: relative;
        z-index: 1;
    }

    .auth-headline-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .auth-headline-eyebrow::before {
            content: '';
            display: block;
            width: 28px;
            height: 2px;
            background: var(--gold);
        }

    .auth-headline h1 {
        font-family: 'Playfair Display', serif;
        font-size: clamp(2.4rem, 4vw, 3.4rem);
        font-weight: 700;
        color: #fff;
        line-height: 1.1;
        margin: 0 0 1.2rem;
    }

        .auth-headline h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .auth-headline p {
        font-size: .92rem;
        color: var(--muted);
        line-height: 1.75;
        max-width: 360px;
        margin: 0;
    }

    /* Feature pills */
    .auth-features {
        display: flex;
        flex-wrap: wrap;
        gap: .6rem;
        position: relative;
        z-index: 1;
    }

    .auth-feat-pill {
        display: inline-flex;
        align-items: center;
        gap: .45rem;
        background: rgba(255,255,255,.05);
        border: 1px solid var(--border);
        border-radius: 100px;
        padding: .45rem .9rem;
        font-size: .76rem;
        color: var(--text);
    }

        .auth-feat-pill i {
            color: var(--gold);
            font-size: .8rem;
        }

    /* ── RIGHT PANEL (FORM) ── */
    .auth-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2.5rem;
        position: relative;
        z-index: 1;
    }

    .auth-form-box {
        width: 100%;
        max-width: 400px;
    }

    .auth-form-title {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .35rem;
    }

    .auth-form-sub {
        font-size: .85rem;
        color: var(--muted);
        margin-bottom: 2.2rem;
    }

    /* Form group */
    .af-group {
        margin-bottom: 1.25rem;
    }

    .af-label {
        display: block;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .5rem;
    }

    .af-input-wrap {
        position: relative;
    }

        .af-input-wrap i.af-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gold);
            opacity: .5;
            font-size: .95rem;
            pointer-events: none;
        }

    .af-input {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .8rem 1rem .8rem 2.6rem;
        color: #fff;
        font-family: 'Outfit', sans-serif;
        font-size: .9rem;
        outline: none;
        transition: all .2s;
    }

        .af-input::placeholder {
            color: rgba(255,255,255,.2);
        }

        .af-input:focus {
            border-color: var(--gold);
            background: rgba(212,160,23,.07);
            box-shadow: 0 0 0 4px rgba(212,160,23,.1);
        }

        .af-input.has-toggle {
            padding-right: 3rem;
        }

    .af-toggle {
        position: absolute;
        right: 14px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255,255,255,.3);
        cursor: pointer;
        font-size: 1rem;
        padding: 0;
        transition: color .2s;
    }

        .af-toggle:hover {
            color: var(--gold2);
        }

    /* Validation */
    .af-error {
        font-size: .75rem;
        color: var(--err);
        margin-top: .35rem;
    }

    /* Forgot link */
    .af-forgot {
        text-align: right;
        margin-top: .4rem;
    }

        .af-forgot a {
            font-size: .76rem;
            color: var(--muted);
            text-decoration: none;
            transition: color .2s;
        }

            .af-forgot a:hover {
                color: var(--gold2);
            }

    /* Submit button */
    .af-btn-primary {
        width: 100%;
        background: linear-gradient(135deg, var(--gold), var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 8px;
        padding: .9rem 1.5rem;
        font-family: 'Outfit', sans-serif;
        font-size: .9rem;
        font-weight: 800;
        letter-spacing: .06em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        margin-top: 1.5rem;
        position: relative;
        overflow: hidden;
    }

        .af-btn-primary::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, transparent 40%, rgba(255,255,255,.15));
            opacity: 0;
            transition: opacity .2s;
        }

        .af-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212,160,23,.4);
        }

            .af-btn-primary:hover::after {
                opacity: 1;
            }

    /* Divider */
    .af-divider {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 1.5rem 0;
    }

        .af-divider::before, .af-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--border);
        }

        .af-divider span {
            font-size: .72rem;
            color: var(--muted);
            letter-spacing: .08em;
            white-space: nowrap;
        }

    /* Google btn */
    .af-btn-google {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .75rem 1rem;
        color: var(--text);
        font-family: 'Outfit', sans-serif;
        font-size: .85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all .2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .75rem;
        text-decoration: none;
    }

        .af-btn-google:hover {
            border-color: rgba(255,255,255,.2);
            background: rgba(255,255,255,.08);
            color: #fff;
        }

    /* Footer link */
    .af-footer-link {
        text-align: center;
        margin-top: 1.75rem;
        font-size: .82rem;
        color: var(--muted);
    }

        .af-footer-link a {
            color: var(--gold2);
            font-weight: 700;
            text-decoration: none;
            transition: opacity .2s;
        }

            .af-footer-link a:hover {
                opacity: .8;
            }

    /* Validation summary */
    .af-validation-summary {
        background: rgba(255,107,107,.1);
        border: 1px solid rgba(255,107,107,.3);
        border-radius: 8px;
        padding: .75rem 1rem;
        margin-bottom: 1.25rem;
        font-size: .8rem;
        color: var(--err);
    }

    /* Responsive */
    @@media (max-width: 860px) {
        .auth-left {
            display: none;
        }

        .auth-page {
            background: var(--deep2);
        }

        .auth-right {
            padding: 2rem 1.25rem;
        }
    }
</style>

<div class="auth-page">
    <!-- LEFT -->
    <div class="auth-left">
        <div class="auth-deco-letter">B</div>

        <a asp-controller="Home" asp-action="Index" class="auth-brand">
            <div class="auth-brand-icon"><i class="bi bi-trophy-fill"></i></div>
            <div class="auth-brand-text">
                <strong>Badminton Pro</strong>
                <span>Sports Center</span>
            </div>
        </a>

        <div class="auth-headline">
            <div class="auth-headline-eyebrow">Chào mừng trở lại</div>
            <h1>Sân chờ.<br><em>Bạn đã sẵn?</em></h1>
            <p>Đăng nhập để đặt sân, theo dõi lịch thi đấu và khám phá ưu đãi dành riêng cho bạn.</p>
        </div>

        <div class="auth-features">
            <span class="auth-feat-pill"><i class="bi bi-lightning-charge-fill"></i> Đặt sân tức thì</span>
            <span class="auth-feat-pill"><i class="bi bi-shield-check"></i> Bảo mật cao</span>
            <span class="auth-feat-pill"><i class="bi bi-trophy"></i> Giải đấu nội bộ</span>
            <span class="auth-feat-pill"><i class="bi bi-clock"></i> 06:00 – 23:00</span>
        </div>
    </div>

    <!-- RIGHT -->
    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-form-title">Đăng nhập</div>
            <p class="auth-form-sub">Nhập thông tin tài khoản của bạn</p>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="af-validation-summary"></div>

                <div class="af-group">
                    <label class="af-label">Email</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-envelope af-icon"></i>
                        <input asp-for="Email" class="af-input" placeholder="example@email.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="af-error"></span>
                </div>

                <div class="af-group">
                    <label class="af-label">Mật khẩu</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-lock af-icon"></i>
                        <input asp-for="Password" type="password" class="af-input has-toggle" id="passField" placeholder="••••••••" autocomplete="current-password" />
                        <button type="button" class="af-toggle" id="btnToggle">
                            <i class="bi bi-eye-slash" id="toggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="af-error"></span>
                    <div class="af-forgot"><a asp-action="ForgotPassword">Quên mật khẩu?</a></div>
                </div>

                <button type="submit" class="af-btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </button>

                <div class="af-divider"><span>Hoặc</span></div>

                <a href="#" class="af-btn-google">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" width="18" alt="G">
                    Tiếp tục với Google
                </a>

                <p class="af-footer-link">
                    Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const passField  = document.getElementById('passField');
        const toggleIcon = document.getElementById('toggleIcon');
        document.getElementById('btnToggle').addEventListener('click', () => {
            const isPass = passField.type === 'password';
            passField.type = isPass ? 'text' : 'password';
            toggleIcon.className = isPass ? 'bi bi-eye' : 'bi bi-eye-slash';
        });
    </script>
}
