@model QuanLiSanCauLong.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    :root {
        --c-purple: #6c33f2;
        --c-orange: #ff7a50;
        --c-blue: #3a86ff;
        --c-teal: #20c997;
        --c-pink: #ff4d6d;
        --c-yellow: #ffc400;
        --bg-gray: #e2e8f0;
        --primary-green: #00a662;
    }

    .main-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        padding: 20px;
    }

    .login-wrapper {
        display: flex;
        width: 1100px; /* Thu hẹp tổng thể một chút cho tinh tế */
        height: 650px;
        background: white;
        border-radius: 40px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* --- BÊN TRÁI: NHÂN VẬT (60%) --- */
    .character-side {
        flex: 0 0 60%;
        background-color: var(--bg-gray);
        position: relative;
        overflow: hidden;
    }

    /* --- BÊN PHẢI: FORM (40%) --- */
    .form-side {
        flex: 0 0 40%;
        background: white;
        padding: 40px 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* NHÂN VẬT (Rải lung tung nhưng chỉ ở bên trái) */
    .character {
        position: absolute;
        bottom: -10px;
        transition: all 0.3s ease;
    }

    .bg-1 {
        width: 40%;
        height: 85%;
        background: var(--c-purple);
        border-radius: 80px;
        left: -5%;
        z-index: 1;
    }

    .bg-2 {
        width: 50%;
        height: 55%;
        background: var(--c-orange);
        border-radius: 200px 200px 0 0;
        left: 15%;
        z-index: 5;
    }

    .bg-3 {
        width: 35%;
        height: 70%;
        background: var(--c-blue);
        border-radius: 100px;
        left: 50%;
        z-index: 2;
    }

    .bg-4 {
        width: 30%;
        height: 60%;
        background: var(--c-teal);
        border-radius: 80px;
        left: 75%;
        z-index: 4;
    }

    .fg-1 {
        width: 15%;
        height: 25%;
        background: #9b59b6;
        border-radius: 20px;
        left: 8%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    .fg-2 {
        width: 18%;
        height: 20%;
        background: var(--c-yellow);
        border-radius: 50px 50px 0 0;
        left: 45%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    /* MẮT NHÂN VẬT */
    .eyes {
        display: flex;
        justify-content: center;
        gap: 15%;
        position: absolute;
        width: 100%;
        top: 20%;
    }

    .eye {
        background: white;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        width: 35px;
        height: 35px;
    }

    .pupil {
        width: 45%;
        height: 45%;
        background: black;
        border-radius: 50%;
        position: absolute;
        left: 27.5%;
        top: 27.5%;
    }

    /* FORM UI */
    .form-control {
        background-color: #f1f5f9;
        border: 2px solid transparent;
        padding: 12px 15px;
        border-radius: 12px;
        height: 50px;
    }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: none;
            background: white;
        }

    /* Input Password Group */
    .password-wrapper {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #94a3b8;
        font-size: 1.2rem;
        z-index: 10;
    }

    .btn-login {
        background: var(--primary-green);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        width: 100%;
        transition: 0.3s;
    }

        .btn-login:hover {
            background: #008e54;
            transform: translateY(-2px);
        }

    /* Nút Google */
    .btn-google {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: white;
        border: 1px solid #e2e8f0;
        padding: 12px;
        border-radius: 12px;
        text-decoration: none;
        color: #334155;
        font-weight: 600;
        margin-top: 15px;
        transition: 0.2s;
    }

        .btn-google:hover {
            background: #f8fafc;
            border-color: #cbd5e0;
        }

    .divider {
        text-align: center;
        margin: 20px 0;
        color: #94a3b8;
        position: relative;
        font-size: 0.9rem;
    }

        .divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            width: 42%;
            height: 1px;
            background: #e2e8f0;
        }

        .divider::after {
            content: "";
            position: absolute;
            top: 50%;
            right: 0;
            width: 42%;
            height: 1px;
            background: #e2e8f0;
        }

    /* Hiệu ứng nhắm mắt */
    .shame .eye {
        height: 4px !important;
        background: black;
        border-radius: 0;
        margin-top: 15px;
    }
</style>

<div class="main-login-container">
    <div class="login-wrapper">

        <div class="character-side">
            <div class="character bg-1"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-2"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-3"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-4"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character fg-1"><div class="eyes" style="top:25%"><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div></div></div>
            <div class="character fg-2"><div class="eyes" style="top:25%"><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div></div></div>
        </div>

        <div class="form-side">
            <h2 class="fw-bold mb-1">Đăng nhập</h2>
            <p class="text-muted mb-4 small">Chào mừng bạn trở lại với hệ thống!</p>

            <form asp-action="Login" method="post" class="d-flex flex-column gap-3">
                <div class="form-group">
                    <label class="form-label fw-bold small mb-1">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                </div>

                <div class="form-group">
                    <label class="form-label fw-bold small mb-1">Mật khẩu</label>
                    <div class="password-wrapper">
                        <input asp-for="Password" type="password" class="form-control" id="passField" placeholder="••••••••" />
                        <i class="bi bi-eye-slash toggle-password" id="btnToggle"></i>
                    </div>
                </div>

                <button type="submit" class="btn-login">Đăng nhập</button>

                <div class="divider">Hoặc</div>

                <a href="#" class="btn-google">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" width="20">
                    Tiếp tục với Google
                </a>

                <p class="text-center mt-4 small">
                    Chưa có tài khoản? <a asp-action="Register" class="text-success fw-bold text-decoration-none">Đăng ký ngay</a>
                </p>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        // Liếc mắt theo chuột
        $(document).on('mousemove', function(e) {
            $('.pupil').each(function() {
                const rect = $(this).parent()[0].getBoundingClientRect();
                const x = rect.left + rect.width / 2;
                const y = rect.top + rect.height / 2;
                const angle = Math.atan2(e.clientY - y, e.clientX - x);
                const dist = 8;
                $(this).css('transform', `translate(${Math.cos(angle)*dist}px, ${Math.sin(angle)*dist}px)`);
            });
        });

        // Ẩn/Hiện mật khẩu
        $('#btnToggle').click(function() {
            const field = $('#passField');
            const type = field.attr('type') === 'password' ? 'text' : 'password';
            field.attr('type', type);
            $(this).toggleClass('bi-eye-slash bi-eye');

            // Nếu đang hiện pass thì nhân vật hết "ngại" (shame)
            if(type === 'text') $('.character').removeClass('shame');
            else $('.character').addClass('shame');
        });

        // Nhắm mắt khi nhập pass
        $('#passField').on('focus', function() {
            if($(this).attr('type') === 'password') $('.character').addClass('shame');
        }).on('blur', function() {
            $('.character').removeClass('shame');
        });
    });
</script>