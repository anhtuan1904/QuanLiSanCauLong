@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.13);
        --warm: #f5ede0;
        --border: rgba(212,160,23,.22);
        --muted: rgba(255,255,255,.38);
        --text: rgba(255,255,255,.85);
        --err: #ff6b6b;
    }

    .auth-page {
        min-height: 100vh;
        background: var(--deep);
        display: flex;
        align-items: stretch;
        position: relative;
        overflow: hidden;
    }

        .auth-page::before {
            content: '';
            position: fixed;
            inset: 0;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
            pointer-events: none;
            z-index: 0;
        }

    .auth-left {
        flex: 0 0 48%;
        background: var(--deep2);
        border-right: 3px solid var(--border);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 3.5rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .auth-deco-letter {
        position: absolute;
        bottom: -2rem;
        left: -1rem;
        font-family: 'Playfair Display',serif;
        font-size: 22rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
        user-select: none;
    }

    .auth-brand {
        display: flex;
        align-items: center;
        gap: .85rem;
        text-decoration: none;
    }

    .auth-brand-icon {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--deep);
        flex-shrink: 0;
        box-shadow: 0 4px 14px rgba(212,160,23,.3);
    }

    .auth-brand-text strong {
        display: block;
        font-family: 'Playfair Display',serif;
        font-size: 1.15rem;
        font-weight: 700;
        color: #fff;
    }

    .auth-brand-text span {
        font-size: .65rem;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .auth-headline {
        position: relative;
        z-index: 1;
    }

    .auth-headline-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .auth-headline-eyebrow::before {
            content: '';
            display: block;
            width: 28px;
            height: 2px;
            background: var(--gold);
        }

    .auth-headline h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.2rem,3.5vw,3.2rem);
        font-weight: 700;
        color: #fff;
        line-height: 1.1;
        margin: 0 0 1.2rem;
    }

        .auth-headline h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .auth-headline p {
        font-size: .9rem;
        color: var(--muted);
        line-height: 1.75;
        max-width: 340px;
        margin: 0;
    }
    /* Security tips */
    .sec-tips {
        display: flex;
        flex-direction: column;
        gap: .7rem;
        position: relative;
        z-index: 1;
    }

    .sec-tip {
        display: flex;
        align-items: center;
        gap: .75rem;
        padding: .7rem 1rem;
        background: rgba(255,255,255,.04);
        border: 1px solid var(--border);
        border-radius: 8px;
    }

        .sec-tip i {
            color: var(--gold);
            font-size: .95rem;
            flex-shrink: 0;
        }

    .sec-tip-text {
        font-size: .8rem;
        color: var(--muted);
    }

    .auth-right {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2.5rem;
        position: relative;
        z-index: 1;
    }

    .auth-form-box {
        width: 100%;
        max-width: 400px;
    }

    .auth-form-title {
        font-family: 'Playfair Display',serif;
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .35rem;
    }

    .auth-form-sub {
        font-size: .85rem;
        color: var(--muted);
        margin-bottom: 2.2rem;
    }

    .af-group {
        margin-bottom: 1.25rem;
    }

    .af-label {
        display: block;
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .45rem;
    }

    .af-input-wrap {
        position: relative;
    }

        .af-input-wrap i.af-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gold);
            opacity: .5;
            font-size: .9rem;
            pointer-events: none;
        }

    .af-input {
        width: 100%;
        background: rgba(255,255,255,.05);
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: .8rem 1rem .8rem 2.6rem;
        color: #fff;
        font-family: 'Outfit',sans-serif;
        font-size: .9rem;
        outline: none;
        transition: all .2s;
    }

        .af-input::placeholder {
            color: rgba(255,255,255,.2);
        }

        .af-input:focus {
            border-color: var(--gold);
            background: rgba(212,160,23,.07);
            box-shadow: 0 0 0 4px rgba(212,160,23,.1);
        }

        .af-input.has-toggle {
            padding-right: 3rem;
        }

    .af-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255,255,255,.3);
        cursor: pointer;
        font-size: .95rem;
        padding: 0;
        transition: color .2s;
    }

        .af-toggle:hover {
            color: var(--gold2);
        }
    /* Strength meter */
    .strength-bar-wrap {
        margin-top: .5rem;
        display: flex;
        gap: 4px;
    }

    .strength-seg {
        flex: 1;
        height: 3px;
        border-radius: 2px;
        background: rgba(255,255,255,.1);
        transition: background .3s;
    }

    .strength-label {
        font-size: .72rem;
        font-weight: 600;
        margin-top: .3rem;
    }

    .match-msg {
        font-size: .72rem;
        font-weight: 600;
        margin-top: .35rem;
    }

    .af-btn-primary {
        width: 100%;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 8px;
        padding: .9rem 1.5rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .06em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        margin-top: 1.5rem;
    }

        .af-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(212,160,23,.4);
        }

    .af-back-link {
        text-align: center;
        margin-top: 1.25rem;
    }

        .af-back-link a {
            font-size: .8rem;
            color: var(--muted);
            text-decoration: none;
            transition: color .2s;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
        }

            .af-back-link a:hover {
                color: var(--gold2);
            }

    .af-validation-summary {
        background: rgba(255,107,107,.1);
        border: 1px solid rgba(255,107,107,.3);
        border-radius: 8px;
        padding: .75rem 1rem;
        margin-bottom: 1.25rem;
        font-size: .8rem;
        color: var(--err);
    }
    @@media(max - width:860px) {
        .auth-left {
            display: none;
        }

        .auth-page {
            background: var(--deep2);
        }

        .auth-right {
            padding: 2rem 1.25rem;
        }
    }
</style>

<div class="auth-page">
    <div class="auth-left">
        <div class="auth-deco-letter">K</div>
        <a asp-controller="Home" asp-action="Index" class="auth-brand">
            <div class="auth-brand-icon"><i class="bi bi-trophy-fill"></i></div>
            <div class="auth-brand-text">
                <strong>Badminton Pro</strong>
                <span>Sports Center</span>
            </div>
        </a>
        <div class="auth-headline">
            <div class="auth-headline-eyebrow">Bảo mật tài khoản</div>
            <h1>Mật khẩu<br><em>mạnh hơn.</em></h1>
            <p>Cập nhật mật khẩu định kỳ giúp tài khoản của bạn luôn được bảo vệ tốt nhất.</p>
        </div>
        <div class="sec-tips">
            <div class="sec-tip"><i class="bi bi-check-circle-fill"></i><span class="sec-tip-text">Tối thiểu 8 ký tự</span></div>
            <div class="sec-tip"><i class="bi bi-check-circle-fill"></i><span class="sec-tip-text">Kết hợp chữ hoa, số & ký tự đặc biệt</span></div>
            <div class="sec-tip"><i class="bi bi-check-circle-fill"></i><span class="sec-tip-text">Không dùng thông tin cá nhân dễ đoán</span></div>
        </div>
    </div>

    <div class="auth-right">
        <div class="auth-form-box">
            <div class="auth-form-title">Đổi mật khẩu</div>
            <p class="auth-form-sub">Vui lòng nhập thông tin để bảo mật tài khoản</p>

            <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                <div asp-validation-summary="All" class="af-validation-summary"></div>

                <div class="af-group">
                    <label class="af-label">Mật khẩu hiện tại</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-lock af-icon"></i>
                        <input type="password" name="currentPassword" id="currentPassword" class="af-input has-toggle" placeholder="••••••••" required />
                        <button type="button" class="af-toggle toggle-pass" data-target="#currentPassword"><i class="bi bi-eye-slash"></i></button>
                    </div>
                </div>

                <div class="af-group">
                    <label class="af-label">Mật khẩu mới</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-key af-icon"></i>
                        <input type="password" name="newPassword" id="newPassword" class="af-input has-toggle" placeholder="Tối thiểu 6 ký tự" required />
                        <button type="button" class="af-toggle toggle-pass" data-target="#newPassword"><i class="bi bi-eye-slash"></i></button>
                    </div>
                    <div class="strength-bar-wrap">
                        <div class="strength-seg" id="s1"></div>
                        <div class="strength-seg" id="s2"></div>
                        <div class="strength-seg" id="s3"></div>
                        <div class="strength-seg" id="s4"></div>
                    </div>
                    <div class="strength-label" id="strengthLabel"></div>
                </div>

                <div class="af-group">
                    <label class="af-label">Xác nhận mật khẩu mới</label>
                    <div class="af-input-wrap">
                        <i class="bi bi-lock-fill af-icon"></i>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="af-input has-toggle" placeholder="••••••••" required />
                        <button type="button" class="af-toggle toggle-pass" data-target="#confirmPassword"><i class="bi bi-eye-slash"></i></button>
                    </div>
                    <div class="match-msg" id="matchMsg"></div>
                </div>

                <button type="submit" class="af-btn-primary">
                    <i class="bi bi-shield-lock-fill"></i> Cập nhật mật khẩu
                </button>

                <div class="af-back-link">
                    <a asp-action="Profile"><i class="bi bi-arrow-left"></i> Quay lại trang cá nhân</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-pass').forEach(btn => {
            btn.addEventListener('click', () => {
                const t = document.querySelector(btn.dataset.target);
                const isPass = t.type === 'password';
                t.type = isPass ? 'text' : 'password';
                btn.querySelector('i').className = isPass ? 'bi bi-eye' : 'bi bi-eye-slash';
            });
        });

        // Strength meter
        const colors = { 1: '#ef4444', 2: '#f97316', 3: '#eab308', 4: '#22c55e' };
        const labels = { 0: '', 1: 'Yếu', 2: 'Trung bình', 3: 'Khá', 4: 'Mạnh' };
        const lColors = { 1: '#ef4444', 2: '#f97316', 3: '#eab308', 4: '#22c55e' };

        document.getElementById('newPassword').addEventListener('input', function () {
            const p = this.value;
            let score = 0;
            if (p.length >= 6)  score++;
            if (p.length >= 10) score++;
            if (/[A-Z]/.test(p) && /[0-9]/.test(p)) score++;
            if (/[^A-Za-z0-9]/.test(p)) score++;

            [1,2,3,4].forEach(i => {
                const seg = document.getElementById('s' + i);
                seg.style.background = i <= score ? colors[score] || '#22c55e' : 'rgba(255,255,255,.1)';
            });
            const lbl = document.getElementById('strengthLabel');
            lbl.textContent = p ? 'Độ mạnh: ' + (labels[score] || 'Mạnh') : '';
            lbl.style.color = lColors[score] || '#22c55e';
            checkMatch();
        });

        function checkMatch() {
            const np = document.getElementById('newPassword').value;
            const cp = document.getElementById('confirmPassword').value;
            const msg = document.getElementById('matchMsg');
            if (!cp) { msg.textContent = ''; return; }
            if (np === cp) { msg.textContent = '✓ Mật khẩu khớp'; msg.style.color = '#22c55e'; }
            else           { msg.textContent = '✗ Mật khẩu chưa khớp'; msg.style.color = '#ef4444'; }
        }

        document.getElementById('confirmPassword').addEventListener('input', checkMatch);
    </script>
}
