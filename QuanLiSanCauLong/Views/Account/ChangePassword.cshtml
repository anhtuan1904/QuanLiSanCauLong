@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
    :root {
        --c-purple: #6c33f2;
        --c-orange: #ff7a50;
        --c-blue: #3a86ff;
        --c-teal: #20c997;
        --c-pink: #ff4d6d;
        --c-yellow: #ffc400;
        --bg-gray: #e2e8f0;
        --primary-green: #00a662;
    }

    .main-change-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8fafc;
        padding: 20px;
    }

    .change-wrapper {
        display: flex;
        width: 1000px;
        height: 680px;
        background: white;
        border-radius: 40px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* --- BÊN TRÁI: NHÂN VẬT (60%) --- */
    .character-side {
        flex: 0 0 60%;
        background-color: var(--bg-gray);
        position: relative;
        overflow: hidden;
    }

    /* --- BÊN PHẢI: FORM (40%) --- */
    .form-side {
        flex: 0 0 40%;
        background: white;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* NHÂN VẬT */
    .character {
        position: absolute;
        bottom: -10px;
        transition: all 0.3s ease;
    }

    .bg-1 {
        width: 45%;
        height: 85%;
        background: var(--c-purple);
        border-radius: 80px;
        left: -10%;
        z-index: 1;
    }

    .bg-2 {
        width: 50%;
        height: 55%;
        background: var(--c-orange);
        border-radius: 200px 200px 0 0;
        left: 15%;
        z-index: 5;
    }

    .bg-3 {
        width: 40%;
        height: 75%;
        background: var(--c-blue);
        border-radius: 100px;
        left: 55%;
        z-index: 2;
    }

    .fg-1 {
        width: 20%;
        height: 25%;
        background: var(--c-teal);
        border-radius: 25px;
        left: 40%;
        z-index: 10;
        border: 4px solid var(--bg-gray);
    }

    .eyes {
        display: flex;
        justify-content: center;
        gap: 15%;
        position: absolute;
        width: 100%;
        top: 20%;
    }

    .eye {
        background: white;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        width: 30px;
        height: 30px;
    }

    .pupil {
        width: 45%;
        height: 45%;
        background: black;
        border-radius: 50%;
        position: absolute;
        left: 27.5%;
        top: 27.5%;
    }

    /* FORM UI */
    .form-label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #334155;
        margin-bottom: 4px;
    }

    .form-control {
        background-color: #f1f5f9;
        border: 2px solid transparent;
        padding: 10px 15px;
        border-radius: 12px;
        height: 45px;
    }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: none;
            background: white;
        }

    .input-group-custom {
        position: relative;
    }

    .input-icon-end {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #94a3b8;
        z-index: 10;
    }

    .btn-submit {
        background: var(--primary-green);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        width: 100%;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background: #008e54;
            transform: translateY(-2px);
        }

    .shame .eye {
        height: 4px !important;
        background: black;
        border-radius: 0;
        margin-top: 15px;
    }

    .strength-meter {
        font-size: 0.75rem;
        margin-top: 4px;
        font-weight: 600;
    }
</style>

<div class="main-change-container">
    <div class="change-wrapper">
        <div class="character-side">
            <div class="character bg-1"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-2"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character bg-3"><div class="eyes"><div class="eye"><div class="pupil"></div></div><div class="eye"><div class="pupil"></div></div></div></div>
            <div class="character fg-1"><div class="eyes" style="top:25%"><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div><div class="eye" style="width:15px;height:15px"><div class="pupil"></div></div></div></div>
        </div>

        <div class="form-side">
            <h3 class="fw-bold mb-1">Đổi mật khẩu</h3>
            <p class="text-muted small mb-4">Vui lòng nhập thông tin để bảo mật tài khoản</p>

            <form asp-action="ChangePassword" method="post" id="changePasswordForm" class="d-flex flex-column gap-3">
                <div asp-validation-summary="All" class="text-danger small"></div>

                <div class="form-group">
                    <label class="form-label">Mật khẩu hiện tại</label>
                    <div class="input-group-custom">
                        <input type="password" name="currentPassword" id="currentPassword" class="form-control" placeholder="••••••••" required />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#currentPassword"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Mật khẩu mới</label>
                    <div class="input-group-custom">
                        <input type="password" name="newPassword" id="newPassword" class="form-control" placeholder="Tối thiểu 6 ký tự" required />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#newPassword"></i>
                    </div>
                    <div id="passwordStrength" class="strength-meter"></div>
                </div>

                <div class="form-group">
                    <label class="form-label">Xác nhận mật khẩu mới</label>
                    <div class="input-group-custom">
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="••••••••" required />
                        <i class="bi bi-eye-slash input-icon-end toggle-pass" data-target="#confirmPassword"></i>
                    </div>
                    <div id="passwordMatchMessage" class="strength-meter"></div>
                </div>

                <button type="submit" class="btn-submit">Cập nhật mật khẩu</button>

                <div class="text-center mt-3">
                    <a asp-action="Profile" class="text-muted text-decoration-none small">
                        <i class="bi bi-arrow-left"></i> Quay lại trang cá nhân
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Liếc mắt theo chuột
            $(document).on('mousemove', function(e) {
                $('.pupil').each(function() {
                    const rect = $(this).parent()[0].getBoundingClientRect();
                    const x = rect.left + rect.width / 2;
                    const y = rect.top + rect.height / 2;
                    const angle = Math.atan2(e.clientY - y, e.clientX - x);
                    $(this).css('transform', `translate(${Math.cos(angle)*7}px, ${Math.sin(angle)*7}px)`);
                });
            });

            // Ẩn/Hiện pass
            $('.toggle-pass').click(function() {
                const target = $($(this).data('target'));
                const type = target.attr('type') === 'password' ? 'text' : 'password';
                target.attr('type', type);
                $(this).toggleClass('bi-eye-slash bi-eye');
            });

            // Hiệu ứng nhắm mắt
            $('input[type="password"]').on('focus', function() {
                if($(this).attr('type') === 'password') $('.character').addClass('shame');
            }).on('blur', function() {
                $('.character').removeClass('shame');
            });

            // Độ mạnh mật khẩu
            $('#newPassword').on('input', function() {
                const p = $(this).val();
                let m = '', c = '';
                if(p.length > 0) {
                    if(p.length < 6) { m = 'Yếu'; c = 'text-danger'; }
                    else if(p.length < 10) { m = 'Trung bình'; c = 'text-warning'; }
                    else { m = 'Mạnh'; c = 'text-success'; }
                }
                $('#passwordStrength').text(m ? 'Độ mạnh: ' + m : '').removeClass('text-danger text-warning text-success').addClass(c);
            });

            // Khớp mật khẩu
            $('#confirmPassword').on('input', function() {
                const match = $(this).val() === $('#newPassword').val();
                const msg = match ? '✓ Mật khẩu khớp' : '❌ Mật khẩu chưa khớp';
                $('#passwordMatchMessage').text($(this).val() ? msg : '').removeClass('text-danger text-success').addClass(match ? 'text-success' : 'text-danger');
            });
        });
    </script>
}