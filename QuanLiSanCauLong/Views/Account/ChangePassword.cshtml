@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-key"></i> Đổi mật khẩu</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">
                                <i class="bi bi-lock"></i> Mật khẩu hiện tại <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="currentPassword"
                                       name="currentPassword" required />
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePassword('currentPassword')">
                                    <i class="bi bi-eye" id="currentPassword-icon"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i> Mật khẩu mới <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="newPassword"
                                       name="newPassword" required minlength="6" />
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePassword('newPassword')">
                                    <i class="bi bi-eye" id="newPassword-icon"></i>
                                </button>
                            </div>
                            <div class="form-text">
                                <small id="passwordStrength"></small>
                            </div>
                            <div class="form-text">
                                Mật khẩu phải có ít nhất 6 ký tự
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">
                                <i class="bi bi-shield-check"></i> Xác nhận mật khẩu mới <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="confirmPassword"
                                       name="confirmPassword" required />
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePassword('confirmPassword')">
                                    <i class="bi bi-eye" id="confirmPassword-icon"></i>
                                </button>
                            </div>
                            <div id="passwordMatchMessage" class="form-text"></div>
                        </div>

                        <div class="alert alert-warning">
                            <small>
                                <i class="bi bi-exclamation-triangle"></i>
                                Sau khi đổi mật khẩu, bạn sẽ cần đăng nhập lại
                            </small>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Đổi mật khẩu
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Profile" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Quay lại trang cá nhân
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Password Tips -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="bi bi-lightbulb"></i> Mẹo tạo mật khẩu mạnh
                    </h6>
                    <ul class="small mb-0">
                        <li>Sử dụng ít nhất 8 ký tự</li>
                        <li>Kết hợp chữ hoa, chữ thường, số và ký tự đặc biệt</li>
                        <li>Không sử dụng thông tin cá nhân dễ đoán</li>
                        <li>Không sử dụng mật khẩu giống với các tài khoản khác</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + '-icon');

            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        $(document).ready(function() {
            // Password strength indicator
            $('#newPassword').on('input', function() {
                const password = $(this).val();
                const strengthText = $('#passwordStrength');

                if (password.length === 0) {
                    strengthText.text('');
                    return;
                }

                let strength = 0;
                let message = '';
                let colorClass = '';

                if (password.length >= 6) strength++;
                if (password.length >= 8) strength++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
                if (/\d/.test(password)) strength++;
                if (/[^a-zA-Z\d]/.test(password)) strength++;

                switch(strength) {
                    case 0:
                    case 1:
                        message = '❌ Mật khẩu yếu';
                        colorClass = 'text-danger';
                        break;
                    case 2:
                        message = '⚠️ Mật khẩu trung bình';
                        colorClass = 'text-warning';
                        break;
                    case 3:
                    case 4:
                        message = '✓ Mật khẩu khá';
                        colorClass = 'text-info';
                        break;
                    case 5:
                        message = '✓✓ Mật khẩu mạnh';
                        colorClass = 'text-success';
                        break;
                }

                strengthText.text(message).removeClass().addClass(colorClass);
            });

            // Check password match
            $('#confirmPassword').on('input', function() {
                const newPassword = $('#newPassword').val();
                const confirmPassword = $(this).val();
                const message = $('#passwordMatchMessage');

                if (confirmPassword.length === 0) {
                    message.text('');
                    return;
                }

                if (newPassword === confirmPassword) {
                    message.text('✓ Mật khẩu khớp').removeClass('text-danger').addClass('text-success');
                } else {
                    message.text('❌ Mật khẩu không khớp').removeClass('text-success').addClass('text-danger');
                }
            });

            // Form validation
            $('#changePasswordForm').on('submit', function(e) {
                const currentPassword = $('#currentPassword').val();
                const newPassword = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();

                if (!currentPassword || !newPassword || !confirmPassword) {
                    e.preventDefault();
                    showError('Vui lòng điền đầy đủ thông tin');
                    return false;
                }

                if (newPassword.length < 6) {
                    e.preventDefault();
                    showError('Mật khẩu mới phải có ít nhất 6 ký tự');
                    return false;
                }

                if (newPassword !== confirmPassword) {
                    e.preventDefault();
                    showError('Mật khẩu xác nhận không khớp');
                    return false;
                }

                if (currentPassword === newPassword) {
                    e.preventDefault();
                    showWarning('Mật khẩu mới không nên giống mật khẩu cũ');
                    return false;
                }

                // Disable submit button
                $(this).find('button[type="submit"]').prop('disabled', true)
                    .html('<i class="bi bi-hourglass-split"></i> Đang xử lý...');
            });

            // Auto focus
            $('#currentPassword').focus();
        });
    </script>
}