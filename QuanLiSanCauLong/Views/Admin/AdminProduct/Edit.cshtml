@model QuanLiSanCauLong.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-warning py-3">
                <h4 class="mb-0">Chỉnh sửa sản phẩm</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="ProductName" class="form-label fw-semibold">Tên sản phẩm</label>
                            <input asp-for="ProductName" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Thay đổi hình ảnh (Để trống nếu giữ nguyên)</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" id="imgEditInput" />
                        <div class="mt-3">
                            <p class="small text-muted">Ảnh hiện tại:</p>
                            <img id="previewEdit" src="/images/product/@Model.ImageUrl" class="img-thumbnail" style="max-height: 150px" />
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('imgEditInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                document.getElementById('previewEdit').src = URL.createObjectURL(file);
            }
        };
    </script>
}