@model QuanLiSanCauLong.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="col-lg-7 mx-auto">
        <div class="mb-4">
            <a asp-action="Index" class="text-decoration-none text-secondary fw-bold small">
                <i class="bi bi-arrow-left me-1"></i> QUAY LẠI DANH SÁCH
            </a>
        </div>

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-white border-0 pt-5 text-center">
                <h3 class="fw-bold text-dark mb-1">Cập Nhật Sản Phẩm</h3>
                <p class="text-muted small">ID: #@Model.ProductId — Chỉnh sửa thông tin chi tiết của sản phẩm</p>
            </div>

            <div class="card-body p-5 pt-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <div class="row g-4">
                        <div class="col-12">
                            <label class="form-label fw-bold small text-uppercase text-muted">Tên Sản Phẩm</label>
                            <input asp-for="ProductName" class="form-control rounded-3 py-2 bg-light border-0 shadow-none" placeholder="Nhập tên sản phẩm..." />
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold small text-uppercase text-muted">Hình ảnh sản phẩm</label>
                            <div class="d-flex align-items-center gap-4 p-3 border rounded-4 bg-light">
                                <div class="position-relative">
                                    <img id="previewEdit" src="@Model.ImageUrl"
                                         class="rounded-3 shadow-sm object-fit-cover"
                                         style="width: 120px; height: 120px; border: 2px solid #fff;"
                                         onerror="this.src='/images/no-image.png'" />
                                    <div class="position-absolute bottom-0 end-0 translate-middle mb-n2 me-n2">
                                        <span class="badge rounded-circle bg-warning p-2 shadow-sm">
                                            <i class="bi bi-pencil-fill text-dark" style="font-size: 0.7rem;"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="small text-muted mb-2">Tải lên ảnh mới để thay đổi (Định dạng: JPG, PNG, WEBP)</p>
                                    <input type="file" name="ImageFile" class="form-control form-control-sm rounded-3 border-0 shadow-none" accept="image/*" id="imgEditInput" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Giá (VNĐ)</label>
                            <input asp-for="Price" type="number" class="form-control rounded-3 py-2 bg-light border-0 shadow-none" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Trạng Thái</label>
                            <select asp-for="Status" class="form-select rounded-3 py-2 bg-light border-0 shadow-none">
                                <option value="Available">Còn hàng</option>
                                <option value="OutOfStock">Hết hàng</option>
                                <option value="Discontinued">Ngừng bán</option>
                            </select>
                        </div>

                        <div class="col-12 d-flex gap-3 mt-5">
                            <a asp-action="Index" class="btn btn-light flex-fill fw-bold py-2 rounded-3 text-secondary border">
                                <i class="bi bi-x-lg me-2"></i>Hủy Thay Đổi
                            </a>
                            <button type="submit" class="btn btn-dark flex-fill fw-bold py-2 rounded-3 shadow">
                                <i class="bi bi-cloud-arrow-up-fill me-2"></i>Lưu Thay Đổi Ngay
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Loại bỏ viền xanh khi focus để giao diện nhìn mượt hơn */
    .form-control:focus, .form-select:focus {
        background-color: #f1f3f5 !important;
        box-shadow: none !important;
        border-color: transparent !important;
    }

    .card {
        background-color: #ffffff;
    }

    /* Hiệu ứng cho nút bấm */
    .btn-dark {
        background-color: #1a1d20;
    }

        .btn-dark:hover {
            background-color: #000;
            transform: translateY(-2px);
            transition: all 0.2s;
        }
</style>

@section Scripts {
    <script>
        // Cập nhật ảnh xem trước ngay lập tức khi người dùng chọn file mới
        document.getElementById('imgEditInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                document.getElementById('previewEdit').src = URL.createObjectURL(file);
            }
        };
    </script>
}