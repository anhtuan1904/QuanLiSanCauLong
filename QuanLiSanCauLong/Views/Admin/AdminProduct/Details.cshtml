@model QuanLiSanCauLong.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Thông tin chi tiết: @Model.ProductName</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="/images/product/@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.ProductName"
                     onerror="this.src='/images/no-image.png'" />
            </div>
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tr><th width="30%">Mã SP</th><td>@Model.ProductCode</td></tr>
                    <tr><th>Tên SP</th><td>@Model.ProductName</td></tr>
                    <tr><th>Giá</th><td>@Model.Price.ToString("N0") đ</td></tr>
                    <tr><th>Đơn vị</th><td>@Model.Unit</td></tr>
                    <tr><th>Trạng thái</th><td><span class="badge bg-success">@Model.Status</span></td></tr>
                    <tr><th>Mô tả</th><td>@Model.Description</td></tr>
                </table>
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>