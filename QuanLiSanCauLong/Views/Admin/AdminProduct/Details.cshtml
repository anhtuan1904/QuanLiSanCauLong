@model QuanLiSanCauLong.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-secondary fw-bold small">
            <i class="bi bi-arrow-left me-1"></i> QUAY LẠI DANH SÁCH
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-5">
                <div class="product-image-container shadow-sm rounded-4 overflow-hidden bg-white">
                    <img src="@Model.ImageUrl" class="img-fluid object-fit-contain"
                         style="max-height: 400px; width: 100%;"
                         alt="@Model.ProductName"
                         onerror="this.src='/images/no-image.png'" />
                </div>
            </div>

            <div class="col-md-7 p-5">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <span class="badge bg-soft-primary text-primary border rounded-pill px-3 mb-2">
                            @Model.Category?.CategoryName
                        </span>
                        <h2 class="fw-bold text-dark">@Model.ProductName</h2>
                        <p class="text-muted small">Mã sản phẩm: <span class="fw-bold">@Model.ProductCode</span></p>
                    </div>
                    <div class="status-badge">
                        @if (Model.Status == "Available")
                        {
                            <span class="badge bg-success rounded-pill px-3">Còn Hàng</span>
                        }
                        else
                        {
                            <span class="badge bg-danger rounded-pill px-3">Hết Hàng</span>
                        }
                    </div>
                </div>

                <div class="price-section mb-4">
                    <h3 class="text-success fw-bold">₫@Model.Price.ToString("N0") <small class="text-muted fs-6">/ @Model.Unit</small></h3>
                </div>

                <div class="description-section mb-5">
                    <label class="fw-bold text-uppercase small text-muted d-block mb-2">Mô tả sản phẩm</label>
                    <div class="p-3 bg-light rounded-3 border-start border-primary border-4">
                        <p class="mb-0 text-dark lh-base">@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả cho sản phẩm này." : Model.Description)</p>
                    </div>
                </div>

                <div class="action-buttons d-flex gap-3 pt-4 border-top">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning px-4 rounded-3 fw-bold">
                        <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
                    </a>
                    <button class="btn btn-outline-danger px-4 rounded-3 fw-bold" onclick="deleteProduct(@Model.ProductId)">
                        <i class="bi bi-trash me-2"></i>Xóa sản phẩm
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: #eef2ff;
    }

    .product-image-container {
        transition: transform 0.3s ease;
    }

        .product-image-container:hover {
            transform: scale(1.02);
        }
</style>