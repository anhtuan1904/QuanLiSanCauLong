                    <tr>
                        <th>#</th>
                        <th>Khách hàng</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th class="text-center">Số lượt đặt</th>
                        <th class="text-end">Tổng chi tiêu</th>
                        <th class="text-center">Lần cuối</th>
