</div>

<!-- Filter -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Từ ngày</label>
                <input type="date" class="form-control" name="fromDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold">Đến ngày</label>
                <input type="date" class="form-control" name="toDate" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-2"></i>Xem báo cáo
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body text-white">
                <h6 class="text-white-50">Tổng khách hàng</h6>
                <h2 class="mb-0 fw-bold">@ViewBag.TotalCustomers</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="card-body text-white">
                <h6 class="text-white-50">Khách hàng mới</h6>
                <h2 class="mb-0 fw-bold">@ViewBag.NewCustomers</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="card-body text-white">
                <h6 class="text-white-50">Khách VIP</h6>
                <h2 class="mb-0 fw-bold">@ViewBag.VIPCustomers</h2>
            </div>
        </div>
    </div>
</div>

<!-- Customer Growth Chart -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold">Xu hướng tăng trưởng khách hàng</h5>
    </div>
    <div class="card-body">
        <canvas id="customerGrowthChart" height="80"></canvas>
    </div>
</div>

