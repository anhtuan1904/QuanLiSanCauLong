            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Phân loại khách hàng</h5>
            </div>
            <div class="card-body">
                <canvas id="segmentChart" height="200"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Tần suất đặt sân</h5>
            </div>
            <div class="card-body">
                <canvas id="frequencyChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

