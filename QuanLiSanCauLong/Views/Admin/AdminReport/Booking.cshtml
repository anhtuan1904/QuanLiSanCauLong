@{
    ViewData["Title"] = "Báo cáo đặt sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="bi bi-calendar-check text-primary me-2"></i>
        Báo cáo đặt sân
    </h2>
    <button class="btn btn-success" onclick="exportReport()">
        <i class="bi bi-file-excel me-2"></i>Xuất Excel
    </button>
</div>

<!-- Filter -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Từ ngày</label>
                <input type="date" class="form-control" name="fromDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">Đến ngày</label>
                <input type="date" class="form-control" name="toDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">Cơ sở</label>
                <select class="form-select" name="facilityId">
                    <option value="">Tất cả cơ sở</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-2"></i>Xem báo cáo
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check text-primary fs-1 mb-2"></i>
                <h3 class="mb-0 fw-bold">@ViewBag.TotalBookings</h3>
                <p class="text-muted mb-0">Tổng đơn</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-check-circle text-success fs-1 mb-2"></i>
                <h3 class="mb-0 fw-bold text-success">@ViewBag.CompletedBookings</h3>
                <p class="text-muted mb-0">Hoàn thành</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-x-circle text-danger fs-1 mb-2"></i>
                <h3 class="mb-0 fw-bold text-danger">@ViewBag.CancelledBookings</h3>
                <p class="text-muted mb-0">Đã hủy</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-percent text-info fs-1 mb-2"></i>
                <h3 class="mb-0 fw-bold text-info">@ViewBag.CompletionRate%</h3>
                <p class="text-muted mb-0">Tỷ lệ hoàn thành</p>
            </div>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Đặt sân theo ngày</h5>
            </div>
            <div class="card-body">
                <canvas id="bookingTrendChart" height="200"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Trạng thái đơn đặt</h5>
            </div>
            <div class="card-body">
                <canvas id="statusChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Popular Time Slots -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold">Khung giờ phổ biến</h5>
    </div>
    <div class="card-body">
        <canvas id="timeSlotChart" height="100"></canvas>
    </div>
</div>

<!-- Detail Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold">Chi tiết theo cơ sở</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Cơ sở</th>
                        <th class="text-center">Tổng đơn</th>
                        <th class="text-center">Hoàn thành</th>
                        <th class="text-center">Đã hủy</th>
                        <th class="text-end">Doanh thu</th>
                        <th class="text-center">Tỷ lệ</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data populated here -->
                </tbody>
            </table>
        </div>
    </div>
</div>
