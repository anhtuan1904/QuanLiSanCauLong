@model QuanLiSanCauLong.ViewModels.VoucherViewModel

@{
    ViewData["Title"] = "Tạo Voucher Mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Voucher</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>

            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary text-white rounded-3 p-3 me-3 shadow-sm">
                    <i class="bi bi-ticket-perforated fs-4"></i>
                </div>
                <div>
                    <h3 class="fw-bold mb-0">Thiết Lập Voucher Mới</h3>
                    <p class="text-muted mb-0 small">Cấu hình mã giảm giá cho các dịch vụ và sản phẩm.</p>
                </div>
            </div>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-soft-danger rounded-4 border-0 small mb-4"></div>

                <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                    <div class="card-body p-4 p-md-5">

                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-primary text-primary rounded-circle p-2 me-2">
                                    <i class="bi bi-info-circle"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Thông tin cơ bản</h5>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-floating mb-1">
                                        <input asp-for="VoucherCode" class="form-control border-0 bg-light rounded-3 text-uppercase fw-bold"
                                               placeholder="NEWYEAR2026" style="letter-spacing: 1px;" />
                                        <label asp-for="VoucherCode">Mã Voucher (Ví dụ: KM50K)</label>
                                    </div>
                                    <span asp-validation-for="VoucherCode" class="text-danger x-small"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-1">
                                        <input asp-for="VoucherName" class="form-control border-0 bg-light rounded-3" placeholder="Tên voucher" />
                                        <label asp-for="VoucherName">Tên chương trình</label>
                                    </div>
                                    <span asp-validation-for="VoucherName" class="text-danger x-small"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-1">
                                        <textarea asp-for="Description" class="form-control border-0 bg-light rounded-3"
                                                  placeholder="Mô tả" style="height: 100px"></textarea>
                                        <label asp-for="Description">Ghi chú chi tiết điều kiện áp dụng...</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-success text-success rounded-circle p-2 me-2">
                                    <i class="bi bi-currency-dollar"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Cấu hình giảm giá</h5>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted">Loại giảm giá</label>
                                    <div class="d-flex gap-3">
                                        <input type="radio" class="btn-check" asp-for="DiscountType" value="Percentage" id="typePerc" checked>
                                        <label class="btn btn-outline-primary rounded-3 w-50 py-2" for="typePerc">
                                            <i class="bi bi-percent me-1"></i> Phần trăm
                                        </label>

                                        <input type="radio" class="btn-check" asp-for="DiscountType" value="FixedAmount" id="typeFixed">
                                        <label class="btn btn-outline-primary rounded-3 w-50 py-2" for="typeFixed">
                                            <i class="bi bi-cash-stack me-1"></i> Số tiền
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted" id="labelValue">Giá trị giảm (%)</label>
                                    <div class="input-group">
                                        <input asp-for="DiscountValue" type="number" class="form-control border-0 bg-light rounded-start-3" id="inputValue" />
                                        <span class="input-group-text border-0 bg-light rounded-end-3 fw-bold" id="addonValue">%</span>
                                    </div>
                                    <span asp-validation-for="DiscountValue" class="text-danger x-small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted">Đơn tối thiểu (đ)</label>
                                    <input asp-for="MinOrderAmount" type="number" class="form-control border-0 bg-light rounded-3" placeholder="0" />
                                </div>
                                <div class="col-md-6" id="maxDiscountBox">
                                    <label class="form-label small fw-bold text-muted">Giảm tối đa (đ)</label>
                                    <input asp-for="MaxDiscount" type="number" class="form-control border-0 bg-light rounded-3" placeholder="Không giới hạn" />
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-warning text-warning rounded-circle p-2 me-2">
                                    <i class="bi bi-calendar-check"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Thời gian & Giới hạn</h5>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted">Ngày bắt đầu</label>
                                    <input asp-for="StartDate" type="datetime-local" class="form-control border-0 bg-light rounded-3" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted">Ngày kết thúc</label>
                                    <input asp-for="EndDate" type="datetime-local" class="form-control border-0 bg-light rounded-3" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted">Tổng lượt sử dụng</label>
                                    <input asp-for="UsageLimit" type="number" class="form-control border-0 bg-light rounded-3" placeholder="∞" />
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check form-switch mt-4 pt-2">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                        <label asp-for="IsActive" class="form-check-label fw-bold">Kích hoạt ngay</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 p-4 text-end">
                        <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary me-3">Hủy bỏ</a>
                        <button type="submit" class="btn btn-dark rounded-3 px-5 py-2 shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i>Tạo Voucher Ngay
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: #eef2ff;
    }

    .bg-soft-success {
        background-color: #f0fdf4;
    }

    .bg-soft-warning {
        background-color: #fffbeb;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
    }

    .alert-soft-danger {
        background-color: #fef2f2;
        color: #dc3545;
    }

    .x-small {
        font-size: 0.75rem;
    }

    .form-control:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.05);
    }

    .btn-check:checked + .btn-outline-primary {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const radioPerc = document.getElementById('typePerc');
        const radioFixed = document.getElementById('typeFixed');
        const labelValue = document.getElementById('labelValue');
        const addonValue = document.getElementById('addonValue');
        const maxBox = document.getElementById('maxDiscountBox');

        function updateUI() {
            if (radioPerc.checked) {
                labelValue.textContent = "Giá trị giảm (%)";
                addonValue.textContent = "%";
                maxBox.style.opacity = "1";
                maxBox.style.pointerEvents = "auto";
            } else {
                labelValue.textContent = "Giá trị giảm (đ)";
                addonValue.textContent = "đ";
                maxBox.style.opacity = "0.4";
                maxBox.style.pointerEvents = "none";
            }
        }

        radioPerc.addEventListener('change', updateUI);
        radioFixed.addEventListener('change', updateUI);
        updateUI();
    </script>
}