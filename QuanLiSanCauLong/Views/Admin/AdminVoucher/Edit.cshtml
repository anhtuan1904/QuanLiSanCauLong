@model QuanLiSanCauLong.ViewModels.VoucherViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Voucher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="d-flex align-items-center">
                    <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <div>
                        <h3 class="fw-bold mb-0">Chỉnh sửa Voucher</h3>
                        <span class="badge @(Model.IsValid ? "bg-soft-success text-success" : "bg-soft-danger text-danger") rounded-pill mt-1">
                            <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>
                            @(Model.IsValid ? "Đang hoạt động" : "Ngừng hoạt động / Hết hạn")
                        </span>
                    </div>
                </div>
                <div class="text-end">
                    <p class="text-muted small mb-0">Đã dùng: <strong class="text-dark">@Model.UsedCount</strong> lượt</p>
                </div>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="VoucherId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-soft-danger rounded-4 border-0 small mb-4"></div>

                <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                    <div class="card-body p-4 p-md-5">

                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-primary text-primary rounded-circle p-2 me-2">
                                    <i class="bi bi-info-circle-fill"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Thông tin cơ bản</h5>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-floating mb-1">
                                        <input asp-for="VoucherCode" class="form-control border-0 bg-light rounded-3 text-uppercase fw-bold" readonly />
                                        <label asp-for="VoucherCode">Mã Voucher (Cố định)</label>
                                    </div>
                                    <small class="text-muted small">Mã định danh không được phép thay đổi.</small>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-1">
                                        <input asp-for="VoucherName" class="form-control border-0 bg-light rounded-3" placeholder="Tên voucher" required />
                                        <label asp-for="VoucherName">Tên chương trình</label>
                                    </div>
                                    <span asp-validation-for="VoucherName" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Description" class="form-control border-0 bg-light rounded-3" style="height: 100px" placeholder="Mô tả"></textarea>
                                        <label asp-for="Description">Ghi chú điều kiện áp dụng...</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-success text-success rounded-circle p-2 me-2">
                                    <i class="bi bi-currency-dollar"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Cấu hình giảm giá</h5>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="DiscountType" id="editDiscountType" class="form-select border-0 bg-light rounded-3">
                                            <option value="Percentage">Phần Trăm (%)</option>
                                            <option value="FixedAmount">Số Tiền Cố Định (đ)</option>
                                        </select>
                                        <label asp-for="DiscountType">Loại hình giảm giá</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="DiscountValue" class="form-control border-0 bg-light rounded-3" required />
                                        <label id="labelDiscountValue">Giá trị giảm @(Model.DiscountType == "Percentage" ? "(%)" : "(đ)")</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="MinOrderAmount" class="form-control border-0 bg-light rounded-3" />
                                        <label asp-for="MinOrderAmount">Đơn tối thiểu (đ)</label>
                                    </div>
                                </div>
                                <div class="col-md-6" id="editMaxDiscountBox" style="@(Model.DiscountType == "FixedAmount" ? "opacity: 0.5; pointer-events: none;" : "")">
                                    <div class="form-floating">
                                        <input asp-for="MaxDiscount" class="form-control border-0 bg-light rounded-3" />
                                        <label asp-for="MaxDiscount">Giảm tối đa (đ)</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-2">
                            <div class="d-flex align-items-center mb-4">
                                <span class="badge bg-soft-warning text-warning rounded-circle p-2 me-2">
                                    <i class="bi bi-calendar-event-fill"></i>
                                </span>
                                <h5 class="fw-bold mb-0">Thời hạn & Trạng thái</h5>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted mb-1">NGÀY BẮT ĐẦU</label>
                                    <input asp-for="StartDate" type="datetime-local" class="form-control border-0 bg-light rounded-3" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted mb-1">NGÀY KẾT THÚC</label>
                                    <input asp-for="EndDate" type="datetime-local" class="form-control border-0 bg-light rounded-3" />
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="UsageLimit" class="form-control border-0 bg-light rounded-3" />
                                        <label asp-for="UsageLimit">Tổng lượt sử dụng (∞ nếu trống)</label>
                                    </div>
                                </div>
                                <div class="col-md-6 d-flex align-items-center mt-md-5">
                                    <div class="form-check form-switch ms-2">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="editIsActive">
                                        <label class="form-check-label fw-bold" for="editIsActive">Kích hoạt Voucher</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 p-4 d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-danger rounded-3 border-0" onclick="deleteVoucher(@Model.VoucherId)">
                            <i class="bi bi-trash me-2"></i>Xóa Voucher
                        </button>
                        <div>
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary me-3">Hủy bỏ</a>
                            <button type="submit" class="btn btn-dark rounded-3 px-5 shadow-sm fw-bold">
                                <i class="bi bi-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSelect = document.getElementById('editDiscountType');
            const labelValue = document.getElementById('labelDiscountValue');
            const maxBox = document.getElementById('editMaxDiscountBox');

            typeSelect.addEventListener('change', function () {
                if (this.value === 'Percentage') {
                    labelValue.textContent = "Giá trị giảm (%)";
                    maxBox.style.opacity = "1";
                    maxBox.style.pointerEvents = "auto";
                    maxBox.querySelector('input').disabled = false;
                } else {
                    labelValue.textContent = "Giá trị giảm (đ)";
                    maxBox.style.opacity = "0.5";
                    maxBox.style.pointerEvents = "none";
                    maxBox.querySelector('input').disabled = true;
                }
            });
        });

        function deleteVoucher(id) {
            if (confirm('Bạn có chắc chắn muốn xóa voucher này không? Dữ liệu đã xóa sẽ không thể khôi phục.')) {
                // Bạn có thể dùng form ẩn hoặc gọi ajax tại đây
                window.location.href = '@Url.Action("Delete", "AdminVoucher")/' + id;
            }
        }
    </script>
}

<style>
    .bg-soft-primary {
        background-color: #eef2ff;
    }

    .bg-soft-success {
        background-color: #f0fdf4;
    }

    .bg-soft-warning {
        background-color: #fffbeb;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
    }

    .form-control:focus, .form-select:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.05);
        border: 1px solid #dee2e6 !important;
    }
</style>