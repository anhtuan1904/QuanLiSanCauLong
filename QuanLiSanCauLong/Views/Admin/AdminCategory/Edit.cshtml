@model QuanLiSanCauLong.Models.ProductCategory

@{
    ViewData["Title"] = "Quản lý danh mục";
    // Sửa từ _Layout thành _LayoutAdmin
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-pencil-square text-warning me-2"></i>
                Chỉnh sửa danh mục
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh mục</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Thông tin danh mục
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="CategoryName" class="form-label fw-semibold">
                                    Tên danh mục <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CategoryName" class="form-control form-control-lg"
                                       placeholder="Nhập tên danh mục..." />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryType" class="form-label fw-semibold">
                                    Loại <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CategoryType" class="form-select form-select-lg">
                                    <option value="">-- Chọn loại --</option>
                                    <option value="Food">Đồ ăn</option>
                                    <option value="Beverage">Thức uống</option>
                                    <option value="Equipment">Dụng cụ</option>
                                </select>
                                <span asp-validation-for="CategoryType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Nhập mô tả cho danh mục..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Mô tả ngắn gọn về danh mục sản phẩm này
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}