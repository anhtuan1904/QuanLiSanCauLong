@model QuanLiSanCauLong.Models.ProductCategory

@{
    ViewData["Title"] = "Quản lý danh mục";
    // Sửa từ _Layout thành _LayoutAdmin
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-info-circle text-info me-2"></i>
                Chi tiết danh mục
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh mục</a></li>
                    <li class="breadcrumb-item active">@Model.CategoryName</li>
                </ol>
            </nav>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Category Info -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                        <i class="bi bi-tags text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="fw-bold mb-2">@Model.CategoryName</h3>

                    @if (Model.CategoryType == "Food")
                    {
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="bi bi-egg-fried me-1"></i>Đồ ăn
                        </span>
                    }
                    else if (Model.CategoryType == "Beverage")
                    {
                        <span class="badge bg-info fs-6">
                            <i class="bi bi-cup-straw me-1"></i>Thức uống
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-box me-1"></i>Dụng cụ
                        </span>
                    }

                    <hr class="my-4">

                    <p class="text-muted">
                        @(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)
                    </p>

                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-12">
                            <h2 class="fw-bold text-primary mb-0">@(Model.Products?.Count ?? 0)</h2>
                            <small class="text-muted">Sản phẩm</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products List -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam me-2"></i>
                            Danh sách sản phẩm
                        </h5>
                        <a asp-controller="Product" asp-action="Create"
                           asp-route-categoryId="@Model.CategoryId"
                           class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Thêm sản phẩm
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã SP</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Đơn vị</th>
                                        <th class="text-end">Giá</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>
                                                <code>@product.ProductCode</code>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                    {
                                                        <img src="@product.ImageUrl" alt="@product.ProductName"
                                                             class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@product.ProductName</div>
                                                        <small class="text-muted">
                                                            @(product.Inventories?.Sum(i => i.Quantity) ?? 0) trong kho
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@product.Unit</td>
                                            <td class="text-end">
                                                <strong>@product.Price.ToString("N0") đ</strong>
                                            </td>
                                            <td class="text-center">
                                                @if (product.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Ngừng bán</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                                                   class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-3 text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có sản phẩm nào</h5>
                            <p class="text-muted mb-3">Thêm sản phẩm đầu tiên cho danh mục này</p>
                            <a asp-controller="Product" asp-action="Create"
                               asp-route-categoryId="@Model.CategoryId"
                               class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>