@model QuanLiSanCauLong.Models.ProductCategory

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5 min-vh-100 detail-page-bg">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-secondary fw-bold small hover-primary">
                    <i class="bi bi-chevron-left me-1"></i> TRỞ LẠI DANH SÁCH
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-5 overflow-hidden glass-card">
                <div class="row g-0">
                    <div class="col-md-5 p-5 text-white @GetGradientClass(Model.CategoryType) d-flex flex-column justify-content-between">
                        <div class="text-center animate-fade-in">
                            <div class="icon-box shadow-lg mb-4">
                                <i class="bi @GetIconByCategory(Model.CategoryType)"></i>
                            </div>
                            <h2 class="fw-bold mb-1">@Model.CategoryName</h2>
                            <span class="badge bg-white bg-opacity-25 rounded-pill px-3 py-2 text-uppercase letter-spacing-1">
                                @Model.CategoryType
                            </span>
                        </div>

                        <div class="stats-grid mt-5">
                            <div class="stat-item bg-white bg-opacity-10 rounded-4 p-3 mb-3 border border-white border-opacity-10">
                                <div class="small opacity-75">Tổng sản phẩm</div>
                                <div class="fs-3 fw-bold">@(Model.Products?.Count ?? 0)</div>
                            </div>
                            <div class="stat-item bg-white bg-opacity-10 rounded-4 p-3 border border-white border-opacity-10">
                                <div class="small opacity-75">Trạng thái hệ thống</div>
                                <div class="fs-5 fw-bold"><i class="bi bi-check-circle-fill me-2 text-info"></i>Hoạt động</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7 p-5 bg-white bg-opacity-90 backdrop-blur">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <h4 class="fw-bold text-dark mb-0">Thông Tin Chi Tiết</h4>
                            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-outline-warning btn-sm rounded-pill px-3 fw-bold">
                                <i class="bi bi-pencil me-1"></i> Chỉnh sửa
                            </a>
                        </div>

                        <div class="mb-5">
                            <label class="text-muted small fw-bold text-uppercase mb-2 d-block">Mô tả danh mục</label>
                            <div class="text-dark fs-6 lh-base bg-light p-3 rounded-4 border-start border-primary border-4 shadow-sm">
                                @(string.IsNullOrEmpty(Model.Description) ? "Danh mục này hiện chưa có thông tin mô tả chi tiết từ quản trị viên." : Model.Description)
                            </div>
                        </div>

                        <div class="mb-0">
                            <label class="text-muted small fw-bold text-uppercase mb-3 d-block">Sản phẩm tiêu biểu</label>

                            @if (Model.Products != null && Model.Products.Any())
                            {
                                <div class="d-flex flex-column gap-3">
                                    @foreach (var p in Model.Products.Take(5))
                                    {
                                        <div class="product-item-card d-flex align-items-center p-2 rounded-4 border border-light shadow-sm transition-all">
                                            <div class="product-img-container shadow-sm overflow-hidden rounded-3">
                                                @if (!string.IsNullOrEmpty(p.ImageUrl))
                                                {
                                                    <img src="@p.ImageUrl"
                                                         class="w-100 h-100 object-fit-cover"
                                                         alt="@p.ProductName"
                                                         onerror="this.onerror=null;this.src='/images/no-image.png';">
                                                }
                                                else
                                                {
                                                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                                        <i class="bi bi-image text-muted opacity-50"></i>
                                                    </div>
                                                }
                                            </div>

                                            <div class="ms-3 flex-grow-1">
                                                <h6 class="mb-0 fw-bold text-dark">@p.ProductName</h6>
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="text-primary fw-bold small">@p.Price.ToString("N0") đ</span>
                                                    @if (!string.IsNullOrEmpty(p.Unit))
                                                    {
                                                        <small class="text-muted">/ @p.Unit</small>
                                                    }
                                                </div>
                                            </div>

                                            <div class="me-2">
                                                <a href="/Admin/AdminProduct/Details/@p.ProductId" class="btn btn-light btn-sm rounded-circle border shadow-sm">
                                                    <i class="bi bi-arrow-right-short fs-5"></i>
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.Products.Count > 5)
                                    {
                                        <div class="text-center mt-2">
                                            <a href="/Admin/AdminProduct?categoryId=@Model.CategoryId" class="text-primary small fw-bold text-decoration-none">
                                                Xem tất cả @Model.Products.Count sản phẩm <i class="bi bi-chevron-double-right ms-1"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5 border border-dashed rounded-4 bg-light">
                                    <i class="bi bi-box2 text-muted fs-1 mb-2 d-block"></i>
                                    <p class="text-muted small mb-0">Chưa có sản phẩm nào thuộc danh mục này.</p>
                                    <a href="/Admin/AdminProduct/Create" class="btn btn-link btn-sm text-decoration-none mt-2">+ Thêm ngay</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetGradientClass(string type) => type switch
    {
        "Food" => "bg-orange-gradient",
        "Beverage" => "bg-blue-gradient",
        "Equipment" => "bg-green-gradient",
        _ => "bg-default-gradient"
    };

    public string GetIconByCategory(string type) => type switch
    {
        "Food" => "bi-egg-fried",
        "Beverage" => "bi-cup-straw",
        "Equipment" => "bi-gear-wide-connected",
        _ => "bi-folder2-open"
    };
}

<style>
    .detail-page-bg {
        background: #f4f7fe;
        background-image: radial-gradient(at 0% 0%, rgba(67, 97, 238, 0.05) 0, transparent 50%), radial-gradient(at 100% 100%, rgba(76, 201, 240, 0.05) 0, transparent 50%);
    }

    .bg-blue-gradient {
        background: linear-gradient(135deg, #4361ee 0%, #3f37c9 100%);
    }

    .bg-orange-gradient {
        background: linear-gradient(135deg, #ff9f1c 0%, #f77f00 100%);
    }

    .bg-green-gradient {
        background: linear-gradient(135deg, #2ec4b6 0%, #209188 100%);
    }

    .bg-default-gradient {
        background: linear-gradient(135deg, #64748b 0%, #334155 100%);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.4);
    }

    .icon-box {
        width: 90px;
        height: 90px;
        background: white;
        color: #4361ee;
        border-radius: 28px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
    }

    .bg-orange-gradient .icon-box {
        color: #ff9f1c;
    }

    .bg-green-gradient .icon-box {
        color: #2ec4b6;
    }

    .product-item-card {
        background: #fff;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .product-item-card:hover {
            transform: translateX(8px);
            background: #fdfdfd;
            border-color: #4361ee !important;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05) !important;
        }

    .product-img-container {
        width: 65px;
        height: 65px;
        flex-shrink: 0;
        background: #f8f9fa;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .letter-spacing-1 {
        letter-spacing: 1px;
    }

    .rounded-5 {
        border-radius: 2rem !important;
    }

    .border-dashed {
        border-style: dashed !important;
    }

    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out;
    }

    @("@") keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>