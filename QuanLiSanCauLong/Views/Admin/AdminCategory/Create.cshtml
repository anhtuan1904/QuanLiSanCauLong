@model QuanLiSanCauLong.Models.ProductCategory

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-glass p-5">
                <h3 class="fw-bold mb-4">Tạo danh mục mới</h3>
                <form id="createForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="mb-3">
                                <label class="form-label">Tên danh mục</label>
                                <input asp-for="CategoryName" class="form-control" placeholder="Nhập tên..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Loại sản phẩm</label>
                                <select asp-for="CategoryType" class="form-select form-control">
                                    <option value="Food">Thực phẩm</option>
                                    <option value="Beverage">Đồ uống</option>
                                    <option value="Equipment">Dụng cụ</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <label class="form-label">Hình ảnh danh mục</label>
                            <div class="upload-zone" onclick="document.getElementById('fileInput').click()">
                                <i class="bi bi-cloud-arrow-up-fill"></i>
                                <p class="mt-2 mb-0 fw-bold">Kéo thả hoặc click để tải lên</p>
                                <small class="text-muted">Nhiều ảnh được chấp nhận</small>
                            </div>
                            <input type="file" id="fileInput" multiple accept="image/*" class="d-none" onchange="handleFiles(this.files)" />

                            <div id="imagePreview" class="image-grid"></div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5 pt-4 border-top">
                        <a asp-action="Index" class="btn btn-light px-4 rounded-pill">Hủy</a>
                        <button type="submit" class="btn btn-primary px-5 rounded-pill shadow">Lưu danh mục</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedFiles = []; // Mảng lưu trữ file thực tế
        let primaryIndex = 0;   // Chỉ mục ảnh chính

        function handleFiles(files) {
            const newFiles = Array.from(files);
            selectedFiles = selectedFiles.concat(newFiles);
            renderPreviews();
        }

        function renderPreviews() {
            const container = document.getElementById('imagePreview');
            container.innerHTML = '';

            selectedFiles.forEach((file, index) => {
                const isPrimary = index === primaryIndex;
                const url = URL.createObjectURL(file);

                const html = `
                    <div class="image-item ${isPrimary ? 'is-primary' : ''}">
                        ${isPrimary ? '<span class="badge-primary-img">ẢNH CHÍNH</span>' : ''}
                        <img src="${url}">
                        <div class="img-overlay">
                            <button type="button" class="btn-img-action" onclick="setPrimary(${index})" title="Chọn làm ảnh chính"><i class="bi bi-star-fill"></i></button>
                            <button type="button" class="btn-img-action btn-img-delete" onclick="removeFile(${index})" title="Xóa"><i class="bi bi-trash-fill"></i></button>
                        </div>
                    </div>
                `;
                container.insertAdjacentHTML('beforeend', html);
            });
        }

        function setPrimary(index) {
            primaryIndex = index;
            renderPreviews();
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            if (primaryIndex >= selectedFiles.length) primaryIndex = 0;
            renderPreviews();
        }

        // Code submit AJAX tương tự gửi FormData với 'Files' và 'PrimaryIndex'
    </script>
}