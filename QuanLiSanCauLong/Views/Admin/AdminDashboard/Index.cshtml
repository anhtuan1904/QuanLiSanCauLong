                </div>
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Giá trị</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span style="font-weight:700;color:var(--gold);font-size:.8rem;">#ORD-2001</span><br /><span style="font-size:.75rem;color:var(--muted);">Vợt Yonex Astrox 99</span></td>
                            <td>Nguyễn Văn A</td>
                            <td style="font-family:'Playfair Display',serif;font-weight:700;">₫3,500,000</td>
                            <td><span class="spill done">Hoàn thành</span></td>
                        </tr>
                        <tr>
                            <td><span style="font-weight:700;color:var(--gold);font-size:.8rem;">#ORD-2002</span><br /><span style="font-size:.75rem;color:var(--muted);">Giày Victor P9200</span></td>
                            <td>Trần Thị B</td>
                            <td style="font-family:'Playfair Display',serif;font-weight:700;">₫2,800,000</td>
                            <td><span class="spill pend">Chờ xử lý</span></td>
                        </tr>
                        <tr>
                            <td><span style="font-weight:700;color:var(--gold);font-size:.8rem;">#ORD-2003</span><br /><span style="font-size:.75rem;color:var(--muted);">Đặt Sân 2 - 18h</span></td>
                            <td>Lê Văn C</td>
                            <td style="font-family:'Playfair Display',serif;font-weight:700;">₫150,000</td>
                            <td><span class="spill done">Hoàn thành</span></td>
                        </tr>
                        <tr>
                            <td><span style="font-weight:700;color:var(--gold);font-size:.8rem;">#ORD-2004</span><br /><span style="font-size:.75rem;color:var(--muted);">Combo 10 buổi</span></td>
                            <td>Phạm Thị D</td>
                            <td style="font-family:'Playfair Display',serif;font-weight:700;">₫1,200,000</td>
                            <td><span class="spill proc">Đang xử lý</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="chart-card" style="height:100%;">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Sản Phẩm Bán Chạy</div>
                        <div class="sec-sub">Top theo doanh thu</div>
                    </div>
                </div>
                @if (Model.TopProducts != null && Model.TopProducts.Any())
                {
                    var rank = 1;
                    @foreach (var p in Model.TopProducts.Take(5))
                    {
                        <div class="prod-row">
                            <div class="prod-rank">@rank</div>
                            <div class="prod-info">
                                <div class="prod-name-t">@p.ProductName</div>
                                <div class="prod-sold">@p.QuantitySold sản phẩm đã bán</div>
                            </div>
                            <div class="prod-rev">₫@p.Revenue.ToString("N0")</div>
                        </div>
                        rank++;
                    }
                }
                <!-- Time slots chart -->
                <div style="padding:1.2rem 1.6rem;border-top:1px solid var(--border);">
                    <div class="sec-title" style="font-size:.9rem;margin-bottom:1rem;">Khung Giờ Phổ Biến</div>
                    <canvas id="timeChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- REVIEW SNAPSHOT + CATEGORY PIE -->
    <div class="row g-4 mb-4">
        <div class="col-lg-5">
            <div class="chart-card">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Tổng Quan Đánh Giá</div>
                        <div class="sec-sub">Tất cả cơ sở &amp; sân</div>
                    </div>
                    <a asp-controller="AdminReview" asp-action="Index" class="gold-btn" style="font-size:.75rem;padding:.4rem 1rem;">
                        <i class="bi bi-star"></i> Xem đánh giá
                    </a>
                </div>
                <div class="chart-card-body">
                    <div class="review-snap">
                        <div style="text-align:center;flex-shrink:0;">
                            <div class="review-big-score">4.8</div>
                            <div class="star-row">
                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-half"></i>
                            </div>
                            <div class="review-total" style="margin-top:.5rem;">248 đánh giá</div>
                        </div>
                        <div class="review-bars" style="width:100%;">
                            @{
                                var bars = new[] { (5, 72, 180), (4, 18, 45), (3, 6, 15), (2, 3, 6), (1, 1, 2) };
                            }
                            @foreach (var (star, pct, cnt) in bars)
                            {
                                <div class="rbar-row" style="display:flex;align-items:center;gap:.6rem;margin-bottom:.4rem;">
                                    <span class="rbar-label" style="font-size:.72rem;color:var(--muted);width:12px;">@star</span>
                                    <i class="bi bi-star-fill" style="font-size:.65rem;color:var(--gold);"></i>
                                    <div class="rbar-track" style="flex:1;height:6px;background:var(--border);border-radius:3px;overflow:hidden;">
                                        <div class="rbar-fill" style="width:@pct%;height:100%;background:var(--gold);border-radius:3px;"></div>
                                    </div>
                                    <span class="rbar-count" style="font-size:.72rem;color:var(--muted);width:28px;">@cnt</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="chart-card" style="height:100%;">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Doanh Số Danh Mục</div>
                        <div class="sec-sub">% đóng góp doanh thu</div>
                    </div>
                </div>
                <div class="chart-card-body">
                    <canvas id="catChart" height="230"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="chart-card" style="height:100%;">
                <div class="chart-card-head">
                    <div class="sec-title">Nhanh</div>
                </div>
                <div style="padding:1.2rem;">
                    @{
                        var quickLinks = new[] {
                                        ("Thêm cơ sở sân",  "AdminFacility",  "Create", "bi-plus-circle", "gold"),
                                        ("Thêm sản phẩm",   "AdminProduct",   "Create", "bi-box-seam",    "gold"),
                                        ("Xem đặt sân",     "AdminBooking",   "Index",  "bi-calendar",    "gold"),
                                        ("Quản lý đánh giá","AdminReview",    "Index",  "bi-star",        "gold"),
                                        ("Tạo voucher",     "AdminVoucher",   "Create", "bi-ticket",      "gold"),
                                        ("Báo cáo doanh thu","AdminReport",   "Revenue","bi-graph-up",    "gold"),
                                        };
                    }
                    @foreach (var (label, ctrl, action, icon, _) in quickLinks)
                    {
                        <a asp-controller="@ctrl" asp-action="@action"
                           style="display:flex;align-items:center;gap:.75rem;padding:.75rem .5rem;border-bottom:1px solid var(--border);text-decoration:none;color:var(--deep);font-size:.85rem;transition:all .2s;"
                           onmouseover="this.style.color='var(--gold)';this.style.paddingLeft='1rem'"
                           onmouseout="this.style.color='var(--deep)';this.style.paddingLeft='.5rem'">
                            <i class="bi @icon" style="color:var(--gold);"></i>
                            @label
                            <i class="bi bi-arrow-right ms-auto" style="font-size:.7rem;opacity:.4;"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- MINI STATS -->
    <div class="mini-grid">
        <div class="mini-card">
            <div class="mini-icon"><i class="bi bi-building"></i></div>
            <div class="mini-n">6</div>
            <div class="mini-l">Cơ Sở Sân</div>
        </div>
        <div class="mini-card">
            <div class="mini-icon"><i class="bi bi-box-seam"></i></div>
            <div class="mini-n">142</div>
            <div class="mini-l">Sản Phẩm</div>
        </div>
        <div class="mini-card">
            <div class="mini-icon"><i class="bi bi-calendar-check"></i></div>
            <div class="mini-n">89</div>
            <div class="mini-l">Đặt Hôm Nay</div>
        </div>
        <div class="mini-card">
            <div class="mini-icon"><i class="bi bi-clock-history"></i></div>
            <div class="mini-n">12</div>
            <div class="mini-l">Chờ Xác Nhận</div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const GOLD  = '#d4a017';
        const GOLD2 = '#f5c842';
        const DEEP  = '#1a1209';
        const CREAM = '#f5ede0';
        const MUTED = 'rgba(138,117,96,.4)';

        Chart.defaults.font.family = "'Outfit', sans-serif";
        Chart.defaults.color = '#8a7560';

        // Revenue
        new Chart(document.getElementById('revenueChart'), {
