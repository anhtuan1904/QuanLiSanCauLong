@model QuanLiSanCauLong.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --deep: #1a1209;
        --gold: #d4a017;
        --gold2: #f5c842;
        --cream: #fdf8f0;
        --warm: #f5ede0;
        --border: #e8ddd0;
        --muted: #8a7560;
        --success: #16a34a;
        --blue: #0284c7;
    }

    /* KPI CARDS */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1px;
        background: var(--border);
        border: 1px solid var(--border);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .kpi-card {
        background: #fff;
        padding: 1.75rem 2rem;
        display: flex;
        flex-direction: column;
        gap: .75rem;
        position: relative;
        overflow: hidden;
        transition: background .25s;
    }

        .kpi-card:hover {
            background: var(--cream);
        }

        .kpi-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            height: 3px;
            width: 0;
            background: var(--gold);
            transition: width .4s;
        }

        .kpi-card:hover::after {
            width: 100%;
        }

    .kpi-top {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
    }

    .kpi-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        flex-shrink: 0;
    }

        .kpi-icon.gold {
            background: rgba(212,160,23,.12);
            color: var(--gold);
        }

        .kpi-icon.green {
            background: rgba(22,163,74,.1);
            color: var(--success);
        }

        .kpi-icon.blue {
            background: rgba(2,132,199,.1);
            color: var(--blue);
        }

        .kpi-icon.rust {
            background: rgba(201,75,42,.1);
            color: #c94b2a;
        }

    .kpi-change {
        font-size: .72rem;
        font-weight: 700;
        padding: .25rem .65rem;
        border-radius: 20px;
        display: flex;
        align-items: center;
        gap: .3rem;
    }

        .kpi-change.up {
            background: rgba(22,163,74,.1);
            color: var(--success);
        }

        .kpi-change.down {
            background: rgba(201,75,42,.1);
            color: #c94b2a;
        }

    .kpi-value {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 700;
        color: var(--deep);
        line-height: 1;
        letter-spacing: -.01em;
    }

    .kpi-label {
        font-size: .78rem;
        color: var(--muted);
        letter-spacing: .05em;
        font-weight: 400;
    }

    /* SECTION TITLE */
    .sec-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 700;
        font-style: italic;
        color: var(--deep);
        margin: 0;
    }

    .sec-sub {
        font-size: .75rem;
        color: var(--muted);
        margin-top: .2rem;
    }

    /* CHART CARDS */
    .chart-card {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: 10px;
        overflow: hidden;
    }

    .chart-card-head {
        padding: 1.2rem 1.6rem;
        border-bottom: 1px solid var(--border);
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
    }

    .chart-card-body {
        padding: 1.5rem;
    }

    /* CHART LEGEND */
    .chart-legend {
        display: flex;
        gap: 1.25rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .cl-item {
        display: flex;
        align-items: center;
        gap: .45rem;
        font-size: .78rem;
        color: var(--muted);
    }

    .cl-dot {
        width: 10px;
        height: 10px;
        border-radius: 2px;
        flex-shrink: 0;
    }

    /* TABLE */
    .admin-table {
        width: 100%;
        border-collapse: collapse;
    }

        .admin-table th {
            background: var(--warm);
            padding: .75rem 1rem;
            font-size: .72rem;
            font-weight: 700;
            letter-spacing: .1em;
            text-transform: uppercase;
            color: var(--muted);
            border-bottom: 1px solid var(--border);
            text-align: left;
        }

        .admin-table td {
            padding: .9rem 1rem;
            border-bottom: 1px solid var(--border);
            font-size: .875rem;
            vertical-align: middle;
            color: var(--deep);
        }

        .admin-table tr:last-child td {
            border-bottom: none;
        }

        .admin-table tr:hover td {
            background: var(--cream);
        }

    /* STATUS PILLS */
    .spill {
        display: inline-flex;
        align-items: center;
        gap: .35rem;
        font-size: .68rem;
        font-weight: 700;
        padding: .3rem .7rem;
        border-radius: 3px;
        letter-spacing: .06em;
        text-transform: uppercase;
    }

        .spill.done {
            background: rgba(22,163,74,.1);
            color: var(--success);
        }

        .spill.pend {
            background: rgba(212,160,23,.15);
            color: #92660a;
        }

        .spill.proc {
            background: rgba(2,132,199,.1);
            color: var(--blue);
        }

        .spill.cancel {
            background: rgba(201,75,42,.1);
            color: #c94b2a;
        }

        .spill::before {
            content: '●';
            font-size: .55em;
        }

    /* TOP PRODUCTS */
    .prod-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: .9rem 1.2rem;
        border-bottom: 1px solid var(--border);
        transition: background .2s;
    }

        .prod-row:last-child {
            border-bottom: none;
        }

        .prod-row:hover {
            background: var(--cream);
        }

    .prod-rank {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--gold);
        width: 28px;
        text-align: center;
        flex-shrink: 0;
    }

    .prod-info {
        flex: 1;
        min-width: 0;
    }

    .prod-name-t {
        font-weight: 600;
        font-size: .88rem;
        color: var(--deep);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .prod-sold {
        font-size: .73rem;
        color: var(--muted);
    }

    .prod-rev {
        font-family: 'Playfair Display', serif;
        font-size: 1rem;
        font-weight: 700;
        color: var(--gold);
    }

    /* MINI STATS */
    .mini-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-top: 2rem;
    }

    .mini-card {
        background: var(--deep);
        border-radius: 10px;
        padding: 1.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .mini-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--gold), var(--gold2));
        }

    .mini-icon {
        font-size: 1.8rem;
        margin-bottom: .75rem;
        opacity: .6;
        color: var(--gold2);
    }

    .mini-n {
        font-family: 'Playfair Display', serif;
        font-size: 2.2rem;
        font-weight: 700;
        color: #fff;
        line-height: 1;
    }

    .mini-l {
        font-size: .72rem;
        color: rgba(255,255,255,.4);
        letter-spacing: .1em;
        text-transform: uppercase;
        margin-top: .4rem;
    }

    /* REVIEW SNAPSHOT */
    .review-snap {
        background: var(--warm);
        border: 1px solid var(--border);
        border-radius: 10px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-top: 2rem;
    }

    .review-big-score {
        font-family: 'Playfair Display', serif;
        font-size: 4rem;
        font-weight: 700;
        color: var(--gold);
        line-height: 1;
        flex-shrink: 0;
    }

    .star-row {
        display: flex;
        gap: .2rem;
        color: var(--gold);
        font-size: 1.1rem;
    }

    .review-bars {
        flex: 1;
    }

    .rbar-row {
        display: flex;
        align-items: center;
        gap .75rem;
        margin-bottom: .4rem;
    }

    .rbar-label {
        font-size: .75rem;
        color: var(--muted);
        width: 16px;
        text-align: right;
        flex-shrink: 0;
    }

    .rbar-track {
        flex: 1;
        height: 6px;
        background: var(--border);
        border-radius: 3px;
        overflow: hidden;
    }

    .rbar-fill {
        height: 100%;
        background: var(--gold);
        border-radius: 3px;
    }

    .rbar-count {
        font-size: .72rem;
        color: var(--muted);
        width: 28px;
        flex-shrink: 0;
    }

    .review-total {
        font-size: .78rem;
        color: var(--muted);
        margin-top: .4rem;
    }

    @@media (max-width: 1100px) {
        .kpi-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .mini-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @@media (max-width: 640px) {
        .kpi-grid {
            grid-template-columns: 1fr;
        }

        .mini-grid {
            grid-template-columns: 1fr 1fr;
        }

        .review-snap {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

<div style="max-width:1400px;">

    <!-- KPI ROW -->
    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-top">
                <div class="kpi-icon gold"><i class="bi bi-currency-dollar"></i></div>
                <span class="kpi-change up"><i class="bi bi-arrow-up-short"></i>+12.5%</span>
            </div>
