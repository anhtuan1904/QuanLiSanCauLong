    <!-- CHARTS ROW -->
    <div class="row g-4 mb-4">
        <!-- Revenue Line -->
        <div class="col-lg-8">
            <div class="chart-card">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Doanh Thu Theo Tháng</div>
                        <div class="sec-sub">8 tháng gần nhất</div>
                    </div>
                    <div class="chart-legend">
                        <div class="cl-item"><div class="cl-dot" style="background:var(--gold);"></div>Doanh thu</div>
                        <div class="cl-item"><div class="cl-dot" style="background:var(--deep);"></div>Đơn hàng</div>
                    </div>
                </div>
                <div class="chart-card-body">
                    <canvas id="revenueChart" height="240"></canvas>
                </div>
            </div>
        </div>
        <!-- Court Usage -->
        <div class="col-lg-4">
            <div class="chart-card" style="height:100%;">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Sử Dụng Sân</div>
                        <div class="sec-sub">Số giờ trong tháng</div>
                    </div>
                </div>
                <div class="chart-card-body">
                    <canvas id="courtChart" height="240"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- ORDERS + PRODUCTS -->
    <div class="row g-4 mb-4">
        <div class="col-lg-7">
            <div class="chart-card">
                <div class="chart-card-head">
                    <div>
                        <div class="sec-title">Đơn Hàng Gần Đây</div>
                        <div class="sec-sub">Cập nhật mới nhất</div>
                    </div>
