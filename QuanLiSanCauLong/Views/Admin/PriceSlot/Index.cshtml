@model IEnumerable<QuanLiSanCauLong.Models.PriceSlot>

@{
    ViewData["Title"] = "Quản lý bảng giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="bi bi-cash-stack"></i> Quản lý bảng giá</h3>
            <p class="text-muted">Thiết lập giá theo khung giờ</p>
        </div>
        <div class="d-flex gap-2">
            <select class="form-select" style="width: auto;" onchange="filterByFacility(this.value)">
                <option value="">Tất cả cơ sở</option>
                @foreach (var facility in ViewBag.Facilities as IEnumerable<QuanLiSanCauLong.Models.Facility>)
                {
                    <option value="@facility.FacilityId"
                            selected="@(ViewBag.SelectedFacilityId == facility.FacilityId)">
                        @facility.FacilityName
                    </option>
                }
            </select>
            <a asp-action="CreatePriceSlot" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm bảng giá
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Cơ sở</th>
                            <th>Khung giờ</th>
                            <th>Loại sân</th>
                            <th>Giá (VNĐ)</th>
                            <th>Giờ vàng</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var price in Model)
                        {
                            <tr>
                                <td>@price.Facility.FacilityName</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @price.StartTime.ToString(@"hh\:mm") - @price.EndTime.ToString(@"hh\:mm")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@price.CourtType</span>
                                </td>
                                <td>
                                    <strong class="text-success">@price.Price.ToString("N0")đ</strong>
                                </td>
                                <td>
                                    @if (price.IsPeakHour)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-star-fill"></i> Giờ vàng
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (price.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Tạm ngưng</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditPriceSlot" asp-route-id="@price.PriceSlotId"
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button class="btn btn-outline-danger"
                                                onclick="deletePrice(@price.PriceSlotId)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterByFacility(facilityId) {
            window.location.href = facilityId ?
                `/Admin/PriceSlots?facilityId=${facilityId}` :
                '/Admin/PriceSlots';
        }

        function deletePrice(id) {
            if (confirm('Bạn có chắc muốn xóa bảng giá này?')) {
                fetch(`/Admin/DeletePriceSlot/${id}`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra!');
                    }
                });
            }
        }
    </script>
}