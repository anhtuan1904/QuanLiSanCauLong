@model QuanLiSanCauLong.ViewModels.StockTransactionViewModel

@{
    ViewData["Title"] = "Nhập kho sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-success text-white">
            <h5 class="m-0 fw-bold"><i class="bi bi-box-arrow-in-down me-2"></i>Tạo phiếu nhập kho</h5>
        </div>
        <div class="card-body">
            <form asp-action="StockIn" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Cơ sở nhập hàng</label>
                        <select asp-for="FacilityId" class="form-select" asp-items="@(new SelectList(ViewBag.Facilities, "FacilityId", "FacilityName"))" required>
                            <option value="">-- Chọn cơ sở --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày nhập</label>
                        <input asp-for="TransactionDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered" id="productTable">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50%">Sản phẩm</th>
                                <th style="width: 30%">Số lượng nhập</th>
                                <th style="width: 10%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="itemsContainer">
                            <tr>
                                <td>
                                    <select name="Items[0].ProductId" class="form-select select-product" required>
                                        <option value="">-- Chọn sản phẩm --</option>
                                        @foreach (var p in ViewBag.Products)
                                        {
                                            <option value="@p.ProductId">@p.ProductName (@p.ProductCode)</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="Items[0].Quantity" class="form-control" min="1" required />
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-danger remove-row"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <button type="button" class="btn btn-outline-primary mb-3" id="addRow">
                    <i class="bi bi-plus-lg"></i> Thêm sản phẩm
                </button>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-success px-4">Xác nhận nhập kho</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let rowIdx = 1;
        $("#addRow").click(function () {
            const newRow = `
                <tr>
                    <td>
                        <select name="Items[${rowIdx}].ProductId" class="form-select" required>
                            <option value="">-- Chọn sản phẩm --</option>
                            @foreach (var p in ViewBag.Products)
                            {
                                <option value="@p.ProductId">@p.ProductName</option>
                            }
                        </select>
                    </td>
                    <td>
                        <input type="number" name="Items[${rowIdx}].Quantity" class="form-control" min="1" required />
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-danger remove-row"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>`;
            $("#itemsContainer").append(newRow);
            rowIdx++;
        });

        $(document).on("click", ".remove-row", function () {
            $(this).closest("tr").remove();
        });
    </script>
}