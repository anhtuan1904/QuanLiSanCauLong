@model QuanLiSanCauLong.ViewModels.StockTransactionViewModel

<div class="modal-header border-0 pb-0">
    <div class="d-flex align-items-center">
        <div class="bg-success text-white rounded-3 p-2 me-3">
            <i class="bi bi-box-arrow-in-down fs-4"></i>
        </div>
        <div>
            <h5 class="modal-title fw-bold">Tạo Phiếu Nhập Kho</h5>
            <p class="text-muted small mb-0">Quản lý nhập hàng và cập nhật số lượng tồn kho</p>
        </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-action="StockIn" method="post" id="stockInForm">
    <div class="modal-body p-4">
        <div class="row g-3 mb-4">
            <div class="col-md-7">
                <label class="form-label small fw-bold text-muted">CƠ SỞ NHẬP HÀNG</label>
                <select asp-for="FacilityId" class="form-select border-0 bg-light rounded-3 py-2">
                    <option value="">-- Chọn cơ sở --</option>
                    @* Load danh sách cơ sở từ ViewBag hoặc DB *@
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label small fw-bold text-muted">NGÀY THỰC HIỆN</label>
                <input asp-for="TransactionDate" type="date" class="form-control border-0 bg-light rounded-3 py-2" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <label class="form-label small fw-bold text-muted mb-0"><i class="bi bi-list-ul me-1"></i> CHI TIẾT SẢN PHẨM</label>
            <button type="button" class="btn btn-sm btn-soft-primary" onclick="addRow()">
                <i class="bi bi-plus-circle me-1"></i>Thêm dòng
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-borderless align-middle" id="productTable">
                <thead>
                    <tr class="text-muted small border-bottom">
                        <th style="width: 55%">Sản phẩm</th>
                        <th style="width: 35%">Số lượng</th>
                        <th style="width: 10%" class="text-center">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="product-row">
                        <td>
                            <select name="Items[0].ProductId" class="form-select border-0 bg-light rounded-3 py-2">
                                <option value="">-- Chọn sản phẩm --</option>
                                @* Load danh sách sản phẩm *@
                            </select>
                        </td>
                        <td>
                            <input name="Items[0].Quantity" type="number" class="form-control border-0 bg-light rounded-3 py-2" placeholder="0" min="1" />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-link text-danger p-0" onclick="removeRow(this)">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <label class="form-label small fw-bold text-muted">GHI CHÚ</label>
            <textarea asp-for="Note" class="form-control border-0 bg-light rounded-3" rows="2" placeholder="Nhập lý do nhập kho..."></textarea>
        </div>
    </div>

    <div class="modal-footer border-0 bg-light-subtle p-4">
        <button type="button" class="btn btn-link text-decoration-none text-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
        <button type="submit" class="btn btn-dark rounded-3 px-4 shadow-sm">
            <i class="bi bi-check-circle me-2"></i>Xác nhận nhập kho
        </button>
    </div>
</form>

<style>
    .btn-soft-primary {
        background-color: #f0f3ff;
        color: #0d6efd;
        border: none;
        font-weight: 600;
        font-size: 0.75rem;
    }

        .btn-soft-primary:hover {
            background-color: #0d6efd;
            color: white;
        }

    .bg-light-subtle {
        background-color: #f8f9fa;
    }
</style>

<script>
    let rowIndex = 1;
    function addRow() {
        const row = `
            <tr class="product-row">
                <td>
                    <select name="Items[${rowIndex}].ProductId" class="form-select border-0 bg-light rounded-3 py-2">
                        <option value="">-- Chọn sản phẩm --</option>
                    </select>
                </td>
                <td>
                    <input name="Items[${rowIndex}].Quantity" type="number" class="form-control border-0 bg-light rounded-3 py-2" placeholder="0" min="1" />
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-link text-danger p-0" onclick="removeRow(this)">
                        <i class="bi bi-trash3"></i>
                    </button>
                </td>
            </tr>`;
        $('#productTable tbody').append(row);
        rowIndex++;
    }

    function removeRow(btn) {
        if ($('.product-row').length > 1) {
            $(btn).closest('tr').remove();
        }
    }
</script>