@model QuanLiSanCauLong.Models.Inventory

@{
    ViewData["Title"] = "Điều chỉnh kho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-warning py-3">
                <h5 class="m-0 fw-bold text-dark"><i class="bi bi-pencil-square me-2"></i>Điều chỉnh số lượng tồn kho</h5>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted d-block">Sản phẩm:</small>
                            <strong>@Model.Product.ProductName</strong>
                        </div>
                        <div class="col-6 text-end">
                            <small class="text-muted d-block">Cơ sở:</small>
                            <strong>@Model.Facility.FacilityName</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="Adjustment" method="post">
                    <input type="hidden" name="inventoryId" value="@Model.InventoryId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số lượng hiện tại</label>
                        <input type="text" class="form-control bg-light" value="@Model.Quantity @Model.Product.Unit" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số lượng thực tế mới</label>
                        <div class="input-group">
                            <input type="number" name="newQuantity" class="form-control" value="@Model.Quantity" min="0" required />
                            <span class="input-group-text">@Model.Product.Unit</span>
                        </div>
                        <div class="form-text text-danger">* Lưu ý: Thao tác này sẽ ghi đè trực tiếp lên số tồn kho hiện tại.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Lý do điều chỉnh</label>
                        <textarea name="note" class="form-control" rows="3" placeholder="Ví dụ: Kiểm kho định kỳ, hàng lỗi, hàng tặng kèm..."></textarea>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold">Cập nhật kho</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>