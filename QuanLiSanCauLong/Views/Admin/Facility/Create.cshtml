@model QuanLiSanCauLong.Models.Facility

@{
    ViewData["Title"] = "Thêm cơ sở mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3><i class="bi bi-building"></i> Thêm cơ sở mới</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Facilities">Cơ sở</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin cơ sở</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateFacility" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FacilityName" class="form-label">Tên cơ sở <span class="text-danger">*</span></label>
                                <input asp-for="FacilityName" class="form-control" placeholder="VD: Sân Cầu Lông ABC" />
                                <span asp-validation-for="FacilityName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                <input asp-for="Phone" class="form-control" placeholder="0123456789" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="facility@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control" placeholder="123 Đường ABC" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="District" class="form-label">Quận/Huyện <span class="text-danger">*</span></label>
                                <input asp-for="District" class="form-control" placeholder="Quận 1" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label">Thành phố <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" placeholder="Hồ Chí Minh" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="OpenTime" class="form-label">Giờ mở cửa</label>
                                <input asp-for="OpenTime" class="form-control" type="time" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CloseTime" class="form-label">Giờ đóng cửa</label>
                                <input asp-for="CloseTime" class="form-control" type="time" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Mô tả về cơ sở, tiện ích..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Hình ảnh URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Hoạt động
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a asp-action="Facilities" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Hướng dẫn</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i>
                            Điền đầy đủ thông tin có dấu (*)
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i>
                            Số điện thoại phải hợp lệ
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i>
                            Sau khi tạo, bạn có thể thêm sân và bảng giá
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}