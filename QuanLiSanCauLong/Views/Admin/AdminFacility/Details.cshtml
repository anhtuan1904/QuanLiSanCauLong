@model QuanLiSanCauLong.Models.Facility

@{
    ViewData["Title"] = "Chi tiết cơ sở";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">
                <i class="bi bi-building text-primary me-2"></i>
                @Model.FacilityName
            </h2>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.FacilityId" class="btn btn-warning">
                    <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>

        <!-- Main Info Card -->
        <div class="card shadow-sm mb-4">
            <div class="row g-0">
                <div class="col-md-5">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded-start h-100"
                             style="object-fit: cover; min-height: 400px;" alt="@Model.FacilityName">
                    }
                    else
                    {
                        <div class="bg-light h-100 d-flex align-items-center justify-content-center rounded-start"
                             style="min-height: 400px;">
                            <div class="text-center">
                                <i class="bi bi-building text-muted" style="font-size: 6rem;"></i>
                                <p class="text-muted mt-3">Chưa có hình ảnh</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-7">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Đang hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="bi bi-x-circle me-1"></i>Ngừng hoạt động
                                </span>
                            }
                        </div>

                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Thông tin liên hệ
                        </h5>
                        <div class="row mb-2">
                            <div class="col-4 text-muted">
                                <i class="bi bi-telephone me-2"></i>Điện thoại:
                            </div>
                            <div class="col-8">
                                <strong>@Model.Phone</strong>
                                <a href="tel:@Model.Phone" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="bi bi-telephone-fill"></i> Gọi
                                </a>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 text-muted">
                                <i class="bi bi-envelope me-2"></i>Email:
                            </div>
                            <div class="col-8">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <span>@Model.Email</span>
                                    <a href="mailto:@Model.Email" class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="bi bi-envelope-fill"></i> Email
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </div>
                        </div>

                        <h5 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="bi bi-geo-alt text-success me-2"></i>
                            Địa chỉ
                        </h5>
                        <div class="row mb-2">
                            <div class="col-4 text-muted">Địa chỉ:</div>
                            <div class="col-8 fw-semibold">@Model.Address</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 text-muted">Quận/Huyện:</div>
                            <div class="col-8">@Model.District</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 text-muted">Thành phố:</div>
                            <div class="col-8">@Model.City</div>
                        </div>

                        <h5 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="bi bi-clock text-warning me-2"></i>
                            Giờ hoạt động
                        </h5>
                        <div class="row mb-2">
                            <div class="col-4 text-muted">Giờ mở cửa:</div>
                            <div class="col-8">
                                <span class="badge bg-success">
                                    @Model.OpenTime?.ToString(@"hh\:mm")
                                </span>
                                <span class="mx-2">-</span>
                                <span class="badge bg-danger">
                                    @Model.CloseTime?.ToString(@"hh\:mm")
                                </span>
                            </div>
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle me-2"></i>
                            Tạo lúc: <strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-file-text text-info me-2"></i>
                        Mô tả chi tiết
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-line;">@Model.Description</p>
                </div>
            </div>
        }

        <!-- Courts List -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-list-ul text-primary me-2"></i>
                    Danh sách sân (@(Model.Courts?.Count ?? 0) sân)
                </h5>
                <a asp-controller="Court" asp-action="Create" asp-route-facilityId="@Model.FacilityId"
                   class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Thêm sân mới
                </a>
            </div>
            <div class="card-body">
                @if (Model.Courts != null && Model.Courts.Any())
                {
                    <div class="row g-3">
                        @foreach (var court in Model.Courts.OrderBy(c => c.CourtNumber))
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title fw-bold mb-0">
                                                <i class="bi bi-grid-3x3 text-primary me-2"></i>
                                                @court.CourtNumber
                                            </h6>
                                            @if (court.Status == "Available")
                                            {
                                                <span class="badge bg-success">Sẵn sàng</span>
                                            }
                                            else if (court.Status == "Occupied")
                                            {
                                                <span class="badge bg-warning">Đang dùng</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Bảo trì</span>
                                            }
                                        </div>

                                        <p class="mb-2">
                                            <small class="text-muted">Loại sân:</small>
                                            @if (court.CourtType == "VIP")
                                            {
                                                <span class="badge bg-warning">VIP</span>
                                            }
                                            else if (court.CourtType == "Premium")
                                            {
                                                <span class="badge bg-danger">Premium</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Tiêu chuẩn</span>
                                            }
                                        </p>

                                        <p class="mb-2">
                                            <small class="text-muted">Số khung giờ:</small>
                                            <strong>@(court.PriceSlots?.Count ?? 0)</strong>
                                        </p>

                                        <div class="btn-group w-100 mt-2" role="group">
                                            <a asp-controller="Court" asp-action="Details"
                                               asp-route-id="@court.CourtId"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Xem
                                            </a>
                                            <a asp-controller="Court" asp-action="Edit"
                                               asp-route-id="@court.CourtId"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i> Sửa
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Chưa có sân nào.
                        <a asp-controller="Court" asp-action="Create" asp-route-facilityId="@Model.FacilityId"
                           class="alert-link">
                            Thêm sân ngay
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Statistics -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-primary bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="bi bi-grid-3x3 text-primary fs-1 mb-2"></i>
                        <h3 class="mb-0 fw-bold text-primary">@(Model.Courts?.Count ?? 0)</h3>
                        <p class="text-muted mb-0">Tổng số sân</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-success bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle text-success fs-1 mb-2"></i>
                        <h3 class="mb-0 fw-bold text-success">
                            @(Model.Courts?.Count(c => c.Status == "Available") ?? 0)
                        </h3>
                        <p class="text-muted mb-0">Sân sẵn sàng</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 bg-info bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="bi bi-cash-stack text-info fs-1 mb-2"></i>
                        <h3 class="mb-0 fw-bold text-info">
                            @(Model.Courts?.SelectMany(c => c.PriceSlots ?? new List<QuanLiSanCauLong.Models.PriceSlot>()).Count() ?? 0)
                        </h3>
                        <p class="text-muted mb-0">Khung giờ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>