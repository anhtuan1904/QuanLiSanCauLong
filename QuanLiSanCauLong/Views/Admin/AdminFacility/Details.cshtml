@model QuanLiSanCauLong.Models.Facility

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-dark">Quản lý</a></li>
            <li class="breadcrumb-item active">Chi tiết cơ sở</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <img src="@Model.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" />
                <div class="card-body text-center">
                    <h4 class="fw-bold">@Model.FacilityName</h4>
                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill mb-3">
                        @Model.Status
                    </span>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.FacilityId" class="btn btn-dark btn-sm rounded-3 px-3">Sửa ngay</a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-3 px-3">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h5 class="fw-bold mb-4 border-bottom pb-2">Thông tin hệ thống</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Địa chỉ</label>
                        <span class="fw-bold">@Model.Address, @Model.District, @Model.City</span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Liên hệ</label>
                        <span class="fw-bold">@Model.Phone</span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Giờ hoạt động</label>
                        <span class="fw-bold text-success">
                            <i class="bi bi-clock me-1"></i> @Model.OpenTime - @Model.CloseTime
                        </span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Ngày tạo</label>
                        <span class="fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>

                <h5 class="fw-bold mb-3 mt-4 border-bottom pb-2">Mô tả</h5>
                <p class="text-secondary" style="line-height: 1.8;">@Model.Description</p>
            </div>
        </div>
    </div>
</div>