@model QuanLiSanCauLong.Models.Facility
@{
    Layout = null;
    var images = ViewBag.FacilityImages as List<QuanLiSanCauLong.Models.FacilityImage> ?? new List<QuanLiSanCauLong.Models.FacilityImage>();
    var primaryImage = images.FirstOrDefault(i => i.IsPrimary)?.ImagePath ?? (images.Any() ? images.First().ImagePath : "/images/default-facility.jpg");
}

<div class="modal-header border-0 px-4 pt-4 pb-0">
    <div>
        <h5 class="fw-bold mb-1">Chi Tiết Cơ Sở</h5>
        <p class="text-muted small mb-0">Thông tin chi tiết về <strong>@Model.FacilityName</strong></p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 py-3">
    <div class="row g-4">
        <!-- Image Gallery Section -->
        <div class="col-md-5">
            <div class="facility-image-section">
                <div class="main-image-container mb-3 rounded-3 overflow-hidden" style="height: 280px;">
                    <img src="@primaryImage" class="w-100 h-100" style="object-fit: cover;" id="mainDisplayImage" alt="@Model.FacilityName" />
                </div>

                @if (images.Count > 1)
                {
                    <div class="d-flex gap-2 flex-wrap">
                        @foreach (var img in images)
                        {
                            <div class="thumb-image-wrap @(img.IsPrimary ? "active" : "")" onclick="changeMainImage('@img.ImagePath', this)">
                                <img src="@img.ImagePath" alt="Thumbnail" />
                            </div>
                        }
                    </div>
                }

                <div class="mt-3 text-center">
                    <span class="badge @(Model.Status == "Active" ? "bg-success" : (Model.Status == "Maintenance" ? "bg-warning" : "bg-danger")) px-4 py-2 rounded-pill fs-6">
                        @(Model.Status == "Active" ? "Hoạt Động" : (Model.Status == "Maintenance" ? "Bảo Trì" : "Ngừng Hoạt Động"))
                    </span>
                </div>
            </div>
        </div>

        <!-- Information Section -->
        <div class="col-md-7">
            <div class="facility-details">
                <h4 class="fw-bold mb-3">@Model.FacilityName</h4>

                <div class="info-group mb-4">
                    <h6 class="fw-bold text-muted small mb-3 text-uppercase">Thông Tin Liên Hệ</h6>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-geo-alt-fill text-success me-2 mt-1"></i>
                                <div>
                                    <div class="text-muted small">Địa chỉ</div>
                                    <div class="fw-semibold">@Model.Address</div>
                                    <div class="text-muted small">@Model.District, @Model.City</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-telephone-fill text-primary me-2 mt-1"></i>
                                <div>
                                    <div class="text-muted small">Điện thoại</div>
                                    <div class="fw-semibold">@Model.Phone</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-clock-fill text-warning me-2 mt-1"></i>
                                <div>
                                    <div class="text-muted small">Giờ hoạt động</div>
                                    <div class="fw-semibold">@(Model.OpenTime?.ToString(@"hh\:mm") ?? "--") - @(Model.CloseTime?.ToString(@"hh\:mm") ?? "--")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-group mb-4">
                    <h6 class="fw-bold text-muted small mb-3 text-uppercase">Thông Tin Sân</h6>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="stat-box p-3 rounded-3 bg-light">
                                <div class="fs-4 fw-bold text-dark">@(Model.Courts?.Count ?? 0)</div>
                                <div class="text-muted small">Tổng số sân</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-box p-3 rounded-3 bg-light">
                                <div class="fs-4 fw-bold text-success">@(Model.Courts?.Count(c => c.Status == "Available") ?? 0)</div>
                                <div class="text-muted small">Sân trống</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="stat-box p-3 rounded-3 bg-light">
                                <div class="text-muted small mb-1">Giá thuê</div>
                                <div class="fs-5 fw-bold text-success">
                                    @(Model.Courts?.Any() == true
                                                                        ? Model.Courts.Min(c => (decimal?)c.HourlyRate)?.ToString("N0")
                                                                        : "---")đ - @(Model.Courts?.Any() == true
                                                                        ? Model.Courts.Max(c => (decimal?)c.HourlyRate)?.ToString("N0")
                                                                        : "---")đ / giờ
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="info-group mb-3">
                        <h6 class="fw-bold text-muted small mb-2 text-uppercase">Mô Tả</h6>
                        <p class="text-secondary mb-0" style="line-height: 1.7;">@Model.Description</p>
                    </div>
                }

                <div class="info-group">
                    <div class="text-muted small">
                        <i class="bi bi-calendar-check me-1"></i>
                        Ngày tạo: <strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
        <button type="button" class="btn btn-light px-4 fw-semibold rounded-3" data-bs-dismiss="modal">Đóng</button>
        <button type="button" class="btn btn-dark px-4 fw-semibold rounded-3" onclick="openEditFromDetails(@Model.FacilityId)">
            <i class="bi bi-pencil-square me-1"></i>Chỉnh Sửa
        </button>
    </div>
</div>

<style>
    .thumb-image-wrap {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        border: 2px solid #dee2e6;
        cursor: pointer;
        transition: all 0.2s;
    }

        .thumb-image-wrap:hover,
        .thumb-image-wrap.active {
            border-color: #198754;
            transform: scale(1.05);
        }

        .thumb-image-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .main-image-container {
        border: 2px solid #e9ecef;
        background: #f8f9fa;
    }

    .stat-box {
        border: 1px solid #e9ecef;
        transition: all 0.2s;
    }

        .stat-box:hover {
            border-color: #198754;
            background: #f0f9f4 !important;
        }

    .info-group {
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 1rem;
    }

        .info-group:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }
</style>

<script>
    function changeMainImage(imagePath, thumbElement) {
        document.getElementById('mainDisplayImage').src = imagePath;

        // Remove active class from all thumbs
        document.querySelectorAll('.thumb-image-wrap').forEach(el => {
            el.classList.remove('active');
        });

        // Add active class to clicked thumb
        thumbElement.classList.add('active');
    }

    function openEditFromDetails(facilityId) {
        // Close current modal
        const currentModal = bootstrap.Modal.getInstance(document.getElementById('modalFacility'));
        if (currentModal) {
            currentModal.hide();
        }

        // Open edit modal after a short delay
        setTimeout(() => {
            openEditModal(facilityId);
        }, 300);
    }
</script>
