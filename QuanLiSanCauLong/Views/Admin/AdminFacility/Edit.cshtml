@model QuanLiSanCauLong.Models.Facility
@{
    Layout = null;
}

<div class="modal-header border-0 p-4 pb-0">
    <div class="d-flex align-items-center">
        <div class="bg-warning rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
            <i class="bi bi-pencil-fill text-white fs-5"></i>
        </div>
        <div>
            <h4 class="fw-bold mb-0">Cập nhật thông tin cơ sở</h4>
            <small class="text-muted">Chỉnh sửa chi tiết cho @Model.FacilityName</small>
        </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body p-4">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="FacilityId" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="row g-4">
            <div class="col-md-8">
                <label class="form-label fw-bold small text-uppercase">Tên Cơ Sở Sân</label>
                <input asp-for="FacilityName" class="form-control rounded-3 py-2 border-2" placeholder="VD: Sân Cầu Lông ABC" required />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold small text-uppercase">Số Điện Thoại</label>
                <input asp-for="Phone" class="form-control rounded-3 py-2 border-2" placeholder="0123 456..." required />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold small text-uppercase">Địa Chỉ Chi Tiết</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-2 border-end-0"><i class="bi bi-geo-alt"></i></span>
                    <input asp-for="Address" class="form-control rounded-end-3 py-2 border-2" placeholder="Số nhà, tên đường, quận/huyện..." required />
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold small text-uppercase text-success">Giờ Mở Cửa</label>
                <input asp-for="OpenTime" type="time" class="form-control rounded-3 py-2 border-2 border-success border-opacity-25" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold small text-uppercase text-danger">Giờ Đóng Cửa</label>
                <input asp-for="CloseTime" type="time" class="form-control rounded-3 py-2 border-2 border-danger border-opacity-25" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold small text-uppercase">Trạng Thái Hoạt Động</label>
                <select asp-for="Status" class="form-select rounded-3 py-2 border-2">
                    <option value="Active text-success">Đang Hoạt Động</option>
                    <option value="Maintenance text-warning">Bảo Trì / Ngừng</option>
                </select>
            </div>

            <div class="col-md-6 text-center">
                <label class="form-label fw-bold small text-uppercase d-block text-start">Hình Ảnh Cơ Sở</label>
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="rounded-3 shadow-sm border" style="width: 60px; height: 60px; object-fit: cover;" />
                    }
                    <input type="file" name="ImageFile" class="form-control rounded-3 small py-2" />
                </div>
            </div>
        </div>

        <hr class="my-4 opacity-50">

        <div class="d-flex gap-2 justify-content-end">
            <button type="button" class="btn btn-light fw-bold px-4 rounded-3 py-2" data-bs-dismiss="modal">Hủy bỏ</button>
            <button type="submit" class="btn btn-dark fw-bold px-5 rounded-3 py-2 shadow-sm">
                <i class="bi bi-check-lg me-2"></i>Lưu Thay Đổi
            </button>
        </div>
    </form>
</div>