@model QuanLiSanCauLong.Models.Facility

@{
    ViewData["Title"] = "Chỉnh sửa cơ sở";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning py-3">
                <h4 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-pencil-square me-2"></i>
                    Chỉnh sửa cơ sở: @Model.FacilityName
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="FacilityId" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <h5 class="border-bottom pb-2 mb-3 fw-bold text-primary">Thông tin cơ bản</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FacilityName" class="form-label fw-semibold required">Tên cơ sở</label>
                            <input asp-for="FacilityName" class="form-control" />
                            <span asp-validation-for="FacilityName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-semibold required">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4 fw-bold text-primary">Địa chỉ</h5>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-semibold required">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="District" class="form-label fw-semibold required">Quận/Huyện</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label fw-semibold required">Thành phố</label>
                            <select asp-for="City" class="form-select">
                                <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="Đà Nẵng">Đà Nẵng</option>
                                <option value="Cần Thơ">Cần Thơ</option>
                                <option value="Hải Phòng">Hải Phòng</option>
                            </select>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4 fw-bold text-primary">Giờ hoạt động</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="OpenTime" class="form-label fw-semibold required">Giờ mở cửa</label>
                            <input asp-for="OpenTime" type="time" class="form-control" />
                            <span asp-validation-for="OpenTime" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CloseTime" class="form-label fw-semibold required">Giờ đóng cửa</label>
                            <input asp-for="CloseTime" type="time" class="form-control" />
                            <span asp-validation-for="CloseTime" class="text-danger small"></span>
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4 fw-bold text-primary">Hình ảnh & Mô tả</h5>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Hình ảnh cơ sở</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3">
                                <img src="@Model.ImageUrl" class="img-thumbnail shadow-sm" style="max-height: 180px;" alt="Current" />
                                <div class="form-text text-muted italic">Ảnh hiện tại đang sử dụng</div>
                            </div>
                        }
                        <input type="file" class="form-control" name="ImageFile" accept="image/*" />
                        <small class="text-muted">Chọn file ảnh mới để thay thế ảnh cũ (nếu muốn).</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả chi tiết</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-semibold">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Active">Hoạt động</option>
                            <option value="Inactive">Ngừng hoạt động</option>
                        </select>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Hủy</a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold text-dark">Cập nhật cơ sở</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .required::after {
        content: " *";
        color: red;
    }

    .italic {
        font-style: italic;
    }
</style>