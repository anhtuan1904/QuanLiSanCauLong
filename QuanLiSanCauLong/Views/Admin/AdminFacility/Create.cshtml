@model QuanLiSanCauLong.Models.Facility

<div class="modal-header border-0 pt-4 px-4 pb-0">
    <div>
        <h4 class="fw-bold mb-1">Thêm Cơ Sở Sân Mới</h4>
        <p class="text-muted small mb-0">Nhập thông tin cơ sở sân cầu lông mới</p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body p-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row g-3">
            <div class="col-md-7">
                <label class="form-label fw-bold small text-secondary">Tên Cơ Sở</label>
                <input asp-for="FacilityName" class="form-control custom-input" placeholder="Nhập tên cơ sở" />
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold small text-secondary">Số Điện Thoại</label>
                <input asp-for="Phone" class="form-control custom-input" placeholder="0123 456 789" />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold small text-secondary">Địa Chỉ</label>
                <input asp-for="Address" class="form-control custom-input" placeholder="Nhập địa chỉ đầy đủ" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold small text-secondary">Số Lượng Sân</label>
                <input type="number" name="TotalCourts" class="form-control custom-input" placeholder="6" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold small text-secondary">Giá/Giờ (VNĐ)</label>
                <input type="text" name="BasePrice" class="form-control custom-input" placeholder="150,000" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold small text-secondary">Giờ Mở Cửa</label>
                <div class="input-group">
                    <input asp-for="OpenTime" type="time" class="form-control custom-input border-end-0" value="06:00" />
                    <span class="input-group-text bg-light border-start-0 custom-input-icon"><i class="bi bi-clock"></i></span>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold small text-secondary">Giờ Đóng Cửa</label>
                <div class="input-group">
                    <input asp-for="CloseTime" type="time" class="form-control custom-input border-end-0" value="23:00" />
                    <span class="input-group-text bg-light border-start-0 custom-input-icon"><i class="bi bi-clock"></i></span>
                </div>
            </div>

            <div class="col-12">
                <label class="form-label fw-bold small text-secondary">Hình Ảnh Cơ Sở</label>
                <div class="upload-area rounded-3 p-3 text-center border-dashed">
                    <input type="file" name="ImageFile" class="form-control form-control-sm mb-1" accept="image/*" />
                    <span class="text-muted smaller">Hỗ trợ JPG, PNG, WEBP</span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4 pt-2">
            <button type="button" class="btn btn-light px-4 fw-bold text-secondary" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-dark px-4 fw-bold rounded-2">Thêm Cơ Sở</button>
        </div>
    </form>
</div>

<style>
    /* CSS tinh chỉnh để giống ảnh mẫu 100% */
    .custom-input {
        background-color: #f8f9fa !important;
        border: 1px solid #e9ecef !important;
        border-radius: 8px !important;
        padding: 0.6rem 1rem;
    }

        .custom-input:focus {
            background-color: #fff !important;
            border-color: #000 !important;
            box-shadow: none !important;
        }

    .custom-input-icon {
        border-radius: 0 8px 8px 0 !important;
        border: 1px solid #e9ecef !important;
    }

    .border-dashed {
        border: 2px dashed #dee2e6 !important;
        background-color: #fafafa;
    }

    .btn-dark {
        background-color: #0d1117;
    }

    .modal-content {
        max-width: 650px;
        margin: auto;
    }
</style>