@model QuanLiSanCauLong.Models.User

@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3><i class="bi bi-person-plus"></i> Thêm người dùng mới</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Users">Người dùng</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin người dùng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Số điện thoại</label>
                                <input asp-for="Phone" class="form-control" placeholder="0123456789" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                <input name="password" type="password" class="form-control" required 
                                       placeholder="Tối thiểu 6 ký tự" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Role" class="form-label">Vai trò <span class="text-danger">*</span></label>
                                <select asp-for="Role" class="form-select" id="roleSelect">
                                    <option value="">-- Chọn vai trò --</option>
                                    @foreach (var role in ViewBag.Roles as string[])
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="col-md-6" id="facilityGroup" style="display: none;">
                                <label asp-for="FacilityId" class="form-label">Cơ sở làm việc</label>
                                <select asp-for="FacilityId" class="form-select">
                                    <option value="">-- Chọn cơ sở --</option>
                                    @foreach (var facility in ViewBag.Facilities as IEnumerable<QuanLiSanCauLong.Models.Facility>)
                                    {
                                        <option value="@facility.FacilityId">@facility.FacilityName</option>
                                    }
                                </select>
                            </div>
                        </div>

@*                         <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                        </div> *@

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Hoạt động
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu
                            </button>
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Phân quyền</h5>
                </div>
                <div class="card-body">
                    <h6>Customer:</h6>
                    <ul class="small">
                        <li>Đặt sân, xem lịch sử</li>
                        <li>Quản lý tài khoản cá nhân</li>
                    </ul>
                    <h6>Staff:</h6>
                    <ul class="small">
                        <li>Quản lý booking tại cơ sở</li>
                        <li>Bán hàng, check-in/out</li>
                    </ul>
                    <h6>Admin:</h6>
                    <ul class="small">
                        <li>Toàn quyền hệ thống</li>
                        <li>Quản lý cơ sở, sản phẩm, báo cáo</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('roleSelect').addEventListener('change', function() {
        const facilityGroup = document.getElementById('facilityGroup');
        facilityGroup.style.display = (this.value === 'Staff' || this.value === 'Admin') ? 'block' : 'none';
        });
    </script>
}