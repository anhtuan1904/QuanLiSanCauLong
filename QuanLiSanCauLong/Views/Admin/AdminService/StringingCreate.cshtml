@model QuanLiSanCauLong.Models.StringingService
@{
    Layout = null;
}

<div class="modal-header border-0 px-4 pt-4 pb-0">
    <div>
        <h5 class="fw-bold mb-1"><i class="bi bi-tools me-2 text-warning"></i>Thêm Dịch Vụ Căng Vợt</h5>
        <p class="text-muted small mb-0">Tạo dịch vụ căng dây vợt mới</p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body px-4 py-3">
    <form id="frmStringingCreate" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <div class="col-md-8">
                <label class="form-label fw-semibold small">Tên Dịch Vụ <span class="text-danger">*</span></label>
                <input name="ServiceName" class="form-control" placeholder="VD: Căng Vợt Yonex BG80" required />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Thứ Tự Hiển Thị</label>
                <input name="DisplayOrder" type="number" class="form-control" value="0" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Thương Hiệu Dây</label>
                <select name="Brand" class="form-select">
                    <option value="">-- Chọn thương hiệu --</option>
                    <option value="Yonex">Yonex</option>
                    <option value="Victor">Victor</option>
                    <option value="Lining">Lining</option>
                    <option value="Apacs">Apacs</option>
                    <option value="Khác">Khác</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Model Dây</label>
                <input name="StringModel" class="form-control" placeholder="VD: BG80, VS850, No.1..." />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Lực Căng Hỗ Trợ</label>
                <input name="Tension" class="form-control" placeholder="VD: 20-30 lbs" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Giá Dịch Vụ (VNĐ)</label>
                <input name="Price" type="number" class="form-control" placeholder="150000" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Thời Gian Thực Hiện (phút)</label>
                <input name="DurationMinutes" type="number" class="form-control" placeholder="30" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Bảo Hành (ngày)</label>
                <input name="WarrantyDays" type="number" class="form-control" placeholder="7" />
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Mô Tả Ngắn</label>
                <textarea name="ShortDesc" class="form-control" rows="2" placeholder="Mô tả ngắn gọn..."></textarea>
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Mô Tả Chi Tiết <span class="text-danger">*</span></label>
                <textarea name="Description" class="form-control" rows="4"
                          placeholder="Mô tả đặc điểm, ưu điểm của dây và dịch vụ..." required></textarea>
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Tính Năng</label>
                <textarea name="Features" class="form-control" rows="4"
                          placeholder="- Độ bền cao, ít đứt dây&#10;- Tăng lực đánh smash mạnh&#10;- Kiểm soát hướng cầu chính xác"></textarea>
                <small class="text-muted">Mỗi dòng 1 tính năng</small>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Ảnh Đại Diện</label>
                <input type="file" name="featuredImage" class="form-control" accept="image/*" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold small">Trạng Thái</label>
                <select name="Status" class="form-select">
                    <option value="Active">Hoạt Động</option>
                    <option value="Inactive">Ngừng</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end gap-4 pb-1">
                <div class="form-check">
                    <input name="IsFeatured" class="form-check-input" type="checkbox" value="true" />
                    <label class="form-check-label fw-semibold">Nổi bật</label>
                </div>
                <div class="form-check">
                    <input name="IsPopular" class="form-check-input" type="checkbox" value="true" />
                    <label class="form-check-label fw-semibold">Phổ biến</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
            <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Hủy</button>
            <button type="button" class="btn btn-warning px-5 rounded-3" onclick="submitServiceForm('frmStringingCreate','/AdminService/StringingCreate')">
                <i class="bi bi-plus-circle me-1"></i>Thêm Dịch Vụ
            </button>
        </div>
    </form>
</div>
