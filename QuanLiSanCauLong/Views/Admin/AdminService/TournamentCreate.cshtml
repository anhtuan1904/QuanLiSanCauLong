@model QuanLiSanCauLong.Models.Tournament
@{
    Layout = null;
}

<div class="modal-header border-0 px-4 pt-4 pb-0">
    <div>
        <h5 class="fw-bold mb-1"><i class="bi bi-trophy me-2 text-warning"></i>Tạo Giải Đấu Mới</h5>
        <p class="text-muted small mb-0">Tổ chức giải đấu cầu lông nội bộ</p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body px-4 py-3">
    <form id="frmTournamentCreate" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <div class="col-md-8">
                <label class="form-label fw-semibold small">Tên Giải Đấu <span class="text-danger">*</span></label>
                <input name="TournamentName" class="form-control" placeholder="VD: Giải Đấu Mùa Xuân 2026" required />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Loại Giải</label>
                <select name="TournamentType" class="form-select">
                    <option value="">-- Chọn --</option>
                    <option value="Đơn Nam">Đơn Nam</option>
                    <option value="Đơn Nữ">Đơn Nữ</option>
                    <option value="Đôi Nam">Đôi Nam</option>
                    <option value="Đôi Nữ">Đôi Nữ</option>
                    <option value="Đôi Mix">Đôi Hỗn Hợp (Mix)</option>
                    <option value="Đơn Nam/Nữ">Đơn Nam/Nữ</option>
                    <option value="Đôi Nam/Nữ/Mix">Đôi Nam/Nữ/Mix</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Ngày Bắt Đầu</label>
                <input name="StartDate" type="date" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Ngày Kết Thúc</label>
                <input name="EndDate" type="date" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Hạn Đăng Ký</label>
                <input name="RegistrationDeadline" type="date" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Địa Điểm Tổ Chức</label>
                <input name="Venue" class="form-control" placeholder="VD: Cơ Sở Hoàng Mai" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold small">Số VĐV Tối Đa</label>
                <input name="MaxPlayers" type="number" class="form-control" placeholder="32" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold small">Phí Đăng Ký (VNĐ)</label>
                <input name="EntryFee" type="number" class="form-control" placeholder="200000" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Tổng Giải Thưởng (VNĐ)</label>
                <input name="PrizeMoney" type="number" class="form-control" placeholder="10000000" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Mô Tả Ngắn</label>
                <input name="ShortDesc" class="form-control" placeholder="Giải đấu nội bộ chào mừng..." />
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Mô Tả Giải Thưởng</label>
                <textarea name="PrizeDescription" class="form-control" rows="2"
                          placeholder="Giải Nhất: 5.000.000đ | Giải Nhì: 3.000.000đ | Giải Ba: 1.000.000đx2"></textarea>
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Mô Tả Chi Tiết</label>
                <textarea name="Description" class="form-control" rows="3"
                          placeholder="Thông tin chi tiết về giải đấu..."></textarea>
            </div>
            <div class="col-12">
                <label class="form-label fw-semibold small">Thể Lệ Giải Đấu</label>
                <textarea name="Rules" class="form-control" rows="4"
                          placeholder="- Thi đấu theo thể thức vòng tròn&#10;- Mỗi trận 3 séc, thắng 2 séc thắng trận&#10;- Mỗi séc 21 điểm"></textarea>
                <small class="text-muted">Mỗi dòng 1 điều khoản</small>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Ảnh Đại Diện</label>
                <input type="file" name="featuredImage" class="form-control" accept="image/*" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold small">Trạng Thái</label>
                <select name="Status" class="form-select">
                    <option value="Upcoming">Sắp Diễn Ra</option>
                    <option value="Ongoing">Đang Hoạt Động</option>
                    <option value="Completed">Đã Đầy</option>
                    <option value="Cancelled">Đã Hủy</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end pb-1">
                <div class="form-check">
                    <input name="IsFeatured" class="form-check-input" type="checkbox" value="true" />
                    <label class="form-check-label fw-semibold">Giải đấu nổi bật</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
            <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Hủy</button>
            <button type="button" class="btn btn-dark px-5 rounded-3" onclick="submitServiceForm('frmTournamentCreate','/AdminService/TournamentCreate')">
                <i class="bi bi-trophy me-1"></i>Tạo Giải Đấu
            </button>
        </div>
    </form>
</div>
