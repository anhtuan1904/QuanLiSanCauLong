@model IEnumerable<QuanLiSanCauLong.ViewModels.BookingHistoryViewModel>

@{
    ViewData["Title"] = "Quản lý Đặt Sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">Quản Lý Đặt Sân</h3>
            <p class="text-muted mb-0 small">Quản lý tất cả đơn đặt sân cầu lông</p>
        </div>
        <button class="btn btn-success" onclick="exportBookings()">
            <i class="bi bi-download me-2"></i>Xuất Excel
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="icon-box bg-primary-subtle rounded-3 p-3 mb-3">
                                <i class="bi bi-calendar-check text-primary fs-4"></i>
                            </div>
                            <h3 class="fw-bold mb-1">@ViewBag.TotalBookings</h3>
                            <p class="text-muted small mb-0">Tổng Đơn Đặt</p>
                        </div>
                        <span class="badge bg-success-subtle text-success">+12.5%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="icon-box bg-warning-subtle rounded-3 p-3 mb-3">
                                <i class="bi bi-clock-history text-warning fs-4"></i>
                            </div>
                            <h3 class="fw-bold mb-1">@ViewBag.PendingBookings</h3>
                            <p class="text-muted small mb-0">Chờ Xác Nhận</p>
                        </div>
                        <span class="badge bg-warning-subtle text-warning">+5</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="icon-box bg-info-subtle rounded-3 p-3 mb-3">
                                <i class="bi bi-check-circle text-info fs-4"></i>
                            </div>
                            <h3 class="fw-bold mb-1">@ViewBag.ConfirmedBookings</h3>
                            <p class="text-muted small mb-0">Đã Xác Nhận</p>
                        </div>
                        <span class="badge bg-info-subtle text-info">+18</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="icon-box bg-success-subtle rounded-3 p-3 mb-3">
                                <i class="bi bi-check2-circle text-success fs-4"></i>
                            </div>
                            <h3 class="fw-bold mb-1">@ViewBag.CompletedBookings</h3>
                            <p class="text-muted small mb-0">Hoàn Thành</p>
                        </div>
                        <span class="badge bg-success-subtle text-success">+28</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow-sm">
        <!-- Card Header with Filters -->
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h5 class="fw-bold mb-0">Danh Sách Đặt Sân</h5>
                    <small class="text-muted">Quản lý và theo dõi đơn đặt sân</small>
                </div>
            </div>

            <!-- Filters -->
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <!-- Status Filter Tabs -->
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary active" data-filter="all">
                        Tất Cả
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-filter="pending">
                        Chờ Xác Nhận
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-filter="confirmed">
                        Đã Xác Nhận
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-filter="completed">
                        Hoàn Thành
                    </button>
                </div>

                <!-- Search and Date Filter -->
                <div class="d-flex gap-2">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control bg-light border-0" 
                               placeholder="Tìm kiếm..." id="searchInput">
                    </div>
                    <input type="date" class="form-control form-control-sm bg-light border-0" 
                           style="width: 150px;" id="dateFilter">
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 py-3 ps-4">
                                <span class="text-muted small fw-bold">MÃ ĐẶT SÂN</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">KHÁCH HÀNG</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">CƠ SỞ & SÂN</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">THỜI GIAN</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">TỔNG TIỀN</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">THANH TOÁN</span>
                            </th>
                            <th class="border-0 py-3">
                                <span class="text-muted small fw-bold">TRẠNG THÁI</span>
                            </th>
                            <th class="border-0 py-3 pe-4 text-end">
                                <span class="text-muted small fw-bold">THAO TÁC</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var booking in Model)
                            {
                                <tr data-status="@booking.Status.ToLower()">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="icon-box-sm bg-primary-subtle rounded-2 p-2 me-2">
                                                <i class="bi bi-receipt text-primary"></i>
                                            </div>
                                            <span class="fw-semibold">@booking.BookingCode</span>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div>
                                            <div class="fw-semibold">@booking.CustomerName</div>
                                            <small class="text-muted">@booking.Phone</small>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div>
                                            <div class="fw-semibold">@booking.FacilityName</div>
                                            <small class="text-muted">Sân @booking.CourtNumber - @booking.CourtType</small>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div>
                                            <div class="small">@booking.BookingDate.ToString("dd/MM/yyyy")</div>
                                            <small class="text-primary fw-semibold">
                                                @booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <span class="fw-bold text-success">₫@booking.GrandTotal.ToString("N0")</span>
                                    </td>
                                    <td class="py-3">
                                        @if (booking.PaymentStatus == "Paid")
                                        {
                                            <span class="badge bg-success-subtle text-success px-2 py-1">
                                                <i class="bi bi-check-circle me-1"></i>Đã Thanh Toán
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning px-2 py-1">
                                                <i class="bi bi-clock me-1"></i>Chưa Thanh Toán
                                            </span>
                                        }
                                    </td>
                                    <td class="py-3">
                                        @switch (booking.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning-subtle text-warning px-2 py-1">
                                                    Chờ Xác Nhận
                                                </span>
                                                break;
                                            case "Confirmed":
                                                <span class="badge bg-info-subtle text-info px-2 py-1">
                                                    Đã Xác Nhận
                                                </span>
                                                break;
                                            case "CheckedIn":
                                                <span class="badge bg-primary-subtle text-primary px-2 py-1">
                                                    Đã Check-in
                                                </span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success-subtle text-success px-2 py-1">
                                                    Hoàn Thành
                                                </span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger-subtle text-danger px-2 py-1">
                                                    Đã Hủy
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td class="py-3 pe-4 text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@booking.BookingId" 
                                               class="btn btn-outline-secondary" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (booking.Status == "Pending")
                                            {
                                                <button class="btn btn-outline-success" 
                                                        onclick="confirmBooking(@booking.BookingId)" 
                                                        title="Xác nhận">
                                                    <i class="bi bi-check"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                        <p class="mb-0">Không có dữ liệu đơn đặt sân</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Hiển thị 1-10 trong tổng số @(Model?.Count() ?? 0) đơn</small>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmBooking(bookingId) {
            if (confirm('Bạn có chắc muốn xác nhận đơn đặt sân này?')) {
                $.post('@Url.Action("Confirm", "AdminBooking")', { bookingId: bookingId })
                    .done(function(result) {
                        if (result.success) {
                            alert(result.message);
                            location.reload();
                        } else {
                            alert(result.message);
                        }
                    })
                    .fail(function() {
                        alert('Có lỗi xảy ra!');
                    });
            }
        }

        function exportBookings() {
            window.location.href = '@Url.Action("Export", "AdminBooking")';
        }

        // Filter functionality
        document.querySelectorAll('[data-filter]').forEach(btn => {
            btn.addEventListener('click', function() {
                const filter = this.dataset.filter;
                document.querySelectorAll('[data-filter]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                document.querySelectorAll('tbody tr[data-status]').forEach(row => {
                    if (filter === 'all' || row.dataset.status === filter) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('tbody tr[data-status]').forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .icon-box {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-box-sm {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .bg-success-subtle { background-color: rgba(16, 185, 129, 0.1) !important; }
    .bg-primary-subtle { background-color: rgba(99, 102, 241, 0.1) !important; }
    .bg-info-subtle { background-color: rgba(14, 165, 233, 0.1) !important; }
    .bg-warning-subtle { background-color: rgba(245, 158, 11, 0.1) !important; }
    .bg-danger-subtle { background-color: rgba(239, 68, 68, 0.1) !important; }

    .card { transition: transform 0.2s, box-shadow 0.2s; }
    .card:hover { transform: translateY(-2px); box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important; }

    .table tbody tr { transition: background-color 0.2s; }
    .table tbody tr:hover { background-color: rgba(0, 0, 0, 0.02); }
</style>
