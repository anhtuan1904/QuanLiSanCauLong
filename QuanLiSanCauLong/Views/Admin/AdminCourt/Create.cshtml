@model QuanLiSanCauLong.Models.Court

@{
    ViewData["Title"] = "Thêm sân mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .admin-card {
        border-radius: 16px;
        border: none;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        background: #fff;
        overflow: hidden;
    }

    .form-header {
        background: #f8fafc;
        padding: 20px 30px;
        border-bottom: 1px solid #e2e8f0;
    }

    .form-body {
        padding: 30px;
    }

    .form-label {
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 12px;
        border: 1px solid #cbd5e1;
        transition: 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
            border-color: #3b82f6;
        }

    .btn-save {
        background: #1e293b;
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: 0.3s;
        border: none;
    }

        .btn-save:hover {
            background: #0f172a;
            transform: translateY(-1px);
        }

    .section-title {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #64748b;
        margin-bottom: 20px;
        border-left: 4px solid #3b82f6;
        padding-left: 10px;
    }

    .preview-container {
        position: relative;
        width: 100%;
        height: 200px;
        border: 2px dashed #cbd5e1;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: #f8fafc;
    }

    #previewImg {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <a asp-action="Index" class="btn btn-link text-decoration-none text-muted mb-3 p-0">
                <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
            </a>

            <div class="admin-card">
                <div class="form-header">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-plus-circle me-2"></i>Thiết lập sân mới</h4>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row g-4">
                            <div class="col-12">
                                <h6 class="section-title">Thông tin cơ bản</h6>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CourtNumber" class="form-label">Tên/Số hiệu sân <span class="text-danger">*</span></label>
                                <input asp-for="CourtNumber" class="form-control" placeholder="e.g., Court 1, Center Court" />
                                <span asp-validation-for="CourtNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CourtType" class="form-label">Loại sân <span class="text-danger">*</span></label>
                                <select asp-for="CourtType" class="form-select">
                                    <option value="">-- Chọn loại sân --</option>
                                    <option value="Standard">Standard Court</option>
                                    <option value="Professional">Professional Court</option>
                                    <option value="Practice">Practice Court</option>
                                </select>
                                <span asp-validation-for="CourtType" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="FacilityId" class="form-label">Cơ sở <span class="text-danger">*</span></label>
                                <select asp-for="FacilityId" class="form-select" asp-items="@(new SelectList(ViewBag.Facilities, "FacilityId", "FacilityName"))">
                                    <option value="">-- Chọn chi nhánh --</option>
                                </select>
                            </div>

                            <div class="col-12 mt-5">
                                <h6 class="section-title">Thông số kỹ thuật & Tiện ích</h6>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FloorNumber" class="form-label">Vị trí tầng</label>
                                <input asp-for="FloorNumber" class="form-control" placeholder="e.g., Ground Floor, Floor 1" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SurfaceType" class="form-label">Loại mặt sàn</label>
                                <select asp-for="SurfaceType" class="form-select">
                                    <option value="PVC">Thảm PVC chuyên dụng</option>
                                    <option value="Wood">Sàn gỗ</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch p-3 border rounded shadow-sm">
                                    <input class="form-check-input ms-0 me-2" type="checkbox" asp-for="HasLighting">
                                    <label class="form-check-label fw-bold" asp-for="HasLighting">Hệ thống đèn chuyên nghiệp</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch p-3 border rounded shadow-sm">
                                    <input class="form-check-input ms-0 me-2" type="checkbox" asp-for="HasAC">
                                    <label class="form-check-label fw-bold" asp-for="HasAC">Điều hòa không khí (AC)</label>
                                </div>
                            </div>

                            <div class="col-12 mt-5">
                                <h6 class="section-title">Giá thuê & Hình ảnh</h6>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="HourlyRate" class="form-label">Giá thuê mỗi giờ (VNĐ)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">₫</span>
                                    <input asp-for="HourlyRate" type="number" class="form-control border-start-0" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Tải ảnh sân lên</label>
                                <input type="file" name="ImageFile" id="imageUpload" class="form-control" accept="image/*" />
                                <div class="mt-3 preview-container">
                                    <img id="previewImg" src="/images/default-court.jpg" alt="Preview" />
                                    <div id="noImgText" class="text-muted small d-none">Xem trước ảnh</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Mô tả chi tiết</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập các thông tin bổ sung..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-footer bg-light p-4 text-end">
                        <button type="reset" class="btn btn-outline-secondary me-2 px-4">Làm mới</button>
                        <button type="submit" class="btn btn-save px-5">
                            <i class="bi bi-plus-lg me-2"></i>Thêm sân
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Xử lý hiển thị ảnh tức thời khi chọn file
        document.getElementById('imageUpload').onchange = evt => {
            const [file] = document.getElementById('imageUpload').files
            if (file) {
                document.getElementById('previewImg').src = URL.createObjectURL(file);
                document.getElementById('previewImg').classList.remove('d-none');
            }
        }
    </script>
}