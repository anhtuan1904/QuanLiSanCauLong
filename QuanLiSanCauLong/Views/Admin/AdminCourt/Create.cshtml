@model QuanLiSanCauLong.Models.Court
@{
    ViewData["Title"] = "Thêm Sân Mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --deep: #1a1209;
        --gold: #d4a017;
        --gold2: #f5c842;
        --cream: #fdf8f0;
        --warm: #f5ede0;
        --border: #e8ddd0;
        --muted: #8a7560;
    }

    .cf-wrap {
        max-width: 680px;
        margin: 0 auto;
        font-family: 'Outfit',sans-serif;
    }

    /* HEADER */
    .cf-head {
        margin-bottom: 2rem;
    }

    .cf-head-label {
        font-size: .68rem;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        display: flex;
        align-items: center;
        gap: .6rem;
        margin-bottom: .6rem;
    }

        .cf-head-label::before {
            content: '';
            width: 16px;
            height: 1px;
            background: var(--gold);
        }

    .cf-title {
        font-family: 'Playfair Display',serif;
        font-size: 2rem;
        font-weight: 700;
        color: var(--deep);
    }

        .cf-title em {
            font-style: italic;
            color: var(--gold);
        }

    .cf-sub {
        font-size: .85rem;
        color: var(--muted);
        margin-top: .3rem;
    }

    /* CARD */
    .cf-card {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: 14px;
        overflow: hidden;
        margin-bottom: 1.25rem;
    }

    .cf-card-head {
        padding: 1.1rem 1.75rem;
        border-bottom: 1px solid var(--border);
        background: var(--warm);
        display: flex;
        align-items: center;
        gap: .6rem;
    }

    .cf-card-title {
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .14em;
        text-transform: uppercase;
        color: var(--muted);
    }

    .cf-card-icon {
        color: var(--gold);
        font-size: .95rem;
    }

    .cf-card-body {
        padding: 1.75rem;
    }

    /* FORM ELEMENTS */
    .fg {
        margin-bottom: 1.25rem;
    }

        .fg:last-child {
            margin-bottom: 0;
        }

    .fg-label {
        display: block;
        font-size: .75rem;
        font-weight: 700;
        letter-spacing: .08em;
        text-transform: uppercase;
        color: var(--muted);
        margin-bottom: .5rem;
    }

        .fg-label .req {
            color: #c94b2a;
        }

    .fg-input, .fg-select, .fg-textarea {
        width: 100%;
        padding: .7rem 1rem;
        border: 1.5px solid var(--border);
        border-radius: 7px;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        color: var(--deep);
        background: #fff;
        outline: none;
        transition: border-color .2s;
    }

        .fg-input:focus, .fg-select:focus, .fg-textarea:focus {
            border-color: var(--gold);
            background: var(--cream);
        }

    .fg-textarea {
        resize: vertical;
        min-height: 90px;
    }

    .fg-hint {
        font-size: .72rem;
        color: var(--muted);
        margin-top: .3rem;
    }

    .val-msg {
        font-size: .75rem;
        color: #c94b2a;
        margin-top: .3rem;
    }

    /* GRID */
    .fg-row2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .fg-row3 {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1rem;
    }

    /* VỊ TRÍ CARDS (Indoor/Outdoor) */
    .location-cards {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: .75rem;
    }

    .loc-card {
        border: 2px solid var(--border);
        border-radius: 10px;
        padding: 1rem 1.25rem;
        cursor: pointer;
        transition: all .2s;
        display: flex;
        align-items: center;
        gap: .9rem;
    }

        .loc-card:hover {
            border-color: rgba(212,160,23,.5);
        }

        .loc-card.selected {
            border-color: var(--gold);
            background: rgba(212,160,23,.06);
        }

    .loc-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: var(--warm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .loc-card.selected .loc-icon {
        background: rgba(212,160,23,.15);
    }

    .loc-name {
        font-weight: 700;
        font-size: .88rem;
        color: var(--deep);
        line-height: 1.2;
    }

    .loc-desc {
        font-size: .72rem;
        color: var(--muted);
        margin-top: .15rem;
    }

    /* SURFACE CARDS */
    .surface-cards {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: .75rem;
    }

    .surf-card {
        border: 2px solid var(--border);
        border-radius: 10px;
        padding: .9rem 1rem;
        cursor: pointer;
        transition: all .2s;
        text-align: center;
    }

        .surf-card:hover {
            border-color: rgba(212,160,23,.5);
        }

        .surf-card.selected {
            border-color: var(--gold);
            background: rgba(212,160,23,.06);
        }

    .surf-icon {
        font-size: 1.6rem;
        margin-bottom: .4rem;
    }

    .surf-name {
        font-size: .8rem;
        font-weight: 700;
        color: var(--deep);
    }

    .surf-sub {
        font-size: .67rem;
        color: var(--muted);
        margin-top: .15rem;
    }

    /* STATUS */
    .status-opts {
        display: flex;
        gap: .6rem;
        flex-wrap: wrap;
    }

    .status-opt {
        display: flex;
        align-items: center;
        gap: .5rem;
        padding: .6rem 1.1rem;
        border: 2px solid var(--border);
        border-radius: 7px;
        cursor: pointer;
        transition: all .2s;
    }

        .status-opt:hover {
            border-color: rgba(212,160,23,.5);
        }

        .status-opt.selected {
            border-color: var(--gold);
            background: rgba(212,160,23,.06);
        }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .status-text {
        font-size: .82rem;
        font-weight: 600;
        color: var(--deep);
    }

    /* AMENITIES */
    .amenity-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: .6rem;
    }

    .amenity-item {
        display: flex;
        align-items: center;
        gap: .65rem;
        padding: .8rem 1rem;
        border: 1.5px solid var(--border);
        border-radius: 8px;
        cursor: pointer;
        transition: all .2s;
    }

        .amenity-item:hover {
            border-color: rgba(212,160,23,.4);
        }

        .amenity-item.checked {
            border-color: var(--gold);
            background: rgba(212,160,23,.06);
        }

        .amenity-item input[type=checkbox] {
            width: 16px;
            height: 16px;
            accent-color: var(--gold);
            cursor: pointer;
        }

    .amenity-label {
        font-size: .84rem;
        color: var(--deep);
        font-weight: 500;
        cursor: pointer;
        user-select: none;
    }

    .amenity-icon {
        font-size: 1rem;
    }

    /* UPLOAD */
    .upload-zone {
        border: 2px dashed var(--border);
        border-radius: 10px;
        padding: 2rem;
        text-align: center;
        cursor: pointer;
        transition: all .2s;
        background: var(--cream);
    }

        .upload-zone:hover {
            border-color: var(--gold);
            background: rgba(212,160,23,.04);
        }

    .upload-icon {
        font-size: 2rem;
        color: var(--muted);
        margin-bottom: .5rem;
    }

    .upload-text {
        font-size: .84rem;
        color: var(--muted);
    }

        .upload-text strong {
            color: var(--deep);
        }

    .img-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(90px,1fr));
        gap: .6rem;
        margin-top: .9rem;
    }

    .img-item {
        position: relative;
        aspect-ratio: 1;
        border-radius: 8px;
        overflow: hidden;
        border: 2px solid var(--border);
        cursor: pointer;
    }

        .img-item.primary {
            border-color: var(--gold);
            border-width: 2.5px;
        }

        .img-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .img-primary-badge {
        position: absolute;
        bottom: 3px;
        left: 3px;
        background: var(--gold);
        color: var(--deep);
        font-size: .55rem;
        font-weight: 800;
        padding: .1rem .4rem;
        border-radius: 3px;
        letter-spacing: .06em;
        text-transform: uppercase;
    }

    .img-del {
        position: absolute;
        top: 3px;
        right: 3px;
        width: 20px;
        height: 20px;
        border-radius: 4px;
        background: rgba(201,75,42,.9);
        color: #fff;
        border: none;
        cursor: pointer;
        display: none;
        align-items: center;
        justify-content: center;
        font-size: .65rem;
    }

    .img-item:hover .img-del {
        display: flex;
    }

    /* CAPACITY BANNER */
    .cap-banner {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.4rem;
        background: var(--warm);
        border: 1px solid var(--border);
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .cap-icon {
        color: var(--gold);
        font-size: 1.2rem;
    }

    .cap-text {
        font-size: .82rem;
        color: var(--muted);
        flex: 1;
    }

        .cap-text strong {
            color: var(--deep);
        }

    .cap-bar-wrap {
        width: 120px;
        height: 6px;
        background: var(--border);
        border-radius: 3px;
    }

    .cap-bar {
        height: 100%;
        background: var(--gold);
        border-radius: 3px;
        transition: width .3s;
    }

    /* ACTIONS */
    .cf-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .btn-save {
        flex: 1;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        padding: .9rem 2rem;
        font-family: 'Outfit',sans-serif;
        font-size: .9rem;
        font-weight: 700;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .55rem;
        transition: all .25s;
    }

        .btn-save:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 18px rgba(212,160,23,.35);
        }

    .btn-cancel {
        padding: .9rem 1.75rem;
        background: #fff;
        border: 1.5px solid var(--border);
        color: var(--muted);
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        transition: all .2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: .45rem;
    }

        .btn-cancel:hover {
            border-color: var(--muted);
            color: var(--deep);
        }

    /* ERRORS */
    .alert-error {
        background: rgba(201,75,42,.06);
        border: 1px solid rgba(201,75,42,.3);
        border-radius: 8px;
        padding: 1rem 1.25rem;
        margin-bottom: 1.25rem;
        font-size: .84rem;
        color: #c94b2a;
        display: flex;
        align-items: flex-start;
        gap: .6rem;
    }

    .field-error {
        font-size: .75rem;
        color: #c94b2a;
        margin-top: .3rem;
    }

    @@media(max - width:600px) {
        .fg-row2, .fg-row3 {
            grid-template-columns: 1fr;
        }

        .location-cards, .surface-cards {
            grid-template-columns: 1fr;
        }

        .amenity-grid {
            grid-template-columns: 1fr;
        }

        .status-opts {
            flex-direction: column;
        }
    }
</style>

<div class="cf-wrap">

    <!-- HEADER -->
    <div class="cf-head">
        <div class="cf-head-label">Quản Lý Sân</div>
        <h1 class="cf-title">Thêm <em>Sân Mới</em></h1>
        <div class="cf-sub">Điền thông tin chi tiết cho sân cầu lông</div>
    </div>

    <!-- CAPACITY BANNER -->
    <div class="cap-banner" id="capBanner">
        <i class="bi bi-grid-3x3-gap cap-icon"></i>
        <div class="cap-text">Chọn cơ sở để xem số lượng sân hiện tại</div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert-error">
            <i class="bi bi-exclamation-circle"></i>
            <div>
                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@e.ErrorMessage</div>
                }
            </div>
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- 1. CƠ SỞ -->
        <div class="cf-card">
            <div class="cf-card-head">
                <i class="bi bi-building cf-card-icon"></i>
                <span class="cf-card-title">Thuộc Cơ Sở</span>
            </div>
            <div class="cf-card-body">
                <div class="fg">
                    <label class="fg-label">Cơ Sở <span class="req">*</span></label>
                    <select asp-for="FacilityId" class="fg-select" id="facilitySelect"
                            onchange="loadCapacity(this.value)">
                        <option value="">— Chọn cơ sở —</option>
                        @foreach (var f in (IEnumerable<QuanLiSanCauLong.Models.Facility>)ViewBag.Facilities)
                        {
                            <option value="@f.FacilityId">@f.FacilityName</option>
                        }
                    </select>
                    <span asp-validation-for="FacilityId" class="field-error"></span>
                </div>
            </div>
        </div>

        <!-- 2. THÔNG TIN SÂN -->
        <div class="cf-card">
            <div class="cf-card-head">
                <i class="bi bi-card-text cf-card-icon"></i>
                <span class="cf-card-title">Thông Tin Sân</span>
            </div>
            <div class="cf-card-body">

                <div class="fg-row2">
                    <div class="fg">
                        <label class="fg-label" asp-for="CourtNumber">
                            Tên / Số Sân <span class="req">*</span>
                        </label>
                        <input asp-for="CourtNumber" class="fg-input" placeholder="VD: Sân số 1, Sân VIP" />
                        <div class="fg-hint">Tên ngắn gọn giúp khách dễ nhận biết</div>
                        <span asp-validation-for="CourtNumber" class="field-error"></span>
                    </div>
                    <div class="fg">
                        <label class="fg-label" asp-for="FloorNumber">Vị Trí Tầng</label>
                        <input asp-for="FloorNumber" class="fg-input" placeholder="VD: Tầng 1, Tầng 2" />
                        <div class="fg-hint">Tuỳ chọn — bỏ trống nếu 1 tầng</div>
                    </div>
                </div>

                <div class="fg">
                    <label class="fg-label">Vị Trí <span class="req">*</span></label>

                    <input asp-for="CourtType" type="hidden" id="courtTypeInput" />

                    <div class="location-cards">
                        <div class="loc-card @(Model?.CourtType == "Indoor" ? "selected" : "")"
                             id="loc-Indoor" onclick="selectLocation('Indoor')">
                            <div class="loc-icon">🏠</div>
                            <div>
                                <div class="loc-name">Trong Nhà</div>
                                <div class="loc-desc">Sân có mái che, điều tiết nhiệt độ</div>
                            </div>
                        </div>
                        <div class="loc-card @(Model?.CourtType == "Outdoor" ? "selected" : "")"
                             id="loc-Outdoor" onclick="selectLocation('Outdoor')">
                            <div class="loc-icon">☀️</div>
                            <div>
                                <div class="loc-name">Ngoài Trời</div>
                                <div class="loc-desc">Sân lộ thiên, không gian thoáng</div>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="CourtType" class="field-error"></span>
                </div>
                <!-- LOẠI MẶT SÂN -->
                <div class="fg">
                    <label class="fg-label">Loại Mặt Sân <span class="req">*</span></label>

                    @* SỬA 1: Để Tag Helper tự quản lý, không gán value="PVC" cứng ở đây nữa *@
                    <input asp-for="SurfaceType" type="hidden" id="surfaceInput" />

                    <div class="surface-cards">
                        @* SỬA 2: Thêm class 'selected' dựa vào giá trị của Model *@
                        <div class="surf-card @(Model?.SurfaceType == "PVC" ? "selected" : "")"
                             id="surf-PVC" onclick="selectSurface('PVC')">
                            <div class="surf-icon">🟨</div>
                            <div class="surf-name">Thảm PVC</div>
                            <div class="surf-sub">Cao su tổng hợp</div>
                        </div>

                        <div class="surf-card @(Model?.SurfaceType == "Wood" ? "selected" : "")"
                             id="surf-Wood" onclick="selectSurface('Wood')">
                            <div class="surf-icon">🪵</div>
                            <div class="surf-name">Sàn Gỗ</div>
                            <div class="surf-sub">Chuyên nghiệp</div>
                        </div>

                        <div class="surf-card @(Model?.SurfaceType == "Silicon" ? "selected" : "")"
                             id="surf-Silicon" onclick="selectSurface('Silicon')">
                            <div class="surf-icon">🎨</div>
                            <div class="surf-name">Sơn Silicon</div>
                            <div class="surf-sub">Độ bám tốt</div>
                        </div>
                    </div>
                    <span asp-validation-for="SurfaceType" class="field-error"></span>
                </div>
                <!-- TÌNH TRẠNG -->
                <div class="fg">
                    <label class="fg-label">Tình Trạng <span class="req">*</span></label>
                    <input asp-for="Status" type="hidden" id="statusInput" value="Available" />
                    <div class="status-opts">
                        <div class="status-opt selected" id="st-Available" onclick="selectStatus('Available')">
                            <span class="status-dot" style="background:#16a34a;"></span>
                            <span class="status-text">Đang Trống</span>
                        </div>
                        <div class="status-opt" id="st-Active" onclick="selectStatus('Active')">
                            <span class="status-dot" style="background:var(--gold);"></span>
                            <span class="status-text">Đang Hoạt Động</span>
                        </div>
                        <div class="status-opt" id="st-Maintenance" onclick="selectStatus('Maintenance')">
                            <span class="status-dot" style="background:#c94b2a;"></span>
                            <span class="status-text">Đang Bảo Trì</span>
                        </div>
                    </div>
                    <span asp-validation-for="Status" class="field-error"></span>
                </div>

            </div>
        </div>

        <!-- 3. TIỆN ÍCH -->
        <div class="cf-card">
            <div class="cf-card-head">
                <i class="bi bi-lightning-charge cf-card-icon"></i>
                <span class="cf-card-title">Tiện Ích Sân</span>
            </div>
            <div class="cf-card-body">
                <div class="amenity-grid">
                    <label class="amenity-item" id="am-light">
                        <span class="amenity-icon">💡</span>
                        <input asp-for="HasLighting" type="checkbox" onchange="syncAmenity('am-light',this)" />
                        <span class="amenity-label">Đèn chiếu sáng chuyên dụng</span>
                    </label>
                    <label class="amenity-item" id="am-ac">
                        <span class="amenity-icon">❄️</span>
                        <input asp-for="HasAC" type="checkbox" onchange="syncAmenity('am-ac',this)" />
                        <span class="amenity-label">Điều hoà không khí</span>
                    </label>
                </div>
            </div>
        </div>

        <!-- 4. MÔ TẢ -->
        <div class="cf-card">
            <div class="cf-card-head">
                <i class="bi bi-chat-left-text cf-card-icon"></i>
                <span class="cf-card-title">Mô Tả Thêm</span>
            </div>
            <div class="cf-card-body">
                <div class="fg" style="margin-bottom:0;">
                    <textarea asp-for="Description" class="fg-textarea"
                              placeholder="VD: Gần cửa sổ, ánh sáng tự nhiên tốt nhất. Vị trí góc yên tĩnh, phù hợp luyện tập cá nhân..."></textarea>
                    <div class="fg-hint">Tuỳ chọn — giúp khách chọn sân phù hợp hơn</div>
                </div>
            </div>
        </div>

        <!-- 5. HÌNH ẢNH -->
        <div class="cf-card">
            <div class="cf-card-head">
                <i class="bi bi-images cf-card-icon"></i>
                <span class="cf-card-title">Hình Ảnh</span>
            </div>
            <div class="cf-card-body">
                <input type="file" id="imgInput" name="CourtImages" multiple accept="image/*"
                       class="d-none" onchange="handleUpload(this)" />
                <div class="upload-zone" onclick="document.getElementById('imgInput').click()">
                    <div class="upload-icon"><i class="bi bi-cloud-upload"></i></div>
                    <div class="upload-text">
                        <strong>Click để tải ảnh lên</strong> hoặc kéo thả<br>
                        <span style="font-size:.76rem;">PNG, JPG (tối đa 5MB mỗi ảnh)</span>
                    </div>
                </div>
                <div class="img-grid" id="imgGrid"></div>
                <input type="hidden" id="primaryImgIdx" name="PrimaryImageIndex" value="0" />
            </div>
        </div>

        <!-- ACTIONS -->
        <div class="cf-actions">
            <button type="submit" class="btn-save">
                <i class="bi bi-check-circle"></i> Thêm Sân
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // ── Location picker ───────────────────────────
        function selectLocation(val) {
            document.querySelectorAll('.loc-card').forEach(c => c.classList.remove('selected'));
            document.getElementById('loc-' + val).classList.add('selected');
            document.getElementById('courtTypeInput').value = val;
        }

        // ── Surface picker ───────────────────────────
        function selectSurface(val) {
            document.querySelectorAll('.surf-card').forEach(c => c.classList.remove('selected'));
            document.getElementById('surf-' + val).classList.add('selected');
            document.getElementById('surfaceInput').value = val;
        }

        // ── Status picker ─────────────────────────────
        function selectStatus(val) {
            document.querySelectorAll('.status-opt').forEach(c => c.classList.remove('selected'));
            document.getElementById('st-' + val).classList.add('selected');
            document.getElementById('statusInput').value = val;
        }

        // ── Amenity sync ──────────────────────────────
        function syncAmenity(id, cb) {
            document.getElementById(id).classList.toggle('checked', cb.checked);
        }

        // ── Capacity banner ───────────────────────────
        async function loadCapacity(facilityId) {
            if (!facilityId) return;
            const res  = await fetch(`/AdminCourt/GetCourtCapacity?facilityId=${facilityId}`);
            const data = await res.json();
            if (data.success) {
                const pct = Math.round((data.currentCount / data.maxCourts) * 100);
                const color = pct >= 100 ? '#c94b2a' : pct >= 80 ? '#92660a' : '#16a34a';
                document.getElementById('capBanner').innerHTML = `
                    <i class="bi bi-grid-3x3-gap" style="color:var(--gold);font-size:1.2rem;"></i>
                    <div class="cap-text">
                        <strong>${data.facilityName}</strong> —
                        hiện có <strong>${data.currentCount}/${data.maxCourts}</strong> sân
                        ${data.canAddMore ? `(còn ${data.remaining} chỗ)` : '<span style="color:#c94b2a;">Đã đầy</span>'}
                    </div>
                    <div class="cap-bar-wrap">
                        <div class="cap-bar" style="width:${pct}%;background:${color};"></div>
                    </div>`;
            }
        }

        // ── Image upload ──────────────────────────────
        let imgs = [], primaryIdx = 0;

        function handleUpload(input) {
            Array.from(input.files).forEach(file => {
                const r = new FileReader();
                r.onload = e => {
                    const idx = imgs.length;
                    imgs.push(e.target.result);
                    renderGrid();
                };
                r.readAsDataURL(file);
            });
        }

        function renderGrid() {
            const grid = document.getElementById('imgGrid');
            grid.innerHTML = '';
            imgs.forEach((src, i) => {
                const div = document.createElement('div');
                div.className = 'img-item' + (i === primaryIdx ? ' primary' : '');
                div.innerHTML = `
                    <img src="${src}" alt="">
                    ${i === primaryIdx ? '<span class="img-primary-badge">Chính</span>' : ''}
                    <button type="button" class="img-del" onclick="delImg(${i},event)">
                        <i class="bi bi-x"></i>
                    </button>`;
                div.onclick = () => { primaryIdx = i; document.getElementById('primaryImgIdx').value = i; renderGrid(); };
                grid.appendChild(div);
            });
        }

        function delImg(i, e) {
            e.stopPropagation();
            imgs.splice(i, 1);
            if (primaryIdx >= imgs.length) primaryIdx = 0;
            renderGrid();
        }

        // Init: nếu model đã có value (khi form bị lỗi trả về)
        (function() {
                // Lấy giá trị từ Model (Server-side) sang biến JS
                const ct  = '@Model?.CourtType';
                const sf  = '@Model?.SurfaceType';
                const st  = '@Model?.Status';
                const fid = '@Model?.FacilityId';

                // Gọi các hàm UI để "tô màu" cho các card đã chọn
                if (ct) selectLocation(ct);
                if (sf) selectSurface(sf);
                if (st) selectStatus(st);

                // Chỉ load sức chứa nếu đã chọn cơ sở
                if (fid && fid !== '0' && fid !== '') {
                    loadCapacity(fid);
                }

                // Xử lý Checkbox/Tiện ích
                const hasLighting = @(Model?.HasLighting == true ? "true" : "false");
                const hasAC = @(Model?.HasAC == true ? "true" : "false");

                if (hasLighting) {
                    const lightEl = document.getElementById('am-light');
                    if (lightEl) lightEl.classList.add('checked');
                }
                if (hasAC) {
                    const acEl = document.getElementById('am-ac');
                    if (acEl) acEl.classList.add('checked');
                }
            })();
    </script>
}
