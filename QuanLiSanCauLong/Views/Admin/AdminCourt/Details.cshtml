@model QuanLiSanCauLong.Models.Court

@{
    ViewData["Title"] = "Chi tiết sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">
                <i class="bi bi-grid-3x3 text-primary me-2"></i>Sân số: @Model.CourtNumber
            </h2>
            <div class="btn-group shadow-sm">
                <a asp-action="Edit" asp-route-id="@Model.CourtId" class="btn btn-warning">
                    <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-5">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body p-2">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" class="img-fluid rounded shadow-sm"
                                 style="width: 100%; height: 280px; object-fit: cover;" alt="Court Image" />
                        }
                        else
                        {
                            <div class="bg-light d-flex flex-column align-items-center justify-content-center rounded" style="height: 280px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">Chưa có ảnh mô tả</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold"><i class="bi bi-info-circle me-2 text-primary"></i>Thông tin tổng quan</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="p-3 border rounded bg-light">
                                    <small class="text-muted d-block text-uppercase fw-bold">Cơ sở</small>
                                    <span class="fw-semibold">@Model.Facility?.FacilityName</span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="p-3 border rounded bg-light">
                                    <small class="text-muted d-block text-uppercase fw-bold">Loại sân</small>
                                    @if (Model.CourtType == "VIP")
                                    {
                                        <span class="badge bg-warning text-dark">VIP</span>
                                    }
                                    else if (Model.CourtType == "Premium")
                                    {

                                        <span class="badge bg-danger">Premium</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-info">Tiêu chuẩn</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="p-3 border rounded @(Model.HasLighting ? "bg-success-subtle border-success" : "bg-light")">
                                    <i class="bi bi-lightbulb-fill me-2 @(Model.HasLighting ? "text-success" : "text-muted")"></i>
                                    <strong>Đèn chiếu sáng:</strong> @(Model.HasLighting ? "Có" : "Không")
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="p-3 border rounded @(Model.HasAC ? "bg-info-subtle border-info" : "bg-light")">
                                    <i class="bi bi-wind me-2 @(Model.HasAC ? "text-info" : "text-muted")"></i>
                                    <strong>Điều hòa:</strong> @(Model.HasAC ? "Có" : "Không")
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 p-3 border rounded bg-dark text-white d-flex justify-content-between align-items-center">
                            <span>Giá thuê cơ bản:</span>
                            <h4 class="mb-0 text-warning fw-bold">@Model.HourlyRate.ToString("N0") VNĐ/h</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-cash-stack text-success me-2"></i>Bảng giá theo khung giờ
                </h5>
                <a asp-controller="PriceSlot" asp-action="Create" asp-route-courtId="@Model.CourtId" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Thêm khung giờ
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.PriceSlots != null && Model.PriceSlots.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Khung giờ</th>
                                    <th>Giá (VNĐ)</th>
                                    <th>Phân loại</th>
                                    <th class="text-end pe-4">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slot in Model.PriceSlots.OrderBy(p => p.StartTime))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <i class="bi bi-clock me-2 text-muted"></i>
                                            <strong>@slot.StartTime.ToString(@"hh\:mm") - @slot.EndTime.ToString(@"hh\:mm")</strong>
                                        </td>
                                        <td class="fw-bold text-success">@slot.Price.ToString("N0")đ</td>
                                        <td>
                                            @if (slot.IsPeakHour)
                                            {
                                                <span class="badge bg-danger">Giờ cao điểm</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-info">Giờ thường</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-controller="PriceSlot" asp-action="Edit" asp-route-id="@slot.PriceSlotId" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>Chưa có cấu hình giá theo giờ cho sân này.
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-calendar-check text-primary me-2"></i>Lịch sử đặt sân gần đây
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Bookings != null && Model.Bookings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Ngày</th>
                                    <th>Khung giờ</th>
                                    <th>Khách hàng</th>
                                    <th class="text-end pe-4">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookingDate).Take(10))
                                {
                                    <tr>
                                        <td class="ps-4">@booking.BookingDate.ToString("dd/MM/yyyy")</td>
                                        <td><small class="text-muted">@booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")</small></td>
                                        <td>@booking.User?.FullName</td>
                                        <td class="text-end pe-4">
                                            @if (booking.Status == "Confirmed")
                                            {
                                                <span class="badge bg-success">Đã xác nhận</span>
                                            }
                                            else if (booking.Status == "Completed")
                                            {

                                                <span class="badge bg-primary">Hoàn thành</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-secondary">@booking.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="p-4 text-center text-muted mb-0">Chưa có giao dịch đặt sân nào.</p>
                }
            </div>
        </div>
    </div>
</div>