@model QuanLiSanCauLong.Models.Court

@{
    ViewData["Title"] = "Chi tiết Sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Urbanist:wght@300;400;500;600;700;800&family=Space+Mono:wght@400;700&display=swap');

    * {
        font-family: 'Urbanist', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    }

    .detail-card {
        background: white;
        border-radius: 24px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .image-gallery {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .gallery-item {
        aspect-ratio: 1;
        border-radius: 16px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s;
        border: 2px solid transparent;
    }

        .gallery-item.main {
            grid-column: 1 / 3;
            grid-row: 1 / 3;
            aspect-ratio: 1;
        }

        .gallery-item:hover {
            transform: scale(1.05);
            border-color: #10b981;
            box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.2);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .info-badge {
        background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
        color: #4338ca;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.813rem;
        display: inline-block;
    }

    .feature-box {
        background: linear-gradient(135deg, #f0fdf4, #dcfce7);
        border: 2px solid #86efac;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s;
    }

        .feature-box:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px -5px rgba(16, 185, 129, 0.3);
        }

        .feature-box.inactive {
            background: #f8fafc;
            border-color: #e2e8f0;
        }

    .price-box {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border-radius: 24px;
        padding: 2rem;
        text-align: center;
    }

    .price-amount {
        font-size: 3rem;
        font-weight: 800;
        font-family: 'Space Mono', monospace;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .table-modern {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-modern thead {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        }

        .table-modern th {
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            padding: 1rem 1.5rem;
            border: none;
        }

        .table-modern td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #f1f5f9;
        }

        .table-modern tbody tr {
            transition: all 0.3s;
        }

            .table-modern tbody tr:hover {
                background: #f8fafc;
            }

    .lightbox {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.95);
        z-index: 9999;
        cursor: pointer;
    }

        .lightbox img {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 90%;
            max-height: 90%;
            border-radius: 12px;
        }

    .lightbox-close {
        position: absolute;
        top: 2rem;
        right: 2rem;
        color: white;
        font-size: 2rem;
        cursor: pointer;
    }
</style>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <a asp-action="Index"
               class="btn btn-light rounded-circle"
               style="width: 48px; height: 48px; padding: 0; display: flex; align-items: center; justify-content: center;">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h2 class="fw-bold mb-0" style="font-size: 2rem;">@Model.CourtNumber</h2>
                <p class="text-muted mb-0">Chi tiết đầy đủ về sân</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.CourtId"
               class="btn btn-primary px-4 rounded-pill">
                <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                <i class="bi bi-list me-2"></i>Danh sách
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Image Gallery -->
            <div class="detail-card p-4 mb-4">
                <h5 class="fw-bold mb-4">
                    <i class="bi bi-images text-primary me-2"></i>
                    Thư Viện Ảnh
                </h5>

                @if (Model.CourtImages != null && Model.CourtImages.Any())
                {
                    var images = Model.CourtImages.OrderBy(img => img.IsPrimary ? 0 : 1).ThenBy(img => img.DisplayOrder).ToList();
                    <div class="image-gallery">
                        @for (int i = 0; i < images.Count && i < 6; i++)
                        {
                            var img = images[i];
                            <div class="gallery-item @(i == 0 ? "main" : "")" onclick="openLightbox('@img.ImagePath')">
                                <img src="@img.ImagePath" alt="Court Image">
                            </div>
                        }
                    </div>

                    @if (images.Count > 6)
                    {
                        <p class="text-muted text-center mb-0">
                            <i class="bi bi-plus-circle me-1"></i>
                            Còn @(images.Count - 6) ảnh nữa
                        </p>
                    }
                }
                else if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="gallery-item main" onclick="openLightbox('@Model.ImagePath')">
                        <img src="@Model.ImagePath" alt="Court">
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-image" style="font-size: 4rem;"></i>
                        <p class="mt-3 mb-0">Chưa có hình ảnh</p>
                    </div>
                }
            </div>

            <!-- Price Slots -->
            <div class="detail-card p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-cash-stack text-success me-2"></i>
                        Bảng Giá Theo Khung Giờ
                    </h5>
                    <a asp-controller="AdminPriceSlot"
                       asp-action="Create"
                       asp-route-courtId="@Model.CourtId"
                       class="btn btn-sm btn-success rounded-pill px-3">
                        <i class="bi bi-plus-circle me-1"></i>Thêm khung giờ
                    </a>
                </div>

                @if (Model.PriceSlots != null && Model.PriceSlots.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th>Khung Giờ</th>
                                    <th>Giá (VNĐ)</th>
                                    <th>Phân Loại</th>
                                    <th class="text-end">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slot in Model.PriceSlots.OrderBy(p => p.StartTime))
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-clock text-muted me-2"></i>
                                            <strong>@slot.StartTime.ToString(@"hh\:mm") - @slot.EndTime.ToString(@"hh\:mm")</strong>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success" style="font-family: 'Space Mono', monospace;">
                                                ₫@slot.Price.ToString("N0")
                                            </span>
                                        </td>
                                        <td>
                                            @if (slot.IsPeakHour)
                                            {
                                                <span class="badge bg-danger-subtle text-danger">Giờ cao điểm</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info-subtle text-info">Giờ thường</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="AdminPriceSlot"
                                               asp-action="Edit"
                                               asp-route-id="@slot.PriceSlotId"
                                               class="btn btn-sm btn-outline-primary rounded-pill">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Chưa có cấu hình giá theo khung giờ
                    </div>
                }
            </div>

            <!-- Booking History -->
            <div class="detail-card p-4">
                <h5 class="fw-bold mb-4">
                    <i class="bi bi-calendar-check text-primary me-2"></i>
                    Lịch Sử Đặt Sân (10 gần nhất)
                </h5>

                @if (Model.Bookings != null && Model.Bookings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th>Ngày</th>
                                    <th>Khung Giờ</th>
                                    <th>Khách Hàng</th>
                                    <th class="text-end">Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookingDate).Take(10))
                                {
                                    <tr>
                                        <td>
                                            <strong>@booking.BookingDate.ToString("dd/MM/yyyy")</strong>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </td>
                                        <td>
                                            @(booking.User?.FullName ?? "N/A")
                                        </td>
                                        <td class="text-end">
                                            @switch (booking.Status)
                                            {
                                                case "Confirmed":
                                                    <span class="badge bg-success-subtle text-success">Đã xác nhận</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge bg-primary-subtle text-primary">Hoàn thành</span>
                                                    break;
                                                case "Pending":
                                                    <span class="badge bg-warning-subtle text-warning">Chờ xác nhận</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@booking.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-inbox me-1"></i>
                        Chưa có lịch đặt sân
                    </div>
                }
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Basic Info -->
            <div class="detail-card p-4 mb-4">
                <h5 class="fw-bold mb-4">
                    <i class="bi bi-info-circle text-primary me-2"></i>
                    Thông Tin Cơ Bản
                </h5>

                <div class="mb-4">
                    <label class="small text-muted mb-2 d-block">Cơ sở</label>
                    <div class="fw-bold">@Model.Facility?.FacilityName</div>
                </div>

                <div class="mb-4">
                    <label class="small text-muted mb-2 d-block">Loại sân</label>
                    <span class="info-badge">@Model.CourtType</span>
                </div>

                <div class="mb-4">
                    <label class="small text-muted mb-2 d-block">Trạng thái</label>
                    @if (Model.Status == "Available")
                    {
                        <span class="badge bg-success-subtle text-success px-3 py-2">
                            <i class="bi bi-check-circle me-1"></i>Hoạt động
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning-subtle text-warning px-3 py-2">
                            <i class="bi bi-tools me-1"></i>Bảo trì
                        </span>
                    }
                </div>

                <div class="mb-0">
                    <label class="small text-muted mb-2 d-block">Số lượng ảnh</label>
                    <div class="fw-bold">
                        <i class="bi bi-images me-2 text-primary"></i>
                        @(Model.CourtImages?.Count() ?? (string.IsNullOrEmpty(Model.ImagePath) ? 0 : 1)) ảnh
                    </div>
                </div>
            </div>

            <!-- Price -->
            <div class="price-box mb-4">
                <div class="small opacity-75 mb-2">GIÁ THUÊ CƠ BẢN</div>
                <div class="price-amount">₫@Model.HourlyRate.ToString("N0")</div>
                <div class="opacity-75">/giờ</div>
            </div>

            <!-- Features -->
            <div class="row g-3">
                <div class="col-6">
                    <div class="feature-box @(Model.HasLighting ? "" : "inactive")">
                        <i class="bi @(Model.HasLighting ? "bi-lightbulb-fill text-warning" : "bi-lightbulb text-muted")"
                           style="font-size: 2.5rem;"></i>
                        <div class="fw-bold mt-3 small">Đèn chiếu sáng</div>
                        <div class="small text-muted">@(Model.HasLighting ? "Có" : "Không")</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="feature-box @(Model.HasAC ? "" : "inactive")">
                        <i class="bi @(Model.HasAC ? "bi-wind text-info" : "bi-wind text-muted")"
                           style="font-size: 2.5rem;"></i>
                        <div class="fw-bold mt-3 small">Máy lạnh</div>
                        <div class="small text-muted">@(Model.HasAC ? "Có" : "Không")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lightbox -->
<div class="lightbox" id="lightbox" onclick="closeLightbox()">
    <span class="lightbox-close">&times;</span>
    <img id="lightboxImg" src="" alt="Full Image">
</div>

@section Scripts {
    <script>
        function openLightbox(imageSrc) {
            document.getElementById('lightboxImg').src = imageSrc;
            document.getElementById('lightbox').style.display = 'block';
        }

        function closeLightbox() {
            document.getElementById('lightbox').style.display = 'none';
        }
    </script>
}

<style>
    .bg-success-subtle {
        background-color: rgba(16, 185, 129, 0.1) !important;
    }

    .bg-info-subtle {
        background-color: rgba(14, 165, 233, 0.1) !important;
    }

    .bg-warning-subtle {
        background-color: rgba(245, 158, 11, 0.1) !important;
    }

    .bg-danger-subtle {
        background-color: rgba(239, 68, 68, 0.1) !important;
    }

    .bg-primary-subtle {
        background-color: rgba(99, 102, 241, 0.1) !important;
    }
</style>
