@model QuanLiSanCauLong.Models.Court

@{
    ViewData["Title"] = "Chỉnh sửa sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-warning py-3">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa: @Model.CourtNumber
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="CourtId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FacilityId" class="form-label fw-semibold required">
                            Cơ sở
                        </label>
                        <select asp-for="FacilityId" class="form-select" asp-items="ViewBag.FacilityId">
                        </select>
                        <span asp-validation-for="FacilityId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CourtNumber" class="form-label fw-semibold required">
                            Số sân
                        </label>
                        <input asp-for="CourtNumber" class="form-control" />
                        <span asp-validation-for="CourtNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CourtType" class="form-label fw-semibold required">
                            Loại sân
                        </label>
                        <select asp-for="CourtType" class="form-select">
                            <option value="Standard">Tiêu chuẩn</option>
                            <option value="VIP">VIP</option>
                            <option value="Premium">Premium</option>
                        </select>
                        <span asp-validation-for="CourtType" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-semibold">
                            Trạng thái
                        </label>
                        <select asp-for="Status" class="form-select">
                            <option value="Available">Sẵn sàng</option>
                            <option value="Occupied">Đang sử dụng</option>
                            <option value="Maintenance">Bảo trì</option>
                        </select>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-2"></i>Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}