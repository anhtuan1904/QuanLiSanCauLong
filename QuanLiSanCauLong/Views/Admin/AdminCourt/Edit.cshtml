@model QuanLiSanCauLong.Models.Court

@{
    ViewData["Title"] = "Chỉnh sửa sân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning py-3">
                <h4 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa: @Model.CourtNumber
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="CourtId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FacilityId" class="form-label fw-bold">Cơ sở</label>
                                <select asp-for="FacilityId" class="form-select border-primary-subtle" asp-items="ViewBag.FacilityId"></select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CourtNumber" class="form-label fw-bold">Số sân / Tên sân</label>
                                <input asp-for="CourtNumber" class="form-control" />
                                <span asp-validation-for="CourtNumber" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="HourlyRate" class="form-label fw-bold">Giá cơ bản (VNĐ/h)</label>
                                <div class="input-group">
                                    <input asp-for="HourlyRate" type="number" class="form-control" />
                                    <span class="input-group-text">đ</span>
                                </div>
                                <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CourtType" class="form-label fw-bold">Loại sân</label>
                                <select asp-for="CourtType" class="form-select">
                                    <option value="Standard">Tiêu chuẩn</option>
                                    <option value="VIP">VIP</option>
                                    <option value="Premium">Premium</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Status" class="form-label fw-bold">Trạng thái vận hành</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Available">Sẵn sàng</option>
                                    <option value="Occupied">Đang sử dụng</option>
                                    <option value="Maintenance">Bảo trì</option>
                                </select>
                            </div>

                            <div class="p-3 border rounded bg-light">
                                <label class="form-label fw-bold mb-2">Tiện ích đi kèm</label>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="HasLighting">
                                    <label class="form-check-label" asp-for="HasLighting">Có đèn chiếu sáng</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="HasAC">
                                    <label class="form-check-label" asp-for="HasAC">Có máy lạnh/điều hòa</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4 mt-3">
                        <label asp-for="ImagePath" class="form-label fw-bold">Đường dẫn ảnh mô tả (URL)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-link"></i></span>
                            <input asp-for="ImagePath" class="form-control" placeholder="https://domain.com/image.jpg" />
                        </div>
                        <div class="form-text">Bạn có thể dán link ảnh từ Drive hoặc các dịch vụ lưu trữ ảnh.</div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end border-top pt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-x-circle me-1"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold">
                            <i class="bi bi-check-circle me-1"></i>Cập nhật ngay
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}