@model QuanLiSanCauLong.Models.BlogPost
@{
    Layout = null;
}

<div class="modal-header border-0 px-4 pt-4 pb-0">
    <div>
        <h5 class="fw-bold mb-1">Chi Tiết Bài Viết</h5>
        <p class="text-muted small mb-0">Xem thông tin đầy đủ</p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 py-3">
    <div class="post-details">
        <!-- Featured Image -->
        @if (!string.IsNullOrEmpty(Model.FeaturedImage))
        {
            <div class="mb-4">
                <img src="@Model.FeaturedImage" class="img-fluid rounded-3 w-100" style="max-height: 400px; object-fit: cover;" alt="@Model.Title" />
            </div>
        }

        <!-- Title & Meta -->
        <div class="mb-4">
            <h4 class="fw-bold mb-3">@Model.Title</h4>
            <div class="d-flex flex-wrap gap-2">
                <span class="badge bg-@(Model.Status == "Published" ? "success" : Model.Status == "Draft" ? "warning" : "secondary")">
                    @(Model.Status == "Published" ? "Đã xuất bản" : Model.Status == "Draft" ? "Bản nháp" : "Lưu trữ")
                </span>
                <span class="badge bg-light text-dark">@Model.Category?.CategoryName</span>
                @if (Model.IsFeatured)
                {
                    <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>Nổi bật</span>
                }
            </div>
        </div>

        <!-- Excerpt -->
        @if (!string.IsNullOrEmpty(Model.Excerpt))
        {
            <div class="mb-4 p-3 bg-light rounded-3">
                <strong class="d-block mb-2">Tóm tắt:</strong>
                <p class="mb-0 text-muted">@Model.Excerpt</p>
            </div>
        }

        <!-- Content -->
        <div class="mb-4">
            <strong class="d-block mb-2">Nội dung:</strong>
            <div class="post-content border rounded-3 p-3" style="max-height: 400px; overflow-y: auto;">
                @Html.Raw(Model.Content)
            </div>
        </div>

        <!-- Tags -->
        @if (!string.IsNullOrEmpty(Model.Tags))
        {
            <div class="mb-4">
                <strong class="d-block mb-2">Tags:</strong>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var tag in Model.Tags.Split(','))
                    {
                        <span class="badge bg-primary">#@tag.Trim()</span>
                    }
                </div>
            </div>
        }

        <!-- SEO Info -->
        <div class="mb-4">
            <strong class="d-block mb-2">🔍 Thông tin SEO:</strong>
            <div class="bg-light rounded-3 p-3">
                @if (!string.IsNullOrEmpty(Model.MetaTitle))
                {
                    <div class="mb-2">
                        <small class="text-muted">Meta Title:</small>
                        <div>@Model.MetaTitle</div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.MetaDescription))
                {
                    <div class="mb-2">
                        <small class="text-muted">Meta Description:</small>
                        <div>@Model.MetaDescription</div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.MetaKeywords))
                {
                    <div>
                        <small class="text-muted">Keywords:</small>
                        <div>@Model.MetaKeywords</div>
                    </div>
                }
            </div>
        </div>

        <!-- Stats -->
        <div class="border-top pt-3">
            <div class="row g-3 small text-muted">
                <div class="col-md-3">
                    <i class="bi bi-person me-1"></i>
                    <strong>Tác giả:</strong> @Model.AuthorId
                </div>
                <div class="col-md-3">
                    <i class="bi bi-calendar-plus me-1"></i>
                    <strong>Tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
                </div>
                @if (Model.PublishedAt.HasValue)
                {
                    <div class="col-md-3">
                        <i class="bi bi-calendar-check me-1"></i>
                        <strong>Xuất bản:</strong> @Model.PublishedAt.Value.ToString("dd/MM/yyyy")
                    </div>
                }
                <div class="col-md-3">
                    <i class="bi bi-eye me-1"></i>
                    <strong>Xem:</strong> @Model.ViewCount
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
        <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Đóng</button>
        <button type="button" class="btn btn-primary px-4 rounded-3" onclick="openEditFromDetails(@Model.PostId)">
            <i class="bi bi-pencil me-1"></i>Chỉnh Sửa
        </button>
    </div>
</div>

<script>
    function openEditFromDetails(id) {
        const currentModal = bootstrap.Modal.getInstance(document.getElementById('modalPost'));
        if (currentModal) currentModal.hide();
        setTimeout(() => { openEditModal(id); }, 300);
    }
</script>

<style>
    .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin: 1rem 0;
    }
</style>
