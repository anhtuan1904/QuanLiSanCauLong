@model IEnumerable<QuanLiSanCauLong.Models.JobPosting>
@{
    ViewData["Title"] = "Quản Lý Tuyển Dụng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">💼 Quản Lý Tuyển Dụng</h4>
            <p class="text-muted small mb-0">Quản lý các tin tuyển dụng và hồ sơ ứng tuyển</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Applications" class="btn btn-outline-primary rounded-3 px-4">
                <i class="bi bi-person-badge me-1"></i> Hồ Sơ Ứng Tuyển
            </a>
            <button class="btn btn-dark px-4 fw-bold rounded-3" data-bs-toggle="modal" data-bs-target="#modalJob" onclick="openCreateModal()">
                <i class="bi bi-plus-lg me-1"></i> Thêm Tin Tuyển Dụng
            </button>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                        <i class="bi bi-briefcase-fill fs-4"></i>
                    </div>
                    <div>
                        <div class="fs-2 fw-bold">@Model.Count()</div>
                        <div class="text-muted small">Tổng Tin Tuyển Dụng</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                        <i class="bi bi-door-open-fill fs-4"></i>
                    </div>
                    <div>
                        <div class="fs-2 fw-bold text-success">@Model.Count(j => j.Status == "Open")</div>
                        <div class="text-muted small">Đang Tuyển</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3">
                        <i class="bi bi-hourglass-split fs-4"></i>
                    </div>
                    <div>
                        <div class="fs-2 fw-bold text-warning">@Model.Count(j => j.Deadline.HasValue && j.Deadline > DateTime.Now)</div>
                        <div class="text-muted small">Sắp Hết Hạn</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                    <div>
                        <div class="fs-2 fw-bold text-info">@Model.Sum(j => j.VacancyCount)</div>
                        <div class="text-muted small">Vị Trí Tuyển</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card border-0 shadow-sm rounded-3 mb-4 p-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label small text-muted fw-semibold">Tìm kiếm</label>
                <input type="text" name="search" class="form-control" placeholder="Tên vị trí..." />
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-semibold">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Open">Đang tuyển</option>
                    <option value="Closed">Đã đóng</option>
                    <option value="Filled">Đã tuyển đủ</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-semibold">Loại hình</label>
                <select name="jobType" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Full-time">Full-time</option>
                    <option value="Part-time">Part-time</option>
                    <option value="Contract">Contract</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search me-1"></i>Lọc</button>
            </div>
        </form>
    </div>

    <!-- Jobs List -->
    <div class="row g-4">
        @foreach (var job in Model)
        {
            var statusClass = job.Status == "Open" ? "success" : (job.Status == "Filled" ? "info" : "secondary");
            var statusText = job.Status == "Open" ? "Đang tuyển" : (job.Status == "Filled" ? "Đã tuyển đủ" : "Đã đóng");
            var isExpiring = job.Deadline.HasValue && job.Deadline.Value.Date <= DateTime.Now.AddDays(7).Date;

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-3 h-100 hover-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-2">@job.JobTitle</h5>
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <span class="badge bg-@statusClass">@statusText</span>
                                    @if (job.IsFeatured)
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>Nổi bật</span>
                                    }
                                    @if (isExpiring && job.Status == "Open")
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-clock-fill me-1"></i>Sắp hết hạn</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="job-info mb-3">
                            <div class="row g-2 small">
                                <div class="col-6">
                                    <i class="bi bi-briefcase text-muted me-1"></i>
                                    <span class="text-muted">Loại:</span>
                                    <strong>@job.JobType</strong>
                                </div>
                                <div class="col-6">
                                    <i class="bi bi-diagram-3 text-muted me-1"></i>
                                    <span class="text-muted">Cấp:</span>
                                    <strong>@job.Level</strong>
                                </div>
                                <div class="col-6">
                                    <i class="bi bi-geo-alt text-muted me-1"></i>
                                    <span class="text-muted">Địa điểm:</span>
                                    <strong>@job.Location</strong>
                                </div>
                                <div class="col-6">
                                    <i class="bi bi-people text-muted me-1"></i>
                                    <span class="text-muted">Số lượng:</span>
                                    <strong>@job.VacancyCount vị trí</strong>
                                </div>
                            </div>
                        </div>

                        @if (job.SalaryMin.HasValue || job.SalaryMax.HasValue)
                        {
                            <div class="salary-range mb-3 p-3 bg-light rounded-3">
                                <small class="text-muted d-block mb-1">Mức lương:</small>
                                <div class="fw-bold text-success">
                                    @if (job.SalaryMin.HasValue && job.SalaryMax.HasValue)
                                    {
                                        <span>@job.SalaryMin.Value.ToString("N0")đ - @job.SalaryMax.Value.ToString("N0")đ</span>
                                    }
                                    else if (job.SalaryMin.HasValue)
                                    {
                                        <span>Từ @job.SalaryMin.Value.ToString("N0")đ</span>
                                    }
                                    else
                                    {
                                        <span>Lên đến @job.SalaryMax.Value.ToString("N0")đ</span>
                                    }
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div class="small text-muted">
                                @if (job.Deadline.HasValue)
                                {
                                    <i class="bi bi-calendar-x me-1"></i>
                                    <span>Hạn: @job.Deadline.Value.ToString("dd/MM/yyyy")</span>
                                }
                                <span class="mx-2">•</span>
                                <i class="bi bi-eye me-1"></i>
                                <span>@job.ViewCount lượt xem</span>
                            </div>
                        </div>

                        <div class="row g-2 mt-3">
                            <div class="col-4">
                                <button class="btn btn-outline-info w-100 btn-sm" onclick="openDetailsModal(@job.JobId)">
                                    <i class="bi bi-eye"></i> Xem
                                </button>
                            </div>
                            <div class="col-4">
                                <button class="btn btn-outline-primary w-100 btn-sm" onclick="openEditModal(@job.JobId)">
                                    <i class="bi bi-pencil"></i> Sửa
                                </button>
                            </div>
                            <div class="col-4">
                                <button class="btn btn-outline-danger w-100 btn-sm" onclick="confirmDelete(@job.JobId, '@job.JobTitle')">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Chưa có tin tuyển dụng nào</h4>
            <p class="text-muted">Nhấn nút "Thêm Tin Tuyển Dụng" để bắt đầu</p>
        </div>
    }

</div>

<!-- Modal -->
<div class="modal fade" id="modalJob" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4" id="modalJobContent">
            <div class="p-5 text-center">
                <div class="spinner-border text-dark"></div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle" style="width:72px;height:72px;">
                        <i class="bi bi-exclamation-triangle text-danger fs-2"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">Xác nhận xóa?</h5>
                <p class="text-muted small mb-4">Bạn có chắc muốn xóa tin tuyển dụng <strong id="deleteName" class="text-dark"></strong>?</p>
                <div class="d-flex gap-2">
                    <button class="btn btn-light w-100 rounded-3 fw-semibold py-2" data-bs-dismiss="modal">Hủy</button>
                    <form id="deleteForm" method="post" class="w-100">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100 rounded-3 fw-semibold py-2">Xác nhận xóa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s;
        border: 1px solid #e9ecef !important;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
            border-color: #6c33f2 !important;
        }

    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@section Scripts {
    <script>
        function openCreateModal() {
            document.getElementById('modalJobContent').innerHTML = '<div class="p-5 text-center"><div class="spinner-border text-dark"></div></div>';
            fetch('/AdminJob/Create')
                .then(r => r.text())
                .then(html => { document.getElementById('modalJobContent').innerHTML = html; });
        }

        function openEditModal(id) {
            document.getElementById('modalJobContent').innerHTML = '<div class="p-5 text-center"><div class="spinner-border text-dark"></div></div>';
            var modal = new bootstrap.Modal(document.getElementById('modalJob'));
            modal.show();
            fetch('/AdminJob/Edit/' + id)
                .then(r => r.text())
                .then(html => { document.getElementById('modalJobContent').innerHTML = html; });
        }

        function openDetailsModal(id) {
            document.getElementById('modalJobContent').innerHTML = '<div class="p-5 text-center"><div class="spinner-border text-dark"></div></div>';
            var modal = new bootstrap.Modal(document.getElementById('modalJob'));
            modal.show();
            fetch('/AdminJob/Details/' + id)
                .then(r => r.text())
                .then(html => { document.getElementById('modalJobContent').innerHTML = html; });
        }

        function confirmDelete(id, title) {
            document.getElementById('deleteName').textContent = title;
            document.getElementById('deleteForm').onsubmit = function(e) {
                e.preventDefault();
                const token = this.querySelector('[name=__RequestVerificationToken]').value;
                fetch('/AdminJob/Delete/' + id, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                })
                .then(r => r.json())
                .then(res => {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            };
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
