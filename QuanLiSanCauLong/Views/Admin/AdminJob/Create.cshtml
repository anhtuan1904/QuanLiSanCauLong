@model QuanLiSanCauLong.Models.JobPosting
@{
    Layout = null;
}

<div class="modal-header border-0 px-4 pt-4 pb-0">
    <div>
        <h5 class="fw-bold mb-1">Thêm Tin Tuyển Dụng Mới</h5>
        <p class="text-muted small mb-0">Điền thông tin vị trí cần tuyển dụng</p>
    </div>
    <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 py-3">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <div class="col-md-8">
                <label class="form-label fw-semibold small">Vị trí tuyển dụng <span class="text-danger">*</span></label>
                <input asp-for="JobTitle" class="form-control" placeholder="VD: Nhân viên quản lý sân" required />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Số lượng <span class="text-danger">*</span></label>
                <input asp-for="VacancyCount" type="number" class="form-control" value="1" min="1" required />
            </div>

            <div class="col-12">
                <label class="form-label fw-semibold small">Mô tả công việc <span class="text-danger">*</span></label>
                <textarea asp-for="JobDescription" class="form-control" rows="4" placeholder="Mô tả chi tiết về công việc..." required></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold small">Yêu cầu</label>
                <textarea asp-for="Requirements" class="form-control" rows="3" placeholder="Các yêu cầu về kỹ năng, kinh nghiệm..."></textarea>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Quyền lợi</label>
                <textarea asp-for="Benefits" class="form-control" rows="3" placeholder="Các quyền lợi được hưởng..."></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold small">Loại hình</label>
                <select asp-for="JobType" class="form-select">
                    <option value="">-- Chọn loại hình --</option>
                    <option value="Full-time">Full-time</option>
                    <option value="Part-time">Part-time</option>
                    <option value="Contract">Contract</option>
                    <option value="Internship">Internship</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold small">Cấp bậc</label>
                <select asp-for="Level" class="form-select">
                    <option value="">-- Chọn cấp bậc --</option>
                    <option value="Intern">Intern</option>
                    <option value="Junior">Junior</option>
                    <option value="Senior">Senior</option>
                    <option value="Manager">Manager</option>
                    <option value="Director">Director</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold small">Lương tối thiểu (VNĐ)</label>
                <input asp-for="SalaryMin" type="number" class="form-control" placeholder="5000000" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Lương tối đa (VNĐ)</label>
                <input asp-for="SalaryMax" type="number" class="form-control" placeholder="10000000" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Hạn nộp hồ sơ</label>
                <input asp-for="Deadline" type="date" class="form-control" />
            </div>

            <div class="col-md-12">
                <label class="form-label fw-semibold small">Địa điểm làm việc</label>
                <input asp-for="Location" class="form-control" placeholder="VD: Quận 1, TP.HCM" />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold small">Người liên hệ</label>
                <input asp-for="ContactPerson" class="form-control" placeholder="Tên người liên hệ" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Email liên hệ</label>
                <input asp-for="ContactEmail" type="email" class="form-control" placeholder="email@example.com" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold small">Số điện thoại</label>
                <input asp-for="ContactPhone" class="form-control" placeholder="0123456789" />
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                    <label class="form-check-label fw-semibold">
                        Tin nổi bật (hiển thị ưu tiên)
                    </label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
            <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-dark px-5 rounded-3">
                <i class="bi bi-plus-circle me-1"></i>Thêm Tin Tuyển Dụng
            </button>
        </div>
    </form>
</div>