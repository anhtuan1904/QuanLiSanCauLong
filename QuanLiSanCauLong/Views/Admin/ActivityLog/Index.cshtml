@section Scripts {
    <script>
        function clearOldLogs() {
            if (confirm('Bạn có chắc muốn xóa các log cũ hơn 30 ngày?')) {
                fetch('/Admin/ActivityLog/ClearOld', {
                    method: 'POST'
                }).then(response => {
                    if (response.ok) {
                        alert('Đã xóa thành công!');
                        location.reload();
                    }
                });
            }
        }
    </script>
}
