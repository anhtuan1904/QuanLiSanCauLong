@model QuanLiSanCauLong.Models.PriceSlot

@{
    ViewData["Title"] = "Cập nhật bảng giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3 class="fw-bold text-warning"><i class="bi bi-pencil-square"></i> Cập nhật bảng giá</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Danh sách</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa khung giờ</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PriceSlotId" />
                        <input type="hidden" asp-for="CourtId" />
                        <input type="hidden" asp-for="FacilityId" />

                        <div class="alert bg-light border mb-4">
                            <h6 class="fw-bold"><i class="bi bi-info-circle me-2 text-primary"></i>Thông tin cố định</h6>
                            <div class="small text-muted">Cơ sở: <strong>@Model.Court?.Facility?.FacilityName</strong></div>
                            <div class="small text-muted">Sân số: <strong>@Model.Court?.CourtNumber (@Model.CourtType)</strong></div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="StartTime" class="form-label fw-bold small">Giờ bắt đầu</label>
                                <input asp-for="StartTime" class="form-control shadow-none" type="time" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndTime" class="form-label fw-bold small">Giờ kết thúc</label>
                                <input asp-for="EndTime" class="form-control shadow-none" type="time" />
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Price" class="form-label fw-bold small">Đơn giá thuê (₫)</label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control shadow-none" type="number" step="1000" />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check form-switch p-3 bg-light rounded-3 border">
                                    <input asp-for="IsPeakHour" class="form-check-input ms-0 me-2" type="checkbox">
                                    <label asp-for="IsPeakHour" class="form-check-label fw-bold small">Đặt làm Giờ cao điểm</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-warning px-4 fw-bold">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-light border px-4">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 bg-warning bg-opacity-10" style="border-radius: 15px;">
                <div class="card-body">
                    <h6 class="fw-bold text-warning-emphasis"><i class="bi bi-lightbulb me-2"></i>Lưu ý khi sửa</h6>
                    <ul class="small mb-0 mt-2">
                        <li>Thay đổi khung giờ sẽ ảnh hưởng đến các lượt đặt sân trong tương lai.</li>
                        <li>Đảm bảo giờ bắt đầu không trùng lặp với các khung giờ khác của cùng một sân.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>