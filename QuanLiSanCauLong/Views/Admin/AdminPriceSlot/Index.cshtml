@model IEnumerable<QuanLiSanCauLong.Models.PriceSlot>

@{
    ViewData["Title"] = "Quản lý bảng giá";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@* ✅ FIX: Dùng @functions block thay vì local function trong @{} block *@
@functions {
    string FormatDays(QuanLiSanCauLong.Models.PriceSlot slot)
    {
        var src = slot.AppliedDays;
        if (string.IsNullOrEmpty(src) && slot.DayOfWeek.HasValue)
            src = ((int)slot.DayOfWeek.Value).ToString();
        if (string.IsNullOrEmpty(src)) return "—";

        var map = new Dictionary<int, string> {
            {1,"T2"},{2,"T3"},{3,"T4"},{4,"T5"},{5,"T6"},{6,"T7"},{0,"CN"}
        };
        var parts = src.Split(',')
            .Select(d => int.TryParse(d.Trim(), out var n) && map.ContainsKey(n) ? map[n] : "")
            .Where(s => s != "")
            .ToList();

        if (parts.Count == 5 && new[] { 1, 2, 3, 4, 5 }.All(d => src.Contains(d.ToString())))
            return "T2 – T6";
        if (parts.Count == 2 && src.Contains("6") && src.Contains("0"))
            return "T7 & CN";
        if (parts.Count == 7)
            return "Tất cả";
        return string.Join(", ", parts);
    }
}

<div class="container-fluid pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1"><i class="bi bi-currency-exchange text-primary me-2"></i>Quản lý bảng giá</h2>
            <p class="text-muted small mb-0">Thiết lập và điều chỉnh đơn giá thuê sân theo khung giờ</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="BulkCreate" class="btn btn-outline-success shadow-sm">
                <i class="bi bi-lightning-charge-fill me-1"></i>Tạo hàng loạt
            </a>
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-plus-lg me-1"></i>Thêm khung giờ
            </a>
        </div>
    </div>

    <!-- Bộ lọc -->
    <div class="card border-0 shadow-sm mb-4" style="border-radius:12px;">
        <div class="card-body p-3">
            <form method="get" class="row g-2 align-items-end">
                @Html.AntiForgeryToken()
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-uppercase text-muted">Cơ sở</label>
                    <select class="form-select shadow-none" name="facilityId" id="FacilityFilter">
                        <option value="">-- Tất cả cơ sở --</option>
                        @foreach (var facility in ViewBag.Facilities)
                        {
                            <option value="@facility.FacilityId"
                                    selected="@(ViewBag.SelectedFacilityId?.ToString() == facility.FacilityId.ToString())">
                                @facility.FacilityName
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-uppercase text-muted">Sân</label>
                    <select class="form-select shadow-none" name="courtId" id="CourtFilter">
                        <option value="">-- Tất cả sân --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-uppercase text-muted">Loại giờ</label>
                    <select class="form-select shadow-none" name="peakHour">
                        <option value="">Tất cả</option>
                        <option value="true" selected="@(ViewBag.PeakFilter == "true")">Giờ cao điểm</option>
                        <option value="false" selected="@(ViewBag.PeakFilter == "false")">Giờ thường</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-uppercase text-muted">Loại khách</label>
                    <select class="form-select shadow-none" name="customerType">
                        <option value="">Tất cả</option>
                        <option value="Retail">Vãng lai</option>
                        <option value="Member">Cố định</option>
                        <option value="All">Mọi khách</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-dark w-100 shadow-none">
                        <i class="bi bi-funnel me-1"></i>Áp dụng bộ lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card border-0 shadow-sm" style="border-radius:15px; overflow:hidden;">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0 text-muted small text-uppercase">Thông tin sân</th>
                        <th class="py-3 border-0 text-muted small text-uppercase">Tên bảng giá</th>
                        <th class="py-3 border-0 text-muted small text-uppercase text-center">Ngày áp dụng</th>
                        <th class="py-3 border-0 text-muted small text-uppercase">Khung giờ</th>
                        <th class="py-3 border-0 text-muted small text-uppercase">Đơn giá</th>
                        <th class="py-3 border-0 text-muted small text-uppercase text-center">Loại khách</th>
                        <th class="py-3 border-0 text-muted small text-uppercase text-center">Trạng thái</th>
                        <th class="pe-4 py-3 border-0 text-muted small text-uppercase text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var slot in Model)
                        {
                            @* ✅ FIX: Tính custCls/custLabel trong @{ } block trước khi render HTML *@
                            string custCls, custLabel;
                            switch (slot.CustomerType ?? "All")
                            {
                                case "Retail":
                                    custCls = "bg-info-subtle text-info border-info-subtle";
                                    custLabel = "Vãng lai";
                                    break;
                                case "Member":
                                    custCls = "bg-success-subtle text-success border-success-subtle";
                                    custLabel = "Cố định";
                                    break;
                                default:
                                    custCls = "bg-light text-secondary border";
                                    custLabel = "Tất cả";
                                    break;
                            }

                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-2 me-3">
                                            <i class="bi bi-grid-3x3-gap-fill fs-5"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">Sân @slot.Court?.CourtNumber</div>
                                            <div class="text-muted small">@slot.Court?.Facility?.FacilityName</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    @* ✅ FIX: Dùng if/else thay vì ?? <text> *@
                                    @if (!string.IsNullOrEmpty(slot.SlotName))
                                    {
                                        <span class="fw-semibold text-dark small">@slot.SlotName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic small">—</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <span class="badge rounded-pill bg-light text-dark border fw-normal px-3">
                                        @FormatDays(slot)
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clock-history me-2 text-primary"></i>
                                        <span class="fw-semibold">
                                            @slot.StartTime.ToString(@"hh\:mm") – @slot.EndTime.ToString(@"hh\:mm")
                                        </span>
                                    </div>
                                    @if (slot.RoundingMinutes != 60)
                                    {
                                        <div class="text-muted" style="font-size:.72rem;">
                                            Làm tròn @slot.RoundingMinutes phút
                                        </div>
                                    }
                                </td>

                                <td>
                                    <div>
                                        <span class="text-success fw-bold fs-5">@slot.Price.ToString("N0")</span>
                                        <span class="text-success small">₫</span>
                                    </div>
                                    @if (slot.Surcharge > 0)
                                    {
                                        <div class="text-muted small">+ @slot.Surcharge.ToString("N0")₫ phụ phí</div>
                                    }
                                </td>

                                <td class="text-center">
                                    <span class="badge @custCls border px-2 py-1" style="font-size:.72rem;">
                                        @custLabel
                                    </span>
                                </td>

                                <td class="text-center">
                                    @if (slot.IsPeakHour)
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-2 py-1">
                                            <i class="bi bi-fire me-1"></i>Cao điểm
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info-subtle text-info border border-info-subtle px-2 py-1">
                                            <i class="bi bi-brightness-high me-1"></i>Thường
                                        </span>
                                    }
                                    @if (!slot.IsActive)
                                    {
                                        <div>
                                            <span class="badge bg-secondary-subtle text-secondary border mt-1"
                                                  style="font-size:.65rem;">Tắt</span>
                                        </div>
                                    }
                                </td>

                                <td class="pe-4 text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-none"
                                                type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li>
                                                <a class="dropdown-item py-2 text-warning"
                                                   asp-action="Edit" asp-route-id="@slot.PriceSlotId">
                                                    <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider opacity-50"></li>
                                            <li>
                                                <button class="dropdown-item py-2 text-danger"
                                                        onclick="deleteSlot(@slot.PriceSlotId)">
                                                    <i class="bi bi-trash3 me-2"></i>Xóa khung giờ
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-currency-exchange fs-1 opacity-25 d-block mb-3"></i>
                                <p class="mb-1">Chưa có dữ liệu bảng giá nào được thiết lập.</p>
                                <a asp-action="Create" class="btn btn-link text-decoration-none small">
                                    Bắt đầu tạo ngay →
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" style="max-width:400px;">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-body p-4 text-center">
                <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle mb-3"
                     style="width:64px;height:64px;">
                    <i class="bi bi-trash3 text-danger fs-3"></i>
                </div>
                <h5 class="fw-bold mb-2">Xác nhận xóa?</h5>
                <p class="text-muted small mb-4">Khung giờ này sẽ bị xóa vĩnh viễn khỏi hệ thống.</p>
                <div class="d-flex gap-2">
                    <button class="btn btn-light w-100 rounded-3 fw-semibold" data-bs-dismiss="modal">Hủy</button>
                    <button id="confirmDeleteBtn" class="btn btn-danger w-100 rounded-3 fw-semibold">Xác nhận xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteSlot(id) {
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();

            document.getElementById('confirmDeleteBtn').onclick = function() {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value ?? '';
                fetch(`/AdminPriceSlot/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token,
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: '__RequestVerificationToken=' + encodeURIComponent(token)
                })
                .then(r => r.json())
                .then(res => {
                    modal.hide();
                    if (res.success) location.reload();
                    else alert(res.message || 'Đã xảy ra lỗi khi xóa!');
                })
                .catch(() => { modal.hide(); alert('Lỗi kết nối máy chủ!'); });
            };
        }

        document.getElementById('FacilityFilter').addEventListener('change', function() {
            const fId = this.value;
            const sel = document.getElementById('CourtFilter');
            sel.innerHTML = '<option value="">-- Đang tải... --</option>';

            if (!fId) { sel.innerHTML = '<option value="">-- Tất cả sân --</option>'; return; }

            fetch(`/AdminPriceSlot/GetCourtsByFacility?facilityId=${fId}`)
                .then(r => r.json())
                .then(data => {
                    sel.innerHTML = '<option value="">-- Tất cả sân --</option>';
                    data.forEach(c => {
                        sel.innerHTML += `<option value="${c.courtId}">Sân ${c.courtNumber} (${c.courtType})</option>`;
                    });
                })
                .catch(() => sel.innerHTML = '<option value="">-- Lỗi tải dữ liệu --</option>');
        });
    </script>
}
