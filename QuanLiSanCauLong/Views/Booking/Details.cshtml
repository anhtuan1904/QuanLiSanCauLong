@model QuanLiSanCauLong.ViewModels.BookingHistoryViewModel
@{
    ViewData["Title"] = "Chi tiết đặt sân #" + Model.BookingCode;
}

<style>
    :root {
        --D: #1a1209;
        --D2: #231a0e;
        --G: #d4a017;
        --G2: #f5c842;
        --G3: rgba(212,160,23,.1);
        --W: #f5ede0;
        --S: #ede5d8;
        --R: #c94b2a;
        --GN: #10b981;
        --M: rgba(255,255,255,.38);
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: var(--W);
    }

    .pghd {
        background: var(--D);
        border-bottom: 1px solid rgba(212,160,23,.18);
        padding: .78rem 2rem;
        display: flex;
        align-items: center;
        gap: .6rem;
        position: relative;
    }

        .pghd::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg,var(--G),var(--G2),transparent);
        }

        .pghd a {
            color: var(--G2);
            text-decoration: none;
            font-size: .78rem;
            font-weight: 600;
            opacity: .8;
            display: flex;
            align-items: center;
            gap: .35rem;
        }

            .pghd a:hover {
                opacity: 1;
            }

        .pghd .sep {
            color: var(--M);
            font-size: .65rem;
        }

        .pghd .cur {
            color: var(--M);
            font-size: .78rem;
            font-style: italic;
        }

    .pw {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Hero banner */
    .d-hero {
        background: var(--D);
        border: 1px solid rgba(212,160,23,.18);
        border-radius: 10px;
        padding: 1.8rem 2rem;
        margin-bottom: 1.4rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1.2rem;
        position: relative;
        overflow: hidden;
    }

        .d-hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(ellipse 55% 100% at 80% 50%,rgba(212,160,23,.06),transparent);
        }

    .d-hero-left {
        position: relative;
        z-index: 1;
    }

    .d-code {
        font-size: .6rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--G);
        margin-bottom: .3rem;
    }

    .d-name {
        font-family: 'Playfair Display',serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .4rem;
    }

    .d-addr {
        font-size: .78rem;
        color: var(--M);
        display: flex;
        align-items: center;
        gap: .35rem;
    }

        .d-addr i {
            color: var(--R);
        }

    .d-hero-right {
        display: flex;
        align-items: center;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }

    .d-stat {
        text-align: center;
        padding: 1rem 1.2rem;
        background: rgba(255,255,255,.04);
        border: 1px solid rgba(212,160,23,.18);
        border-radius: 8px;
    }

    .d-sv {
        font-family: 'Outfit',sans-serif;
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--G2);
        margin-bottom: .22rem;
    }

    .d-sl {
        font-size: .58rem;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--M);
    }

    /* Cards */
    .c {
        background: #fff;
        border: 1px solid var(--S);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1.2rem;
    }

    .c-hd {
        background: var(--D);
        padding: .85rem 1.4rem;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

        .c-hd i {
            color: var(--G);
        }

    .c-title {
        font-family: 'Playfair Display',serif;
        font-style: italic;
        font-size: .9rem;
        font-weight: 700;
        color: #fff;
    }

    .c-bd {
        padding: 1.3rem 1.4rem;
    }

    /* Info grid */
    .ig {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 1rem;
    }

    .ig2 {
        grid-template-columns: repeat(2,1fr);
    }

    .ig-item {
    }

    .ig-lbl {
        font-size: .62rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: #8c7a68;
        margin-bottom: .28rem;
    }

    .ig-val {
        font-size: .9rem;
        font-weight: 600;
        color: var(--D);
        display: flex;
        align-items: center;
        gap: .35rem;
    }

        .ig-val i {
            color: var(--G);
        }

    .vtag {
        background: var(--S);
        color: #4a3728;
        font-size: .6rem;
        font-weight: 700;
        letter-spacing: .07em;
        text-transform: uppercase;
        padding: .14rem .5rem;
        border-radius: 3px;
    }

    /* Status badge */
    .sb {
        padding: .24rem .75rem;
        border-radius: 4px;
        font-size: .66rem;
        font-weight: 700;
        letter-spacing: .06em;
        text-transform: uppercase;
    }

        .sb.confirmed {
            background: #d1fae5;
            color: #065f46;
        }

        .sb.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .sb.cancelled {
            background: #fee2e2;
            color: #991b1b;
        }

        .sb.playing {
            background: #dbeafe;
            color: #1e40af;
        }

        .sb.completed {
            background: #f0fdf4;
            color: #166534;
        }

    /* Timeline */
    .timeline {
        display: flex;
        align-items: center;
        gap: .6rem;
        padding: 1rem 0;
        overflow-x: auto;
    }

    .tstep {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: .3rem;
        flex-shrink: 0;
    }

    .tstep-dot {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid var(--S);
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: .78rem;
        color: #8c7a68;
        transition: all .2s;
    }

        .tstep-dot.done {
            background: var(--G);
            border-color: var(--G);
            color: var(--D);
        }

        .tstep-dot.cur {
            background: var(--D);
            border-color: var(--G);
            color: var(--G2);
        }

    .tstep-lbl {
        font-size: .62rem;
        font-weight: 600;
        color: #8c7a68;
        text-align: center;
    }

        .tstep-lbl.done {
            color: var(--D);
        }

        .tstep-lbl.cur {
            color: var(--G);
        }

    .tline {
        height: 2px;
        flex: 1;
        background: var(--S);
        min-width: 32px;
    }

        .tline.done {
            background: linear-gradient(90deg,var(--G),var(--G2));
        }

    /* Product table */
    .ptbl {
        width: 100%;
        border-collapse: collapse;
    }

        .ptbl th {
            background: var(--D2);
            padding: .7rem .9rem;
            font-size: .64rem;
            font-weight: 700;
            letter-spacing: .1em;
            text-transform: uppercase;
            color: var(--G);
            text-align: left;
            border: none;
        }

        .ptbl td {
            padding: .75rem .9rem;
            font-size: .84rem;
            border-bottom: 1px solid var(--S);
            vertical-align: middle;
        }

        .ptbl tbody tr:hover {
            background: #fdfcfa;
        }

        .ptbl tfoot td {
            padding: .8rem .9rem;
            font-size: .88rem;
            font-weight: 700;
            border-top: 2px solid var(--S);
        }

    .no-prod {
        text-align: center;
        padding: 2rem;
        color: #8c7a68;
        font-size: .82rem;
    }

    /* Price summary */
    .ps-rows {
        display: flex;
        flex-direction: column;
        gap: .4rem;
    }

    .psr {
        display: flex;
        justify-content: space-between;
        font-size: .88rem;
        padding: .38rem 0;
    }

        .psr + .psr {
            border-top: 1px solid var(--S);
        }

    .psr-lbl {
        color: #8c7a68;
    }

    .psr-val {
        font-weight: 600;
        color: var(--D);
    }

        .psr-val.gn {
            color: var(--GN);
        }

        .psr-val.rd {
            color: #dc2626;
        }

    .psr-div {
        border: none;
        border-top: 2px solid var(--S);
        margin: .5rem 0;
    }

    .psr-tot {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }

    .psr-tot-lbl {
        font-size: .9rem;
        font-weight: 700;
        color: var(--D);
    }

    .psr-tot-val {
        font-family: 'Outfit',sans-serif;
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--D);
    }

    /* Actions */
    .act-row {
        display: flex;
        gap: .65rem;
        flex-wrap: wrap;
        margin-top: 1.4rem;
    }

    .btn-a {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: .62rem 1.2rem;
        border-radius: 6px;
        font-size: .8rem;
        font-weight: 700;
        cursor: pointer;
        border: none;
        text-decoration: none;
        transition: all .2s;
    }

        .btn-a.prim {
            background: linear-gradient(135deg,var(--G),var(--G2));
            color: var(--D);
        }

            .btn-a.prim:hover {
                transform: translateY(-1px);
                box-shadow: 0 6px 18px rgba(212,160,23,.35);
                color: var(--D);
            }

        .btn-a.sec {
            background: none;
            border: 1.5px solid var(--S);
            color: #4a3728;
        }

            .btn-a.sec:hover {
                border-color: var(--D);
                color: var(--D);
            }

        .btn-a.dan {
            background: rgba(220,38,38,.08);
            border: 1.5px solid rgba(220,38,38,.2);
            color: #dc2626;
        }

            .btn-a.dan:hover {
                background: #dc2626;
                color: #fff;
            }

    /* Cancel modal */
    .modal-dark .modal-content {
        border: 1px solid rgba(212,160,23,.18);
        border-radius: 10px;
        overflow: hidden;
    }

    .modal-dark .modal-header {
        background: var(--D);
        border-bottom: 1px solid rgba(212,160,23,.18);
    }

    .modal-dark .modal-title {
        font-family: 'Playfair Display',serif;
        font-style: italic;
        color: #fff;
        font-size: 1rem;
    }

    .modal-dark .btn-close {
        filter: invert(1) opacity(.5);
    }

    .modal-dark .modal-body {
        background: #fff;
        padding: 1.4rem;
    }

    .modal-dark .modal-footer {
        background: #fdf8f0;
        border-top: 1px solid var(--S);
    }

    .modal-dark textarea {
        width: 100%;
        padding: .7rem .95rem;
        border: 1.5px solid var(--S);
        border-radius: 7px;
        font-family: 'Outfit',sans-serif;
        font-size: .84rem;
        color: var(--D);
        outline: none;
        resize: vertical;
    }

        .modal-dark textarea:focus {
            border-color: var(--G);
        }

    .warn-note {
        background: rgba(212,160,23,.08);
        border: 1px solid rgba(212,160,23,.22);
        border-radius: 6px;
        padding: .65rem .9rem;
        margin-top: .9rem;
        font-size: .76rem;
        color: #7a5c0a;
        display: flex;
        align-items: flex-start;
        gap: .4rem;
    }

        .warn-note i {
            color: var(--G);
            flex-shrink: 0;
            margin-top: 1px;
        }

    .btn-confirm-cancel {
        padding: .6rem 1.3rem;
        background: linear-gradient(135deg,#dc2626,#ef4444);
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: .8rem;
        font-weight: 700;
        cursor: pointer;
    }

    .btn-modal-close {
        padding: .6rem 1.1rem;
        background: none;
        border: 1.5px solid var(--S);
        border-radius: 6px;
        font-size: .8rem;
        font-weight: 600;
        color: #8c7a68;
        cursor: pointer;
    }

        .btn-modal-close:hover {
            border-color: var(--D);
            color: var(--D);
        }

    .note-box {
        background: #fdf8f0;
        border: 1px solid rgba(212,160,23,.2);
        border-left: 3px solid var(--G);
        border-radius: 6px;
        padding: .75rem 1rem;
        font-size: .84rem;
        color: #4a3728;
    }

    @@media(max-width:900px) {
        .ig {
            grid-template-columns: 1fr 1fr;
        }

        .d-hero {
            flex-direction: column;
        }

        .d-hero-right {
            flex-direction: row;
            width: 100%;
        }

        .pw, .pghd {
            padding-left: 1.2rem;
            padding-right: 1.2rem;
        }
    }

    @@media(max-width:600px) {
        .ig {
            grid-template-columns: 1fr;
        }

        .ig2 {
            grid-template-columns: 1fr;
        }

        .act-row {
            flex-direction: column;
        }
    }
</style>

<div class="pghd">
    <a asp-action="MyBookings"><i class="bi bi-arrow-left"></i> Lịch đặt sân</a>
    <span class="sep"><i class="bi bi-chevron-right"></i></span>
    <span class="cur">@Model.BookingCode</span>
</div>

<div class="pw">

    <!-- Hero -->
    <div class="d-hero">
        <div class="d-hero-left">
            <div class="d-code"><i class="bi bi-hash"></i> Mã đơn: @Model.BookingCode</div>
            <div class="d-name">@Model.FacilityName</div>
            <div class="d-addr"><i class="bi bi-geo-alt-fill"></i> Chi tiết đặt sân cầu lông</div>
        </div>
        <div class="d-hero-right">
            <div class="d-stat">
                <div class="d-sv"><span class="sb @Model.Status.ToLower()">@Model.Status</span></div>
                <div class="d-sl">Trạng thái</div>
            </div>
            <div class="d-stat">
                <div class="d-sv">@Model.GrandTotal.ToString("N0")đ</div>
                <div class="d-sl">Tổng tiền</div>
            </div>
            <div class="d-stat">
                <div class="d-sv">@Model.BookingDate.ToString("dd/MM")</div>
                <div class="d-sl">Ngày chơi</div>
            </div>
        </div>
    </div>

    <!-- Status Timeline -->
    <div class="c">
        <div class="c-hd"><i class="bi bi-arrow-right-circle"></i><span class="c-title">Tiến trình đơn đặt</span></div>
        <div class="c-bd">
            @{
                var steps = new[] { ("Pending", "Chờ xác nhận", "bi-hourglass"), ("Confirmed", "Đã xác nhận", "bi-check-circle"), ("Playing", "Đang chơi", "bi-controller"), ("Completed", "Hoàn thành", "bi-trophy") };
                var statusOrder = new[] { "Pending", "Confirmed", "Playing", "Completed" };
                int curIdx = Array.IndexOf(statusOrder, Model.Status);
            }
            <div class="timeline">
                @for (int si = 0; si < steps.Length; si++)
                {
                    var (sv, sl, icon) = steps[si];
                    bool done = curIdx > si || Model.Status == sv;
                    bool cur = Model.Status == sv;
                    <div class="tstep">
                        <div class="tstep-dot @(done ? "done" : "") @(cur ? "cur" : "")"><i class="bi @icon"></i></div>
                        <div class="tstep-lbl @(done ? "done" : "") @(cur ? "cur" : "")">@sl</div>
                    </div>
                    if (si < steps.Length - 1)
                    {
                        <div class="tline @(curIdx > si ? "done" : "")"></div>
                    }
                }
                @if (Model.Status == "Cancelled")
                {
                    <div style="margin-left:.8rem;display:flex;align-items:center;gap:.4rem;font-size:.78rem;color:#dc2626;font-weight:600">
                        <i class="bi bi-x-circle"></i> Đã hủy
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Booking Info -->
    <div class="c">
        <div class="c-hd"><i class="bi bi-calendar-check"></i><span class="c-title">Thông tin đặt sân</span></div>
        <div class="c-bd">
            <div class="ig">
                <div class="ig-item">
                    <div class="ig-lbl">Cơ sở</div>
                    <div class="ig-val"><i class="bi bi-building"></i> @Model.FacilityName</div>
                </div>
                <div class="ig-item">
                    <div class="ig-lbl">Sân</div>
                    <div class="ig-val"><i class="bi bi-grid-3x3-gap"></i> @Model.CourtNumber <span class="vtag">@Model.CourtType</span></div>
                </div>
                <div class="ig-item">
                    <div class="ig-lbl">Ngày chơi</div>
                    <div class="ig-val"><i class="bi bi-calendar3"></i> @Model.BookingDate.ToString("dd/MM/yyyy") <span style="color:#8c7a68;font-size:.74rem">(@Model.BookingDate.ToString("dddd", new System.Globalization.CultureInfo("vi-VN")))</span></div>
                </div>
                <div class="ig-item">
                    <div class="ig-lbl">Giờ chơi</div>
                    <div class="ig-val"><i class="bi bi-clock"></i> @Model.StartTime.ToString(@"hh\:mm") – @Model.EndTime.ToString(@"hh\:mm") <span style="color:#8c7a68;font-size:.74rem">(@Model.Duration phút)</span></div>
                </div>
                <div class="ig-item">
                    <div class="ig-lbl">Thanh toán</div>
                    <div class="ig-val"><i class="bi bi-credit-card"></i> @Model.PaymentMethod <span class="sb @(Model.PaymentStatus?.ToLower() == "paid" ? "confirmed" : "pending")" style="font-size:.62rem">@Model.PaymentStatus</span></div>
                </div>
                <div class="ig-item">
                    <div class="ig-lbl">Đặt lúc</div>
                    <div class="ig-val" style="font-size:.82rem"><i class="bi bi-clock-history"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Note))
            {
                <div style="margin-top:1rem">
                    <div style="font-size:.62rem;font-weight:700;letter-spacing:.1em;text-transform:uppercase;color:#8c7a68;margin-bottom:.3rem">Ghi chú</div>
                    <div class="note-box">@Model.Note</div>
                </div>
            }
        </div>
    </div>

    <!-- Products -->
    @if (Model.RelatedOrders != null && Model.RelatedOrders.Any())
    {
        <div class="c">
            <div class="c-hd"><i class="bi bi-bag-check"></i><span class="c-title">Sản phẩm đi kèm</span></div>
            <div style="overflow-x:auto">
                @foreach (var order in Model.RelatedOrders)
                {
                    <table class="ptbl">
                        <thead>
                            <tr><th>Sản phẩm</th><th>SL</th><th>Đơn giá</th><th>Thành tiền</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var d in order.OrderDetails)
                            {
                                <tr>
                                    <td><strong>@d.ProductName</strong> <span style="color:#8c7a68;font-size:.76rem">@d.Unit</span></td>
                                    <td><span style="font-weight:700">×@d.Quantity</span></td>
                                    <td>@d.UnitPrice.ToString("N0")đ</td>
                                    <td style="font-weight:700;color:var(--G)">@d.TotalPrice.ToString("N0")đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" style="text-align:right;color:#8c7a68">Tổng đơn hàng:</td>
                                <td style="color:var(--GN)">@order.TotalAmount.ToString("N0")đ</td>
                            </tr>
                        </tfoot>
                    </table>
                }
            </div>
        </div>
    }

    <!-- Payment summary -->
    <div class="c">
        <div class="c-hd"><i class="bi bi-receipt"></i><span class="c-title">Chi tiết thanh toán</span></div>
        <div class="c-bd" style="max-width:380px">
            <div class="ps-rows">
                <div class="psr"><span class="psr-lbl">Giá sân</span><span class="psr-val gn">@Model.TotalPrice.ToString("N0")đ</span></div>
                @if (Model.RelatedOrders != null && Model.RelatedOrders.Any())
                {
                    <div class="psr"><span class="psr-lbl">Sản phẩm</span><span class="psr-val">@Model.RelatedOrders.Sum(o => o.TotalAmount).ToString("N0")đ</span></div>
                }
                <hr class="psr-div" />
                <div class="psr-tot"><span class="psr-tot-lbl">Tổng cộng</span><span class="psr-tot-val">@Model.GrandTotal.ToString("N0")đ</span></div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="act-row">
        <a asp-action="MyBookings" class="btn-a sec"><i class="bi bi-arrow-left"></i> Quay lại</a>
        @if (Model.CanCancel)
        {
            <button type="button" class="btn-a dan" onclick="document.getElementById('cancelModal').querySelector('.modal').show?.() || new bootstrap.Modal(document.getElementById('cancelModal')).show()">
                <i class="bi bi-x-circle"></i> Hủy đơn này
            </button>
        }
        @if (Model.Status == "Completed")
        {
            <button type="button" class="btn-a prim"><i class="bi bi-star"></i> Viết đánh giá</button>
        }
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade modal-dark" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2" style="color:var(--G)"></i> Hủy đặt sân</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Cancel" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.BookingId" />
                    <p style="font-size:.88rem;color:var(--D)">Hủy đơn <strong>@Model.BookingCode</strong>?</p>
                    <div>
                        <div style="font-size:.62rem;font-weight:700;letter-spacing:.1em;text-transform:uppercase;color:#8c7a68;margin-bottom:.35rem">Lý do hủy *</div>
                        <textarea name="cancelReason" rows="3" required placeholder="Nhập lý do hủy..."></textarea>
                    </div>
                    <div class="warn-note"><i class="bi bi-info-circle"></i><span>Chỉ có thể hủy trước giờ chơi ít nhất <strong>2 giờ</strong></span></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modal-close" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn-confirm-cancel"><i class="bi bi-x-circle me-1"></i> Xác nhận hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

