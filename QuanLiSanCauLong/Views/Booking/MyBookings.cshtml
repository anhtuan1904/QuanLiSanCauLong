@model List<QuanLiSanCauLong.ViewModels.BookingHistoryViewModel>

@{
    ViewData["Title"] = "Lịch sử đặt sân";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h3><i class="bi bi-calendar-event"></i> Lịch sử đặt sân</h3>
            <p class="text-muted">Quản lý tất cả các đơn đặt sân của bạn</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Search" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Đặt sân mới
            </a>
        </div>
    </div>

    <!-- Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="MyBookings" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">Tất cả</option>
                            @if (ViewBag.Statuses != null)
                            {
                                @foreach (var status in ViewBag.Statuses)
                                {
                                    <option value="@status">@status</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" name="fromDate" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" name="toDate" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-filter"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Bookings List -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
            <h5>Chưa có đơn đặt sân nào</h5>
            <p class="mb-3">Hãy đặt sân ngay để bắt đầu chơi cầu lông!</p>
            <a asp-action="Search" class="btn btn-success">
                <i class="bi bi-calendar-plus"></i> Đặt sân ngay
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card booking-card shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h5 class="mb-1">
                                                <i class="bi bi-building text-success"></i>
                                                @booking.FacilityName
                                            </h5>
                                            <div class="text-muted mb-2">
                                                <strong>Mã đơn:</strong> @booking.BookingCode
                                            </div>
                                        </div>
                                        <div>
                                            @if (booking.Status == "Confirmed")
                                            {
                                                <span class="badge bg-success">Đã xác nhận</span>
                                            }
                                            else if (booking.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Chờ xác nhận</span>
                                            }
                                            else if (booking.Status == "Playing")
                                            {
                                                <span class="badge bg-info">Đang chơi</span>
                                            }
                                            else if (booking.Status == "Completed")
                                            {
                                                <span class="badge bg-secondary">Hoàn thành</span>
                                            }
                                            else if (booking.Status == "Cancelled")
                                            {
                                                <span class="badge bg-danger">Đã hủy</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <small class="text-muted d-block">Sân</small>
                                            <strong>
                                                Sân @booking.CourtNumber
                                                <span class="badge bg-secondary">@booking.CourtType</span>
                                            </strong>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block">Ngày chơi</small>
                                            <strong>
                                                <i class="bi bi-calendar"></i>
                                                @booking.BookingDate.ToString("dd/MM/yyyy")
                                            </strong>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block">Giờ chơi</small>
                                            <strong>
                                                <i class="bi bi-clock"></i>
                                                @booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")
                                            </strong>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block">Đặt lúc</small>
                                            <strong>@booking.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                                        </div>
                                    </div>

                                    @if (booking.RelatedOrders != null && booking.RelatedOrders.Any())
                                    {
                                        <div class="mt-3">
                                            <small class="text-muted">Sản phẩm đi kèm:</small>
                                            <ul class="list-unstyled mb-0 mt-1">
                                                @foreach (var order in booking.RelatedOrders)
                                                {
                                                    @foreach (var detail in order.OrderDetails)
                                                    {
                                                        <li class="small">
                                                            <i class="bi bi-box"></i>
                                                            @detail.ProductName x@detail.Quantity -
                                                            <span class="text-success">@detail.TotalPrice.ToString("N0")đ</span>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-4 border-start">
                                    <div class="text-center mb-3">
                                        <small class="text-muted d-block">Tổng tiền</small>
                                        <h4 class="text-success mb-0">@booking.GrandTotal.ToString("N0")đ</h4>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <a asp-action="Details" asp-route-id="@booking.BookingId"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>

                                        @if (booking.CanCancel)
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                    onclick="cancelBooking(@booking.BookingId, '@booking.BookingCode')">
                                                <i class="bi bi-x-circle"></i> Hủy đơn
                                            </button>
                                        }

                                        @if (booking.Status == "Completed")
                                        {
                                            <button type="button" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-star"></i> Đánh giá
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Count > 10)
        {
            <nav aria-label="Pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Hủy đặt sân</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="cancelForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="cancelBookingId" name="id" />
                    <p>Bạn có chắc chắn muốn hủy đơn <strong id="cancelBookingCode"></strong>?</p>

                    <div class="mb-3">
                        <label for="cancelReason" class="form-label">Lý do hủy</label>
                        <textarea class="form-control" id="cancelReason" name="cancelReason"
                                  rows="3" required placeholder="Nhập lý do hủy đơn"></textarea>
                    </div>

                    <div class="alert alert-warning mb-0">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            Lưu ý: Bạn chỉ có thể hủy đơn trước giờ chơi ít nhất 2 giờ
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Đóng
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Xác nhận hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelBooking(bookingId, bookingCode) {
            $('#cancelBookingId').val(bookingId);
            $('#cancelBookingCode').text(bookingCode);
            $('#cancelForm').attr('action', '@Url.Action("Cancel", "Booking")');

            const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }

        $(document).ready(function() {
            // Add animation to cards
            $('.booking-card').each(function(index) {
                $(this).css('animation', `fadeIn 0.5s ease-in-out ${index * 0.1}s both`);
            });

            // Form validation
            $('#cancelForm').on('submit', function(e) {
                const reason = $('#cancelReason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    showError('Vui lòng nhập lý do hủy đơn');
                    return false;
                }
            });
        });
    </script>
}