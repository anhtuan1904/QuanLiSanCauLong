@model IEnumerable<QuanLiSanCauLong.ViewModels.FacilityCardViewModel>
@{
    ViewData["Title"] = "Danh sách sân cầu lông";
}

@section Styles {
    <style>
        :root {
            --deep: #1a1209;
            --deep2: #231a0e;
            --deep3: #2e2110;
            --gold: #d4a017;
            --gold2: #f5c842;
            --gold3: rgba(212,160,23,.12);
            --cream: #fdf8f0;
            --warm: #f5ede0;
            --border: rgba(212,160,23,.18);
            --muted-dark: rgba(255,255,255,.38);
            --text-dark: rgba(255,255,255,.82);
            --rust: #c94b2a;
            --sand: #ede5d8;
        }

        body {
            background: var(--warm);
        }

        /* ── HERO ─────────────────────────────────────── */
        .fac-hero {
            background: var(--deep);
            position: relative;
            overflow: hidden;
            display: grid;
            grid-template-columns: 1fr 420px;
            min-height: 72vh;
        }

            .fac-hero::before {
                content: '';
                position: absolute;
                inset: 0;
                background: radial-gradient(ellipse 70% 80% at 30% 60%, rgba(212,160,23,.07) 0%, transparent 70%);
                pointer-events: none;
            }

        .fac-hero-left {
            padding: 5rem 5rem 4rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            position: relative;
            z-index: 2;
        }

        .hero-eyebrow {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2.5rem;
        }

        .hero-pill {
            background: var(--rust);
            color: #fff;
            font-family: 'Outfit', sans-serif;
            font-size: .65rem;
            font-weight: 700;
            letter-spacing: .2em;
            text-transform: uppercase;
            padding: .35rem 1rem;
            border-radius: 3px;
        }

        .hero-line {
            flex: 1;
            max-width: 50px;
            height: 1px;
            background: var(--border);
        }

        .hero-headline {
            margin-bottom: 2.5rem;
            line-height: 1;
        }

        .h-dim {
            display: block;
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: clamp(2rem, 3.5vw, 3.5rem);
            color: rgba(255,255,255,.25);
            margin-bottom: .3rem;
        }

        .h-main {
            display: block;
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: clamp(3.5rem, 7vw, 7.5rem);
            line-height: .9;
            letter-spacing: -.03em;
            color: var(--gold2);
        }

        .h-sub {
            display: block;
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: clamp(3.5rem, 7vw, 7.5rem);
            line-height: .9;
            letter-spacing: -.03em;
            color: rgba(255,255,255,.9);
        }

        .h-accent {
            display: block;
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: clamp(1.8rem, 3vw, 3rem);
            color: rgba(255,255,255,.2);
            margin-top: .5rem;
        }

        .hero-stats {
            display: flex;
            gap: 3rem;
            border-top: 1px solid var(--border);
            padding-top: 2.5rem;
        }

        .hstat-n {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 2.2rem;
            color: var(--gold2);
            line-height: 1;
        }

        .hstat-l {
            font-size: .7rem;
            letter-spacing: .14em;
            text-transform: uppercase;
            color: var(--muted-dark);
            margin-top: .25rem;
        }

        .fac-hero-right {
            position: relative;
            overflow: hidden;
        }

            .fac-hero-right img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: .55;
                mix-blend-mode: luminosity;
                filter: contrast(1.1) sepia(.15);
            }

            .fac-hero-right::before {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(to right, var(--deep) 0%, transparent 40%);
                z-index: 1;
            }

            /* Gold decoration line */
            .fac-hero-right::after {
                content: '';
                position: absolute;
                left: 0;
                top: 15%;
                bottom: 15%;
                width: 3px;
                background: linear-gradient(to bottom, transparent, var(--gold) 30%, var(--gold2) 70%, transparent);
                z-index: 2;
            }

        /* ── SEARCH BAR ───────────────────────────────── */
        .search-strip {
            background: var(--deep2);
            border-bottom: 2px solid var(--border);
            padding: 1.5rem 5rem;
            display: flex;
            align-items: center;
            gap: 1.2rem;
            position: relative;
        }

            .search-strip::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: linear-gradient(90deg, var(--gold) 0%, var(--gold2) 50%, transparent 100%);
            }

        .search-field-wrap {
            flex: 1;
            max-width: 480px;
            display: flex;
            background: rgba(255,255,255,.06);
            border: 1px solid var(--border);
            border-radius: 5px;
            overflow: hidden;
            transition: border-color .2s;
        }

            .search-field-wrap:focus-within {
                border-color: var(--gold);
                box-shadow: 0 0 0 3px rgba(212,160,23,.12);
            }

        .search-field {
            flex: 1;
            background: none;
            border: none;
            padding: .85rem 1.2rem;
            color: #fff;
            font-family: 'Outfit', sans-serif;
            font-size: .88rem;
            outline: none;
        }

            .search-field::placeholder {
                color: var(--muted-dark);
            }

        .search-btn {
            background: linear-gradient(135deg, var(--gold), var(--gold2));
            border: none;
            color: var(--deep);
            padding: .85rem 1.3rem;
            cursor: pointer;
            font-size: .9rem;
            font-weight: 700;
            transition: all .2s;
        }

            .search-btn:hover {
                filter: brightness(1.1);
            }

        .city-select {
            background: rgba(255,255,255,.06);
            border: 1px solid var(--border);
            border-radius: 5px;
            color: var(--text-dark);
            padding: .85rem 1.1rem;
            font-family: 'Outfit', sans-serif;
            font-size: .86rem;
            outline: none;
            cursor: pointer;
            min-width: 190px;
            transition: border-color .2s;
        }

            .city-select:focus {
                border-color: var(--gold);
            }

            .city-select option {
                background: var(--deep2);
                color: #fff;
            }

        .search-count {
            font-family: 'Outfit', sans-serif;
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--muted-dark);
            margin-left: auto;
            white-space: nowrap;
        }

            .search-count span {
                color: var(--gold2);
            }

        /* ── FILTER BAR ───────────────────────────────── */
        .filter-bar {
            background: var(--cream);
            border-bottom: 1px solid var(--sand);
            padding: .9rem 5rem;
            display: flex;
            align-items: center;
            gap: .75rem;
            overflow-x: auto;
            scrollbar-width: none;
        }

            .filter-bar::-webkit-scrollbar {
                display: none;
            }

        .filter-label {
            font-size: .65rem;
            font-weight: 700;
            letter-spacing: .18em;
            text-transform: uppercase;
            color: #8c7a68;
            white-space: nowrap;
            flex-shrink: 0;
            margin-right: .5rem;
        }

        .fpill {
            padding: .4rem 1.1rem;
            border: 1.5px solid var(--sand);
            background: none;
            font-family: 'Outfit', sans-serif;
            font-size: .78rem;
            font-weight: 600;
            color: #8c7a68;
            cursor: pointer;
            border-radius: 4px;
            transition: all .2s;
            white-space: nowrap;
            flex-shrink: 0;
        }

            .fpill:hover {
                border-color: var(--gold);
                color: var(--gold);
                background: var(--gold3);
            }

            .fpill.active {
                background: var(--deep);
                color: var(--gold2);
                border-color: var(--deep);
            }

        /* ── GRID SECTION ─────────────────────────────── */
        .grid-section {
            padding: 4rem 5rem;
            max-width: 1600px;
            margin: 0 auto;
        }

        .grid-header {
            display: flex;
            align-items: baseline;
            justify-content: space-between;
            margin-bottom: 3rem;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .grid-title {
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 2.2rem;
            color: var(--deep);
        }

        .sort-row {
            display: flex;
            gap: .5rem;
            flex-wrap: wrap;
        }

        .sort-btn {
            padding: .4rem 1rem;
            border: 1.5px solid var(--sand);
            background: none;
            font-family: 'Outfit', sans-serif;
            font-size: .75rem;
            font-weight: 700;
            letter-spacing: .06em;
            color: #8c7a68;
            cursor: pointer;
            border-radius: 4px;
            transition: all .2s;
        }

            .sort-btn:hover, .sort-btn.active {
                border-color: var(--deep);
                color: var(--deep);
                background: rgba(26,18,9,.04);
            }

        /* ── FACILITY GRID ────────────────────────────── */
        .fac-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
        }

        /* ── FACILITY CARD ────────────────────────────── */
        .fac-card {
            background: #fff;
            border: 1px solid var(--sand);
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            transition: all .3s cubic-bezier(.25,.46,.45,.94);
            position: relative;
        }

            .fac-card::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                height: 3px;
                width: 0;
                background: linear-gradient(90deg, var(--gold), var(--gold2));
                transition: width .4s cubic-bezier(.25,.46,.45,.94);
                z-index: 2;
            }

            .fac-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 48px rgba(26,18,9,.14);
                border-color: var(--border);
            }

                .fac-card:hover::before {
                    width: 100%;
                }

        .fac-img-wrap {
            height: 230px;
            overflow: hidden;
            position: relative;
            background: var(--sand);
            flex-shrink: 0;
        }

            .fac-img-wrap img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform .6s cubic-bezier(.25,.46,.45,.94), filter .4s;
                filter: saturate(.92);
            }

        .fac-card:hover .fac-img-wrap img {
            transform: scale(1.06);
            filter: saturate(.75) brightness(.88);
        }

        .no-img {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--sand);
        }

            .no-img i {
                font-size: 3.5rem;
                color: rgba(26,18,9,.12);
            }

        .rating-chip {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: var(--deep);
            color: var(--gold2);
            font-family: 'Outfit', sans-serif;
            font-size: .78rem;
            font-weight: 700;
            padding: .3rem .75rem;
            border-radius: 4px;
            display: flex;
            align-items: center;
            gap: .3rem;
            border: 1px solid var(--border);
        }

            .rating-chip i {
                color: var(--gold);
                font-size: .75rem;
            }

        .avail-badge {
            position: absolute;
            bottom: 1rem;
            left: 1rem;
            background: rgba(16,185,129,.9);
            color: #fff;
            font-size: .65rem;
            font-weight: 700;
            letter-spacing: .1em;
            text-transform: uppercase;
            padding: .25rem .75rem;
            border-radius: 3px;
        }

        .fac-body {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .fac-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--deep);
            margin-bottom: .85rem;
            line-height: 1.2;
        }

        .fac-meta {
            display: flex;
            gap: 1.2rem;
            flex-wrap: wrap;
            margin-bottom: 1.25rem;
        }

        .fac-meta-item {
            display: flex;
            align-items: center;
            gap: .4rem;
            font-size: .8rem;
            color: #8c7a68;
        }

            .fac-meta-item i {
                font-size: .85rem;
            }

        .fac-footer {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            margin-top: auto;
            padding-top: 1.2rem;
            border-top: 1px solid var(--sand);
        }

        .fac-price-val {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--deep);
            line-height: 1;
        }

        .fac-price-unit {
            font-size: .7rem;
            letter-spacing: .1em;
            text-transform: uppercase;
            color: #8c7a68;
            margin-top: .2rem;
        }

        .fac-cta {
            display: inline-flex;
            align-items: center;
            gap: .45rem;
            background: var(--deep);
            color: var(--gold2);
            font-family: 'Outfit', sans-serif;
            font-size: .75rem;
            font-weight: 700;
            letter-spacing: .06em;
            text-transform: uppercase;
            padding: .6rem 1.2rem;
            border-radius: 5px;
            text-decoration: none;
            border: 1px solid var(--border);
            transition: all .3s;
        }

            .fac-cta:hover {
                background: linear-gradient(135deg, var(--gold), var(--gold2));
                color: var(--deep);
                border-color: var(--gold);
                transform: translateX(2px);
            }

        /* ── EMPTY STATE ──────────────────────────────── */
        .fac-empty {
            grid-column: 1/-1;
            background: #fff;
            border: 1px solid var(--sand);
            border-radius: 8px;
            padding: 6rem;
            text-align: center;
        }

        .fac-empty-icon {
            font-size: 4rem;
            color: var(--sand);
            margin-bottom: 1.5rem;
            display: block;
        }

        .fac-empty-title {
            font-family: 'Playfair Display', serif;
            font-style: italic;
            font-size: 2rem;
            color: var(--deep);
            margin-bottom: .75rem;
        }

        .fac-empty-desc {
            color: #8c7a68;
            font-size: .9rem;
        }

        /* ── RESPONSIVE ───────────────────────────────── */
        @@media (max-width: 1200px) {
            .fac-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .grid-section, .search-strip, .filter-bar {
                padding-left: 2rem;
                padding-right: 2rem;
            }

            .fac-hero {
                grid-template-columns: 1fr;
                min-height: auto;
            }

            .fac-hero-right {
                display: none;
            }

            .fac-hero-left {
                padding: 4rem 2rem 3rem;
            }
        }

        @@media (max-width: 700px) {
            .fac-grid {
                grid-template-columns: 1fr;
            }

            .search-strip {
                flex-wrap: wrap;
                gap: .75rem;
                padding: 1rem 1.5rem;
            }

            .search-count {
                display: none;
            }

            .grid-section {
                padding: 2.5rem 1.5rem;
            }

            .filter-bar {
                padding: .75rem 1.5rem;
            }
        }
    </style>
}

<!-- HERO -->
<section class="fac-hero">
    <div class="fac-hero-left">
        <div class="hero-eyebrow">
            <div class="hero-pill">Badminton Courts</div>
            <div class="hero-line"></div>
        </div>
        <div class="hero-headline">
            <span class="h-dim">Tìm kiếm &amp; đặt</span>
            <span class="h-main">SÂN</span>
            <span class="h-sub">CẦU LÔNG</span>
            <span class="h-accent">ngay hôm nay.</span>
        </div>
        <div class="hero-stats">
            <div>
                <div class="hstat-n">@Model.Count()</div>
                <div class="hstat-l">Sân khả dụng</div>
            </div>
            <div>
                <div class="hstat-n">@(ViewBag.Cities != null ? ((IEnumerable<string>)ViewBag.Cities).Count() : 0)+</div>
                <div class="hstat-l">Khu vực</div>
            </div>
            <div>
                <div class="hstat-n">4.8★</div>
                <div class="hstat-l">Đánh giá TB</div>
            </div>
        </div>
    </div>
    <div class="fac-hero-right">
        <img src="https://images.unsplash.com/photo-1613918431703-aa50889e3be8?w=900&q=80" alt="Badminton court" />
    </div>
</section>

<!-- SEARCH -->
<form asp-action="Index" method="get">
    <div class="search-strip">
        <div class="search-field-wrap">
            <input type="text" name="search" class="search-field"
                   placeholder="Tìm theo tên sân, quận, địa chỉ..."
                   value="@ViewBag.SearchTerm" />
            <button type="submit" class="search-btn"><i class="bi bi-search"></i></button>
        </div>
        <select name="city" class="city-select">
            <option value="">Tất cả khu vực</option>
            @if (ViewBag.Cities != null)
            {
                foreach (var city in (IEnumerable<string>)ViewBag.Cities)
                {
                    <option value="@city" selected="@(ViewBag.SelectedCity?.ToString() == city)">@city</option>
                }
            }
        </select>
        <div class="search-count"><span>@Model.Count()</span> sân tìm thấy</div>
    </div>
</form>

<!-- FILTER -->
<div class="filter-bar">
    <span class="filter-label">Lọc theo quận:</span>
    <button class="fpill active" data-district="all">Tất cả</button>
    <button class="fpill" data-district="Quận 1">Quận 1</button>
    <button class="fpill" data-district="Quận 3">Quận 3</button>
    <button class="fpill" data-district="Quận 7">Quận 7</button>
    <button class="fpill" data-district="Quận 10">Quận 10</button>
    <button class="fpill" data-district="Phú Nhuận">Phú Nhuận</button>
    <button class="fpill" data-district="Tân Bình">Tân Bình</button>
    <button class="fpill" data-district="Bình Thạnh">Bình Thạnh</button>
    <button class="fpill" data-district="Gò Vấp">Gò Vấp</button>
</div>

<!-- GRID -->
<div class="grid-section">
    <div class="grid-header">
        <div class="grid-title">Danh sách sân</div>
        <div class="sort-row">
            <button class="sort-btn active">Mặc định</button>
            <button class="sort-btn" id="sortPrice">Giá ↑</button>
            <button class="sort-btn" id="sortRating">★ Đánh giá</button>
        </div>
    </div>

    <div class="fac-grid" id="facilityGrid">
        @if (!Model.Any())
        {
            <div class="fac-empty">
                <i class="bi bi-building-x fac-empty-icon"></i>
                <div class="fac-empty-title">Không tìm thấy sân</div>
                <p class="fac-empty-desc">Thử từ khóa khác hoặc mở rộng khu vực tìm kiếm.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="fac-card" data-district="@item.District" data-price="100000" data-rating="4.8">
                    <div class="fac-img-wrap">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.FacilityName" />
                        }
                        else
                        {
                            <div class="no-img"><i class="bi bi-building"></i></div>
                        }
                        <div class="rating-chip"><i class="bi bi-star-fill"></i> 4.8</div>
                        <div class="avail-badge"><i class="bi bi-check-circle me-1"></i>Sẵn sàng</div>
                    </div>
                    <div class="fac-body">
                        <div class="fac-name">@item.FacilityName</div>
                        <div class="fac-meta">
                            <div class="fac-meta-item">
                                <i class="bi bi-geo-alt-fill" style="color:#e74c3c"></i>
                                @item.District
                            </div>
                            <div class="fac-meta-item">
                                <i class="bi bi-clock" style="color:var(--gold)"></i>
                                @item.OpenTime?.ToString(@"hh\:mm") – @item.CloseTime?.ToString(@"hh\:mm")
                            </div>
                        </div>
                        <div class="fac-footer">
                            <div>
                                <div class="fac-price-val">100.000đ</div>
                                <div class="fac-price-unit">/ giờ / sân</div>
                            </div>
                            <a asp-action="Details" asp-route-id="@item.FacilityId" class="fac-cta">
                                Đặt sân <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        // Filter pills
        document.querySelectorAll('.fpill').forEach(pill => {
            pill.addEventListener('click', function () {
                document.querySelectorAll('.fpill').forEach(p => p.classList.remove('active'));
                this.classList.add('active');
                const dist = this.dataset.district;
                document.querySelectorAll('.fac-card').forEach(card => {
                    card.style.display = (dist === 'all' || card.dataset.district === dist) ? '' : 'none';
                });
            });
        });

        // Sort buttons
        document.querySelectorAll('.sort-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                document.querySelectorAll('.sort-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
}
