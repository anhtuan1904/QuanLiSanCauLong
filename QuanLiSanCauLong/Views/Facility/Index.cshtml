@model IEnumerable<QuanLiSanCauLong.ViewModels.FacilityCardViewModel>
<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách cơ sở sân cầu lông</h2>

    <form asp-action="Index" method="get" class="row g-3 mb-5">
        <div class="col-md-5">
            <input type="text" name="search" class="form-control" placeholder="Tìm tên sân hoặc địa chỉ...">
        </div>
        <div class="col-md-3">
            <select name="city" class="form-select">
                <option value="">-- Tất cả thành phố --</option>
                @if (ViewBag.Cities != null)
                {
                    foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city">@city</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default-badminton.jpg" : item.ImageUrl)"
                         class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.FacilityName">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@item.FacilityName</h5>
                        <p class="card-text text-muted mb-1"><i class="bi bi-geo-alt-fill me-2"></i>@item.Address, @item.District, @item.City</p>
                        <p class="card-text text-muted small"><i class="bi bi-clock me-2"></i>@item.OpenTime?.ToString(@"hh\:mm") - @item.CloseTime?.ToString(@"hh\:mm")</p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3">
                        <a asp-action="Details" asp-route-id="@item.FacilityId" class="btn btn-outline-primary w-100">Xem chi tiết & Đặt sân</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>