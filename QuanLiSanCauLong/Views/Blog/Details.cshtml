@model QuanLiSanCauLong.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @* Breadcrumb điều hướng *@
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-purple text-decoration-none">Tin tức</a></li>
                    <li class="breadcrumb-item active">@Model.Category</li>
                </ol>
            </nav>

            @* Tiêu đề và thông tin bài viết *@
            <div class="post-header mb-5">
                <span class="badge bg-soft-purple text-purple rounded-pill px-3 py-2 mb-3">@Model.Category</span>
                <h1 class="fw-bold display-4 mb-4" style="color: #2d3436;">@Model.Title</h1>

                <div class="d-flex align-items-center p-3 rounded-4 bg-light">
                    <div class="avatar me-3">
                        <div class="rounded-circle bg-purple text-white d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; background-color: #6c33f2;">
                            <i class="bi bi-person-fill fs-5"></i>
                        </div>
                    </div>
                    <div>
                        <div class="fw-bold">@Model.Author</div>
                        <div class="text-muted small">Đã đăng vào @Model.CreatedAt.ToString("dd 'Tháng' MM, yyyy")</div>
                    </div>
                </div>
            </div>

            @* Ảnh đại diện lớn *@
            <div class="mb-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-4 shadow-sm w-100" style="max-height: 500px; object-fit: cover;" alt="@Model.Title">
            </div>

            @* Nội dung bài viết *@
            <div class="post-content fs-5 lh-lg" style="color: #444; text-align: justify;">
                @Html.Raw(Model.Content)
            </div>

            <hr class="my-5 opacity-10">

            @* Nút quay lại *@
            <div class="text-center">
                <a asp-action="Index" class="btn btn-outline-purple rounded-pill px-5 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6c33f2;
    }

    .bg-soft-purple {
        background-color: #f3f0ff;
        color: #6c33f2;
    }

    .btn-outline-purple {
        color: #6c33f2;
        border-color: #6c33f2;
        transition: all 0.3s;
    }

        .btn-outline-purple:hover {
            background-color: #6c33f2;
            color: white;
        }

    .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        margin: 2rem 0;
    }

    .rounded-4 {
        border-radius: 1.25rem !important;
    }
</style>