@model QuanLiSanCauLong.Models.BlogPost
@{
    ViewData["Title"] = Model.Title;
}

<div class="blog-detail-container">
    <!-- Breadcrumb -->
    <div class="container py-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-purple">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-purple">Tin tức</a></li>
                <li class="breadcrumb-item active">Chi tiết</li>
            </ol>
        </nav>
    </div>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Post Header -->
                <article class="post-article">
                    <div class="post-meta mb-4">
                        <span class="badge bg-purple-soft text-purple rounded-pill px-4 py-2 me-2">
                            <i class="bi bi-folder me-1"></i>@Model.Category?.CategoryName
                        </span>
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-danger rounded-pill px-4 py-2">
                                <i class="bi bi-star-fill me-1"></i>Nổi bật
                            </span>
                        }
                    </div>

                    <h1 class="post-title display-4 fw-bold mb-4">@Model.Title</h1>

                    @if (!string.IsNullOrEmpty(Model.Excerpt))
                    {
                        <p class="lead text-muted mb-4" style="font-size: 1.15rem; line-height: 1.8;">@Model.Excerpt</p>
                    }

                    <!-- Author Info -->
                    <div class="author-box d-flex align-items-center p-4 rounded-4 bg-light mb-5">
                        <div class="author-avatar me-3">
                            <div class="rounded-circle bg-gradient-purple d-flex align-items-center justify-content-center"
                                 style="width: 60px; height: 60px;">
                                <i class="bi bi-person-fill text-white fs-3"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-bold fs-5">@Model.AuthorId</div>
                            <div class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>Đăng ngày @Model.PublishedAt?.ToString("dd/MM/yyyy") ?? @Model.CreatedAt.ToString("dd/MM/yyyy")
                                <span class="mx-2">•</span>
                                <i class="bi bi-eye me-1"></i>@Model.ViewCount.ToString("N0") lượt xem
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Tags))
                        {
                            <div class="ms-auto d-none d-md-block">
                                @foreach (var tag in Model.Tags.Split(','))
                                {
                                    <span class="badge bg-white text-secondary me-1">#@tag.Trim()</span>
                                }
                            </div>
                        }
                    </div>

                    <!-- Featured Image -->
                    @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                    {
                        <div class="featured-image mb-5">
                            <img src="@Model.FeaturedImage" class="img-fluid rounded-4 shadow-lg w-100"
                                 style="max-height: 600px; object-fit: cover;" alt="@Model.Title">
                        </div>
                    }

                    <!-- Post Content -->
                    <div class="post-content fs-5" style="line-height: 1.9; color: #2d3748;">
                        @Html.Raw(Model.Content)
                    </div>

                    <!-- Tags -->
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="post-tags mt-5 pt-4 border-top">
                            <h6 class="fw-bold mb-3">Tags:</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tag in Model.Tags.Split(','))
                                {
                                    <a href="#" class="badge bg-purple-soft text-purple text-decoration-none px-3 py-2 rounded-pill">
                                        #@tag.Trim()
                                    </a>
                                }
                            </div>
                        </div>
                    }

                    <!-- Share Buttons -->
                    <div class="share-section mt-5 pt-4 border-top">
                        <h6 class="fw-bold mb-3">Chia sẻ bài viết:</h6>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary btn-sm rounded-pill">
                                <i class="bi bi-facebook me-1"></i>Facebook
                            </a>
                            <a href="#" class="btn btn-outline-info btn-sm rounded-pill">
                                <i class="bi bi-twitter me-1"></i>Twitter
                            </a>
                            <a href="#" class="btn btn-outline-success btn-sm rounded-pill">
                                <i class="bi bi-whatsapp me-1"></i>WhatsApp
                            </a>
                            <button class="btn btn-outline-secondary btn-sm rounded-pill" onclick="copyLink()">
                                <i class="bi bi-link-45deg me-1"></i>Copy Link
                            </button>
                        </div>
                    </div>

                    <!-- Back Button -->
                    <div class="text-center mt-5 pt-4">
                        <a asp-action="Index" class="btn btn-purple btn-lg rounded-pill px-5 shadow-sm">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6c33f2;
    }

    .bg-purple {
        background-color: #6c33f2;
    }

    .bg-purple-soft {
        background-color: #f3f0ff;
    }

    .bg-gradient-purple {
        background: linear-gradient(135deg, #6c33f2, #8b5cf6);
    }

    .btn-purple {
        background: linear-gradient(135deg, #6c33f2, #8b5cf6);
        border: none;
        color: white;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-purple:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(108, 51, 242, 0.3) !important;
            color: white;
        }

    .rounded-4 {
        border-radius: 1.25rem !important;
    }

    .post-title {
        color: #1a202c;
        line-height: 1.3;
    }

    .post-content {
        text-align: justify;
    }

        .post-content img {
            max-width: 100%;
            height: auto;
            border-radius: 1rem;
            margin: 2.5rem 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .post-content h2 {
            font-weight: 700;
            color: #2d3748;
            margin-top: 3rem;
            margin-bottom: 1.5rem;
        }

        .post-content h3 {
            font-weight: 600;
            color: #4a5568;
            margin-top: 2.5rem;
            margin-bottom: 1.25rem;
        }

        .post-content p {
            margin-bottom: 1.5rem;
        }

        .post-content ul, .post-content ol {
            margin-bottom: 1.5rem;
            padding-left: 2rem;
        }

        .post-content li {
            margin-bottom: 0.75rem;
        }

        .post-content blockquote {
            border-left: 4px solid #6c33f2;
            padding-left: 1.5rem;
            margin: 2rem 0;
            font-style: italic;
            color: #4a5568;
            background: #f7fafc;
            padding: 1.5rem;
            border-radius: 0.5rem;
        }

    .author-box {
        border: 1px solid #e2e8f0;
    }

    .share-section .btn {
        font-weight: 500;
    }
</style>

@section Scripts {
    <script>
        function copyLink() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert('Đã copy link bài viết!');
            });
        }
    </script>
}
