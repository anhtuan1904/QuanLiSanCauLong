@model QuanLiSanCauLong.ViewModels.BlogViewModel

@{
    ViewData["Title"] = "Tin tức & Kinh nghiệm";
}

<div class="blog-container pb-5">
    <div class="blog-banner text-white py-5 mb-5" style="background: linear-gradient(135deg, #6c33f2 0%, #8b5cf6 100%);">
        <div class="container py-4">
            <h1 class="fw-bold display-5">Tin Tức Cầu Lông</h1>
            <p class="lead opacity-75">Cập nhật thông tin mới nhất về cầu lông và các giải đấu</p>
        </div>
    </div>

    <div class="container">
        <section class="mb-5">
            <div class="d-flex align-items-center mb-4">
                <div class="icon-box me-2" style="color: #6c33f2;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-graph-up-arrow" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5Z" />
                    </svg>
                </div>
                <h3 class="fw-bold mb-0">Tin Nổi Bật</h3>
            </div>

            <div class="row g-4">
                @foreach (var item in Model.FeaturedPosts)
                {
                    <div class="col-md-6">
                        @* CẬP NHẬT: Thêm link điều hướng *@
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.PostId" class="text-decoration-none text-dark h-100 d-block">
                            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 hover-card">
                                <div class="position-relative">
                                    <img src="@item.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@item.Title">
                                </div>
                                <div class="card-body p-4">
                                    <div class="mb-2">
                                        <span class="badge bg-soft-purple text-purple rounded-pill px-3 py-2">@item.Category</span>
                                        <span class="badge bg-danger rounded-pill px-3 py-2 ms-1">Nổi bật</span>
                                    </div>
                                    <h4 class="card-title fw-bold mb-3">@item.Title</h4>
                                    <p class="card-text text-muted mb-4 line-clamp-2">@item.Summary</p>
                                    <div class="d-flex align-items-center text-muted small mt-auto">
                                        <span class="me-3"><i class="bi bi-person me-1"></i>@item.Author</span>
                                        <span><i class="bi bi-calendar3 me-1"></i>@item.PublishDate</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </section>

        <section>
            <h3 class="fw-bold mb-4">Tin Tức Khác</h3>
            <div class="row g-4">
                @foreach (var item in Model.OtherPosts)
                {
                    <div class="col-lg-4 col-md-6">
                        @* CẬP NHẬT: Thêm link điều hướng *@
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.PostId" class="text-decoration-none text-dark h-100 d-block">
                            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 hover-card">
                                <div class="position-relative">
                                    <img src="@item.ImageUrl" class="card-img-top" style="height: 220px; object-fit: cover;" alt="@item.Title">
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <span class="badge bg-white text-dark shadow-sm rounded-pill px-3">@item.Category</span>
                                    </div>
                                </div>
                                <div class="card-body p-4">
                                    <h5 class="card-title fw-bold mb-2 line-clamp-2">@item.Title</h5>
                                    <p class="card-text text-muted small mb-3 line-clamp-3">@item.Summary</p>
                                    <div class="d-flex justify-content-between align-items-center text-muted mt-3" style="font-size: 0.85rem;">
                                        <span>@item.Author</span>
                                        <span>@item.PublishDate</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

<style>
    /* Giữ nguyên Style cũ của mày */
    .text-purple {
        color: #6c33f2;
    }

    .bg-soft-purple {
        background-color: #f3f0ff;
        color: #6c33f2;
    }

    .rounded-4 {
        border-radius: 1.25rem !important;
    }

    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 1rem 3rem rgba(108, 51, 242, 0.15) !important;
        }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>