@{
    ViewData["Title"] = "Tuyển Dụng";
}

<style>
    .bg-recruitment-header {
        background: #6c33f2;
        padding: 80px 0;
        color: white;
    }

    .stat-box h2 {
        font-size: 2.5rem;
        font-weight: 700;
    }

    .benefit-card {
        border: none;
        border-radius: 15px;
        transition: 0.3s;
        background: #fff;
    }

        .benefit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .benefit-icon {
        font-size: 1.8rem;
        color: #6c33f2;
        margin-bottom: 15px;
    }

    .job-card {
        border: 1px solid #f0f0f0;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        background: white;
    }

    .btn-apply {
        background: #6c33f2;
        color: white;
        border-radius: 8px;
        padding: 10px 25px;
        font-weight: 600;
        text-decoration: none;
    }

        .btn-apply:hover {
            background: #5629c1;
            color: white;
        }

    .job-meta span {
        margin-right: 20px;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .ready-section {
        background: #f8f7ff;
        border-radius: 20px;
        padding: 60px;
    }
</style>

<section class="bg-recruitment-header text-center mb-5">
    <div class="container">
        <h1 class="fw-bold mb-3">Cơ Hội Nghề Nghiệp</h1>
        <p class="lead opacity-75 mb-5">Tham gia đội ngũ BadmintonHub - nơi đam mê thể thao gặp gỡ cơ hội phát triển</p>

        <div class="row g-4 justify-content-center mt-4">
            <div class="col-6 col-md-2 stat-box">
                <h2>50+</h2>
                <p class="small opacity-75">Nhân viên</p>
            </div>
            <div class="col-6 col-md-2 stat-box">
                <h2>5</h2>
                <p class="small opacity-75">Chi nhánh</p>
            </div>
            <div class="col-6 col-md-2 stat-box">
                <h2>8+</h2>
                <p class="small opacity-75">Năm phát triển</p>
            </div>
        </div>
    </div>
</section>

<div class="container pb-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Tại Sao Chọn Chúng Tôi?</h2>
        <p class="text-muted">Quyền lợi và lý do để bạn trở thành thành viên của BadmintonHub</p>
    </div>

    <div class="row g-4 mb-5 pb-5">
        @{
            var benefits = new[] {
                new { Icon = "bi-cash-stack", Title = "Lương Cạnh Tranh", Desc = "Mức lương hấp dẫn, xét tăng lương định kỳ theo năng lực." },
                new { Icon = "bi-heart-pulse", Title = "Bảo Hiểm Đầy Đủ", Desc = "BHYT, BHXH theo quy định + bảo hiểm sức khỏe cao cấp." },
                new { Icon = "bi-trophy", Title = "Thưởng Hiệu Quả", Desc = "Thưởng theo KPI, thưởng tháng 13, thưởng lễ tết." },
                new { Icon = "bi-mortarboard", Title = "Đào Tạo & Phát Triển", Desc = "Chương trình đào tạo nội bộ và hỗ trợ các khóa chuyên môn." },
                new { Icon = "bi-people", Title = "Môi Trường Năng Động", Desc = "Văn hóa trẻ trung, sáng tạo, teamwork mạnh mẽ." },
                new { Icon = "bi-graph-up-arrow", Title = "Cơ Hội Thăng Tiến", Desc = "Lộ trình thăng tiến rõ ràng, đánh giá công bằng." }
                };
        }
        @foreach (var b in benefits)
        {
            <div class="col-md-4">
                <div class="card benefit-card p-4 h-100">
                    <i class="bi @b.Icon benefit-icon"></i>
                    <h5 class="fw-bold">@b.Title</h5>
                    <p class="text-muted small mb-0">@b.Desc</p>
                </div>
            </div>
        }
    </div>

    <div class="text-center mb-5">
        <h2 class="fw-bold">Vị Trí Tuyển Dụng</h2>
        <p class="text-success fw-bold">6 vị trí đang tuyển dụng</p>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="job-card shadow-sm">
                <div class="d-md-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="fw-bold mb-2">Nhân Viên Quản Lý Sân</h4>
                        <div class="job-meta mb-3">
                            <span><i class="bi bi-briefcase me-1"></i> Vận hành</span>
                            <span><i class="bi bi-geo-alt me-1"></i> Quận 7, TP.HCM</span>
                            <span><i class="bi bi-clock me-1"></i> Full-time</span>
                            <span><i class="bi bi-currency-dollar me-1"></i> 10 - 15 triệu</span>
                        </div>
                    </div>
                    <a href="#" class="btn btn-apply">Ứng tuyển ngay</a>
                </div>
                <div class="mt-3 small text-muted">
                    <p class="mb-1"><strong>Mô tả công việc:</strong> Quản lý hoạt động hàng ngày của sân cầu lông, phối hợp với khách hàng và đội ngũ vận hành.</p>
                    <p class="mb-0"><strong>Yêu cầu:</strong> Tốt nghiệp Cao đẳng trở lên, có kinh nghiệm dịch vụ ít nhất 1 năm, giao tiếp tốt.</p>
                </div>
            </div>

            <div class="job-card shadow-sm">
                <div class="d-md-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="fw-bold mb-2">Huấn Luyện Viên Cầu Lông</h4>
                        <div class="job-meta mb-3">
                            <span><i class="bi bi-briefcase me-1"></i> Đào tạo</span>
                            <span><i class="bi bi-geo-alt me-1"></i> Tất cả chi nhánh</span>
                            <span><i class="bi bi-clock me-1"></i> Part/Full-time</span>
                            <span><i class="bi bi-currency-dollar me-1"></i> 15 - 25 triệu</span>
                        </div>
                    </div>
                    <a href="#" class="btn btn-apply">Ứng tuyển ngay</a>
                </div>
                <div class="mt-3 small text-muted">
                    <p class="mb-1"><strong>Mô tả công việc:</strong> Giảng dạy kỹ thuật cầu lông cho học viên từ cơ bản đến nâng cao.</p>
                    <p class="mb-0"><strong>Yêu cầu:</strong> Từng thi đấu chuyên nghiệp/bán chuyên, có chứng chỉ sư phạm là lợi thế.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="ready-section text-center">
        <h2 class="fw-bold mb-3">Sẵn Sàng Gia Nhập Đội Ngũ?</h2>
        <p class="text-muted mb-4">Gửi CV của bạn đến chúng tôi hoặc liên hệ trực tiếp để biết thêm thông tin</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="mailto:careers@badmintonhub.vn" class="btn btn-send px-4 py-2" style="background:#6c33f2; color:white; border:none; border-radius:8px;">Gửi CV qua Email</a>
            <button class="btn btn-outline-dark px-4 py-2" style="border-radius:8px;">Liên hệ với HR</button>
        </div>
        <p class="small text-muted mt-3">Hotline: (028) 1234 5678</p>
    </div>
</div>