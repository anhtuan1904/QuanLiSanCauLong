@{
    ViewData["Title"] = "Tuyển Dụng";
}
<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.1);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --ink: #1a1209;
        --border: rgba(212,160,23,.2);
        --muted: rgba(255,255,255,.38);
    }

    .rec-page {
        background: var(--warm);
        min-height: 100vh;
        font-family: 'Outfit',sans-serif;
        color: var(--ink);
    }
    /* HERO */
    .rec-hero {
        background: var(--deep);
        position: relative;
        overflow: hidden;
        padding: 6rem 4rem 5rem;
    }

        .rec-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .rec-deco {
        position: absolute;
        right: -1rem;
        bottom: -3rem;
        font-family: 'Playfair Display',serif;
        font-size: 18rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
    }

    .rec-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .6rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .22em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .rec-eyebrow::before {
            content: '';
            width: 26px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .rec-hero h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.8rem,6vw,5.5rem);
        font-weight: 700;
        color: #fff;
        line-height: .98;
        margin-bottom: 1.2rem;
        position: relative;
        z-index: 1;
    }

        .rec-hero h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .rec-hero p {
        font-size: .92rem;
        color: rgba(255,255,255,.4);
        max-width: 440px;
        line-height: 1.85;
        position: relative;
        z-index: 1;
    }
    /* STATS */
    .rec-stats {
        background: var(--gold);
        display: flex;
    }

    .rst {
        flex: 1;
        padding: 1.3rem 2rem;
        border-right: 1px solid rgba(26,18,9,.18);
        text-align: center;
    }

        .rst:last-child {
            border-right: none;
        }

    .rst-n {
        font-family: 'Playfair Display',serif;
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--deep);
        line-height: 1;
    }

    .rst-l {
        font-size: .62rem;
        font-weight: 700;
        letter-spacing: .15em;
        text-transform: uppercase;
        color: rgba(26,18,9,.52);
        margin-top: .2rem;
    }
    /* BENEFITS */
    .rec-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 3rem;
    }

    .rec-sec-eyebrow {
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

        .rec-sec-eyebrow::before {
            content: '';
            width: 22px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .rec-sec-title {
        font-family: 'Playfair Display',serif;
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--ink);
        margin-bottom: .5rem;
    }

    .rec-sec-sub {
        font-size: .87rem;
        color: rgba(26,18,9,.45);
        margin-bottom: 3rem;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 1.5px;
        background: rgba(26,18,9,.1);
    }

    .benefit-card {
        background: var(--cream);
        padding: 2.5rem 2rem;
        position: relative;
        overflow: hidden;
        transition: background .2s;
    }

        .benefit-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg,var(--gold),var(--gold2));
            transition: width .35s;
        }

        .benefit-card:hover {
            background: #fff;
        }

            .benefit-card:hover::after {
                width: 100%;
            }

    .benefit-icon {
        width: 50px;
        height: 50px;
        background: var(--gold3);
        border: 1.5px solid var(--border);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--gold);
        margin-bottom: 1.5rem;
    }

    .benefit-title {
        font-family: 'Playfair Display',serif;
        font-size: 1.15rem;
        font-weight: 700;
        color: var(--ink);
        margin-bottom: .5rem;
    }

    .benefit-desc {
        font-size: .83rem;
        color: rgba(26,18,9,.55);
        line-height: 1.75;
    }
    /* JOBS */
    .rec-jobs-bg {
        background: var(--deep);
    }

    .rec-jobs-inner {
        max-width: 1000px;
        margin: 0 auto;
        padding: 5rem 3rem;
    }

        .rec-jobs-inner .rec-sec-title {
            color: #fff;
        }

        .rec-jobs-inner .rec-sec-sub {
            color: var(--muted);
        }

    .open-badge {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        background: rgba(32,201,151,.15);
        border: 1px solid rgba(32,201,151,.3);
        border-radius: 3px;
        padding: .3rem .75rem;
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .1em;
        text-transform: uppercase;
        color: #20c997;
        margin-bottom: 2rem;
    }
    /* Job card */
    .job-card {
        background: var(--deep2);
        border: 1.5px solid var(--border);
        border-radius: 7px;
        padding: 2rem 2rem 1.75rem;
        margin-bottom: 1.25rem;
        transition: border-color .2s,background .2s;
    }

        .job-card:hover {
            border-color: var(--gold);
            background: var(--deep3);
        }

    .job-top {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    .job-name {
        font-family: 'Playfair Display',serif;
        font-size: 1.3rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .6rem;
    }

    .job-tags {
        display: flex;
        flex-wrap: wrap;
        gap: .45rem;
    }

    .job-tag {
        display: inline-flex;
        align-items: center;
        gap: .3rem;
        background: var(--gold3);
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: .25rem .65rem;
        font-size: .65rem;
        font-weight: 700;
        letter-spacing: .08em;
        text-transform: uppercase;
        color: rgba(255,255,255,.5);
    }

        .job-tag i {
            color: var(--gold);
            font-size: .65rem;
        }

    .job-body {
        border-top: 1px solid var(--border);
        padding-top: 1rem;
        margin-top: .5rem;
    }

        .job-body p {
            font-size: .83rem;
            color: rgba(255,255,255,.45);
            line-height: 1.75;
            margin-bottom: .4rem;
        }

        .job-body strong {
            color: rgba(255,255,255,.65);
        }

    .job-apply-btn {
        display: inline-flex;
        align-items: center;
        gap: .45rem;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 5px;
        padding: .65rem 1.4rem;
        font-family: 'Outfit',sans-serif;
        font-size: .8rem;
        font-weight: 800;
        letter-spacing: .07em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .22s;
        white-space: nowrap;
        text-decoration: none;
        flex-shrink: 0;
    }

        .job-apply-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 22px rgba(212,160,23,.35);
            color: var(--deep);
        }
    /* CTA */
    .rec-cta {
        background: var(--gold);
        padding: 5rem 3rem;
        text-align: center;
    }

        .rec-cta h2 {
            font-family: 'Playfair Display',serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--deep);
            margin-bottom: 1rem;
        }

        .rec-cta p {
            font-size: .92rem;
            color: rgba(26,18,9,.6);
            margin-bottom: 2rem;
        }

    .rec-cta-btns {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .rec-cta-primary {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: var(--deep);
        color: var(--gold2);
        border: none;
        border-radius: 5px;
        padding: .85rem 2rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .07em;
        text-transform: uppercase;
        text-decoration: none;
        transition: all .25s;
    }

        .rec-cta-primary:hover {
            background: var(--deep2);
            color: var(--gold2);
            transform: translateY(-2px);
        }

    .rec-cta-secondary {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: transparent;
        color: var(--deep);
        border: 2px solid rgba(26,18,9,.3);
        border-radius: 5px;
        padding: .85rem 2rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 700;
        letter-spacing: .07em;
        text-transform: uppercase;
        text-decoration: none;
        transition: all .25s;
    }

        .rec-cta-secondary:hover {
            border-color: var(--deep);
            color: var(--deep);
        }

    @@media(max-width:900px) {
        .rec-hero {
            padding: 5rem 1.5rem 4rem;
        }

        .rec-section, .rec-jobs-inner {
            padding: 3.5rem 1.5rem;
        }

        .benefits-grid {
            grid-template-columns: repeat(2,1fr);
        }

        .rec-stats {
            flex-wrap: wrap;
        }

        .rst {
            min-width: 50%;
        }

        .job-top {
            flex-direction: column;
            gap: .85rem;
        }

        .rec-cta {
            padding: 4rem 1.5rem;
        }
    }

    @@media(max-width:540px) {
        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="rec-page">
    <!-- HERO -->
    <section class="rec-hero">
        <div class="rec-deco">T</div>
        <div class="rec-eyebrow">Cơ hội nghề nghiệp</div>
        <h1>Tham Gia<br><em>Đội Ngũ Chúng Tôi.</em></h1>
        <p>Nơi đam mê thể thao gặp gỡ cơ hội phát triển sự nghiệp trong môi trường năng động và chuyên nghiệp.</p>
    </section>

    <!-- STATS -->
    <div class="rec-stats">
        <div class="rst"><div class="rst-n">50+</div><div class="rst-l">Nhân viên</div></div>
        <div class="rst"><div class="rst-n">5</div><div class="rst-l">Chi nhánh</div></div>
        <div class="rst"><div class="rst-n">8+</div><div class="rst-l">Năm phát triển</div></div>
        <div class="rst"><div class="rst-n">6</div><div class="rst-l">Vị trí đang tuyển</div></div>
    </div>

    <!-- BENEFITS -->
    <div class="rec-section">
        <div class="rec-sec-eyebrow">Vì sao chọn chúng tôi</div>
        <div class="rec-sec-title">Quyền lợi hấp dẫn.</div>
        <div class="rec-sec-sub">Những lý do để bạn trở thành thành viên của BadmintonPro</div>
        <div class="benefits-grid">
            @{
                var bens = new[]{
                        new{Icon="bi-cash-stack",Title="Lương Cạnh Tranh",Desc="Mức lương hấp dẫn, xét tăng định kỳ theo năng lực và đóng góp."},
                        new{Icon="bi-heart-pulse",Title="Bảo Hiểm Đầy Đủ",Desc="BHYT, BHXH theo quy định + bảo hiểm sức khỏe cao cấp cho gia đình."},
                        new{Icon="bi-trophy-fill",Title="Thưởng Hiệu Quả",Desc="Thưởng KPI, tháng 13, lễ tết và các dịp đặc biệt hàng năm."},
                        new{Icon="bi-mortarboard",Title="Đào Tạo & Phát Triển",Desc="Chương trình đào tạo nội bộ và hỗ trợ các khóa chuyên môn bên ngoài."},
                        new{Icon="bi-people-fill",Title="Môi Trường Năng Động",Desc="Văn hóa trẻ trung, sáng tạo, teamwork mạnh mẽ và thân thiện."},
                        new{Icon="bi-graph-up-arrow",Title="Cơ Hội Thăng Tiến",Desc="Lộ trình thăng tiến rõ ràng, đánh giá công bằng và minh bạch."}
                        };
            }
            @foreach (var b in bens)
            {
                <div class="benefit-card">
                    <div class="benefit-icon"><i class="bi @b.Icon"></i></div>
                    <div class="benefit-title">@b.Title</div>
                    <div class="benefit-desc">@b.Desc</div>
                </div>
            }
        </div>
    </div>

    <!-- JOBS -->
    <div class="rec-jobs-bg">
        <div class="rec-jobs-inner">
            <div class="rec-sec-eyebrow">Vị trí tuyển dụng</div>
            <div class="rec-sec-title">Đang tuyển dụng.</div>
            <div class="open-badge"><i class="bi bi-circle-fill" style="font-size:.5rem;"></i> 6 vị trí đang mở</div>

            @{
                var jobs = new[]{
                        new{Title="Nhân Viên Quản Lý Sân",Dept="Vận hành",Location="Quận 7, TP.HCM",Type="Full-time",Salary="10 – 15 triệu",Desc="Quản lý hoạt động hàng ngày của sân cầu lông, phối hợp với khách hàng và đội ngũ vận hành.",Req="Tốt nghiệp Cao đẳng trở lên, kinh nghiệm dịch vụ ít nhất 1 năm, giao tiếp tốt."},
                        new{Title="Huấn Luyện Viên Cầu Lông",Dept="Đào tạo",Location="Tất cả chi nhánh",Type="Part/Full-time",Salary="15 – 25 triệu",Desc="Giảng dạy kỹ thuật cầu lông cho học viên từ cơ bản đến nâng cao theo lịch phân công.",Req="Từng thi đấu chuyên nghiệp/bán chuyên, có chứng chỉ sư phạm là lợi thế."},
                        new{Title="Nhân Viên Kinh Doanh",Dept="Kinh doanh",Location="Quận 1, TP.HCM",Type="Full-time",Salary="12 – 20 triệu + commission",Desc="Phát triển khách hàng mới, duy trì quan hệ khách hàng hiện tại và đạt KPI doanh số.",Req="Kinh nghiệm bán hàng B2C/B2B tối thiểu 1 năm, năng động và chịu áp lực tốt."}
                        };
            }
            @foreach (var j in jobs)
            {
                <div class="job-card">
                    <div class="job-top">
                        <div>
                            <div class="job-name">@j.Title</div>
                            <div class="job-tags">
                                <span class="job-tag"><i class="bi bi-briefcase"></i> @j.Dept</span>
                                <span class="job-tag"><i class="bi bi-geo-alt"></i> @j.Location</span>
                                <span class="job-tag"><i class="bi bi-clock"></i> @j.Type</span>
                                <span class="job-tag"><i class="bi bi-cash"></i> @j.Salary</span>
                            </div>
                        </div>
                        <a href="#" class="job-apply-btn"><i class="bi bi-send"></i> Ứng tuyển</a>
                    </div>
                    <div class="job-body">
                        <p><strong>Mô tả:</strong> @j.Desc</p>
                        <p><strong>Yêu cầu:</strong> @j.Req</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- CTA -->
    <div class="rec-cta">
        <h2>Sẵn sàng gia nhập?</h2>
        <p>Gửi CV của bạn hoặc liên hệ trực tiếp để biết thêm thông tin về các vị trí đang tuyển.</p>
        <div class="rec-cta-btns">
            <a href="mailto:careers@badmintonpro.vn" class="rec-cta-primary"><i class="bi bi-envelope-fill"></i> Gửi CV qua Email</a>
            <a asp-controller="Home" asp-action="Contact" class="rec-cta-secondary"><i class="bi bi-telephone"></i> Liên hệ với HR</a>
        </div>
        <p style="font-size:.8rem;color:rgba(26,18,9,.45);margin-top:1.25rem;">Hotline: (028) 1234 5678</p>
    </div>
</div>
