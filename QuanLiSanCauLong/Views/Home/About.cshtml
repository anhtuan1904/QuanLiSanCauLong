@{
    ViewData["Title"] = "Về Chúng Tôi";
}

<style>
    .bg-about-header {
        background: linear-gradient(135deg, var(--dark-green) 0%, var(--primary-green) 100%);
        padding: 80px 0;
        color: white;
    }

    .card-value {
        border: none;
        transition: transform 0.3s ease;
        border-radius: 15px;
        background: #f8fafc;
    }

        .card-value:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: white;
        color: var(--primary-green);
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .team-img {
        height: 300px;
        object-fit: cover;
        border-radius: 15px;
    }
</style>

<section class="bg-about-header mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Về Chúng Tôi</h1>
        <p class="lead opacity-75">Kết nối cộng đồng yêu cầu lông, mang đến trải nghiệm thể thao chuyên nghiệp và thân thiện</p>
    </div>
</section>

<div class="container pb-5">
    <div class="row align-items-center mb-5 py-4">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="fw-bold mb-4">Câu Chuyện Của Chúng Tôi</h2>
            <p class="text-muted">BadmintonPro được thành lập vào năm 2018 với sứ mệnh mang đến cho cộng đồng những sân cầu lông chất lượng cao và môi trường thể thao chuyên nghiệp. Từ một sân nhỏ tại quận 1, chúng tôi đã phát triển thành chuỗi 5 cơ sở trải dài khắp thành phố.</p>
            <p class="text-muted">Với đội ngũ huấn luyện viên giàu kinh nghiệm và cơ sở vật chất hiện đại, chúng tôi tự hào là điểm đến tin cậy của hơn 10,000 người chơi cầu lông mỗi tháng. Chúng tôi tin rằng cầu lông không chỉ là môn thể thao mà còn là cách để xây dựng lối sống lành mạnh.</p>
        </div>
        <div class="col-lg-6">
            <img src="https://images.unsplash.com/photo-1626224484214-4051d0445d3e?auto=format&fit=crop&q=80&w=800" class="img-fluid rounded-4 shadow" alt="Story">
        </div>
    </div>

    <div class="text-center mb-5 mt-5">
        <h2 class="fw-bold">Giá Trị Cốt Lõi</h2>
        <p class="text-muted">Những nguyên tắc định hướng mọi hoạt động của chúng tôi</p>
    </div>

    <div class="row g-4 mb-5">
        @{
            var values = new[] {
                new { Icon = "bi-heart", Title = "Đam Mê", Desc = "Chúng tôi yêu cầu lông và mong muốn chia sẻ niềm đam mê này với cộng đồng." },
                new { Icon = "bi-bullseye", Title = "Chất Lượng", Desc = "Cam kết mang đến sản phẩm và dịch vụ chất lượng cao nhất cho khách hàng." },
                new { Icon = "bi-people", Title = "Cộng Đồng", Desc = "Xây dựng môi trường thân thiện, kết nối người chơi ở mọi trình độ." },
                new { Icon = "bi-award", Title = "Chuyên Nghiệp", Desc = "Đội ngũ giàu kinh nghiệm, tận tâm và chuyên nghiệp trong từng dịch vụ." }
                };
        }
        @foreach (var v in values)
        {
            <div class="col-md-6 col-lg-3">
                <div class="card card-value h-100 p-4">
                    <div class="icon-box border">
                        <i class="bi @v.Icon"></i>
                    </div>
                    <h5 class="fw-bold">@v.Title</h5>
                    <p class="small text-muted mb-0">@v.Desc</p>
                </div>
            </div>
        }
    </div>

    <div class="text-center mb-5 mt-5 pt-5">
        <h2 class="fw-bold">Đội Ngũ Lãnh Đạo</h2>
        <p class="text-muted">Những con người tâm huyết đứng sau sự thành công của BadmintonPro</p>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="text-center">
                <img src="https://i.pravatar.cc/300?img=11" class="team-img w-100 mb-3 shadow-sm" alt="Leader">
                <h5 class="fw-bold mb-1">Nguyễn Văn An</h5>
                <p class="text-success small fw-bold">Giám Đốc Điều Hành</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <img src="https://i.pravatar.cc/300?img=5" class="team-img w-100 mb-3 shadow-sm" alt="Leader">
                <h5 class="fw-bold mb-1">Trần Thị Bình</h5>
                <p class="text-success small fw-bold">Giám Đốc Vận Hành</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <img src="https://i.pravatar.cc/300?img=12" class="team-img w-100 mb-3 shadow-sm" alt="Leader">
                <h5 class="fw-bold mb-1">Lê Minh Cường</h5>
                <p class="text-success small fw-bold">Trưởng Phòng Kinh Doanh</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <img src="https://i.pravatar.cc/300?img=25" class="team-img w-100 mb-3 shadow-sm" alt="Leader">
                <h5 class="fw-bold mb-1">Phạm Thu Dung</h5>
                <p class="text-success small fw-bold">Trưởng Phòng Marketing</p>
            </div>
        </div>
    </div>
</div>