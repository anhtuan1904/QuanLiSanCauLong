@{
    ViewData["Title"] = "Về Chúng Tôi";
}
<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.1);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --ink: #1a1209;
        --border: rgba(212,160,23,.2);
        --muted: rgba(255,255,255,.38);
    }

    .abt-page {
        background: var(--warm);
        min-height: 100vh;
        font-family: 'Outfit',sans-serif;
        color: var(--ink);
    }
    /* HERO */
    .abt-hero {
        background: var(--deep);
        position: relative;
        overflow: hidden;
        padding: 7rem 4rem 5rem;
    }

        .abt-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .abt-deco {
        position: absolute;
        right: -1rem;
        bottom: -3rem;
        font-family: 'Playfair Display',serif;
        font-size: 20rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
        user-select: none;
    }

    .abt-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .6rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .22em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .abt-eyebrow::before {
            content: '';
            width: 26px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .abt-hero h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(3rem,7vw,7rem);
        font-weight: 700;
        color: #fff;
        line-height: .95;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 1;
    }

        .abt-hero h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .abt-hero p {
        font-size: .95rem;
        color: rgba(255,255,255,.42);
        max-width: 480px;
        line-height: 1.85;
        position: relative;
        z-index: 1;
    }
    /* STAT BAR */
    .abt-stats {
        background: var(--gold);
        display: flex;
    }

    .astat {
        flex: 1;
        padding: 1.4rem 2rem;
        border-right: 1px solid rgba(26,18,9,.18);
        text-align: center;
    }

        .astat:last-child {
            border-right: none;
        }

    .astat-n {
        font-family: 'Playfair Display',serif;
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--deep);
        line-height: 1;
    }

    .astat-l {
        font-size: .63rem;
        font-weight: 700;
        letter-spacing: .15em;
        text-transform: uppercase;
        color: rgba(26,18,9,.52);
        margin-top: .22rem;
    }
    /* STORY */
    .abt-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 3rem;
    }

    .abt-story {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem;
        align-items: center;
    }

    .story-eyebrow {
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

        .story-eyebrow::before {
            content: '';
            width: 22px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .abt-story h2 {
        font-family: 'Playfair Display',serif;
        font-size: 2.6rem;
        font-weight: 700;
        line-height: 1.1;
        color: var(--deep);
        margin-bottom: 1.5rem;
    }

        .abt-story h2 em {
            color: var(--gold);
            font-style: italic;
        }

    .abt-story p {
        font-size: .9rem;
        color: rgba(26,18,9,.58);
        line-height: 1.9;
        margin-bottom: 1rem;
    }

    .story-img {
        width: 100%;
        aspect-ratio: 4/3;
        object-fit: cover;
        border-radius: 4px;
        box-shadow: 0 28px 55px rgba(26,18,9,.14);
    }
    /* DIVIDER */
    .abt-hr {
        border: none;
        border-top: 1px solid rgba(26,18,9,.08);
        margin: 0 3rem;
    }
    /* VALUES */
    .abt-vals-bg {
        background: var(--deep);
    }

    .abt-vals-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 3rem;
    }

    .sec-eyebrow {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .6rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .22em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1rem;
    }

        .sec-eyebrow::before, .sec-eyebrow::after {
            content: '';
            width: 22px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .sec-title {
        font-family: 'Playfair Display',serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        text-align: center;
        margin-bottom: .5rem;
    }

    .sec-sub {
        text-align: center;
        font-size: .87rem;
        color: var(--muted);
        margin-bottom: 3.5rem;
    }

    .vals-grid {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 1.5px;
        background: var(--border);
    }

    .val-card {
        background: var(--deep2);
        padding: 2.5rem 1.75rem;
        position: relative;
        overflow: hidden;
        transition: background .2s;
    }

        .val-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg,var(--gold),var(--gold2));
            transition: width .35s;
        }

        .val-card:hover {
            background: var(--deep3);
        }

            .val-card:hover::after {
                width: 100%;
            }

    .val-icon {
        width: 50px;
        height: 50px;
        background: var(--gold3);
        border: 1.5px solid var(--border);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--gold);
        margin-bottom: 1.5rem;
    }

    .val-title {
        font-family: 'Playfair Display',serif;
        font-size: 1.2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: .6rem;
    }

    .val-desc {
        font-size: .82rem;
        color: var(--muted);
        line-height: 1.78;
    }
    /* TEAM */
    .abt-team-sec {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 3rem;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 2rem;
        margin-top: 2.5rem;
    }

    .team-card {
        text-align: center;
    }

    .team-img-box {
        position: relative;
        overflow: hidden;
        border-radius: 4px;
        aspect-ratio: 3/4;
        margin-bottom: 0;
    }

        .team-img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: grayscale(18%);
            transition: filter .3s,transform .4s;
        }

    .team-card:hover .team-img-box img {
        filter: grayscale(0);
        transform: scale(1.04);
    }

    .team-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem 1rem 1rem;
        background: linear-gradient(to top,rgba(26,18,9,.88),transparent);
    }

    .team-name {
        font-family: 'Playfair Display',serif;
        font-size: 1.05rem;
        font-weight: 700;
        color: #fff;
    }

    .team-role {
        font-size: .68rem;
        font-weight: 700;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--gold2);
        margin-top: .2rem;
    }
    /* CTA strip */
    .abt-cta {
        background: var(--gold);
        padding: 4rem 3rem;
        text-align: center;
    }

        .abt-cta h2 {
            font-family: 'Playfair Display',serif;
            font-size: 2.4rem;
            font-weight: 700;
            color: var(--deep);
            margin-bottom: 1rem;
        }

        .abt-cta p {
            font-size: .92rem;
            color: rgba(26,18,9,.6);
            margin-bottom: 2rem;
        }

    .abt-cta-btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: var(--deep);
        color: var(--gold2);
        border: none;
        border-radius: 5px;
        padding: .85rem 2rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .07em;
        text-transform: uppercase;
        text-decoration: none;
        transition: all .25s;
    }

        .abt-cta-btn:hover {
            background: var(--deep2);
            color: var(--gold2);
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(26,18,9,.25);
        }

    @@media(max-width:900px) {
        .abt-story {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }

        .abt-hero {
            padding: 5rem 1.5rem 4rem;
        }

        .abt-section, .abt-vals-inner, .abt-team-sec {
            padding: 3.5rem 1.5rem;
        }

        .vals-grid {
            grid-template-columns: repeat(2,1fr);
        }

        .team-grid {
            grid-template-columns: repeat(2,1fr);
        }

        .abt-stats {
            flex-wrap: wrap;
        }

        .astat {
            min-width: 50%;
        }
    }
</style>

<div class="abt-page">
    <!-- HERO -->
    <section class="abt-hero">
        <div class="abt-deco">V</div>
        <div class="abt-eyebrow">Badminton Pro</div>
        <h1>Về<br><em>Chúng Tôi.</em></h1>
        <p>Kết nối cộng đồng yêu cầu lông, mang đến trải nghiệm thể thao chuyên nghiệp và thân thiện từ năm 2018.</p>
    </section>

    <!-- STATS -->
    <div class="abt-stats">
        <div class="astat"><div class="astat-n">10K+</div><div class="astat-l">Người chơi / tháng</div></div>
        <div class="astat"><div class="astat-n">5</div><div class="astat-l">Cơ sở</div></div>
        <div class="astat"><div class="astat-n">8+</div><div class="astat-l">Năm phát triển</div></div>
        <div class="astat"><div class="astat-n">50+</div><div class="astat-l">Nhân viên</div></div>
    </div>

    <!-- STORY -->
    <div class="abt-section">
        <div class="abt-story">
            <div>
                <div class="story-eyebrow">Khởi đầu</div>
                <h2>Từ một sân<br><em>nhỏ năm 2018.</em></h2>
                <p>BadmintonPro được thành lập với sứ mệnh mang đến cho cộng đồng những sân cầu lông chất lượng cao và môi trường thể thao chuyên nghiệp. Từ một sân nhỏ tại quận 1, chúng tôi đã phát triển thành chuỗi 5 cơ sở trải dài khắp thành phố.</p>
                <p>Với đội ngũ huấn luyện viên giàu kinh nghiệm và cơ sở vật chất hiện đại, chúng tôi tự hào là điểm đến tin cậy của hơn 10,000 người chơi mỗi tháng.</p>
            </div>
            <div>
                <img class="story-img" src="https://images.unsplash.com/photo-1626224484214-4051d0445d3e?auto=format&fit=crop&q=80&w=800" alt="Câu chuyện" />
            </div>
        </div>
    </div>

    <hr class="abt-hr" />

    <!-- VALUES -->
    <div class="abt-vals-bg">
        <div class="abt-vals-inner">
            <div class="sec-eyebrow">Giá trị cốt lõi</div>
            <div class="sec-title">Nguyên tắc định hướng</div>
            <div class="sec-sub">Những giá trị định hướng mọi hoạt động của chúng tôi</div>
            <div class="vals-grid">
                @{
                    var vals = new[]{
                                new{Icon="bi-heart-fill",Title="Đam Mê",Desc="Chúng tôi yêu cầu lông và mong muốn chia sẻ niềm đam mê này với cộng đồng."},
                                new{Icon="bi-bullseye",Title="Chất Lượng",Desc="Cam kết mang đến sản phẩm và dịch vụ chất lượng cao nhất cho khách hàng."},
                                new{Icon="bi-people-fill",Title="Cộng Đồng",Desc="Xây dựng môi trường thân thiện, kết nối người chơi ở mọi trình độ."},
                                new{Icon="bi-award-fill",Title="Chuyên Nghiệp",Desc="Đội ngũ giàu kinh nghiệm, tận tâm và chuyên nghiệp trong từng dịch vụ."}
                                };
                }
                @foreach (var v in vals)
                {
                    <div class="val-card">
                        <div class="val-icon"><i class="bi @v.Icon"></i></div>
                        <div class="val-title">@v.Title</div>
                        <div class="val-desc">@v.Desc</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- TEAM -->
    <div class="abt-team-sec">
        <div class="story-eyebrow">Đội ngũ lãnh đạo</div>
        <h2 style="font-family:'Playfair Display',serif;font-size:2.5rem;font-weight:700;margin-bottom:.4rem;">Con người tâm huyết.</h2>
        <p style="font-size:.87rem;color:rgba(26,18,9,.45);">Đứng sau sự thành công của BadmintonPro</p>
        <div class="team-grid">
            @{
                var team = new[]{
                        new{Img="https://i.pravatar.cc/400?img=11",Name="Nguyễn Văn An",Role="Giám Đốc Điều Hành"},
                        new{Img="https://i.pravatar.cc/400?img=5",Name="Trần Thị Bình",Role="Giám Đốc Vận Hành"},
                        new{Img="https://i.pravatar.cc/400?img=12",Name="Lê Minh Cường",Role="Trưởng Phòng Kinh Doanh"},
                        new{Img="https://i.pravatar.cc/400?img=25",Name="Phạm Thu Dung",Role="Trưởng Phòng Marketing"}
                        };
            }
            @foreach (var t in team)
            {
                <div class="team-card">
                    <div class="team-img-box">
                        <img src="@t.Img" alt="@t.Name" />
                        <div class="team-overlay">
                            <div class="team-name">@t.Name</div>
                            <div class="team-role">@t.Role</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- CTA -->
    <div class="abt-cta">
        <h2>Sẵn sàng cùng chúng tôi?</h2>
        <p>Đặt sân ngay hôm nay và trải nghiệm sự khác biệt của BadmintonPro</p>
        <a asp-controller="Booking" asp-action="Index" class="abt-cta-btn"><i class="bi bi-calendar-check"></i> Đặt sân ngay</a>
    </div>
</div>
