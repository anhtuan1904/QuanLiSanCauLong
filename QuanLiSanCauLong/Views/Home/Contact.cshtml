@{
    ViewData["Title"] = "Liên Hệ";
}
<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --deep3: #2e2110;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.1);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --ink: #1a1209;
        --border: rgba(212,160,23,.2);
        --muted: rgba(255,255,255,.38);
    }

    .ct-page {
        background: var(--warm);
        min-height: 100vh;
        font-family: 'Outfit',sans-serif;
        color: var(--ink);
    }
    /* HERO */
    .ct-hero {
        background: var(--deep);
        position: relative;
        overflow: hidden;
        padding: 6rem 4rem 4.5rem;
    }

        .ct-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .ct-deco {
        position: absolute;
        right: -1rem;
        bottom: -3rem;
        font-family: 'Playfair Display',serif;
        font-size: 18rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
    }

    .ct-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .6rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .22em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .ct-eyebrow::before {
            content: '';
            width: 26px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .ct-hero h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.8rem,6vw,5.5rem);
        font-weight: 700;
        color: #fff;
        line-height: .98;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

        .ct-hero h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .ct-hero p {
        font-size: .92rem;
        color: rgba(255,255,255,.4);
        max-width: 420px;
        line-height: 1.85;
        position: relative;
        z-index: 1;
    }
    /* MAIN */
    .ct-main {
        display: grid;
        grid-template-columns: 340px 1fr;
        gap: 0;
        max-width: 1200px;
        margin: 0 auto;
    }
    /* Sidebar */
    .ct-sidebar {
        background: var(--deep2);
        border-right: 1px solid var(--border);
        padding: 3rem 2.5rem;
    }

    .ct-sidebar-title {
        font-family: 'Playfair Display',serif;
        font-size: 1.4rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border);
    }

    .ct-info-item {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.75rem;
    }

    .ct-info-icon {
        width: 42px;
        height: 42px;
        background: var(--gold3);
        border: 1.5px solid var(--border);
        border-radius: 7px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: var(--gold);
        flex-shrink: 0;
    }

    .ct-info-lbl {
        font-size: .65rem;
        font-weight: 700;
        letter-spacing: .13em;
        text-transform: uppercase;
        color: rgba(255,255,255,.3);
        margin-bottom: .3rem;
    }

    .ct-info-val {
        font-size: .85rem;
        color: rgba(255,255,255,.75);
        line-height: 1.65;
    }

        .ct-info-val a {
            color: var(--gold2);
            text-decoration: none;
        }
    /* Branches */
    .ct-branches {
        border-top: 1px solid var(--border);
        padding-top: 1.75rem;
        margin-top: 1.5rem;
    }

    .ct-branches-title {
        font-size: .65rem;
        font-weight: 700;
        letter-spacing: .15em;
        text-transform: uppercase;
        color: rgba(255,255,255,.3);
        margin-bottom: 1rem;
    }

    .ct-branch {
        display: flex;
        align-items: center;
        gap: .65rem;
        padding: .6rem .75rem;
        border: 1px solid var(--border);
        border-radius: 5px;
        margin-bottom: .6rem;
        transition: background .2s;
    }

        .ct-branch:hover {
            background: var(--gold3);
        }

    .ct-branch-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--gold);
        flex-shrink: 0;
    }

    .ct-branch-name {
        font-size: .8rem;
        font-weight: 600;
        color: rgba(255,255,255,.65);
    }

    .ct-branch-addr {
        font-size: .72rem;
        color: rgba(255,255,255,.32);
    }
    /* Social */
    .ct-social {
        display: flex;
        gap: .6rem;
        margin-top: 2rem;
    }

    .ct-social-btn {
        width: 36px;
        height: 36px;
        background: var(--gold3);
        border: 1.5px solid var(--border);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: .88rem;
        color: rgba(255,255,255,.5);
        text-decoration: none;
        transition: all .2s;
    }

        .ct-social-btn:hover {
            background: var(--gold3);
            border-color: var(--gold);
            color: var(--gold2);
        }
    /* Form side */
    .ct-form-side {
        background: #fff;
        padding: 3rem;
    }

    .ct-form-title {
        font-family: 'Playfair Display',serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--ink);
        margin-bottom: .4rem;
    }

    .ct-form-sub {
        font-size: .85rem;
        color: rgba(26,18,9,.45);
        margin-bottom: 2rem;
    }
    /* Form inputs */
    .ct-form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.1rem;
    }

    .ct-group {
        display: flex;
        flex-direction: column;
        gap: .4rem;
    }

        .ct-group.full {
            grid-column: 1/-1;
        }

    .ct-label {
        font-size: .68rem;
        font-weight: 700;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: var(--gold);
    }

    .ct-req {
        color: #ef4444;
    }

    .ct-input, .ct-select, .ct-textarea {
        width: 100%;
        background: var(--warm);
        border: 1.5px solid rgba(26,18,9,.1);
        border-radius: 5px;
        padding: .75rem 1rem;
        color: var(--ink);
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        outline: none;
        transition: all .2s;
        resize: none;
    }

        .ct-input::placeholder, .ct-textarea::placeholder {
            color: rgba(26,18,9,.28);
        }

        .ct-input:focus, .ct-select:focus, .ct-textarea:focus {
            border-color: var(--gold);
            background: #fff;
            box-shadow: 0 0 0 4px rgba(212,160,23,.1);
        }

    .ct-textarea {
        height: 140px;
    }

    .ct-submit {
        width: 100%;
        background: linear-gradient(135deg,var(--gold),var(--gold2));
        color: var(--deep);
        border: none;
        border-radius: 5px;
        padding: .9rem 1.5rem;
        font-family: 'Outfit',sans-serif;
        font-size: .88rem;
        font-weight: 800;
        letter-spacing: .07em;
        text-transform: uppercase;
        cursor: pointer;
        transition: all .25s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        margin-top: 1.5rem;
    }

        .ct-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 28px rgba(212,160,23,.4);
        }
    /* Map */
    .ct-map {
        background: var(--deep);
        padding: 3rem;
        border-top: 1px solid var(--border);
    }

    .ct-map-inner {
        max-width: 1200px;
        margin: 0 auto;
    }

    .ct-map-placeholder {
        background: var(--deep2);
        border: 1.5px solid var(--border);
        border-radius: 6px;
        height: 360px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: rgba(255,255,255,.3);
        font-size: .9rem;
        gap: .75rem;
    }

        .ct-map-placeholder i {
            font-size: 3rem;
            color: var(--gold);
            opacity: .5;
        }

    @@media(max-width:900px) {
        .ct-main {
            grid-template-columns: 1fr;
        }

        .ct-sidebar {
            border-right: none;
            border-bottom: 1px solid var(--border);
        }

        .ct-hero {
            padding: 5rem 1.5rem 3.5rem;
        }

        .ct-form-side {
            padding: 2rem 1.5rem;
        }

        .ct-form-grid {
            grid-template-columns: 1fr;
        }

        .ct-map {
            padding: 2rem 1.5rem;
        }
    }
</style>

<div class="ct-page">
    <!-- HERO -->
    <section class="ct-hero">
        <div class="ct-deco">L</div>
        <div class="ct-eyebrow">Kết nối với chúng tôi</div>
        <h1>Liên Hệ<br><em>Ngay Hôm Nay.</em></h1>
        <p>Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn trong thời gian sớm nhất.</p>
    </section>

    <!-- MAIN GRID -->
    <div class="ct-main">
        <!-- SIDEBAR -->
        <div class="ct-sidebar">
            <div class="ct-sidebar-title">Văn Phòng Chính</div>

            <div class="ct-info-item">
                <div class="ct-info-icon"><i class="bi bi-geo-alt-fill"></i></div>
                <div>
                    <div class="ct-info-lbl">Địa chỉ</div>
                    <div class="ct-info-val">123 Đường Nguyễn Huệ, Quận 1,<br>TP. Hồ Chí Minh</div>
                </div>
            </div>
            <div class="ct-info-item">
                <div class="ct-info-icon"><i class="bi bi-telephone-fill"></i></div>
                <div>
                    <div class="ct-info-lbl">Điện thoại</div>
                    <div class="ct-info-val"><a href="tel:+842812345678">+84 28 1234 5678</a><br><a href="tel:+84901234567">+84 90 1234 5678</a></div>
                </div>
            </div>
            <div class="ct-info-item">
                <div class="ct-info-icon"><i class="bi bi-envelope-fill"></i></div>
                <div>
                    <div class="ct-info-lbl">Email</div>
                    <div class="ct-info-val"><a href="mailto:info@badmintonpro.vn">info@badmintonpro.vn</a></div>
                </div>
            </div>
            <div class="ct-info-item">
                <div class="ct-info-icon"><i class="bi bi-clock-fill"></i></div>
                <div>
                    <div class="ct-info-lbl">Giờ làm việc</div>
                    <div class="ct-info-val">Thứ 2 – 6: 08:00 – 20:00<br>Thứ 7 – CN: 08:00 – 22:00</div>
                </div>
            </div>

            <div class="ct-branches">
                <div class="ct-branches-title">Chi nhánh</div>
                @{
                    var branches = new[] { new { Q = "Quận 1", A = "123 Nguyễn Huệ" }, new { Q = "Quận 3", A = "456 Võ Văn Tần" }, new { Q = "Quận 7", A = "789 Nguyễn Thị Thập" } };
                }
                @foreach (var b in branches)
                {
                    <div class="ct-branch">
                        <div class="ct-branch-dot"></div>
                        <div>
                            <div class="ct-branch-name">@b.Q</div>
                            <div class="ct-branch-addr">@b.A</div>
                        </div>
                    </div>
                }
            </div>

            <div class="ct-social">
                <a href="#" class="ct-social-btn"><i class="bi bi-facebook"></i></a>
                <a href="#" class="ct-social-btn"><i class="bi bi-instagram"></i></a>
                <a href="#" class="ct-social-btn"><i class="bi bi-tiktok"></i></a>
                <a href="#" class="ct-social-btn"><i class="bi bi-youtube"></i></a>
            </div>
        </div>

        <!-- FORM -->
        <div class="ct-form-side">
            <div class="ct-form-title">Gửi Tin Nhắn</div>
            <div class="ct-form-sub">Điền thông tin bên dưới, chúng tôi sẽ phản hồi trong vòng 24 giờ</div>

            <form asp-action="SendMessage" method="post">
                <div class="ct-form-grid">
                    <div class="ct-group">
                        <label class="ct-label">Họ và tên <span class="ct-req">*</span></label>
                        <input type="text" name="fullName" class="ct-input" placeholder="Nguyễn Văn A" required />
                    </div>
                    <div class="ct-group">
                        <label class="ct-label">Email <span class="ct-req">*</span></label>
                        <input type="email" name="email" class="ct-input" placeholder="example@email.com" required />
                    </div>
                    <div class="ct-group">
                        <label class="ct-label">Số điện thoại</label>
                        <input type="tel" name="phone" class="ct-input" placeholder="0901234567" />
                    </div>
                    <div class="ct-group">
                        <label class="ct-label">Chủ đề <span class="ct-req">*</span></label>
                        <select name="subject" class="ct-select" required>
                            <option value="" disabled selected>Chọn chủ đề</option>
                            <option value="booking">Hỗ trợ đặt sân</option>
                            <option value="shop">Tư vấn mua hàng</option>
                            <option value="feedback">Góp ý dịch vụ</option>
                            <option value="other">Khác</option>
                        </select>
                    </div>
                    <div class="ct-group full">
                        <label class="ct-label">Nội dung <span class="ct-req">*</span></label>
                        <textarea name="message" class="ct-textarea" placeholder="Nhập nội dung tin nhắn..." required></textarea>
                    </div>
                </div>
                <button type="submit" class="ct-submit">
                    <i class="bi bi-send-fill"></i> Gửi tin nhắn
                </button>
            </form>
        </div>
    </div>

    <!-- MAP -->
    <div class="ct-map">
        <div class="ct-map-inner">
            <div class="ct-map-placeholder">
                <i class="bi bi-geo-alt-fill"></i>
                <strong style="color:rgba(255,255,255,.55);">Bản đồ văn phòng chính</strong>
                <span style="font-size:.78rem;">123 Đường Nguyễn Huệ, Quận 1, TP.HCM</span>
            </div>
        </div>
    </div>
</div>
