@{
    ViewData["Title"] = "Liên Hệ";
}

<style>
    .bg-contact-header {
        background: #6c33f2; /* Màu tím đặc trưng của BadmintonHub */
        padding: 60px 0;
        color: white;
    }

    .contact-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .info-item {
        margin-bottom: 25px;
        display: flex;
        gap: 15px;
    }

    .info-icon {
        width: 45px;
        height: 45px;
        background: #f3f0ff;
        color: #6c33f2;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .branch-list {
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    .form-control, .form-select {
        padding: 12px 15px;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

        .form-control:focus {
            border-color: #6c33f2;
            box-shadow: 0 0 0 0.25rem rgba(108, 51, 242, 0.1);
        }

    .btn-send {
        background: #6c33f2;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        transition: 0.3s;
    }

        .btn-send:hover {
            background: #5629c1;
            transform: translateY(-2px);
        }

    .map-placeholder {
        background: #e9ecef;
        height: 400px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: #6c757d;
    }
</style>

<section class="bg-contact-header mb-5">
    <div class="container">
        <h1 class="fw-bold">Liên Hệ Với Chúng Tôi</h1>
        <p class="lead opacity-75">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
    </div>
</section>

<div class="container pb-5">
    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card contact-card p-4 h-100">
                <h4 class="fw-bold mb-4">Văn Phòng Chính</h4>

                <div class="info-item">
                    <div class="info-icon"><i class="bi bi-geo-alt"></i></div>
                    <div>
                        <p class="fw-bold mb-0">Địa chỉ</p>
                        <p class="text-muted small">123 Đường Nguyễn Huệ, Quận 1, TP. Hồ Chí Minh, Việt Nam</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="bi bi-telephone"></i></div>
                    <div>
                        <p class="fw-bold mb-0">Điện thoại</p>
                        <p class="text-muted small">+84 28 1234 5678<br>+84 90 1234 5678</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="bi bi-envelope"></i></div>
                    <div>
                        <p class="fw-bold mb-0">Email</p>
                        <p class="text-muted small">info@badmintonhub.vn<br>support@badmintonhub.vn</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon"><i class="bi bi-clock"></i></div>
                    <div>
                        <p class="fw-bold mb-0">Giờ làm việc</p>
                        <p class="text-muted small">Thứ 2 - Thứ 6: 8:00 - 20:00<br>Thứ 7 - CN: 8:00 - 22:00</p>
                    </div>
                </div>

                <div class="branch-list mt-2">
                    <h5 class="fw-bold mb-3">Chi Nhánh</h5>
                    <div class="mb-3">
                        <p class="fw-bold mb-0 small">Quận 1</p>
                        <p class="text-muted extra-small" style="font-size: 0.8rem;">123 Đường Nguyễn Huệ</p>
                    </div>
                    <div class="mb-3">
                        <p class="fw-bold mb-0 small">Quận 3</p>
                        <p class="text-muted extra-small" style="font-size: 0.8rem;">456 Đường Võ Văn Tần</p>
                    </div>
                    <div class="mb-3">
                        <p class="fw-bold mb-0 small">Quận 7</p>
                        <p class="text-muted extra-small" style="font-size: 0.8rem;">789 Đường Nguyễn Thị Thập</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card contact-card p-4 mb-4">
                <h4 class="fw-bold mb-4">Gửi Tin Nhắn</h4>
                <form asp-action="SendMessage" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Họ và tên <span class="text-danger">*</span></label>
                            <input type="text" name="fullName" class="form-control" placeholder="Nguyễn Văn A" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Email <span class="text-danger">*</span></label>
                            <input type="email" name="email" class="form-control" placeholder="example@email.com" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Số điện thoại</label>
                            <input type="tel" name="phone" class="form-control" placeholder="0901234567">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Chủ đề <span class="text-danger">*</span></label>
                            <select name="subject" class="form-select" required>
                                <option value="" selected disabled>Chọn chủ đề</option>
                                <option value="booking">Hỗ trợ đặt sân</option>
                                <option value="shop">Tư vấn mua hàng</option>
                                <option value="feedback">Góp ý dịch vụ</option>
                                <option value="other">Khác</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label small fw-bold">Nội dung <span class="text-danger">*</span></label>
                            <textarea name="message" class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn của bạn..." required></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-send">
                                <i class="bi bi-send-fill me-2"></i> Gửi tin nhắn
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="map-placeholder">
                <i class="bi bi-geo-alt-fill display-4 mb-2"></i>
                <p class="fw-bold">Bản đồ văn phòng chính</p>
                <p class="small">123 Đường Nguyễn Huệ, Quận 1, TP.HCM</p>
                @* Mày có thể nhúng Iframe Google Map thật vào đây *@
            </div>
        </div>
    </div>
</div>