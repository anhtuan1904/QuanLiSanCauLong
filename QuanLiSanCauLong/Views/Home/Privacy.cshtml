@{
    ViewData["Title"] = "Chính Sách Bảo Mật";
}
<style>
    :root {
        --deep: #1a1209;
        --deep2: #231a0e;
        --gold: #d4a017;
        --gold2: #f5c842;
        --gold3: rgba(212,160,23,.1);
        --warm: #f5ede0;
        --cream: #fdf8f0;
        --ink: #1a1209;
        --border: rgba(212,160,23,.2);
        --muted: rgba(255,255,255,.38);
    }

    .prv-page {
        background: var(--warm);
        min-height: 100vh;
        font-family: 'Outfit',sans-serif;
        color: var(--ink);
    }

    .prv-hero {
        background: var(--deep);
        position: relative;
        overflow: hidden;
        padding: 5.5rem 4rem 4rem;
    }

        .prv-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg,var(--gold),var(--gold2),transparent);
        }

    .prv-deco {
        position: absolute;
        right: -1rem;
        bottom: -3rem;
        font-family: 'Playfair Display',serif;
        font-size: 18rem;
        font-weight: 700;
        font-style: italic;
        color: rgba(212,160,23,.04);
        line-height: 1;
        pointer-events: none;
    }

    .prv-eyebrow {
        display: inline-flex;
        align-items: center;
        gap: .6rem;
        font-size: .72rem;
        font-weight: 700;
        letter-spacing: .22em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1.2rem;
    }

        .prv-eyebrow::before {
            content: '';
            width: 26px;
            height: 2px;
            background: var(--gold);
            display: block;
        }

    .prv-hero h1 {
        font-family: 'Playfair Display',serif;
        font-size: clamp(2.5rem,5vw,5rem);
        font-weight: 700;
        color: #fff;
        line-height: .98;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

        .prv-hero h1 em {
            color: var(--gold2);
            font-style: italic;
        }

    .prv-updated {
        font-size: .78rem;
        color: rgba(255,255,255,.35);
        position: relative;
        z-index: 1;
    }

        .prv-updated i {
            color: var(--gold);
            margin-right: .35rem;
        }
    /* Content */
    .prv-body {
        max-width: 860px;
        margin: 0 auto;
        padding: 4.5rem 3rem 6rem;
    }
    /* TOC */
    .prv-toc {
        background: var(--cream);
        border: 1.5px solid rgba(26,18,9,.1);
        border-radius: 6px;
        padding: 1.75rem 2rem;
        margin-bottom: 3rem;
    }

    .prv-toc-title {
        font-size: .7rem;
        font-weight: 700;
        letter-spacing: .15em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 1rem;
    }

    .prv-toc ol {
        padding-left: 1.1rem;
        margin: 0;
    }

    .prv-toc li {
        margin-bottom: .4rem;
    }

    .prv-toc a {
        font-size: .85rem;
        color: rgba(26,18,9,.58);
        text-decoration: none;
        transition: color .2s;
    }

        .prv-toc a:hover {
            color: var(--gold);
        }
    /* Sections */
    .prv-section {
        margin-bottom: 3rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid rgba(26,18,9,.08);
    }

        .prv-section:last-of-type {
            border-bottom: none;
        }

    .prv-section-num {
        font-size: .68rem;
        font-weight: 700;
        letter-spacing: .15em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: .4rem;
    }

    .prv-section h2 {
        font-family: 'Playfair Display',serif;
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--ink);
        margin-bottom: 1rem;
    }

    .prv-section p, .prv-section li {
        font-size: .9rem;
        color: rgba(26,18,9,.62);
        line-height: 1.9;
        margin-bottom: .75rem;
    }

    .prv-section ul {
        padding-left: 1.2rem;
    }

    .prv-section li::marker {
        color: var(--gold);
    }

    .prv-highlight {
        background: var(--gold3);
        border-left: 3px solid var(--gold);
        border-radius: 0 5px 5px 0;
        padding: 1rem 1.25rem;
        margin: 1.25rem 0;
        font-size: .87rem;
        color: rgba(26,18,9,.65);
        line-height: 1.8;
    }
    /* Contact card */
    .prv-contact-card {
        background: var(--deep);
        border: 1.5px solid var(--border);
        border-radius: 7px;
        padding: 2rem;
        margin-top: 2.5rem;
    }

        .prv-contact-card h3 {
            font-family: 'Playfair Display',serif;
            font-size: 1.2rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: .5rem;
        }

        .prv-contact-card p {
            font-size: .85rem;
            color: var(--muted);
            margin-bottom: .4rem;
        }

        .prv-contact-card a {
            color: var(--gold2);
            text-decoration: none;
        }

    @@media(max-width:900px) {
        .prv-hero {
            padding: 5rem 1.5rem 3.5rem;
        }

        .prv-body {
            padding: 3rem 1.5rem 5rem;
        }
    }
</style>

<div class="prv-page">
    <section class="prv-hero">
        <div class="prv-deco">P</div>
        <div class="prv-eyebrow">Minh bạch & tin tưởng</div>
        <h1>Chính Sách<br><em>Bảo Mật.</em></h1>
        <div class="prv-updated"><i class="bi bi-calendar3"></i> Cập nhật lần cuối: 01/01/2025</div>
    </section>

    <div class="prv-body">
        <!-- TOC -->
        <div class="prv-toc">
            <div class="prv-toc-title">Mục lục</div>
            <ol>
                <li><a href="#s1">Thông tin chúng tôi thu thập</a></li>
