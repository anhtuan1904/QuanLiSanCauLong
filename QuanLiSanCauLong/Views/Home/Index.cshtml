@model QuanLiSanCauLong.ViewModels.HomeViewModel

<section class="hero-section py-5" style="background: linear-gradient(135deg, #f0fff4 0%, #ffffff 100%);">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-3" style="color: #064e3b;">Đặt sân cầu lông<br><span class="text-success">Dễ dàng & Nhanh chóng</span></h1>
                <p class="lead text-secondary mb-4">Tìm và đặt sân cầu lông gần bạn chỉ trong vài phút. Hơn 100+ sân cầu lông chất lượng cao trên toàn quốc.</p>

                <div class="card border-0 shadow-lg p-3 mb-4" style="border-radius: 15px;">
                    <form asp-controller="Booking" asp-action="Search" method="get" class="row g-2">
                        <div class="col-md-5">
                            <label class="small fw-bold text-muted ms-2"><i class="bi bi-geo-alt"></i> Khu vực</label>
                            <select name="city" class="form-select border-0 bg-light">
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="TP.HCM">TP. Hồ Chí Minh</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="small fw-bold text-muted ms-2"><i class="bi bi-calendar-event"></i> Ngày đặt</label>
                            <input type="date" name="date" class="form-control border-0 bg-light" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3 d-grid">
                            <label class="small opacity-0">Tìm</label>
                            <button type="submit" class="btn btn-success fw-bold"><i class="bi bi-search"></i> Tìm sân</button>
                        </div>
                    </form>
                </div>

                <div class="d-flex gap-4 mt-4">
                    <div><h4 class="fw-bold mb-0">100+</h4><p class="small text-muted">Sân cầu lông</p></div>
                    <div class="vr"></div>
                    <div><h4 class="fw-bold mb-0">50k+</h4><p class="small text-muted">Lượt đặt sân</p></div>
                    <div class="vr"></div>
                    <div><h4 class="fw-bold mb-0">4.8★</h4><p class="small text-muted">Đánh giá</p></div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative">
                    <img src="/images/hero-badminton.png" class="img-fluid rounded-4 shadow" alt="Badminton">
                    <div class="position-absolute bottom-0 start-0 bg-white p-3 shadow rounded-4 m-3 d-flex align-items-center gap-3 animate-bounce">
                        <div class="bg-success-subtle p-2 rounded-circle"><i class="bi bi-lightning-fill text-success"></i></div>
                        <div><p class="small fw-bold mb-0">Đặt ngay</p><p class="small text-muted mb-0">Giảm 20%</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white text-center">
    <div class="container py-4">
        <h2 class="fw-bold mb-5">Tại sao chọn chúng tôi?</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <i class="bi bi-clock-history text-success fs-1 mb-3"></i>
                <h6 class="fw-bold">Đặt sân 24/7</h6>
                <p class="small text-muted">Đặt sân mọi lúc mọi nơi, kể cả ngoài giờ hành chính</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-shield-check text-success fs-1 mb-3"></i>
                <h6 class="fw-bold">Thanh toán an toàn</h6>
                <p class="small text-muted">Bảo mật thông tin và giao dịch thanh toán của bạn</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-star text-success fs-1 mb-3"></i>
                <h6 class="fw-bold">Sân chất lượng</h6>
                <p class="small text-muted">Tất cả sân đều được kiểm duyệt và đánh giá cao</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-wallet2 text-success fs-1 mb-3"></i>
                <h6 class="fw-bold">Giá tốt nhất</h6>
                <p class="small text-muted">Cam kết giá tốt nhất và nhiều ưu đãi hấp dẫn</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5" style="background-color: #f8fafc;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <h2 class="fw-bold">Sân cầu lông phổ biến</h2>
                <p class="text-muted mb-0">Những sân được đặt nhiều nhất trong tuần</p>
            </div>
            <a asp-controller="Facility" asp-action="Index" class="text-success fw-bold text-decoration-none">Xem tất cả <i class="bi bi-arrow-right"></i></a>
        </div>

        <div class="row">
            @foreach (var facility in Model.FeaturedFacilities)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden" style="border-radius: 16px;">
                        <div class="position-relative">
                            <img src="@facility.ImageUrl" class="card-img-top" style="height: 240px; object-fit: cover;">
                            <span class="position-absolute top-0 start-0 m-3 badge bg-success rounded-pill px-3 py-2">Phổ biến</span>
                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold">@facility.FacilityName</h5>
                            <p class="text-muted small mb-3"><i class="bi bi-geo-alt-fill text-danger me-1"></i> @facility.District, @facility.City</p>
                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                    <span class="fw-bold">4.9</span> <span class="text-muted small ms-1">(89 đánh giá)</span>
                                </div>
                                <div class="text-end">
                                    <p class="small text-muted mb-0">Chỉ từ</p>
                                    <span class="text-success fw-bold fs-5">80.000đ/giờ</span>
                                </div>
                            </div>
                            <a asp-action="Details" asp-controller="Facility" asp-route-id="@facility.FacilityId" class="btn btn-outline-success w-100 mt-4 py-2 fw-bold">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container text-center py-4">
        <h2 class="fw-bold mb-5">Cách thức hoạt động</h2>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 60px; height: 60px; font-size: 1.5rem;">1</div>
                        <h5 class="fw-bold">Tìm sân</h5>
                        <p class="small text-muted px-lg-4">Tìm kiếm sân cầu lông gần bạn theo khu vực và thời gian phù hợp</p>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 60px; height: 60px; font-size: 1.5rem;">2</div>
                        <h5 class="fw-bold">Đặt sân</h5>
                        <p class="small text-muted px-lg-4">Chọn khung giờ và thanh toán trực tuyến nhanh chóng, an toàn</p>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 60px; height: 60px; font-size: 1.5rem;">3</div>
                        <h5 class="fw-bold">Nhận xác nhận</h5>
                        <p class="small text-muted px-lg-4">Nhận mã đặt sân qua SMS/Email và đến sân chơi vào giờ đã đặt</p>
                    </div>
                </div>
                <a asp-action="Search" asp-controller="Booking" class="btn btn-success btn-lg px-5 mt-4 fw-bold rounded-pill">Bắt đầu đặt sân ngay</a>
            </div>
        </div>
    </div>
</section>